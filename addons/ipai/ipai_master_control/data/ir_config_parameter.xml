<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Master Control Configuration Parameters -->

        <!-- Main webhook URL (set to your Pulser Runner instance) -->
        <record id="master_control_webhook_url" model="ir.config_parameter">
            <field name="key">master_control.webhook_url</field>
            <field name="value">http://localhost:8788</field>
        </record>

        <!-- Tenant ID for multi-tenancy -->
        <record id="master_control_tenant_id" model="ir.config_parameter">
            <field name="key">master_control.tenant_id</field>
            <field name="value">00000000-0000-0000-0000-000000000001</field>
        </record>

        <!-- Global enable/disable -->
        <record id="master_control_enabled" model="ir.config_parameter">
            <field name="key">master_control.enabled</field>
            <field name="value">true</field>
        </record>

        <!-- Event-specific toggles -->
        <record id="master_control_event_employee_hire" model="ir.config_parameter">
            <field name="key">master_control.events.employee_hire</field>
            <field name="value">true</field>
        </record>

        <record id="master_control_event_employee_departure" model="ir.config_parameter">
            <field name="key">master_control.events.employee_departure</field>
            <field name="value">true</field>
        </record>

        <record id="master_control_event_expense_submit" model="ir.config_parameter">
            <field name="key">master_control.events.expense_submit</field>
            <field name="value">true</field>
        </record>

        <record id="master_control_event_purchase_large" model="ir.config_parameter">
            <field name="key">master_control.events.purchase_large</field>
            <field name="value">true</field>
        </record>

        <!-- Thresholds -->
        <record id="master_control_expense_threshold" model="ir.config_parameter">
            <field name="key">master_control.expense_threshold</field>
            <field name="value">1000.0</field>
        </record>

        <record id="master_control_purchase_threshold" model="ir.config_parameter">
            <field name="key">master_control.purchase_threshold</field>
            <field name="value">5000.0</field>
        </record>
    </data>
</odoo>
