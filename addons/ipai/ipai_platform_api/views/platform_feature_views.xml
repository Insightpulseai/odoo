<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Platform Feature Tree View -->
    <record id="view_platform_feature_tree" model="ir.ui.view">
        <field name="name">platform.feature.tree</field>
        <field name="model">platform.feature</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category"/>
                <field name="icon"/>
                <field name="published" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Platform Feature Form View -->
    <record id="view_platform_feature_form" model="ir.ui.view">
        <field name="name">platform.feature.form</field>
        <field name="model">platform.feature</field>
        <field name="arch" type="xml">
            <form string="Platform Feature">
                <header>
                    <button name="action_publish" string="Publish" type="object" class="oe_highlight"
                            invisible="published"/>
                    <button name="action_unpublish" string="Unpublish" type="object"
                            invisible="not published"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Feature Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="icon" placeholder="â­"/>
                            <field name="color" widget="color"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="published"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Short description for cards"/>
                            <field name="long_description" widget="html"/>
                        </page>
                        <page string="Media">
                            <group>
                                <field name="image" widget="image"/>
                                <field name="video_url"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Platform Feature Action -->
    <record id="action_platform_feature" model="ir.actions.act_window">
        <field name="name">Platform Features</field>
        <field name="res_model">platform.feature</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_platform_root"
              name="Platform"
              sequence="100"/>

    <menuitem id="menu_platform_features"
              name="Features"
              parent="menu_platform_root"
              action="action_platform_feature"
              sequence="10"/>
</odoo>
