{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "capability_atoms.schema.json",
  "type": "object",
  "required": ["version", "atoms"],
  "properties": {
    "version": { "type": "string" },
    "atoms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "evidence"],
        "properties": {
          "id": { "type": "string", "minLength": 4 },
          "label": { "type": "string", "minLength": 3 },
          "tags": { "type": "array", "items": { "type": "string" } },
          "synonyms": { "type": "array", "items": { "type": "string" } },
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["ref"],
              "properties": {
                "ref": { "type": "string" },
                "hint": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
