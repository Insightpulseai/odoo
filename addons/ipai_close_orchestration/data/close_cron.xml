<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- Cron: Send Due Reminders -->
    <record id="ir_cron_close_due_reminders" model="ir.cron">
        <field name="name">Close: Send Due Reminders</field>
        <field name="model_id" ref="model_close_task"/>
        <field name="state">code</field>
        <field name="code">model._cron_send_due_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

    <!-- Cron: Auto-Escalate Exceptions -->
    <record id="ir_cron_close_auto_escalate" model="ir.cron">
        <field name="name">Close: Auto-Escalate Exceptions</field>
        <field name="model_id" ref="model_close_exception"/>
        <field name="state">code</field>
        <field name="code">model._cron_auto_escalate()</field>
        <field name="interval_number">4</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

    <!-- Cron: Check Approval Gates -->
    <record id="ir_cron_close_check_gates" model="ir.cron">
        <field name="name">Close: Check Approval Gates</field>
        <field name="model_id" ref="model_close_approval_gate"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_gates()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

</odoo>
