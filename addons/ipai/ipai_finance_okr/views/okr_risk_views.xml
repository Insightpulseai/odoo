<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OKR Risk Form View -->
    <record id="okr_risk_view_form" model="ir.ui.view">
        <field name="name">okr.risk.form</field>
        <field name="model">okr.risk</field>
        <field name="arch" type="xml">
            <form string="Risk">
                <header>
                    <button name="action_mitigate" string="Start Mitigation" type="object"
                            invisible="status != 'open'" class="btn-primary"/>
                    <button name="action_close" string="Close Risk" type="object"
                            invisible="status in ('closed', 'mitigated')"/>
                    <button name="action_escalate" string="Escalate" type="object"
                            invisible="escalated == True"
                            class="btn-warning"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="open,in_progress,mitigated,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(okr_key_result_action)d" type="action"
                                class="oe_stat_button" icon="fa-bullseye"
                                invisible="not key_result_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Key Result</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Escalated" bg_color="text-bg-warning"
                            invisible="not escalated"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Risk name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Risk Assessment">
                            <field name="probability"/>
                            <field name="impact"/>
                            <field name="priority" widget="priority"/>
                            <field name="response_strategy"/>
                        </group>
                        <group string="Context">
                            <field name="key_result_id"/>
                            <field name="objective_id" readonly="1"/>
                            <field name="owner_id"/>
                            <field name="escalated"/>
                        </group>
                    </group>
                    <group>
                        <group string="Dates">
                            <field name="date_identified"/>
                            <field name="date_target_resolution"/>
                            <field name="date_resolved"/>
                        </group>
                        <group string="Company">
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe the risk..."/>
                        </page>
                        <page string="Mitigation Plan" name="mitigation">
                            <field name="mitigation_plan"
                                   placeholder="Specific actions to mitigate this risk..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- OKR Risk List View -->
    <record id="okr_risk_view_list" model="ir.ui.view">
        <field name="name">okr.risk.list</field>
        <field name="model">okr.risk</field>
        <field name="arch" type="xml">
            <list string="Risks" decoration-danger="priority == '3'"
                  decoration-warning="priority == '2'"
                  decoration-muted="status == 'closed'">
                <field name="priority" widget="priority"/>
                <field name="name"/>
                <field name="key_result_id"/>
                <field name="probability"/>
                <field name="impact"/>
                <field name="response_strategy"/>
                <field name="owner_id" widget="many2one_avatar_user"/>
                <field name="status" widget="badge"
                       decoration-danger="status == 'open'"
                       decoration-warning="status == 'in_progress'"
                       decoration-info="status == 'mitigated'"
                       decoration-success="status == 'closed'"/>
                <field name="escalated"/>
                <field name="date_target_resolution"/>
            </list>
        </field>
    </record>

    <!-- OKR Risk Kanban View -->
    <record id="okr_risk_view_kanban" model="ir.ui.view">
        <field name="name">okr.risk.kanban</field>
        <field name="model">okr.risk</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="name"/>
                <field name="priority"/>
                <field name="owner_id"/>
                <field name="status"/>
                <field name="escalated"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <field name="priority" widget="priority"/>
                            </div>
                            <strong class="o_kanban_record_title">
                                <t t-if="record.escalated.raw_value">
                                    <span class="badge bg-warning me-1">!</span>
                                </t>
                                <field name="name"/>
                            </strong>
                            <div class="text-muted">
                                <field name="key_result_id"/>
                            </div>
                            <div class="mt-2">
                                <span class="badge bg-secondary">
                                    P: <field name="probability"/>
                                </span>
                                <span class="badge bg-secondary ms-1">
                                    I: <field name="impact"/>
                                </span>
                            </div>
                            <div class="mt-2">
                                <field name="owner_id" widget="many2one_avatar_user"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- OKR Risk Search View -->
    <record id="okr_risk_view_search" model="ir.ui.view">
        <field name="name">okr.risk.search</field>
        <field name="model">okr.risk</field>
        <field name="arch" type="xml">
            <search string="Search Risks">
                <field name="name"/>
                <field name="key_result_id"/>
                <field name="owner_id"/>
                <filter string="Open" name="filter_open" domain="[('status', '=', 'open')]"/>
                <filter string="In Progress" name="filter_in_progress"
                        domain="[('status', '=', 'in_progress')]"/>
                <filter string="Escalated" name="filter_escalated"
                        domain="[('escalated', '=', True)]"/>
                <separator/>
                <filter string="Critical Priority" name="filter_critical"
                        domain="[('priority', '=', '3')]"/>
                <filter string="High Priority" name="filter_high"
                        domain="[('priority', '=', '2')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status"
                            context="{'group_by': 'status'}"/>
                    <filter string="Priority" name="group_priority"
                            context="{'group_by': 'priority'}"/>
                    <filter string="Owner" name="group_owner"
                            context="{'group_by': 'owner_id'}"/>
                    <filter string="Key Result" name="group_kr"
                            context="{'group_by': 'key_result_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- OKR Risk Action -->
    <record id="okr_risk_action" model="ir.actions.act_window">
        <field name="name">Risk Register</field>
        <field name="res_model">okr.risk</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="okr_risk_view_search"/>
        <field name="context">{'search_default_filter_open': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No risks identified yet
            </p>
            <p>
                Track risks that could impact your OKR Key Results.
                Define mitigation strategies and monitor progress.
            </p>
        </field>
    </record>
</odoo>
