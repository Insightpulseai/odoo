<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_closing_tree" model="ir.ui.view">
        <field name="name">ipai.month.end.closing.tree</field>
        <field name="model">ipai.month.end.closing</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'closed'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="period_date"/>
                <field name="last_workday"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'in_progress'"
                       decoration-primary="state == 'review'"
                       decoration-success="state == 'closed'"
                       decoration-muted="state == 'cancelled'"/>
                <field name="progress" widget="progressbar"/>
                <field name="overdue_tasks" decoration-danger="overdue_tasks > 0"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_closing_form" model="ir.ui.view">
        <field name="name">ipai.month.end.closing.form</field>
        <field name="model">ipai.month.end.closing</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_tasks" string="Generate Tasks"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_release" string="Release"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_close" string="Close Period"
                            type="object" class="oe_highlight"
                            invisible="state not in ['in_progress', 'review']"
                            confirm="Are you sure you want to close this period?"/>
                    <button name="action_cancel" string="Cancel"
                            type="object"
                            invisible="state in ['closed', 'cancelled']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,in_progress,review,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_month_end_task)d" type="action"
                                class="oe_stat_button" icon="fa-tasks"
                                context="{'search_default_closing_id': active_id}">
                            <field name="total_tasks" widget="statinfo" string="Tasks"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., 2024-01 January Close"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="period_date"/>
                            <field name="last_workday"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="completed_tasks"/>
                            <field name="progress" widget="progressbar"/>
                            <field name="overdue_tasks" decoration-danger="overdue_tasks > 0"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks" name="tasks">
                            <field name="task_ids" mode="list">
                                <list decoration-danger="is_overdue" decoration-success="state == 'done'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="phase"/>
                                    <field name="name"/>
                                    <field name="prep_user_id"/>
                                    <field name="prep_due_date"/>
                                    <field name="prep_done"/>
                                    <field name="review_user_id"/>
                                    <field name="review_done"/>
                                    <field name="approve_user_id"/>
                                    <field name="approve_done"/>
                                    <field name="state" widget="badge"/>
                                    <field name="days_overdue" invisible="not is_overdue"/>
                                    <field name="is_overdue" column_invisible="True"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_closing_kanban" model="ir.ui.view">
        <field name="name">ipai.month.end.closing.kanban</field>
        <field name="model">ipai.month.end.closing</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="state"/>
                <field name="progress"/>
                <field name="overdue_tasks"/>
                <templates>
                    <t t-name="card">
                        <field name="name" class="fw-bold fs-5"/>
                        <field name="period_date"/>
                        <div class="mt-2">
                            <field name="progress" widget="progressbar"/>
                        </div>
                        <div t-if="record.overdue_tasks.raw_value > 0" class="text-danger mt-1">
                            <i class="fa fa-exclamation-triangle"/> <field name="overdue_tasks"/> overdue
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_closing_calendar" model="ir.ui.view">
        <field name="name">ipai.month.end.closing.calendar</field>
        <field name="model">ipai.month.end.closing</field>
        <field name="arch" type="xml">
            <calendar date_start="period_date" color="state" mode="month">
                <field name="name"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_closing_search" model="ir.ui.view">
        <field name="name">ipai.month.end.closing.search</field>
        <field name="model">ipai.month.end.closing</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="period_date"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="review" string="Under Review" domain="[('state', '=', 'review')]"/>
                <filter name="closed" string="Closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter name="has_overdue" string="Has Overdue Tasks" domain="[('overdue_tasks', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_month_end_closing" model="ir.actions.act_window">
        <field name="name">Month-End Closings</field>
        <field name="res_model">ipai.month.end.closing</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Month-End Closing
            </p>
            <p>
                Start a new month-end closing period and generate tasks from templates.
            </p>
        </field>
    </record>
</odoo>
