<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Journey Form View -->
    <record id="view_marketing_journey_form" model="ir.ui.view">
        <field name="name">marketing.journey.form</field>
        <field name="model">marketing.journey</field>
        <field name="arch" type="xml">
            <form string="Marketing Journey">
                <header>
                    <button name="action_start" string="Start" type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_pause" string="Pause" type="object"
                            invisible="state != 'running'"/>
                    <button name="action_resume" string="Resume" type="object"
                            class="btn-primary"
                            invisible="state != 'paused'"/>
                    <button name="action_stop" string="Stop" type="object"
                            class="btn-danger"
                            invisible="state not in ('running', 'paused')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                            invisible="state != 'stopped'"
                            confirm="This will remove all participants. Are you sure?"/>
                    <button name="action_enroll_participants" string="Enroll Now" type="object"
                            invisible="state != 'running'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,stopped"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_participants" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="participant_count" widget="statinfo" string="Participants"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Journey Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="model_id" options="{'no_create': True}"/>
                            <field name="domain" widget="domain" options="{'model': 'model_id'}"/>
                        </group>
                        <group>
                            <field name="campaign_id"/>
                            <field name="source_id"/>
                            <field name="medium_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="start_date" readonly="1"/>
                            <field name="end_date" readonly="1"/>
                            <field name="last_run" readonly="1"/>
                        </group>
                        <group>
                            <field name="active_participant_count" readonly="1"/>
                            <field name="completed_participant_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Nodes" name="nodes">
                            <field name="node_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="node_type"/>
                                    <field name="mailing_id" invisible="node_type != 'email'"/>
                                    <field name="delay_value" invisible="node_type != 'delay'"/>
                                    <field name="delay_unit" invisible="node_type != 'delay'"/>
                                    <field name="participant_count"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Edges" name="edges">
                            <field name="edge_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="source_node_id"/>
                                    <field name="target_node_id"/>
                                    <field name="edge_type"/>
                                    <field name="label"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Journey description..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Journey Tree View -->
    <record id="view_marketing_journey_tree" model="ir.ui.view">
        <field name="name">marketing.journey.tree</field>
        <field name="model">marketing.journey</field>
        <field name="arch" type="xml">
            <tree string="Marketing Journeys" decoration-muted="not active">
                <field name="name"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'running'"
                       decoration-warning="state == 'paused'"
                       decoration-danger="state == 'stopped'"
                       decoration-info="state == 'draft'"/>
                <field name="model_id"/>
                <field name="participant_count"/>
                <field name="active_participant_count"/>
                <field name="completed_participant_count"/>
                <field name="last_run"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Journey Search View -->
    <record id="view_marketing_journey_search" model="ir.ui.view">
        <field name="name">marketing.journey.search</field>
        <field name="model">marketing.journey</field>
        <field name="arch" type="xml">
            <search string="Search Journeys">
                <field name="name"/>
                <field name="model_id"/>
                <filter name="filter_running" string="Running" domain="[('state', '=', 'running')]"/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_stopped" string="Stopped" domain="[('state', '=', 'stopped')]"/>
                <separator/>
                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_model" string="Target Model" context="{'group_by': 'model_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Journey Action -->
    <record id="action_marketing_journey" model="ir.actions.act_window">
        <field name="name">Journeys</field>
        <field name="res_model">marketing.journey</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_marketing_journey_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first marketing journey
            </p>
            <p>
                Design automated marketing workflows with nodes and edges.
                Enroll contacts or leads and guide them through your journey.
            </p>
        </field>
    </record>
</odoo>
