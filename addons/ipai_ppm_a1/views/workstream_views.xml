<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_ipai_workstream_tree" model="ir.ui.view">
    <field name="name">ipai.workstream.tree</field>
    <field name="model">ipai.workstream</field>
    <field name="arch" type="xml">
      <list>
        <field name="code"/>
        <field name="name"/>
        <field name="sap_anchor"/>
        <field name="odoo_anchor"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_ipai_workstream_form" model="ir.ui.view">
    <field name="name">ipai.workstream.form</field>
    <field name="model">ipai.workstream</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <h1><field name="name" placeholder="Workstream Name"/></h1>
          </div>
          <group>
            <group>
              <field name="code"/>
              <field name="active"/>
            </group>
            <group>
              <field name="sap_anchor"/>
              <field name="odoo_anchor"/>
            </group>
          </group>
          <field name="description" placeholder="Description..."/>
          <notebook>
            <page string="Templates" name="templates">
              <field name="template_ids" nolabel="1"/>
            </page>
            <page string="STC Checks" name="checks">
              <field name="check_ids" nolabel="1"/>
            </page>
            <page string="Overlays" name="overlays">
              <field name="overlay_ids" nolabel="1"/>
            </page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="action_ipai_workstream" model="ir.actions.act_window">
    <field name="name">Workstreams</field>
    <field name="res_model">ipai.workstream</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="ipai_ppm_a1_menu_workstreams" name="Workstreams"
            parent="ipai_ppm_a1_menu_master"
            action="action_ipai_workstream" sequence="10"/>
</odoo>
