<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- TBWA Theme Assets (Black Sidebar + Yellow Accents) -->
    <template id="ipai_platform_theme_assets_backend" inherit_id="web.assets_backend" name="TBWA Theme">
        <xpath expr="." position="inside">
            <!-- TBWA Design Tokens (Brand Colors, Typography, Spacing) -->
            <link rel="stylesheet" type="text/scss" href="/ipai_platform_theme/static/src/scss/tbwa-tokens.scss"/>

            <!-- TBWA Component Overrides (Sidebar, Buttons, Forms, Kanban) -->
            <link rel="stylesheet" type="text/scss" href="/ipai_platform_theme/static/src/scss/tbwa-components.scss"/>
        </xpath>
    </template>
</odoo>
