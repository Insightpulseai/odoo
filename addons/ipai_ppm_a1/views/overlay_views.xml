<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_ipai_overlay_tree" model="ir.ui.view">
    <field name="name">ipai.localization.overlay.tree</field>
    <field name="model">ipai.localization.overlay</field>
    <field name="arch" type="xml">
      <list>
        <field name="country"/>
        <field name="workstream_id"/>
        <field name="applies_to_code"/>
        <field name="patch_type"/>
        <field name="sequence"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_ipai_overlay_form" model="ir.ui.view">
    <field name="name">ipai.localization.overlay.form</field>
    <field name="model">ipai.localization.overlay</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="country"/>
              <field name="workstream_id"/>
            </group>
            <group>
              <field name="applies_to_code"/>
              <field name="patch_type"/>
              <field name="sequence"/>
              <field name="active"/>
            </group>
          </group>
          <field name="patch_payload" placeholder="JSON/YAML patch payload..."/>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="action_ipai_overlays" model="ir.actions.act_window">
    <field name="name">Localization Overlays</field>
    <field name="res_model">ipai.localization.overlay</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="ipai_ppm_a1_menu_overlays" name="Localization Overlays"
            parent="ipai_ppm_a1_menu_master"
            action="action_ipai_overlays" sequence="70"/>
</odoo>
