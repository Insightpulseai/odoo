<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ask AI Request List View -->
    <record id="view_ask_ai_request_tree" model="ir.ui.view">
        <field name="name">ask.ai.request.tree</field>
        <field name="model">ask.ai.request</field>
        <field name="arch" type="xml">
            <list string="AI Requests">
                <field name="user_prompt"/>
                <field name="res_model"/>
                <field name="res_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="rating" widget="priority"/>
                <field name="processing_time"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Ask AI Request Form View -->
    <record id="view_ask_ai_request_form" model="ir.ui.view">
        <field name="name">ask.ai.request.form</field>
        <field name="model">ask.ai.request</field>
        <field name="arch" type="xml">
            <form string="AI Request">
                <sheet>
                    <group>
                        <group>
                            <field name="res_model" readonly="1"/>
                            <field name="res_id" readonly="1"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="model_used"/>
                            <field name="tokens_used"/>
                            <field name="processing_time"/>
                            <field name="rating"/>
                        </group>
                    </group>
                    <separator string="User Query"/>
                    <field name="user_prompt" readonly="1"/>
                    <separator string="AI Response"/>
                    <field name="ai_response" readonly="1"/>
                    <separator string="Sources" invisible="not sources_used"/>
                    <field name="sources_used" readonly="1" invisible="not sources_used"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ask_ai_request_search" model="ir.ui.view">
        <field name="name">ask.ai.request.search</field>
        <field name="model">ask.ai.request</field>
        <field name="arch" type="xml">
            <search string="Search AI Requests">
                <field name="user_prompt"/>
                <field name="res_model"/>
                <field name="user_id"/>
                <separator/>
                <filter string="My Requests" name="my_requests"
                        domain="[('user_id', '=', uid)]"/>
                <filter string="Good Rating" name="good_rating"
                        domain="[('rating', '=', '5')]"/>
                <filter string="Bad Rating" name="bad_rating"
                        domain="[('rating', '=', '1')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Model" name="group_model" context="{'group_by': 'res_model'}"/>
                    <filter string="Rating" name="group_rating" context="{'group_by': 'rating'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ask_ai_requests" model="ir.actions.act_window">
        <field name="name">AI Requests</field>
        <field name="res_model">ask.ai.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_requests': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No AI requests yet
            </p>
            <p>
                Use the Ask AI button in Chatter to ask questions about documents.
            </p>
        </field>
    </record>

    <!-- Add to Ask AI menu -->
    <menuitem id="menu_ask_ai_requests"
              name="Chatter Requests"
              parent="ipai_ask_ai.menu_ask_ai_root"
              action="action_ask_ai_requests"
              sequence="30"/>
</odoo>
