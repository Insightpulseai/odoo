<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shelf_sync_log_tree" model="ir.ui.view">
        <field name="name">shelf.sync.log.tree</field>
        <field name="model">shelf.sync.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="create_date"/>
                <field name="equipment_id"/>
                <field name="direction"/>
                <field name="status" decoration-success="status == 'success'"
                       decoration-danger="status == 'error'"/>
                <field name="error_message" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="shelf_sync_log_action" model="ir.actions.act_window">
        <field name="name">Shelf Sync Log</field>
        <field name="res_model">shelf.sync.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_shelf_sync_log"
              name="Shelf Sync Log"
              parent="maintenance.menu_m_config"
              action="shelf_sync_log_action"
              sequence="90"/>
</odoo>
