{
  "name": "ipai-org-default-protection",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": ["~DEFAULT_BRANCH"],
      "exclude": []
    },
    "repository_property": [
      {
        "name": "runtime_tier",
        "property_values": ["prod", "stage"]
      }
    ]
  },
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "required_approving_review_count": 1,
        "dismiss_stale_reviews_on_push": true,
        "require_code_owner_review": true,
        "require_last_push_approval": true
      }
    },
    {
      "type": "required_status_checks",
      "parameters": {
        "strict_required_status_checks_policy": true,
        "required_status_checks": [
          {"context": "parity-validate"},
          {"context": "docs-ci"},
          {"context": "success-criteria-check"},
          {"context": "ee-parity-gate"}
        ]
      }
    },
    {
      "type": "non_fast_forward"
    }
  ],
  "bypass_actors": [
    {
      "actor_type": "Team",
      "actor_id": "platform",
      "bypass_mode": "pull_request"
    }
  ]
}
