<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Marketing Journey Categories -->
        <record id="module_category_marketing_journey" model="ir.module.category">
            <field name="name">Marketing Journey</field>
            <field name="description">Marketing automation journey builder</field>
            <field name="sequence">50</field>
        </record>

        <!-- User Group -->
        <record id="group_marketing_journey_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_marketing_journey"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Manager Group -->
        <record id="group_marketing_journey_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_marketing_journey"/>
            <field name="implied_ids" eval="[(4, ref('group_marketing_journey_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
