<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Default MCP Server configurations -->

    <!-- Supabase MCP -->
    <record id="mcp_server_supabase" model="ipai.mcp.server">
        <field name="name">Supabase</field>
        <field name="code">supabase</field>
        <field name="category">database</field>
        <field name="transport">stdio</field>
        <field name="command">npx -y @supabase/mcp-server</field>
        <field name="env_key_name">SUPABASE_ACCESS_TOKEN</field>
        <field name="tags">database,sql,schema,functions</field>
        <field name="sequence">10</field>
    </record>

    <!-- GitHub MCP -->
    <record id="mcp_server_github" model="ipai.mcp.server">
        <field name="name">GitHub</field>
        <field name="code">github</field>
        <field name="category">repository</field>
        <field name="transport">stdio</field>
        <field name="command">npx -y @modelcontextprotocol/server-github</field>
        <field name="env_key_name">GITHUB_TOKEN</field>
        <field name="tags">git,repo,issues,prs,workflows</field>
        <field name="sequence">20</field>
    </record>

    <!-- DBHub MCP -->
    <record id="mcp_server_dbhub" model="ipai.mcp.server">
        <field name="name">DBHub (PostgreSQL)</field>
        <field name="code">dbhub</field>
        <field name="category">database</field>
        <field name="transport">stdio</field>
        <field name="command">npx -y dbhub-mcp-server</field>
        <field name="env_key_name">POSTGRES_URL</field>
        <field name="tags">postgres,sql,odoo-db</field>
        <field name="sequence">30</field>
    </record>

    <!-- DigitalOcean MCP -->
    <record id="mcp_server_digitalocean" model="ipai.mcp.server">
        <field name="name">DigitalOcean</field>
        <field name="code">digitalocean</field>
        <field name="category">cloud</field>
        <field name="transport">stdio</field>
        <field name="command">node mcp/servers/digitalocean-mcp-server/dist/index.js</field>
        <field name="env_key_name">DIGITALOCEAN_TOKEN</field>
        <field name="tags">droplets,apps,infrastructure</field>
        <field name="sequence">40</field>
    </record>

    <!-- Vercel MCP -->
    <record id="mcp_server_vercel" model="ipai.mcp.server">
        <field name="name">Vercel</field>
        <field name="code">vercel</field>
        <field name="category">deployment</field>
        <field name="transport">stdio</field>
        <field name="command">node mcp/servers/vercel-mcp-server/dist/index.js</field>
        <field name="env_key_name">VERCEL_TOKEN</field>
        <field name="tags">deployment,hosting,preview</field>
        <field name="sequence">50</field>
    </record>

    <!-- Figma MCP -->
    <record id="mcp_server_figma" model="ipai.mcp.server">
        <field name="name">Figma</field>
        <field name="code">figma</field>
        <field name="category">design</field>
        <field name="transport">stdio</field>
        <field name="command">npx -y @anthropic/figma-mcp-server</field>
        <field name="env_key_name">FIGMA_ACCESS_TOKEN</field>
        <field name="tags">design,tokens,components</field>
        <field name="sequence">60</field>
    </record>

    <!-- Notion MCP -->
    <record id="mcp_server_notion" model="ipai.mcp.server">
        <field name="name">Notion</field>
        <field name="code">notion</field>
        <field name="category">docs</field>
        <field name="transport">stdio</field>
        <field name="command">npx -y @notionhq/notion-mcp-server</field>
        <field name="env_key_name">NOTION_API_KEY</field>
        <field name="tags">docs,prds,wiki</field>
        <field name="sequence">70</field>
    </record>

    <!-- Odoo ERP MCP (Custom) -->
    <record id="mcp_server_odoo" model="ipai.mcp.server">
        <field name="name">Odoo ERP</field>
        <field name="code">odoo-erp</field>
        <field name="category">database</field>
        <field name="transport">stdio</field>
        <field name="command">node mcp/servers/odoo-erp-server/dist/index.js</field>
        <field name="env_key_name">ODOO_PASSWORD</field>
        <field name="tags">odoo,erp,accounting,bir</field>
        <field name="sequence">5</field>
    </record>
</odoo>
