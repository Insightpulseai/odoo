<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Phase views are handled through project.task with is_phase=True -->
    <!-- This file provides additional views for phase management -->

    <!-- Phase Tree View (filtered tasks) -->
    <record id="view_project_phase_tree" model="ir.ui.view">
        <field name="name">project.task.phase.tree</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="phase_type"/>
                <field name="date_deadline"/>
                <field name="phase_baseline_start"/>
                <field name="phase_baseline_finish"/>
                <field name="phase_progress"/>
                <field name="has_gate"/>
            </tree>
        </field>
    </record>

    <!-- Phase Action -->
    <record id="action_project_phases" model="ir.actions.act_window">
        <field name="name">Project Phases</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_phase', '=', True)]</field>
        <field name="context">{'default_is_phase': True}</field>
    </record>

</odoo>
