<odoo>
  <record id="ir_cron_ipai_ppm_sync_budgets" model="ir.cron">
    <field name="name">IPAI PPM: Sync Project Budgets to Analytic</field>
    <field name="model_id" ref="project.model_project_project"/>
    <field name="state">code</field>
    <field name="code">
projects = env['project.project'].search([('analytic_account_id','!=',False),('ipai_ppm_budget_amount','!=',False)])
for p in projects:
    env['account.analytic.account'].ipai_sync_project_budget_to_analytic(p.id)
    </field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
  </record>
</odoo>
