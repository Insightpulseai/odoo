<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Superset Connector Security Groups -->
        
        <record id="group_superset_user" model="res.groups">
            <field name="name">Superset User</field>
            <field name="category_id" ref="base.module_category_reporting"/>
            <field name="comment">Can view Superset datasets and dashboards</field>
        </record>
        
        <record id="group_superset_manager" model="res.groups">
            <field name="name">Superset Manager</field>
            <field name="category_id" ref="base.module_category_reporting"/>
            <field name="implied_ids" eval="[(4, ref('group_superset_user'))]"/>
            <field name="comment">Can manage Superset connections and datasets</field>
        </record>
        
        <record id="group_superset_admin" model="res.groups">
            <field name="name">Superset Administrator</field>
            <field name="category_id" ref="base.module_category_reporting"/>
            <field name="implied_ids" eval="[(4, ref('group_superset_manager'))]"/>
            <field name="comment">Full access to Superset connector configuration</field>
        </record>

    </data>
</odoo>
