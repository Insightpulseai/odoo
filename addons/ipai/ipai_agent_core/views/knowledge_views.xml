<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Knowledge Tree View -->
    <record id="ipai_agent_knowledge_tree" model="ir.ui.view">
        <field name="name">ipai.agent.knowledge_source.tree</field>
        <field name="model">ipai.agent.knowledge_source</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="key"/>
                <field name="kind"/>
                <field name="tags"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Knowledge Form View -->
    <record id="ipai_agent_knowledge_form" model="ir.ui.view">
        <field name="name">ipai.agent.knowledge_source.form</field>
        <field name="model">ipai.agent.knowledge_source</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger"
                            invisible="is_active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Knowledge Source Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="key"/>
                            <field name="kind"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="url" invisible="kind != 'url'"/>
                        <field name="model_name" invisible="kind != 'model'"/>
                        <field name="attachment_id" invisible="kind != 'attachment'"/>
                        <field name="content_text" invisible="kind != 'text'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Knowledge Action -->
    <record id="ipai_agent_knowledge_action" model="ir.actions.act_window">
        <field name="name">Knowledge Sources</field>
        <field name="res_model">ipai.agent.knowledge_source</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_is_active': 1}</field>
    </record>
</odoo>
