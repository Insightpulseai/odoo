              name="Approval Gates"
              parent="menu_close_orchestration_root"
              action="action_close_approval_gate"
              sequence="40"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_close_configuration"
              name="Configuration"
              parent="menu_close_orchestration_root"
              sequence="100"
