<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Register snippet group and structure -->
    <template id="cts_theme_rozz_aboutus" inherit_id="website.snippets" name="About Us / Team">
        <!-- Add new snippet group entry (sidebar group) -->
        <xpath expr="//snippets[@id='snippet_groups']/*[last()]" position="after">
            <t t-snippet="website.s_snippet_group"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-about-us-block.jpg"
               string="About Us"
               snippet-group="about_us_team"/>
        </xpath>

        <!-- Add snippet to structure list -->
        <xpath expr="//snippets[@id='snippet_structure']/*[last()]" position="after">
            <t t-snippet="cts_theme_rozz.s_rozz_aboutus"
               string="About Us / Team"
               group="about_us_team"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-about-us-block.jpg"/>
        </xpath>
    </template>

    <!-- Snippet Content -->
    <template id="s_rozz_aboutus" name="Rozz About Us / Team">
        <section class="about-area">
            <div class="container-fluid">
                <div class="row">
                    <!-- Left content -->
                    <div class="col-lg-6">
                        <div class="about-content">
                            <div class="section-title">
                                <span class="sub-title">About Us</span>
                                <h2>We Are Dedicated To Do Your Work</h2>
                            </div>
                            <p>
                                We are a passionate team committed to excellence in every project.
                                Our mission is to deliver reliable, high-quality services that exceed expectations.
                                With years of expertise, we ensure every task is done with precision and care.
                            </p>
                            <a class="cmn-btn" href="#">Learn More</a>
                        </div>
                    </div>

                    <!-- Right image -->
                    <div class="col-lg-6">
                        <div>
                            <img src="/cts_theme_rozz/static/src/images/about.jpg"
                                 alt="About" style="width:100%;" class="about-img"/>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
