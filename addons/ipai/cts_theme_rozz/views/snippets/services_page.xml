<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Register Snippet Group and Structure -->
    <template id="rozzz_services_page" inherit_id="website.snippets" name="Rozz Services Page">
        <!-- Add to snippet group list -->
        <xpath expr="//snippets[@id='snippet_groups']/*[last()]" position="after">
            <t t-snippet="website.s_snippet_group"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-services-page.jpg"
               string="Services Page"
               snippet-group="services_page_section"/>
        </xpath>

        <!-- Add to snippet structure list -->
        <xpath expr="//snippets[@id='snippet_structure']/*[last()]" position="after">
            <t t-snippet="cts_theme_rozz.s_rozz_services_page"
               string="Rozz Services Page"
               group="services_page_section"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-services-page.jpg"/>
        </xpath>
    </template>

