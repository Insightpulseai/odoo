<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Import Seed Wizard -->
  <record id="view_ipai_import_seed_wizard" model="ir.ui.view">
    <field name="name">ipai.import.seed.wizard.form</field>
    <field name="model">ipai.import.seed.wizard</field>
    <field name="arch" type="xml">
      <form string="Import Seeds">
        <group>
          <field name="mode"/>
        </group>
        <field name="seed_json" widget="text" placeholder="Paste JSON payload here..."
               style="height: 420px; font-family: monospace;"/>
        <footer>
          <button name="action_import" type="object" string="Import" class="btn-primary"/>
          <button special="cancel" string="Cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_ipai_import_seed_wizard" model="ir.actions.act_window">
    <field name="name">Import Seeds</field>
    <field name="res_model">ipai.import.seed.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <!-- Export Seed Wizard -->
  <record id="view_ipai_export_seed_wizard" model="ir.ui.view">
    <field name="name">ipai.export.seed.wizard.form</field>
    <field name="model">ipai.export.seed.wizard</field>
    <field name="arch" type="xml">
      <form string="Export Seeds">
        <group>
          <field name="export_path" placeholder="/path/to/seeds.json"/>
          <field name="webhook_url" placeholder="https://n8n.example.com/webhook/..."/>
        </group>
        <footer>
          <button name="action_export" type="object" string="Export" class="btn-primary"/>
          <button special="cancel" string="Cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_ipai_export_seed_wizard" model="ir.actions.act_window">
    <field name="name">Export Seeds</field>
    <field name="res_model">ipai.export.seed.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
