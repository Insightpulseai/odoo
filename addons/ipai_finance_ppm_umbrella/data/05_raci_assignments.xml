<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <data noupdate="1">
    <!-- RACI Matrix: Per-Employee Supervisor/Reviewer/Approver Assignments -->

    <!-- CKVC - Finance Director / Senior Supervisor -->
    <record id="raci_ckvc" model="ipai.finance.raci_assignment">
      <field name="employee_id" ref="user_ckvc"/>
      <field name="role">approver</field>
      <field name="scope">Finance Director — final approval authority for all BIR filings, month-end closing, and go-live sign-off</field>
      <field name="supervisor_id" ref="user_ckvc"/>
      <field name="reviewer_id" ref="user_ckvc"/>
      <field name="approver_id" ref="user_ckvc"/>
    </record>

    <!-- RIM - Senior Finance Manager -->
    <record id="raci_rim" model="ipai.finance.raci_assignment">
      <field name="employee_id" ref="user_rim"/>
      <field name="role">responsible</field>
      <field name="scope">Senior Finance Manager — payroll, tax provisions, accruals, cash advances, prior period review, depreciation</field>
      <field name="supervisor_id" ref="user_ckvc"/>
      <field name="reviewer_id" ref="user_ckvc"/>
      <field name="approver_id" ref="user_ckvc"/>
    </record>

