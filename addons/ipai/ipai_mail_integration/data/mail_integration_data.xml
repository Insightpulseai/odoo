<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default SMTP Gateway Template -->
        <record id="mail_gateway_smtp_default" model="ipai.mail.gateway">
            <field name="name">Default SMTP Gateway</field>
            <field name="gateway_type">smtp</field>
            <field name="is_active">False</field>
            <field name="is_default">False</field>
            <field name="smtp_host">smtp.example.com</field>
            <field name="smtp_port">587</field>
            <field name="smtp_encryption">starttls</field>
            <field name="track_opens">True</field>
            <field name="track_clicks">True</field>
        </record>

        <!-- Mailgun Gateway Template -->
        <record id="mail_gateway_mailgun" model="ipai.mail.gateway">
            <field name="name">Mailgun</field>
            <field name="gateway_type">mailgun</field>
            <field name="is_active">False</field>
            <field name="is_default">False</field>
            <field name="api_endpoint">https://api.mailgun.net/v3</field>
            <field name="track_opens">True</field>
            <field name="track_clicks">True</field>
        </record>

    </data>
</odoo>
