<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Device Types -->

        <record id="device_type_temperature_sensor" model="ipai.iot.device.type">
            <field name="name">Temperature Sensor</field>
            <field name="code">temp_sensor</field>
            <field name="description">Temperature measurement sensor</field>
            <field name="default_protocol">mqtt</field>
        </record>

        <record id="device_type_humidity_sensor" model="ipai.iot.device.type">
            <field name="name">Humidity Sensor</field>
            <field name="code">humidity_sensor</field>
            <field name="description">Humidity measurement sensor</field>
            <field name="default_protocol">mqtt</field>
        </record>

        <record id="device_type_barcode_scanner" model="ipai.iot.device.type">
            <field name="name">Barcode Scanner</field>
            <field name="code">barcode_scanner</field>
            <field name="description">Barcode/QR code scanner</field>
            <field name="default_protocol">http</field>
        </record>

        <record id="device_type_label_printer" model="ipai.iot.device.type">
            <field name="name">Label Printer</field>
            <field name="code">label_printer</field>
            <field name="description">Thermal label printer</field>
            <field name="default_protocol">http</field>
        </record>

        <record id="device_type_scale" model="ipai.iot.device.type">
            <field name="name">Scale</field>
            <field name="code">scale</field>
            <field name="description">Weight measurement scale</field>
            <field name="default_protocol">serial</field>
        </record>

        <record id="device_type_pos_display" model="ipai.iot.device.type">
            <field name="name">POS Display</field>
            <field name="code">pos_display</field>
            <field name="description">Customer-facing display</field>
            <field name="default_protocol">http</field>
        </record>

    </data>
</odoo>
