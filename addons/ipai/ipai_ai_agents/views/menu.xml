<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Client Action for Ask AI Panel -->
    <record id="action_ipai_ai_agents_panel" model="ir.actions.client">
        <field name="name">Ask AI</field>
        <field name="tag">ipai_ai_agents.ai_panel_action</field>
    </record>

    <!-- Root Menu -->
    <menuitem id="menu_ipai_ai_root"
              name="AI"
              web_icon="ipai_ai_agents,static/description/icon.png"
              sequence="80"/>

    <!-- Ask AI Panel -->
    <menuitem id="menu_ipai_ai_panel"
              name="Ask AI"
              parent="menu_ipai_ai_root"
              action="action_ipai_ai_agents_panel"
              sequence="10"/>

    <!-- Configuration Submenu -->
    <menuitem id="menu_ipai_ai_config"
              name="Configuration"
              parent="menu_ipai_ai_root"
              groups="base.group_system"
              sequence="90"/>

    <!-- Agents -->
    <menuitem id="menu_ipai_ai_agents"
              name="Agents"
              parent="menu_ipai_ai_config"
              action="action_ipai_ai_agent"
              sequence="10"/>

    <!-- Sources -->
    <menuitem id="menu_ipai_ai_sources"
              name="Knowledge Sources"
              parent="menu_ipai_ai_config"
              action="action_ipai_ai_source"
              sequence="20"/>

    <!-- Conversations (for admin review) -->
    <menuitem id="menu_ipai_ai_threads_admin"
              name="All Conversations"
              parent="menu_ipai_ai_config"
              action="action_ipai_ai_thread"
              sequence="30"/>

    <!-- My Conversations -->
    <menuitem id="menu_ipai_ai_my_conversations"
              name="My Conversations"
              parent="menu_ipai_ai_root"
              action="action_ipai_ai_thread"
              sequence="20"/>
</odoo>
