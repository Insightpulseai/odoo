<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Conversation List View -->
    <record id="view_ask_ai_conversation_tree" model="ir.ui.view">
        <field name="name">ask.ai.conversation.tree</field>
        <field name="model">ask.ai.conversation</field>
        <field name="arch" type="xml">
            <list string="AI Conversations">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="message_count"/>
                <field name="res_model"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Conversation Form View -->
    <record id="view_ask_ai_conversation_form" model="ir.ui.view">
        <field name="name">ask.ai.conversation.form</field>
        <field name="model">ask.ai.conversation</field>
        <field name="arch" type="xml">
            <form string="AI Conversation">
                <header>
                    <button name="action_clear_history" string="Clear History"
                            type="object" class="btn-secondary"
                            confirm="Are you sure you want to clear all messages?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="res_model" readonly="1"/>
                            <field name="res_id" readonly="1"/>
                            <field name="message_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids" nolabel="1">
                                <list string="Messages" create="0" delete="0">
                                    <field name="role" widget="badge"
                                        decoration-info="role == 'user'"
                                        decoration-success="role == 'assistant'"
                                        decoration-muted="role == 'system'"/>
                                    <field name="content"/>
                                    <field name="model_used"/>
                                    <field name="processing_time"/>
                                    <field name="tokens_used"/>
                                    <field name="rating" widget="priority"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Message Form View -->
    <record id="view_ask_ai_message_form" model="ir.ui.view">
        <field name="name">ask.ai.message.form</field>
        <field name="model">ask.ai.message</field>
        <field name="arch" type="xml">
            <form string="AI Message">
                <sheet>
                    <group>
                        <group>
                            <field name="conversation_id"/>
                            <field name="role"/>
                            <field name="rating"/>
                        </group>
                        <group>
                            <field name="model_used"/>
                            <field name="tokens_used"/>
                            <field name="processing_time"/>
                        </group>
                    </group>
                    <separator string="Content"/>
                    <field name="content" widget="html"/>
                    <separator string="Sources Used" invisible="not sources_used"/>
                    <field name="sources_used" invisible="not sources_used"/>
                    <separator string="Feedback" invisible="not feedback_note"/>
                    <field name="feedback_note" invisible="not feedback_note"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Conversation Search View -->
    <record id="view_ask_ai_conversation_search" model="ir.ui.view">
        <field name="name">ask.ai.conversation.search</field>
        <field name="model">ask.ai.conversation</field>
        <field name="arch" type="xml">
            <search string="Search Conversations">
                <field name="name"/>
                <field name="user_id"/>
                <field name="res_model"/>
                <separator/>
                <filter string="My Conversations" name="my_conversations"
                        domain="[('user_id', '=', uid)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Model" name="group_model" context="{'group_by': 'res_model'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Conversation Action -->
    <record id="action_ask_ai_conversations" model="ir.actions.act_window">
        <field name="name">AI Conversations</field>
        <field name="res_model">ask.ai.conversation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_conversations': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No AI conversations yet
            </p>
            <p>
                Use the Ask AI feature to start a conversation with the Finance AI assistant.
            </p>
        </field>
    </record>

    <!-- Ask AI Client Action (Chat Interface) -->
    <record id="action_ask_ai_chat" model="ir.actions.client">
        <field name="name">Ask AI</field>
        <field name="tag">ipai_ask_ai.chat</field>
        <field name="target">current</field>
    </record>
</odoo>
