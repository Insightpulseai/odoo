<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_ipai_ai" model="ir.ui.view">
        <field name="name">res.config.settings.ipai.ai</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="IPAI AI" string="IPAI AI">
                    <h2>IPAI AI Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-robot"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="AI Providers"/>
                                <div class="text-muted">
                                    Configure AI providers and set the default for your company.
                                </div>
                                <div class="mt8">
                                    <button name="%(action_ipai_ai_providers)d" type="action"
                                            string="Manage Providers" class="btn-link"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-comments"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="AI Threads"/>
                                <div class="text-muted">
                                    View conversation history and threads.
                                </div>
                                <div class="mt8">
                                    <button name="%(action_ipai_ai_threads)d" type="action"
                                            string="View Threads" class="btn-link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
