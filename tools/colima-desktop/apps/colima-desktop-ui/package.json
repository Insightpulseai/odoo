{
  "name": "@ipai/colima-desktop-ui",
  "version": "0.1.0",
  "description": "Electron UI for Colima Desktop - macOS menubar app",
  "main": "dist-main/main/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p tsconfig.main.json --watch\"",
    "build": "vite build && tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.insightpulseai.colima-desktop",
    "productName": "Colima Desktop",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "files": [
      "dist-renderer/**/*",
      "dist-main/**/*",
      "package.json"
    ]
  }
}
