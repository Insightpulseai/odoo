# =============================================================================
# Production Nginx Configuration for Odoo
# =============================================================================
# Domain: erp.insightpulseai.net
# TLS: Let's Encrypt / Manual certificates
# Features: Rate limiting, security headers, WebSocket support
# =============================================================================

# Upstream definitions
upstream odoo_backend {
    server ipai-odoo:8069 weight=1 fail_timeout=10s;
    keepalive 32;
}

upstream odoo_longpolling {
    server ipai-odoo:8072;
    keepalive 16;
}

# Rate limiting zones
limit_req_zone $binary_remote_addr zone=odoo_limit:10m rate=10r/s;
limit_conn_zone $binary_remote_addr zone=odoo_conn:10m;

# HTTP â†’ HTTPS redirect
server {
    listen 80;
    server_name erp.insightpulseai.net;
    return 301 https://$server_name$request_uri;
}

# Main HTTPS server
server {
    listen 443 ssl http2;
    server_name erp.insightpulseai.net;

    # TLS configuration
    ssl_certificate /etc/nginx/certs/fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/privkey.pem;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    # Modern TLS only
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # HSTS (1 year)
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Logging
    access_log /var/log/nginx/odoo_access.log combined;
    error_log /var/log/nginx/odoo_error.log warn;

    # Gzip compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml;
    gzip_min_length 1000;

    # Client body size (for file uploads)
    client_max_body_size 100M;

    # Timeouts
    proxy_connect_timeout 720s;
    proxy_send_timeout 720s;
    proxy_read_timeout 720s;
    send_timeout 720s;

    # Proxy headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;

    # Main Odoo application
    location / {
        limit_req zone=odoo_limit burst=20 nodelay;
        limit_conn odoo_conn 50;

        proxy_pass http://odoo_backend;
        proxy_redirect off;
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
    }

    # Longpolling (Odoo bus)
    location /longpolling {
        proxy_pass http://odoo_longpolling;
        proxy_redirect off;
        proxy_buffering off;
    }

    # WebSocket upgrade (Odoo 17+)
    location /websocket {
        proxy_pass http://odoo_longpolling;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_redirect off;
        proxy_buffering off;
    }

    # Static files caching
    location ~* /web/static/ {
        proxy_pass http://odoo_backend;
        proxy_cache_valid 200 90m;
        expires 24h;
        add_header Cache-Control "public, immutable";
    }

    # Block sensitive paths
    location ~* ^/(web/database|jsonrpc) {
        limit_req zone=odoo_limit burst=5 nodelay;
        proxy_pass http://odoo_backend;
    }

    # Health check endpoint (internal only)
    location /nginx-health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}
