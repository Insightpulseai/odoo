<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- MCP Binding: Form View -->
    <record id="view_mcp_binding_form" model="ir.ui.view">
        <field name="name">ipai.mcp.binding.form</field>
        <field name="model">ipai.mcp.binding</field>
        <field name="arch" type="xml">
            <form string="MCP Tool Binding">
                <sheet>
                    <widget name="web_ribbon" title="Auto-Invoke" bg_color="text-bg-info" invisible="not auto_invoke"/>
                    <div class="oe_title">
                        <h1>
                            <field name="tool_id" placeholder="Select Tool"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Binding Configuration">
                            <field name="model_id"/>
                            <field name="usage"/>
                            <field name="priority"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Automation">
                            <field name="auto_invoke"/>
                        </group>
                    </group>
                    <group string="Fields">
                        <field name="field_ids" widget="many2many_tags" nolabel="1"/>
                    </group>
                    <group string="Context Template">
                        <field name="context_template" widget="ace" options="{'mode': 'python'}" nolabel="1"
                               placeholder="# Jinja2 template for generating tool input&#10;# Available: record, user, company&#10;{&#10;  'record_id': {{ record.id }},&#10;  'model': '{{ record._name }}'&#10;}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- MCP Binding: List View -->
    <record id="view_mcp_binding_list" model="ir.ui.view">
        <field name="name">ipai.mcp.binding.list</field>
        <field name="model">ipai.mcp.binding</field>
        <field name="arch" type="xml">
            <list string="MCP Tool Bindings">
                <field name="tool_id"/>
                <field name="server_code"/>
                <field name="model_id"/>
                <field name="usage"/>
                <field name="auto_invoke"/>
                <field name="priority"/>
            </list>
        </field>
    </record>

    <!-- MCP Binding: Search View -->
    <record id="view_mcp_binding_search" model="ir.ui.view">
        <field name="name">ipai.mcp.binding.search</field>
        <field name="model">ipai.mcp.binding</field>
        <field name="arch" type="xml">
            <search string="Search Bindings">
                <field name="tool_id"/>
                <field name="model_id"/>
                <filter string="Ask AI Context" name="ask_ai" domain="[('usage', '=', 'ask_ai_context')]"/>
                <filter string="Auto-Invoke" name="auto_invoke" domain="[('auto_invoke', '=', True)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Model" name="groupby_model" context="{'group_by': 'model_id'}"/>
                    <filter string="Usage" name="groupby_usage" context="{'group_by': 'usage'}"/>
                    <filter string="Server" name="groupby_server" context="{'group_by': 'server_code'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- MCP Binding: Action -->
    <record id="action_mcp_binding" model="ir.actions.act_window">
        <field name="name">MCP Tool Bindings</field>
        <field name="res_model">ipai.mcp.binding</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tool binding
            </p>
            <p>
                Link MCP tools to Odoo models for context-aware agent orchestration.
            </p>
        </field>
    </record>
</odoo>
