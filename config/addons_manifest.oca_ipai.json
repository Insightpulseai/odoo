{
  "version": 1,
  "description": "Canonical placement of OCA and ipai addons for ipai_* EE-parity stack",
  "roots": {
    "oca_root": "addons/oca",
    "ipai_root": "addons/ipai"
  },

  "oca_repositories": [
    {
      "name": "ai",
      "type": "git",
      "url": "https://github.com/OCA/ai.git",
      "path": "addons/oca/ai",
      "purpose": "AI/LLM integration modules"
    },
    {
      "name": "automation",
      "type": "git",
      "url": "https://github.com/OCA/automation.git",
      "path": "addons/oca/automation",
      "purpose": "Automation tools"
    },
    {
      "name": "queue",
      "type": "git",
      "url": "https://github.com/OCA/queue.git",
      "path": "addons/oca/queue",
      "purpose": "Asynchronous job queue (queue_job)"
    },
    {
      "name": "connector",
      "type": "git",
      "url": "https://github.com/OCA/connector.git",
      "path": "addons/oca/connector",
      "purpose": "Generic connector framework"
    },
    {
      "name": "rest-framework",
      "type": "git",
      "url": "https://github.com/OCA/rest-framework.git",
      "path": "addons/oca/rest-framework",
      "purpose": "REST API framework + OpenAPI"
    },
    {
      "name": "server-tools",
      "type": "git",
      "url": "https://github.com/OCA/server-tools.git",
      "path": "addons/oca/server-tools",
      "purpose": "Admin tools, exceptions, tiers, schedulers"
    },
    {
      "name": "server-env",
      "type": "git",
      "url": "https://github.com/OCA/server-env.git",
      "path": "addons/oca/server-env",
      "purpose": "Environment-dependent configuration"
    },
    {
      "name": "server-ux",
      "type": "git",
      "url": "https://github.com/OCA/server-ux.git",
      "path": "addons/oca/server-ux",
      "purpose": "Server UX helpers (tier validation extras, date_range)"
    },
    {
      "name": "web",
      "type": "git",
      "url": "https://github.com/OCA/web.git",
      "path": "addons/oca/web",
      "purpose": "Web UI extensions"
    },
    {
      "name": "reporting-engine",
      "type": "git",
      "url": "https://github.com/OCA/reporting-engine.git",
      "path": "addons/oca/reporting-engine",
      "purpose": "Reporting helpers (xlsx, qweb extras)"
    },
    {
      "name": "account-financial-reporting",
      "type": "git",
      "url": "https://github.com/OCA/account-financial-reporting.git",
      "path": "addons/oca/account-financial-reporting",
      "purpose": "GL / TB / Open items reports"
    },
    {
      "name": "account-financial-tools",
      "type": "git",
      "url": "https://github.com/OCA/account-financial-tools.git",
      "path": "addons/oca/account-financial-tools",
      "purpose": "Assets, fiscal year, move naming, etc"
    },
    {
      "name": "account-reconcile",
      "type": "git",
      "url": "https://github.com/OCA/account-reconcile.git",
      "path": "addons/oca/account-reconcile",
      "purpose": "Bank reconciliation tools"
    },
    {
      "name": "bank-statement-import",
      "type": "git",
      "url": "https://github.com/OCA/bank-statement-import.git",
      "path": "addons/oca/bank-statement-import",
      "purpose": "Bank statement import (OFX/CAMT/MT940)"
    },
    {
      "name": "account-invoicing",
      "type": "git",
      "url": "https://github.com/OCA/account-invoicing.git",
      "path": "addons/oca/account-invoicing",
      "purpose": "Invoice tools (merge, refund link, total checks)"
    },
    {
      "name": "sale-workflow",
      "type": "git",
      "url": "https://github.com/OCA/sale-workflow.git",
      "path": "addons/oca/sale-workflow",
      "purpose": "Advanced sales workflows"
    },
    {
      "name": "purchase-workflow",
      "type": "git",
      "url": "https://github.com/OCA/purchase-workflow.git",
      "path": "addons/oca/purchase-workflow",
      "purpose": "Advanced purchase workflows"
    },
    {
      "name": "partner-contact",
      "type": "git",
      "url": "https://github.com/OCA/partner-contact.git",
      "path": "addons/oca/partner-contact",
      "purpose": "Partner/contact extensions"
    },
    {
      "name": "crm",
      "type": "git",
      "url": "https://github.com/OCA/crm.git",
      "path": "addons/oca/crm",
      "purpose": "CRM extensions"
    }
  ],

