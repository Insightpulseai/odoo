<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!--
    BIR Tax Rates Reference Data
    Note: These are informational records. Actual tax computation should use
    the appropriate Odoo tax configurations and account.tax records.
    -->

    <!-- Sequence for tax returns -->
    <record id="seq_bir_tax_return" model="ir.sequence">
        <field name="name">BIR Tax Return</field>
        <field name="code">bir.tax.return</field>
        <field name="prefix">BIR-%(year)s-</field>
        <field name="padding">5</field>
    </record>

    <!-- VAT Rates (Philippines) -->
    <!-- Standard VAT: 12% -->
    <!-- Zero-rated: 0% (exports, certain services) -->
    <!-- Exempt: N/A (not subject to VAT) -->

    <!-- Withholding Tax Rates on Compensation (2024 BIR Tax Table) -->
    <!--
    Annual Taxable Income          Tax Rate
    Up to 250,000                  0%
    250,001 - 400,000              15% of excess over 250,000
    400,001 - 800,000              22,500 + 20% of excess over 400,000
    800,001 - 2,000,000            102,500 + 25% of excess over 800,000
    2,000,001 - 8,000,000          402,500 + 30% of excess over 2,000,000
    Over 8,000,000                 2,202,500 + 35% of excess over 8,000,000
    -->

    <!-- Expanded Withholding Tax Rates -->
    <!--
    Income Type                              Rate
    Professional fees (individuals)          5% (if <3M) / 10% (if >3M)
    Professional fees (corporations)         10% / 15%
    Rentals (real property)                  5%
    Rentals (personal property)              5%
    Cinematographic royalties                20%
    Contractors (individual)                 2%
    Contractors (corporation)                2%
    Interest on deposits                     20% (Final)
    Dividends (domestic)                     10% (Final)
    -->

    <!-- Final Withholding Tax Rates -->
    <!--
    Interest on bank deposits                20%
    Dividends (resident citizen)             10%
    Dividends (non-resident alien)           25%
    Royalties                                20%
    Prizes > 10,000                          20%
    Winnings (PCSO, Lotto)                   Exempt (< 10K) / 20% (> 10K)
    -->
</odoo>
