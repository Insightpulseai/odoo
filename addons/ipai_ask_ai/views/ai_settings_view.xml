<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ipai.ask.ai</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[@class='oe_form_configuration']" position="inside">
                <div class="app_settings_block" data-string="AI Configuration" string="AI Configuration" data-key="ipai_ask_ai">
                    <h2>AI Provider Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <!-- ChatGPT Settings -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ai_use_chatgpt"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ai_use_chatgpt"/>
                                <div class="text-muted">
                                    Enable ChatGPT integration with your own OpenAI API key
                                </div>
                                <div class="content-group" attrs="{'invisible': [('ai_use_chatgpt', '=', False)]}">
                                    <div class="mt16">
                                        <label for="ai_chatgpt_key" class="o_light_label"/>
                                        <field name="ai_chatgpt_key" password="True" placeholder="sk-..." class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Google Gemini Settings -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ai_use_gemini"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ai_use_gemini"/>
                                <div class="text-muted">
                                    Enable Google Gemini integration with your own API key
                                </div>
                                <div class="content-group" attrs="{'invisible': [('ai_use_gemini', '=', False)]}">
                                    <div class="mt16">
                                        <label for="ai_gemini_key" class="o_light_label"/>
                                        <field name="ai_gemini_key" password="True" placeholder="AIza..." class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
