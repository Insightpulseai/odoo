{
  "name": "@ipai/colima-desktop-ui",
  "version": "0.1.0",
  "description": "Electron UI for Colima Desktop - macOS menubar app",
  "main": "dist-main/index.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Insightpulseai/odoo.git",
    "directory": "tools/colima-desktop/apps/colima-desktop-ui"
  },
  "author": "InsightPulse AI <business@insightpulseai.com>",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p tsconfig.main.json --watch\"",
    "build": "vite build && tsc -p tsconfig.main.json",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --build --force",
    "package": "pnpm build && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "@electron/notarize": "^2.3.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.insightpulseai.colima-desktop",
    "productName": "Colima Desktop",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "files": [
      "dist-renderer/**/*",
      "dist-main/**/*",
      "package.json"
    ]
  }
}
