<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Top-Level Payroll Menu -->
    <menuitem id="menu_payroll_root"
              name="Payroll"
              sequence="5"
              web_icon="ipai_hr_payroll_ph,static/description/icon.png"/>

    <!-- Payroll Processing -->
    <menuitem id="menu_payroll_processing"
              name="Payroll Processing"
              parent="menu_payroll_root"
              sequence="10"/>

    <menuitem id="menu_payslips"
              name="Payslips"
              parent="menu_payroll_processing"
              action="action_hr_payslip"
              sequence="10"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_payroll_configuration"
              name="Configuration"
              parent="menu_payroll_root"
              sequence="90"
              groups="hr.group_hr_manager"/>

    <menuitem id="menu_salary_rules"
              name="Salary Rules"
              parent="menu_payroll_configuration"
              sequence="10"/>

    <menuitem id="menu_contribution_tables"
              name="Contribution Tables"
              parent="menu_payroll_configuration"
              sequence="20"/>

    <!-- Reporting Menu -->
    <menuitem id="menu_payroll_reporting"
              name="Reporting"
              parent="menu_payroll_root"
              sequence="80"/>
</odoo>
