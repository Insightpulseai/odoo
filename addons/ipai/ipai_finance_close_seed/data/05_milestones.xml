<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ============================================================
             IM1 Milestones — Month-End Close (5 phases)
             ============================================================ -->

        <record id="milestone_phase_1" model="project.milestone">
            <field name="name">Phase I: Initial &amp; Compliance</field>
            <field name="project_id" ref="project_month_end_close"/>
        </record>
        <record id="milestone_phase_2" model="project.milestone">
            <field name="name">Phase II: Accruals &amp; Amortization</field>
            <field name="project_id" ref="project_month_end_close"/>
        </record>
        <record id="milestone_phase_3" model="project.milestone">
            <field name="name">Phase III: WIP &amp; Client Billings</field>
            <field name="project_id" ref="project_month_end_close"/>
        </record>
        <record id="milestone_phase_4" model="project.milestone">
            <field name="name">Phase IV: Final Adjustments</field>
            <field name="project_id" ref="project_month_end_close"/>
        </record>
        <record id="milestone_phase_5" model="project.milestone">
            <field name="name">Phase V: Sign-off</field>
            <field name="project_id" ref="project_month_end_close"/>
        </record>

        <!-- ============================================================
             IM2 Milestones — BIR Tax Filing (4 cadences)
             ============================================================ -->

        <record id="milestone_bir_monthly_wht" model="project.milestone">
            <field name="name">Monthly Withholding (1601-C / 0619-E)</field>
            <field name="project_id" ref="project_bir_tax_filing"/>
        </record>
        <record id="milestone_bir_monthly_vat" model="project.milestone">
            <field name="name">Monthly VAT (2550M)</field>
            <field name="project_id" ref="project_bir_tax_filing"/>
        </record>
        <record id="milestone_bir_quarterly" model="project.milestone">
            <field name="name">Quarterly Filing (2550Q / 1601-EQ / 1702Q)</field>
            <field name="project_id" ref="project_bir_tax_filing"/>
        </record>
        <record id="milestone_bir_annual" model="project.milestone">
            <field name="name">Annual Filing (1702-RT / 1604-CF / 1604-E)</field>
            <field name="project_id" ref="project_bir_tax_filing"/>
            <field name="deadline">2026-04-15</field>
        </record>

        <!-- ============================================================
             Output Milestones (cross-project)
             ============================================================ -->

        <record id="milestone_output_jes" model="project.milestone">
            <field name="name">Output: JEs &amp; Accruals Finalized</field>
            <field name="project_id" ref="project_month_end_close"/>
        </record>
        <record id="milestone_output_bir" model="project.milestone">
            <field name="name">Output: All BIR Forms Filed</field>
            <field name="project_id" ref="project_bir_tax_filing"/>
        </record>

    </data>
</odoo>
