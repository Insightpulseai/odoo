<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Approval Approver Tree View -->
    <record id="view_ipai_approval_approver_tree" model="ir.ui.view">
        <field name="name">ipai.approval.approver.tree</field>
        <field name="model">ipai.approval.approver</field>
        <field name="arch" type="xml">
            <list create="0" delete="0">
                <field name="request_id"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-info="state == 'delegated'"/>
                <field name="decision_date"/>
                <field name="delegated_to_id"/>
                <field name="delegated_from_id"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <!-- Approval Approver Form View -->
    <record id="view_ipai_approval_approver_form" model="ir.ui.view">
        <field name="name">ipai.approval.approver.form</field>
        <field name="model">ipai.approval.approver</field>
        <field name="arch" type="xml">
            <form string="Approver" create="0" delete="0">
                <header>
                    <button name="action_approve" type="object" string="Approve" class="oe_highlight btn-success" invisible="not can_approve"/>
                    <button name="%(ipai_approvals.action_approval_delegate_wizard)d" type="action" string="Delegate" invisible="not can_approve"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="request_id"/>
                            <field name="user_id"/>
                            <field name="can_approve" invisible="1"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="decision_date"/>
                        </group>
                    </group>
                    <group string="Delegation" invisible="not delegated_to_id and not delegated_from_id">
                        <field name="delegated_to_id"/>
                        <field name="delegated_from_id"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Approval Approver Action -->
    <record id="action_ipai_approval_approver" model="ir.actions.act_window">
        <field name="name">Approvers</field>
        <field name="res_model">ipai.approval.approver</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
