# Dataverse Enterprise Console - Policy Gateway Configuration
# Portfolio Initiative: PORT-2026-012

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Supabase project URL (required)
SUPABASE_URL=https://<project-ref>.supabase.co

# Service role key (required - has full database access)
SUPABASE_SERVICE_ROLE_KEY=<service-role-key>

# Alternative: Use NEXT_PUBLIC_SUPABASE_URL if set
# NEXT_PUBLIC_SUPABASE_URL=https://<project-ref>.supabase.co

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Port for policy gateway server (default: 3000)
POLICY_GATEWAY_PORT=3000

# Node environment (development | production | test)
NODE_ENV=development

# ============================================================================
# OPTIONAL: LOGGING & MONITORING
# ============================================================================
# Log level (debug | info | warn | error)
LOG_LEVEL=info

# Enable request logging (true | false)
LOG_REQUESTS=true

# ============================================================================
# OPTIONAL: EVIDENCE SYSTEM
# ============================================================================
# Base path for evidence artifacts
EVIDENCE_BASE_PATH=docs/evidence

# Automatically create evidence artifacts (true | false)
AUTO_CREATE_EVIDENCE=false

# ============================================================================
# OPTIONAL: RATE LIMITING
# ============================================================================
# Enable rate limiting (true | false)
ENABLE_RATE_LIMIT=false

# Max requests per minute per bot
RATE_LIMIT_PER_BOT=100

# ============================================================================
# OPTIONAL: PRIVACY MODE DEFAULTS
# ============================================================================
# Default privacy mode if org config missing (true | false)
DEFAULT_PRIVACY_ENABLED=true

# Default enforcement level (strict | warn | audit)
DEFAULT_ENFORCEMENT_LEVEL=strict
