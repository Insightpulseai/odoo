<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Normalized Finance Lifecycle Stages -->
    <!-- Reused across Month-End Close and BIR Returns projects -->

    <!-- Stage 1: Preparation -->
    <record id="fin_stage_prep" model="project.task.type">
        <field name="name">Preparation</field>
        <field name="sequence">10</field>
        <field name="is_finance_stage">True</field>
        <field name="finance_stage_code">prep</field>
        <field name="fold">False</field>
    </record>

    <!-- Stage 2: Review -->
    <record id="fin_stage_review" model="project.task.type">
        <field name="name">Review</field>
        <field name="sequence">20</field>
        <field name="is_finance_stage">True</field>
        <field name="finance_stage_code">review</field>
        <field name="fold">False</field>
    </record>

    <!-- Stage 3: Approval -->
    <record id="fin_stage_approve" model="project.task.type">
        <field name="name">Approval</field>
        <field name="sequence">30</field>
        <field name="is_finance_stage">True</field>
        <field name="finance_stage_code">approve</field>
        <field name="fold">False</field>
    </record>

    <!-- Stage 4: Execute / File / Pay -->
    <record id="fin_stage_execute" model="project.task.type">
        <field name="name">Execute / File / Pay</field>
        <field name="sequence">40</field>
        <field name="is_finance_stage">True</field>
        <field name="finance_stage_code">execute</field>
        <field name="fold">False</field>
    </record>

    <!-- Stage 5: Closed / Archived -->
    <record id="fin_stage_close" model="project.task.type">
        <field name="name">Closed / Archived</field>
        <field name="sequence">50</field>
        <field name="is_finance_stage">True</field>
        <field name="finance_stage_code">close</field>
        <field name="fold">True</field>
    </record>
</odoo>
