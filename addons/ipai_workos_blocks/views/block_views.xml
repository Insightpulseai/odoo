<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Block Tree View -->
    <record id="block_tree_view" model="ir.ui.view">
        <field name="name">ipai.workos.block.tree</field>
        <field name="model">ipai.workos.block</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="block_type"/>
                <field name="name"/>
                <field name="page_id"/>
                <field name="parent_block_id"/>
            </list>
        </field>
    </record>

    <!-- Block Form View -->
    <record id="block_form_view" model="ir.ui.view">
        <field name="name">ipai.workos.block.form</field>
        <field name="model">ipai.workos.block</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="page_id"/>
                            <field name="block_type"/>
                            <field name="sequence"/>
                            <field name="parent_block_id"/>
                        </group>
                        <group>
                            <field name="is_checked" invisible="block_type != 'todo'"/>
                            <field name="is_collapsed" invisible="block_type != 'toggle'"/>
                            <field name="callout_icon" invisible="block_type != 'callout'"/>
                            <field name="callout_color" invisible="block_type != 'callout'"/>
                            <field name="attachment_id" invisible="block_type not in ('image', 'file')"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content_json" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Preview">
                            <field name="content_html" readonly="1"/>
                        </page>
                        <page string="Child Blocks" invisible="block_type != 'toggle'">
                            <field name="child_block_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="block_type"/>
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Block Action -->
    <record id="action_workos_block" model="ir.actions.act_window">
        <field name="name">Blocks</field>
        <field name="res_model">ipai.workos.block</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_by_page': 1}</field>
    </record>

    <!-- Add to Work OS menu -->
    <menuitem id="menu_workos_blocks"
              name="Blocks"
              parent="ipai_workos_core.menu_workos_config"
              action="action_workos_block"
              sequence="10"/>
</odoo>
