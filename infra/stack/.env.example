# ===== Domains (Caddy hosts) =====
ERP_DOMAIN=erp.insightpulseai.com
N8N_DOMAIN=n8n.insightpulseai.com
SUPERSET_DOMAIN=superset.insightpulseai.com
OCR_DOMAIN=ocr.insightpulseai.com
MCP_DOMAIN=mcp.insightpulseai.com

# ===== DigitalOcean Managed Postgres (shared) =====
DO_PG_HOST=odoo-db-sgp1-do-user-XXXXXX-0.g.db.ondigitalocean.com
DO_PG_PORT=25060
DO_PG_USER=doadmin
DO_PG_PASSWORD=__SET_ME__
DO_PG_SSLMODE=require

# Databases (must exist in the cluster)
DB_ODOO=odoo
DB_N8N=n8n
DB_SUPERSET=superset

# ===== Odoo =====
ODOO_IMAGE=ghcr.io/jgtolentino/odoo-ce:main
ODOO_HTTP_PORT=8069
ODOO_LONGPOLL_PORT=8072
ODOO_CONF_HOST_PATH=deploy/odoo.conf

# ===== n8n =====
N8N_IMAGE=n8nio/n8n:latest
N8N_PORT=5678
N8N_ENCRYPTION_KEY=__SET_ME__   # 32+ chars
N8N_TIMEZONE=Asia/Manila

# ===== Superset =====
SUPERSET_IMAGE=apache/superset:latest
SUPERSET_PORT=8088
SUPERSET_SECRET_KEY=__SET_ME__  # 32+ chars
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_FIRSTNAME=Admin
SUPERSET_ADMIN_LASTNAME=User
SUPERSET_ADMIN_EMAIL=admin@insightpulseai.com
SUPERSET_ADMIN_PASSWORD=__SET_ME__

# ===== Redis (for Superset caching/celery) =====
REDIS_IMAGE=redis:7-alpine
REDIS_PORT=6379

# ===== OCR API =====
OCR_IMAGE=ghcr.io/jgtolentino/ipai-ocr:local
OCR_PORT=8000
OCR_ENGINE=tesseract  # tesseract | paddle
