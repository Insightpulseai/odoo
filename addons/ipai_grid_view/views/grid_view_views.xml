<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ==========================================
         GRID VIEW CONFIGURATION VIEWS
         ========================================== -->

    <!-- Grid View: List -->
    <record id="view_ipai_grid_view_tree" model="ir.ui.view">
        <field name="name">ipai.grid.view.tree</field>
        <field name="model">ipai.grid.view</field>
        <field name="arch" type="xml">
            <list string="Grid Views">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="model_id"/>
                <field name="view_type"/>
                <field name="column_count"/>
                <field name="page_size"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Grid View: Form -->
    <record id="view_ipai_grid_view_form" model="ir.ui.view">
        <field name="name">ipai.grid.view.form</field>
        <field name="model">ipai.grid.view</field>
        <field name="arch" type="xml">
            <form string="Grid View Configuration">
                <header>
                    <button name="action_switch_to_list" type="object"
                            string="Switch to List" class="btn-secondary"
                            invisible="view_type == 'list'"/>
                    <button name="action_switch_to_kanban" type="object"
                            string="Switch to Kanban" class="btn-secondary"
                            invisible="view_type == 'kanban'"/>
                    <button name="action_reset_columns" type="object"
                            string="Reset Columns" class="btn-secondary"
                            confirm="This will reset all column configurations. Continue?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_ipai_grid_column)d" type="action"
                                class="oe_stat_button" icon="fa-columns">
                            <field name="column_count" widget="statinfo" string="Columns"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="View Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="model_id" options="{'no_create': True}"/>
                            <field name="model_name" invisible="1"/>
                            <field name="view_type" widget="radio"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Pagination">
                            <field name="page_size"/>
                            <field name="page_size_options"/>
                        </group>
                    </group>
                    <group>
                        <group string="Display Options">
                            <field name="show_row_numbers"/>
                            <field name="show_checkboxes"/>
                            <field name="enable_row_selection"/>
                            <field name="enable_column_resize"/>
                            <field name="enable_column_reorder"/>
                        </group>
                        <group string="Features">
                            <field name="enable_quick_search"/>
                            <field name="enable_export"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Columns" name="columns">
                            <field name="column_ids" context="{'default_grid_view_id': id}">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="field_name"/>
                                    <field name="label"/>
                                    <field name="field_type"/>
                                    <field name="column_type"/>
                                    <field name="width"/>
                                    <field name="alignment"/>
                                    <field name="sortable"/>
                                    <field name="visible"/>
                                    <field name="is_primary"/>
                                </list>
                            </field>
                        </page>
                        <page string="Visible Columns" name="visible_columns">
                            <field name="visible_column_ids" widget="many2many_tags"
                                   domain="[('grid_view_id', '=', id)]"/>
                        </page>
                        <page string="Saved Filters" name="filters">
                            <field name="filter_ids" context="{'default_grid_view_id': id}">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="is_default"/>
                                    <field name="is_global"/>
                                    <field name="color"/>
                                    <field name="condition_count"/>
                                </list>
                            </field>
                            <field name="active_filter_id"
                                   domain="[('grid_view_id', '=', id)]"
                                   options="{'no_create': True}"/>
                        </page>
                        <page string="Advanced" name="advanced">
                            <group>
                                <field name="config_json" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                            <group>
                                <field name="sort_json" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Grid View: Search -->
    <record id="view_ipai_grid_view_search" model="ir.ui.view">
        <field name="name">ipai.grid.view.search</field>
        <field name="model">ipai.grid.view</field>
        <field name="arch" type="xml">
            <search string="Search Grid Views">
                <field name="name"/>
                <field name="model_id"/>
                <field name="view_type"/>
                <filter string="List Views" name="filter_list" domain="[('view_type', '=', 'list')]"/>
                <filter string="Kanban Views" name="filter_kanban" domain="[('view_type', '=', 'kanban')]"/>
                <filter string="Table Views" name="filter_table" domain="[('view_type', '=', 'table')]"/>
                <separator/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Model" name="groupby_model" context="{'group_by': 'model_id'}"/>
                    <filter string="View Type" name="groupby_type" context="{'group_by': 'view_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action: Grid View Configuration -->
    <record id="action_ipai_grid_view" model="ir.actions.act_window">
        <field name="name">Grid Views</field>
        <field name="res_model">ipai.grid.view</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ipai_grid_view_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first grid view configuration
            </p>
            <p>
                Grid views allow you to display model data in a configurable table format
                with sorting, filtering, and bulk actions.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_ipai_grid_view_root"
              name="Grid Views"
              parent="base.menu_custom"
              sequence="50"/>

    <menuitem id="menu_ipai_grid_view_config"
              name="Configurations"
              parent="menu_ipai_grid_view_root"
              action="action_ipai_grid_view"
              sequence="10"/>

</odoo>
