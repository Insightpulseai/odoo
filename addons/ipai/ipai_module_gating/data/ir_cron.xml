<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Scheduled action to recompute module risk daily -->
    <record id="ir_cron_recompute_module_risk" model="ir.cron">
        <field name="name">Module Gating: Recompute Risk Scores</field>
        <field name="model_id" ref="base.model_ir_module_module"/>
        <field name="state">code</field>
        <field name="code">model._cron_recompute_all_risk()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

</odoo>
