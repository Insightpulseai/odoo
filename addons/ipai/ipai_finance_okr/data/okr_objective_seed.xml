<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Sample OKR Objective for Finance Month-End Close -->
    <record id="okr_objective_finance_close_2026" model="okr.objective">
        <field name="name">Finance Month-End Close &amp; Tax Filing Excellence - 2026</field>
        <field name="description">Achieve fully compliant, predictable month-end close and tax filing process. Reduce close cycle time to Day-3, ensure 100% on-time tax compliance, and minimize accrual variance.</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="owner_id" ref="base.user_admin"/>
        <field name="period_start" eval="'2026-01-01'"/>
        <field name="period_end" eval="'2026-12-31'"/>
        <field name="state">draft</field>
        <field name="confidence">50</field>
        <field name="scope_notes">Finance SSC month-end close activities, tax compliance, and financial reporting for all Philippine entities.</field>
        <field name="schedule_notes">Monthly close cycle target: Day-3. Tax filing per BIR calendar. Quarterly variance reviews.</field>
        <field name="cost_notes">Process improvement budget allocated. No additional headcount required.</field>
        <field name="quality_notes">Zero audit findings. Variance within acceptable thresholds. Clean reconciliations.</field>
        <field name="stakeholder_notes">CFO, Finance Controller, Tax Manager, Regional Finance, External Auditors</field>
        <field name="communication_cadence">Weekly dashboard review, Monthly close retrospective</field>
    </record>

    <!-- KR1: Close by Day-3 -->
    <record id="okr_kr_close_day3" model="okr.key.result">
        <field name="objective_id" ref="okr_objective_finance_close_2026"/>
        <field name="sequence">10</field>
        <field name="name">KR1 - Close by Day-3</field>
        <field name="metric_description">Percentage of month-end close tasks completed by Working Day 3 of the following month. Target is to have at least 95% of all close activities finished by Day-3.</field>
        <field name="baseline_value">0</field>
        <field name="target_value">95</field>
        <field name="current_value">0</field>
        <field name="unit">%</field>
        <field name="deadline" eval="'2026-03-31'"/>
        <field name="owner_id" ref="base.user_admin"/>
        <field name="status_score">0.0</field>
        <field name="confidence">50</field>
        <field name="direction">increase</field>
    </record>

    <!-- KR2: On-time Tax Filing -->
    <record id="okr_kr_tax_filing" model="okr.key.result">
        <field name="objective_id" ref="okr_objective_finance_close_2026"/>
        <field name="sequence">20</field>
        <field name="name">KR2 - 100% On-time Tax Filing</field>
        <field name="metric_description">Number of statutory tax filings (2550M, 2550Q, 1601C, 1601EQ, 1701Q, 1702Q) submitted before BIR deadlines. Target: 6 out of 6 filings on time per quarter.</field>
        <field name="baseline_value">0</field>
        <field name="target_value">6</field>
        <field name="current_value">0</field>
        <field name="unit">filings</field>
        <field name="deadline" eval="'2026-03-31'"/>
        <field name="owner_id" ref="base.user_admin"/>
        <field name="status_score">0.0</field>
        <field name="confidence">50</field>
        <field name="direction">increase</field>
    </record>

    <!-- KR3: Accrual Variance -->
    <record id="okr_kr_accrual_variance" model="okr.key.result">
        <field name="objective_id" ref="okr_objective_finance_close_2026"/>
        <field name="sequence">30</field>
        <field name="name">KR3 - Accrual Variance Below PHP 50k</field>
        <field name="metric_description">Variance between monthly accrual estimates and actual amounts recognized. Measures accuracy of expense forecasting and accrual process maturity.</field>
        <field name="baseline_value">580000</field>
        <field name="target_value">50000</field>
        <field name="current_value">580000</field>
        <field name="unit">PHP</field>
        <field name="deadline" eval="'2026-03-31'"/>
        <field name="owner_id" ref="base.user_admin"/>
        <field name="status_score">0.0</field>
        <field name="confidence">40</field>
        <field name="direction">decrease</field>
    </record>

    <!-- Sample Milestones -->
    <record id="okr_milestone_close_day3_jan" model="okr.kr.milestone">
        <field name="key_result_id" ref="okr_kr_close_day3"/>
        <field name="name">January Close - Day-3 Target</field>
        <field name="description">Complete January 2026 month-end close by February 3, 2026 (Working Day 3)</field>
        <field name="date_planned" eval="'2026-02-03'"/>
    </record>

    <record id="okr_milestone_close_day3_feb" model="okr.kr.milestone">
        <field name="key_result_id" ref="okr_kr_close_day3"/>
        <field name="name">February Close - Day-3 Target</field>
        <field name="description">Complete February 2026 month-end close by March 3, 2026 (Working Day 3)</field>
        <field name="date_planned" eval="'2026-03-03'"/>
    </record>

    <record id="okr_milestone_q1_taxes" model="okr.kr.milestone">
        <field name="key_result_id" ref="okr_kr_tax_filing"/>
        <field name="name">Q1 2026 - All Statutory Filings Complete</field>
        <field name="description">Complete all 6 required tax filings for Q1 2026 before respective BIR deadlines</field>
        <field name="date_planned" eval="'2026-04-15'"/>
    </record>

    <record id="okr_milestone_accrual_q1" model="okr.kr.milestone">
        <field name="key_result_id" ref="okr_kr_accrual_variance"/>
        <field name="name">Q1 Accrual Variance Review</field>
        <field name="description">Review Q1 accrual accuracy and identify process improvements to reduce variance</field>
        <field name="date_planned" eval="'2026-04-10'"/>
    </record>
</odoo>
