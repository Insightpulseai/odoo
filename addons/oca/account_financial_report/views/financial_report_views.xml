<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Financial Report Tree View -->
    <record id="view_account_financial_report_tree" model="ir.ui.view">
        <field name="name">account.financial.report.tree</field>
        <field name="model">account.financial.report</field>
        <field name="arch" type="xml">
            <list string="Financial Reports">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="report_type"/>
                <field name="parent_id"/>
                <field name="level"/>
            </list>
        </field>
    </record>

    <!-- Financial Report Form View -->
    <record id="view_account_financial_report_form" model="ir.ui.view">
        <field name="name">account.financial.report.form</field>
        <field name="model">account.financial.report</field>
        <field name="arch" type="xml">
            <form string="Financial Report">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Report Structure">
                            <field name="parent_id"/>
                            <field name="sequence"/>
                            <field name="level"/>
                            <field name="report_type"/>
                        </group>
                        <group string="Display Options">
                            <field name="sign"/>
                            <field name="display_detail"/>
                            <field name="style_overwrite"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Accounts" invisible="report_type not in ('accounts',)">
                            <field name="account_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Account Types" invisible="report_type not in ('account_type',)">
                            <field name="account_type_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Children" invisible="report_type not in ('sum',)">
                            <field name="child_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="report_type"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Report Wizard Form -->
    <record id="view_account_financial_report_wizard_form" model="ir.ui.view">
        <field name="name">account.financial.report.wizard.form</field>
        <field name="model">account.financial.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Financial Report">
                <group>
                    <group string="Report">
                        <field name="report_id"/>
                        <field name="target_move"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group string="Date Range">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <group>
                    <group string="Display Options">
                        <field name="debit_credit"/>
                    </group>
                    <group string="Comparison">
                        <field name="enable_filter"/>
                        <field name="filter_date_from"
                               invisible="not enable_filter"/>
                        <field name="filter_date_to"
                               invisible="not enable_filter"/>
                    </group>
                </group>
                <footer>
                    <button name="action_view_report" string="View Report"
                            type="object" class="btn-primary"/>
                    <button name="action_export_pdf" string="Export PDF"
                            type="object" class="btn-secondary"/>
                    <button name="action_export_xlsx" string="Export Excel"
                            type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_account_financial_report" model="ir.actions.act_window">
        <field name="name">Financial Reports</field>
        <field name="res_model">account.financial.report</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a financial report definition
            </p>
        </field>
    </record>

    <record id="action_account_financial_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Financial Report</field>
        <field name="res_model">account.financial.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
