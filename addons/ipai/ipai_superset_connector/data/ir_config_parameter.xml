<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        Superset Connector Configuration

        These parameters configure the connection to your Superset instance.
        For production, use environment variables or secure secrets management.

        Required parameters:
        - ipai_superset.base_url: Superset instance URL (e.g., https://superset.example.com)
        - ipai_superset.username: Service account username with embed permissions
        - ipai_superset.password: Service account password (use env var in production)

        Optional:
        - ipai_superset.embed_domain: Allowed embedding domain for CORS
        -->

        <!-- Base URL - Must be set before using the connector -->
        <record id="config_superset_base_url" model="ir.config_parameter">
            <field name="key">ipai_superset.base_url</field>
            <field name="value"></field>
        </record>

        <!-- Service account username -->
        <record id="config_superset_username" model="ir.config_parameter">
            <field name="key">ipai_superset.username</field>
            <field name="value"></field>
        </record>

        <!-- Service account password (set via UI or env, not in git) -->
        <record id="config_superset_password" model="ir.config_parameter">
            <field name="key">ipai_superset.password</field>
            <field name="value"></field>
        </record>

        <!-- Embed domain for CORS -->
        <record id="config_superset_embed_domain" model="ir.config_parameter">
            <field name="key">ipai_superset.embed_domain</field>
            <field name="value"></field>
        </record>

    </data>
</odoo>
