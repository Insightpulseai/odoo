<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Run Tree View -->
    <record id="ipai_agent_run_tree" model="ir.ui.view">
        <field name="name">ipai.agent.run.tree</field>
        <field name="model">ipai.agent.run</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'ok'"
                  decoration-danger="state == 'failed'"
                  decoration-info="state == 'running'">
                <field name="name"/>
                <field name="skill_id"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="started_at"/>
                <field name="duration_seconds" widget="float_time"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Run Form View -->
    <record id="ipai_agent_run_form" model="ir.ui.view">
        <field name="name">ipai.agent.run.form</field>
        <field name="model">ipai.agent.run</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_execute" type="object"
                            string="Execute" class="btn-primary"
                            invisible="state not in ('draft', 'failed')"/>
                    <button name="action_reset_to_draft" type="object"
                            string="Reset to Draft"
                            invisible="state != 'failed'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,running,ok,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="skill_id"/>
                            <field name="skill_key"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="started_at"/>
                            <field name="completed_at"/>
                            <field name="duration_seconds" widget="float_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Input" name="input">
                            <group>
                                <field name="input_text"/>
                            </group>
                            <group>
                                <field name="input_json" widget="ace"
                                       options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Output" name="output">
                            <group>
                                <field name="output_text"/>
                            </group>
                            <group>
                                <field name="output_json" widget="ace"
                                       options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Execution Trace" name="trace">
                            <field name="tool_trace_json" widget="ace"
                                   options="{'mode': 'json'}" readonly="1"/>
                        </page>
                        <page string="Error" name="error"
                              invisible="state != 'failed'">
                            <field name="error_text"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Run Search View -->
    <record id="ipai_agent_run_search" model="ir.ui.view">
        <field name="name">ipai.agent.run.search</field>
        <field name="model">ipai.agent.run</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="skill_id"/>
                <field name="user_id"/>
                <filter name="my_runs" string="My Runs"
                        domain="[('user_id', '=', uid)]"/>
                <filter name="ok" string="Completed"
                        domain="[('state', '=', 'ok')]"/>
                <filter name="failed" string="Failed"
                        domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter name="today" string="Today"
                        domain="[('create_date', '&gt;=', (context_today()).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_skill" string="Skill"
                            context="{'group_by': 'skill_id'}"/>
                    <filter name="group_state" string="State"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_user" string="User"
                            context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Run Action -->
    <record id="ipai_agent_run_action" model="ir.actions.act_window">
        <field name="name">Agent Runs</field>
        <field name="res_model">ipai.agent.run</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="ipai_agent_run_search"/>
        <field name="context">{'search_default_my_runs': 1}</field>
    </record>
</odoo>
