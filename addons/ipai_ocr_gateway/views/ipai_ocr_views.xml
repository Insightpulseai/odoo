<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OCR Provider Views -->
    <record id="view_ipai_ocr_provider_tree" model="ir.ui.view">
        <field name="name">ipai.ocr.provider.tree</field>
        <field name="model">ipai.ocr.provider</field>
        <field name="arch" type="xml">
            <list string="OCR Providers">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="provider_type"/>
                <field name="active"/>
                <field name="job_count"/>
            </list>
        </field>
    </record>

    <record id="view_ipai_ocr_provider_form" model="ir.ui.view">
        <field name="name">ipai.ocr.provider.form</field>
        <field name="model">ipai.ocr.provider</field>
        <field name="arch" type="xml">
            <form string="OCR Provider">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="test_connection" type="object"
                                class="oe_stat_button" icon="fa-plug">
                            <span>Test Connection</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="provider_type"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="base_url" invisible="provider_type == 'tesseract'"/>
                            <field name="timeout"/>
                            <field name="max_retries"/>
                        </group>
                    </group>
                    <group string="Authentication" invisible="provider_type == 'tesseract'">
                        <group>
                            <field name="auth_type"/>
                            <field name="auth_param_key"
                                   invisible="auth_type == 'none'"/>
                        </group>
                    </group>
                    <group string="Configuration">
                        <field name="supported_formats"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ipai_ocr_provider" model="ir.actions.act_window">
        <field name="name">OCR Providers</field>
        <field name="res_model">ipai.ocr.provider</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- OCR Job Views -->
    <record id="view_ipai_ocr_job_tree" model="ir.ui.view">
        <field name="name">ipai.ocr.job.tree</field>
        <field name="model">ipai.ocr.job</field>
        <field name="arch" type="xml">
            <list string="OCR Jobs" decoration-danger="state == 'failed'"
                  decoration-success="state == 'done'"
                  decoration-warning="state == 'processing'"
                  decoration-info="state == 'pending'">
                <field name="name"/>
                <field name="attachment_name"/>
                <field name="provider_id"/>
                <field name="state" widget="badge"
                       decoration-danger="state == 'failed'"
                       decoration-success="state == 'done'"
                       decoration-warning="state == 'processing'"
                       decoration-info="state == 'pending'"/>
                <field name="create_date"/>
                <field name="completed_at"/>
                <field name="duration_seconds" widget="float_time"/>
                <field name="confidence_score" widget="progressbar"/>
            </list>
        </field>
    </record>

    <record id="view_ipai_ocr_job_form" model="ir.ui.view">
        <field name="name">ipai.ocr.job.form</field>
        <field name="model">ipai.ocr.job</field>
        <field name="arch" type="xml">
            <form string="OCR Job">
                <header>
                    <button name="action_queue" type="object" string="Queue"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_process" type="object" string="Process Now"
                            class="btn-primary" invisible="state not in ('pending', 'failed')"/>
                    <button name="action_reset" type="object" string="Reset"
                            invisible="state != 'failed'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,pending,processing,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="attachment_id"/>
                            <field name="attachment_mimetype"/>
                            <field name="provider_id"/>
                        </group>
                        <group>
                            <field name="res_model"/>
                            <field name="res_id"/>
                            <field name="confidence_score" widget="progressbar"/>
                        </group>
                    </group>
                    <group string="Execution" invisible="state == 'draft'">
                        <group>
                            <field name="started_at"/>
                            <field name="completed_at"/>
                            <field name="duration_seconds"/>
                        </group>
                        <group>
                            <field name="retry_count"/>
                            <field name="output_attachment_id"/>
                        </group>
                    </group>
                    <group string="Error" invisible="state != 'failed'">
                        <field name="error_message" nolabel="1"/>
                    </group>
                    <notebook invisible="state != 'done'">
                        <page string="Extracted Text">
                            <field name="result_text" nolabel="1"/>
                        </page>
                        <page string="Raw Response">
                            <field name="result_json" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_ipai_ocr_job_search" model="ir.ui.view">
        <field name="name">ipai.ocr.job.search</field>
        <field name="model">ipai.ocr.job</field>
        <field name="arch" type="xml">
            <search string="OCR Jobs">
                <field name="name"/>
                <field name="attachment_name"/>
                <field name="provider_id"/>
                <filter name="filter_pending" string="Pending"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_processing" string="Processing"
                        domain="[('state', '=', 'processing')]"/>
                <filter name="filter_done" string="Completed"
                        domain="[('state', '=', 'done')]"/>
                <filter name="filter_failed" string="Failed"
                        domain="[('state', '=', 'failed')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="groupby_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="groupby_provider" string="Provider"
                            context="{'group_by': 'provider_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ipai_ocr_job" model="ir.actions.act_window">
        <field name="name">OCR Jobs</field>
        <field name="res_model">ipai.ocr.job</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_ipai_ocr_root" name="OCR Gateway"
              parent="base.menu_custom"
              sequence="50"/>

    <menuitem id="menu_ipai_ocr_jobs" name="OCR Jobs"
              parent="menu_ipai_ocr_root"
              action="action_ipai_ocr_job"
              sequence="10"/>

    <menuitem id="menu_ipai_ocr_providers" name="Providers"
              parent="menu_ipai_ocr_root"
              action="action_ipai_ocr_provider"
              sequence="20"/>
</odoo>
