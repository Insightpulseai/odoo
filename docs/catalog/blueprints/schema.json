{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blueprint schema",
  "description": "Schema for docs/catalog/blueprints/*.blueprint.yaml files",
  "type": "object",
  "required": ["id", "title", "category", "sources", "target", "variables", "automation", "verification", "rollback"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique kebab-case identifier matching the filename prefix"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title for the blueprint"
    },
    "category": {
      "type": "string",
      "enum": ["ops-console", "marketing", "multi-tenant", "ai-agents", "observability", "platform-kit"],
      "description": "Primary category from the INDEX.md groupings"
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["vercel-example", "vercel-template", "supabase-example", "supabase-ui", "supabase-platform-kit"]
          },
          "url": { "type": "string", "format": "uri" },
          "catalog_id": { "type": "string", "description": "Matching id from *.catalog.json" }
        }
      }
    },
    "target": {
      "type": "object",
      "required": ["app_dir"],
      "properties": {
        "app_dir": { "type": "string", "description": "Relative path to the target app directory" },
        "package_manager": { "type": "string", "enum": ["pnpm", "npm", "yarn"] },
        "creates_new_app": { "type": "boolean", "default": false }
      }
    },
    "variables": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "required"],
        "properties": {
          "name": { "type": "string" },
          "required": { "type": "boolean" },
          "description": { "type": "string" },
          "example": { "type": "string" }
        }
      }
    },
    "automation": {
      "type": "object",
      "required": ["steps"],
      "properties": {
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "description"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "agent_instruction": { "type": "string" }
            }
          }
        }
      }
    },
    "verification": {
      "type": "object",
      "required": ["required_checks"],
      "properties": {
        "required_checks": {
          "type": "array",
          "items": { "type": "string" }
        },
        "preview": {
          "type": "object",
          "properties": {
            "expectations": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "rollback": {
      "type": "object",
      "required": ["strategy"],
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["revert_pr", "delete_files", "restore_backup", "manual"]
        },
        "notes": { "type": "string" }
      }
    },
    "notes": {
      "type": "object",
      "properties": {
        "minor_customization": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Small manual steps the engineer must do after the agent applies the blueprint"
        }
      }
    }
  }
}
