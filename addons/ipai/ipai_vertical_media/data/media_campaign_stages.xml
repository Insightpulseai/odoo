<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- CES Campaign Pipeline Stages for CRM -->
    <record id="ces_crm_stage_brief" model="crm.stage">
        <field name="name">Brief Received</field>
        <field name="sequence">5</field>
    </record>

    <record id="ces_crm_stage_strategy" model="crm.stage">
        <field name="name">Strategy Development</field>
        <field name="sequence">10</field>
    </record>

    <record id="ces_crm_stage_pitch_prep" model="crm.stage">
        <field name="name">Pitch Preparation</field>
        <field name="sequence">15</field>
    </record>

    <record id="ces_crm_stage_pitched" model="crm.stage">
        <field name="name">Pitched</field>
        <field name="sequence">20</field>
    </record>

    <record id="ces_crm_stage_negotiation" model="crm.stage">
        <field name="name">Negotiation</field>
        <field name="sequence">25</field>
    </record>

    <record id="ces_crm_stage_won" model="crm.stage">
        <field name="name">Won</field>
        <field name="sequence">30</field>
        <field name="is_won">True</field>
    </record>

    <!-- CES Media Channels -->
    <record id="ces_channel_tv" model="ces.media.channel">
        <field name="name">Television</field>
        <field name="code">TV</field>
        <field name="sequence">10</field>
        <field name="channel_type">traditional</field>
    </record>

    <record id="ces_channel_radio" model="ces.media.channel">
        <field name="name">Radio</field>
        <field name="code">RADIO</field>
        <field name="sequence">20</field>
        <field name="channel_type">traditional</field>
    </record>

    <record id="ces_channel_print" model="ces.media.channel">
        <field name="name">Print</field>
        <field name="code">PRINT</field>
        <field name="sequence">30</field>
        <field name="channel_type">traditional</field>
    </record>

    <record id="ces_channel_ooh" model="ces.media.channel">
        <field name="name">Out of Home (OOH)</field>
        <field name="code">OOH</field>
        <field name="sequence">40</field>
        <field name="channel_type">traditional</field>
    </record>

    <record id="ces_channel_digital_display" model="ces.media.channel">
        <field name="name">Digital Display</field>
        <field name="code">DISPLAY</field>
        <field name="sequence">50</field>
        <field name="channel_type">digital</field>
    </record>

    <record id="ces_channel_social" model="ces.media.channel">
        <field name="name">Social Media</field>
        <field name="code">SOCIAL</field>
        <field name="sequence">60</field>
        <field name="channel_type">digital</field>
    </record>

    <record id="ces_channel_search" model="ces.media.channel">
        <field name="name">Search/SEM</field>
        <field name="code">SEM</field>
        <field name="sequence">70</field>
        <field name="channel_type">digital</field>
    </record>

    <record id="ces_channel_video" model="ces.media.channel">
        <field name="name">Online Video</field>
        <field name="code">OLV</field>
        <field name="sequence">80</field>
        <field name="channel_type">digital</field>
    </record>

    <record id="ces_channel_influencer" model="ces.media.channel">
        <field name="name">Influencer Marketing</field>
        <field name="code">INFL</field>
        <field name="sequence">90</field>
        <field name="channel_type">digital</field>
    </record>

    <record id="ces_channel_event" model="ces.media.channel">
        <field name="name">Events/Activations</field>
        <field name="code">EVENT</field>
        <field name="sequence">100</field>
        <field name="channel_type">experiential</field>
    </record>

    <record id="ces_channel_pr" model="ces.media.channel">
        <field name="name">PR/Earned Media</field>
        <field name="code">PR</field>
        <field name="sequence">110</field>
        <field name="channel_type">traditional</field>
    </record>
</odoo>
