{
  "name": "IPAI Odoo CE 18 Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "remoteUser": "vscode",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "16",
      "dbName": "odoo_dev",
      "postgresUser": "odoo",
      "postgresPassword": "odoo"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/supabase/cli:1": {
      "version": "latest"
    }
  },

  "forwardPorts": [
    8069,
    8070,
    8071,
    3000,
    5678,
    8766,
    8789,
    5432,
    54321,
    54322
  ],

  "portsAttributes": {
    "8069": {
      "label": "Odoo CE Core",
      "onAutoForward": "openBrowser"
    },
    "8070": {
      "label": "Odoo Marketing",
      "onAutoForward": "notify"
    },
    "8071": {
      "label": "Odoo Accounting",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Control Room Dashboard",
      "onAutoForward": "openBrowser"
    },
    "5678": {
      "label": "n8n Workflows",
      "onAutoForward": "notify"
    },
    "8766": {
      "label": "MCP Coordinator",
      "onAutoForward": "silent"
    },
    "8789": {
      "label": "Control Room API",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "54321": {
      "label": "Supabase API",
      "onAutoForward": "silent"
    },
    "54322": {
      "label": "Supabase Studio",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bash .devcontainer/postCreate.sh",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.languageServer": "Pylance",
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.rulers": [88, 120],
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.env.linux": {
          "SUPABASE_PROJECT_REF": "spdtwktxdalcfigzeqrz"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "bradlc.vscode-tailwindcss",
        "GitHub.copilot",
        "ms-vscode-remote.remote-containers",
        "supabase.supabase-cli",
        "anthropic.claude-code"
      ]
    },
    "codespaces": {
      "openFiles": [
        "CLAUDE.md",
        "README.md"
      ],
      "repositories": {
        "jgtolentino/odoo-ce": {
          "permissions": {
            "contents": "write",
            "pull_requests": "write",
            "issues": "write"
          }
        }
      }
    }
  },

  "containerEnv": {
    "POSTGRES_USER": "odoo",
    "POSTGRES_PASSWORD": "odoo",
    "POSTGRES_DB": "odoo_dev",
    "PGHOST": "localhost",
    "PGUSER": "odoo",
    "PGPASSWORD": "odoo",
    "SUPABASE_PROJECT_REF": "spdtwktxdalcfigzeqrz",
    "SUPABASE_URL": "https://spdtwktxdalcfigzeqrz.supabase.co"
  },

  "secrets": {
    "SUPABASE_SERVICE_ROLE_KEY": {
      "description": "Supabase service role key for API access"
    },
    "SUPABASE_ANON_KEY": {
      "description": "Supabase anonymous key for public access"
    },
    "ANTHROPIC_API_KEY": {
      "description": "Anthropic API key for Claude Code"
    }
  },

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  }
}
