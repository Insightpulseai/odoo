<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- OCR Configuration Parameters -->
        <record id="config_ocr_provider" model="ir.config_parameter">
            <field name="key">ipai_ocr_expense.provider</field>
            <field name="value">mock</field>
        </record>

        <record id="config_ocr_confidence_threshold" model="ir.config_parameter">
            <field name="key">ipai_ocr_expense.confidence_threshold</field>
            <field name="value">80</field>
        </record>

        <record id="config_ocr_api_key" model="ir.config_parameter">
            <field name="key">ipai_ocr_expense.api_key</field>
            <field name="value"></field>
        </record>

        <record id="config_ocr_endpoint" model="ir.config_parameter">
            <field name="key">ipai_ocr_expense.endpoint</field>
            <field name="value"></field>
        </record>
    </data>
</odoo>
