<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Register Portfolio Details snippet in editor sidebar and structure list
         Uses a distinct snippet-group "portfolio_details" to keep groups separate -->
    <template id="rozzz_portfolio_details" inherit_id="website.snippets" name="Portfolio Details">
        <!-- add thumbnail entry to the snippet groups (sidebar) -->
        <xpath expr="//snippets[@id='snippet_groups']/*[last()]" position="after">
            <t t-snippet="website.s_snippet_group"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-portfolio-details-block.jpg"
               string="Portfolio Details"
               snippet-group="portfolio_details"/>
        </xpath>

        <!-- add snippet structure so it's available to drag into pages -->
        <xpath expr="//snippets[@id='snippet_structure']/*[last()]" position="after">
            <t t-snippet="cts_theme_rozz.s_rozz_portfolio_details"
               string="Portfolio Details"
               group="portfolio_details"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-portfolio-details-block.jpg"/>
        </xpath>
    </template>

    <!-- Actual snippet content -->
    <template id="s_rozz_portfolio_details" name="Rozz Portfolio Details">
        <section>
            <div class="page-title-area Portfolio">
                <img src="/cts_theme_rozz/static/src/images/portfolio-bg.jpg" class="portfolio-hero"/>
                <div class="d-table">
                    <div class="d-table-cell">
                        <div class="container">
                            <div class="title-item">
                                <h2>Portfolio Details</h2>
                                <ul>
                                    <li><a href="/">Home</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="project-details-area ptb-100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="details-item">
                                <div class="details-img">
                                    <img src="/cts_theme_rozz/static/src/images/portfolio/4755.jpg" alt="Details"/>
                                    <h3>Get Description Of Your Portfolio</h3>
                                    <p>
                                        We deliver high-quality projects with attention to detail and a focus on client satisfaction.
                                        Our team combines experience and creativity to craft solutions that meet your needs and exceed expectations.
                                    </p>

                                    <div class="row align-items-center">
                                        <div class="col-lg-6">
                                            <img src="/cts_theme_rozz/static/src/images/portfolio/14233.jpg" alt="Details"/>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="details-img-right">
                                                <ul>
                                                    <li><i class='bx bx-check-double'/> We have over 10 years experience</li>
                                                    <li><i class='bx bx-check-double'/> We always give best services to clients</li>
                                                    <li><i class='bx bx-check-double'/> We are always responsive to do work</li>
                                                    <li><i class='bx bx-check-double'/> We have professional workers</li>
                                                    <li><i class='bx bx-check-double'/> We provide lifetime support</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                    <h3>Get More Advice About Our Services</h3>
                                    <p class="one-p">
                                        Our approach is tailored and customer-centric. We ensure transparent communication,
                                        timely delivery and continual support throughout the project lifecycle.
                                    </p>
                                    <p>
                                        From initial consultation to final delivery, we follow best practices and modern workflows
                                        to make sure every project is successful and maintainable.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="widget-area">
                                <div class="information widget-item">
                                    <h3>Portfolio Information</h3>
                                    <ul>
                                        <li><span>Date:</span> 20 June, 2020</li>
                                        <li><span>Duration:</span> 7 Days</li>
                                        <li><span>Amount:</span> $2,000</li>
                                        <li><span>Client:</span> Tom Henry</li>
                                        <li><span>Location:</span> 6th Floor, Barbosa, Sidney</li>
                                    </ul>
                                </div>

                                <div class="related widget-item">
                                    <h3>Related Post</h3>
                                    <div class="related-inner">
                                        <ul class="align-items-center">
                                            <li><img src="/cts_theme_rozz/static/src/images/portfolio/here for-you.jpg" alt="Details"/></li>
                                            <li><a href="#">Car spa</a><span>20 July</span></li>
                                        </ul>
                                    </div>
                                    <div class="related-inner">
                                        <ul class="align-items-center">
                                            <li><img src="/cts_theme_rozz/static/src/images/portfolio/here for-you.jpg" alt="Details"/></li>
                                            <li><a href="#">Full service</a><span>21 July</span></li>
                                        </ul>
                                    </div>
                                    <div class="related-inner">
                                        <ul class="align-items-center">
                                            <li><img src="/cts_theme_rozz/static/src/images/portfolio/here for-you.jpg" alt="Details"/></li>
                                            <li><a href="#">Car detailing</a><span>22 July</span></li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="newsletter widget-item">
                                    <h3>Newsletter</h3>
                                    <form>
                                        <input type="email" class="form-control" placeholder="Enter your email"/>
                                        <button type="submit" class="cmn-btn">Subscribe</button>
                                    </form>
                                </div>

                                <div class="tags widget-item">
                                    <h3>Tags</h3>
                                    <ul>
                                        <li><a href="#">Mechanic</a></li>
                                        <li><a href="#">Service center</a></li>
                                        <li><a href="#">Garage</a></li>
                                        <li><a href="#">Spare parts</a></li>
                                        <li><a href="#">Interior</a></li>
                                        <li><a href="#">Painting</a></li>
                                        <li><a href="#">Oil</a></li>
                                    </ul>
                                </div>

                                <div class="call widget-item">
                                    <h3>Call Now</h3>
                                    <a href="tel:+0123456789">+0123-456-789</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Optional standalone page template (if you want a direct page) -->
    <template id="rozz_portfolio_details_page" name="Portfolio Details Page">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <t t-call="cts_theme_rozz.s_rozz_portfolio_details"/>
            </div>
        </t>
    </template>
</odoo>
