<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_ipai_ai_connectors_viewer" model="res.groups">
        <field name="name">IPAI AI Connectors: Viewer</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="comment">Can view integration events</field>
    </record>

    <record id="group_ipai_ai_connectors_manager" model="res.groups">
        <field name="name">IPAI AI Connectors: Manager</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="implied_ids" eval="[(4, ref('group_ipai_ai_connectors_viewer'))]"/>
        <field name="comment">Can manage integration events</field>
    </record>

    <!-- Record Rules -->
    <record id="rule_ipai_ai_event_company" model="ir.rule">
        <field name="name">IPAI AI Event: Company Isolation</field>
        <field name="model_id" ref="model_ipai_ai_event"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
