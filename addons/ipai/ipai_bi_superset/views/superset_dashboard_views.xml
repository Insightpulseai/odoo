<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Superset Dashboard: Form View -->
    <record id="view_superset_dashboard_form" model="ir.ui.view">
        <field name="name">ipai.bi.superset.dashboard.form</field>
        <field name="model">ipai.bi.superset.dashboard</field>
        <field name="arch" type="xml">
            <form string="Superset Dashboard">
                <header>
                    <button name="action_open_dashboard" type="object"
                            string="Open Dashboard" class="btn-primary"
                            icon="fa-external-link"/>
                    <button name="action_sync_metadata" type="object"
                            string="Sync Metadata" class="btn-secondary"
                            icon="fa-refresh"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Public" bg_color="text-bg-warning" invisible="not public_access"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Sales Overview"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Dashboard Configuration">
                            <field name="slug"/>
                            <field name="superset_id"/>
                            <field name="sequence"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Instance">
                            <field name="instance_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="Embed Settings">
                            <field name="standalone_mode"/>
                            <field name="public_access"/>
                        </group>
                        <group string="Metadata">
                            <field name="last_synced"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Datasets" name="datasets">
                            <field name="dataset_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="technical_name"/>
                                    <field name="database_name"/>
                                </list>
                            </field>
                        </page>
                        <page string="Access Control" name="access">
                            <group>
                                <field name="embed_allowed_groups" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Filters" name="filters">
                            <group>
                                <field name="default_filters_json" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Superset Dashboard: List View -->
    <record id="view_superset_dashboard_list" model="ir.ui.view">
        <field name="name">ipai.bi.superset.dashboard.list</field>
        <field name="model">ipai.bi.superset.dashboard</field>
        <field name="arch" type="xml">
            <list string="Superset Dashboards">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="slug"/>
                <field name="instance_id"/>
                <field name="public_access"/>
                <field name="last_synced"/>
                <button name="action_open_dashboard" type="object"
                        string="Open" icon="fa-external-link"/>
            </list>
        </field>
    </record>

    <!-- Superset Dashboard: Kanban View -->
    <record id="view_superset_dashboard_kanban" model="ir.ui.view">
        <field name="name">ipai.bi.superset.dashboard.kanban</field>
        <field name="model">ipai.bi.superset.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="slug"/>
                <field name="instance_id"/>
                <field name="thumbnail"/>
                <templates>
                    <t t-name="card">
                        <field name="thumbnail" widget="image" class="o_kanban_image"
                               options="{'size': [200, 150]}"/>
                        <div class="oe_kanban_details">
                            <strong><field name="name"/></strong>
                            <div class="o_kanban_tags_section">
                                <field name="instance_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Superset Dashboard: Action -->
    <record id="action_superset_dashboard" model="ir.actions.act_window">
        <field name="name">Superset Dashboards</field>
        <field name="res_model">ipai.bi.superset.dashboard</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first Superset dashboard
            </p>
            <p>
                Add dashboards that can be embedded in Odoo via smart buttons or iframes.
            </p>
        </field>
    </record>
</odoo>
