<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Financial Report Template -->
    <template id="report_financial_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>
                        <span t-field="doc.report_id.name"/>
                    </h2>
                    <p>
                        <strong>Period:</strong>
                        <span t-field="doc.date_from"/> - <span t-field="doc.date_to"/>
                    </p>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Account/Report Line</th>
                                <t t-if="doc.debit_credit">
                                    <th class="text-end">Debit</th>
                                    <th class="text-end">Credit</th>
                                </t>
                                <th class="text-end">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.report_id | doc.report_id.child_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-esc="'  ' * line.level"/>
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-if="doc.debit_credit">
                                        <td class="text-end">0.00</td>
                                        <td class="text-end">0.00</td>
                                    </t>
                                    <td class="text-end">0.00</td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_financial" model="ir.actions.report">
        <field name="name">Financial Report</field>
        <field name="model">account.financial.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account_financial_report.report_financial_document</field>
        <field name="report_file">account_financial_report.report_financial_document</field>
        <field name="binding_model_id" ref="model_account_financial_report_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
