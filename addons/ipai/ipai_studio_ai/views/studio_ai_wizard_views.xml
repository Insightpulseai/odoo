<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_studio_ai_wizard_form" model="ir.ui.view">
        <field name="name">ipai.studio.ai.wizard.form</field>
        <field name="model">ipai.studio.ai.wizard</field>
        <field name="arch" type="xml">
            <form string="Studio AI">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="input,analysis,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span invisible="state != 'input'">What would you like to create?</span>
                            <span invisible="state == 'input'">
                                <field name="command_type" readonly="1"/>
                            </span>
                        </h1>
                    </div>

                    <!-- Input State -->
                    <group invisible="state != 'input'">
                        <field name="command" widget="text" placeholder="Example: Add a phone number field to contacts"/>
                        <field name="context_model_id" placeholder="Optional: Select model"/>
                    </group>

                    <!-- Analysis State -->
                    <group invisible="state not in ('analysis', 'confirm')">
                        <group string="Analysis">
                            <field name="message" readonly="1" nolabel="1"/>
                            <field name="confidence" widget="progressbar"/>
                        </group>
                    </group>

                    <!-- Field Details (editable) -->
                    <group invisible="command_type != 'field' or state not in ('analysis', 'confirm')" string="Field Configuration">
                        <group>
                            <field name="target_model_id" required="command_type == 'field' and state in ('analysis', 'confirm')"/>
                            <field name="field_name"/>
                            <field name="field_label"/>
                        </group>
                        <group>
                            <field name="field_type"/>
                            <field name="field_required"/>
                            <field name="relation_model_id" invisible="field_type not in ('many2one', 'one2many', 'many2many')"/>
                        </group>
                        <group colspan="2" invisible="field_type != 'selection'">
                            <field name="selection_options" placeholder="One option per line"/>
                        </group>
                    </group>

                    <!-- Done State -->
                    <group invisible="state not in ('done', 'error')">
                        <field name="result_message" nolabel="1" readonly="1"/>
                        <field name="created_field_id" invisible="not created_field_id"/>
                    </group>

                </sheet>
                <footer>
                    <button name="action_analyze" string="Analyze" type="object" class="btn-primary" invisible="state != 'input'"/>
                    <button name="action_execute" string="Create" type="object" class="btn-primary" invisible="state not in ('analysis', 'confirm')"/>
                    <button name="action_new_command" string="New Command" type="object" class="btn-secondary" invisible="state not in ('done', 'error')"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_studio_ai_wizard" model="ir.actions.act_window">
        <field name="name">Studio AI</field>
        <field name="res_model">ipai.studio.ai.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <!-- Quick Action (Server Action) -->
    <record id="action_studio_ai_quick" model="ir.actions.server">
        <field name="name">Open Studio AI</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'name': 'Studio AI',
    'res_model': 'ipai.studio.ai.wizard',
    'view_mode': 'form',
    'target': 'new',
    'context': {'default_context_model_id': env.context.get('active_model_id')},
}
        </field>
    </record>

</odoo>
