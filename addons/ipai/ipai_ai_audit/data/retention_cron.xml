<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- System Parameters for Retention -->
        <record id="config_param_retention_days" model="ir.config_parameter">
            <field name="key">ipai_ai_audit.retention_days</field>
            <field name="value">90</field>
        </record>

        <record id="config_param_enable_redaction" model="ir.config_parameter">
            <field name="key">ipai_ai_audit.enable_redaction</field>
            <field name="value">True</field>
        </record>

        <!-- Scheduled Action: Cleanup Old Logs -->
        <record id="ir_cron_ai_audit_cleanup" model="ir.cron">
            <field name="name">AI Audit: Cleanup Old Logs</field>
            <field name="model_id" ref="model_ipai_ai_audit_log"/>
            <field name="state">code</field>
            <field name="code">
days = int(env['ir.config_parameter'].sudo().get_param('ipai_ai_audit.retention_days', '90'))
model.cleanup_old_logs(days=days)
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">100</field>
        </record>
    </data>
</odoo>
