<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- CRM Lead Form View Extension for CES Fields -->
    <record id="view_crm_lead_form_ces" model="ir.ui.view">
        <field name="name">crm.lead.form.ces</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expected_revenue']" position="after">
                <field name="ces_estimated_annual"/>
            </xpath>
            <xpath expr="//page[@name='extra']" position="before">
                <page string="CES Pitch" name="ces_pitch">
                    <group>
                        <group string="Pitch Details">
                            <field name="ces_pitch_type"/>
                            <field name="ces_brand"/>
                            <field name="ces_industry"/>
                            <field name="ces_scope"/>
                            <field name="ces_is_incumbent"/>
                        </group>
                        <group string="Timeline">
                            <field name="ces_pitch_date"/>
                            <field name="ces_decision_date"/>
                        </group>
                    </group>
                    <group>
                        <group string="Competition">
                            <field name="ces_competitors" placeholder="e.g., BBDO, McCann, Publicis"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- CRM Lead List View Extension -->
    <record id="view_crm_lead_tree_ces" model="ir.ui.view">
        <field name="name">crm.lead.tree.ces</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="ces_brand" optional="hide"/>
                <field name="ces_pitch_type" optional="hide"/>
                <field name="ces_industry" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- CRM Lead Search View Extension -->
    <record id="view_crm_lead_search_ces" model="ir.ui.view">
        <field name="name">crm.lead.search.ces</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='won']" position="after">
                <separator/>
                <filter string="New Business" name="new_business"
                        domain="[('ces_pitch_type', '=', 'new_business')]"/>
                <filter string="Incumbent" name="incumbent"
                        domain="[('ces_is_incumbent', '=', True)]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Pitch Type" name="group_pitch_type"
                        context="{'group_by': 'ces_pitch_type'}"/>
                <filter string="Industry" name="group_industry"
                        context="{'group_by': 'ces_industry'}"/>
                <filter string="Scope" name="group_scope"
                        context="{'group_by': 'ces_scope'}"/>
            </xpath>
        </field>
    </record>

    <!-- CES Pitches Action -->
    <record id="action_ces_pitches" model="ir.actions.act_window">
        <field name="name">CES Pitches</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="domain">[('ces_pitch_type', '!=', False)]</field>
        <field name="context">{'default_type': 'opportunity'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pitch opportunity
            </p>
            <p>
                Track new business pitches and client opportunities for CES reporting.
            </p>
        </field>
    </record>

    <!-- Menu Item for CES Pitches -->
    <menuitem id="menu_ces_pitches"
              name="Pitches"
              parent="menu_ces_root"
              action="action_ces_pitches"
              sequence="5"/>
</odoo>
