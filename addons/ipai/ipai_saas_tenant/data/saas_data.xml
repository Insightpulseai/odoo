<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- InsightPulseAI Platform Account -->
    <record id="saas_account_insightpulseai" model="saas.account">
        <field name="name">InsightPulse AI</field>
        <field name="slug">insightpulseai</field>
        <field name="legal_name">InsightPulse AI Inc.</field>
        <field name="country_id" ref="base.us"/>
        <field name="timezone">America/New_York</field>
        <field name="default_locale">en_US</field>
        <field name="billing_email">billing@insightpulseai.com</field>
        <field name="is_active" eval="True"/>
    </record>

    <!-- Provider Role for InsightPulseAI -->
    <record id="saas_account_role_ipai_provider" model="saas.account.role">
        <field name="account_id" ref="saas_account_insightpulseai"/>
        <field name="role">provider</field>
        <field name="is_primary" eval="True"/>
    </record>

    <!-- Internal Role for InsightPulseAI -->
    <record id="saas_account_role_ipai_internal" model="saas.account.role">
        <field name="account_id" ref="saas_account_insightpulseai"/>
        <field name="role">internal</field>
        <field name="is_primary" eval="False"/>
    </record>

    <!-- Scout Dashboard Service -->
    <record id="saas_service_scout" model="saas.service">
        <field name="name">Scout Dashboard</field>
        <field name="key">scout-dashboard</field>
        <field name="description">Real-time retail analytics dashboard with AI-powered insights</field>
        <field name="provider_account_id" ref="saas_account_insightpulseai"/>
        <field name="category">dashboard</field>
        <field name="is_public" eval="True"/>
        <field name="is_enabled" eval="True"/>
        <field name="default_environment_type">prod</field>
    </record>

    <!-- Scout Dashboard Plans -->
    <record id="saas_service_plan_scout_free" model="saas.service.plan">
        <field name="service_id" ref="saas_service_scout"/>
        <field name="key">free</field>
        <field name="name">Free</field>
        <field name="description">Basic analytics with limited history</field>
        <field name="monthly_price" eval="0"/>
        <field name="max_seats" eval="3"/>
        <field name="max_requests_month" eval="1000"/>
        <field name="sequence" eval="10"/>
    </record>

    <record id="saas_service_plan_scout_pro" model="saas.service.plan">
        <field name="service_id" ref="saas_service_scout"/>
        <field name="key">pro</field>
        <field name="name">Pro</field>
        <field name="description">Full analytics suite with 12-month history</field>
        <field name="monthly_price" eval="99"/>
        <field name="max_seats" eval="10"/>
        <field name="max_requests_month" eval="10000"/>
        <field name="sequence" eval="20"/>
    </record>

    <record id="saas_service_plan_scout_enterprise" model="saas.service.plan">
        <field name="service_id" ref="saas_service_scout"/>
        <field name="key">enterprise</field>
        <field name="name">Enterprise</field>
        <field name="description">Unlimited analytics with custom integrations</field>
        <field name="monthly_price" eval="499"/>
        <field name="max_seats" eval="0"/>
        <field name="max_requests_month" eval="0"/>
        <field name="sequence" eval="30"/>
    </record>

    <!-- Ask Copilot Service -->
    <record id="saas_service_ask_copilot" model="saas.service">
        <field name="name">Ask Copilot</field>
        <field name="key">ask-copilot</field>
        <field name="description">AI-powered conversational assistant for business intelligence</field>
        <field name="provider_account_id" ref="saas_account_insightpulseai"/>
        <field name="category">ai_agent</field>
        <field name="is_public" eval="True"/>
        <field name="is_enabled" eval="True"/>
        <field name="mcp_server_name">ask-copilot-mcp</field>
    </record>

    <!-- BIR Compliance Engine Service -->
    <record id="saas_service_bir_compliance" model="saas.service">
        <field name="name">BIR Compliance Engine</field>
        <field name="key">bir-compliance</field>
        <field name="description">Automated BIR tax compliance and filing for Philippine businesses</field>
        <field name="provider_account_id" ref="saas_account_insightpulseai"/>
        <field name="category">erp_integration</field>
        <field name="is_public" eval="False"/>
        <field name="is_enabled" eval="True"/>
    </record>

    <!-- Pulser Orchestrator Service -->
    <record id="saas_service_pulser" model="saas.service">
        <field name="name">Pulser Orchestrator</field>
        <field name="key">pulser-orchestrator</field>
        <field name="description">Multi-agent orchestration platform for workflow automation</field>
        <field name="provider_account_id" ref="saas_account_insightpulseai"/>
        <field name="category">workflow</field>
        <field name="is_public" eval="True"/>
        <field name="is_enabled" eval="True"/>
        <field name="mcp_server_name">pulser-mcp-server</field>
        <field name="n8n_workflow_id">pulser-master-workflow</field>
    </record>

</odoo>
