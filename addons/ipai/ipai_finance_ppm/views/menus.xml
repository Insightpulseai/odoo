<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root menu now defined in ppm_dashboard_views.xml to avoid loading order issues -->

    <!-- Generated Tasks Action -->
    <record id="action_finance_generated_tasks" model="ir.actions.act_window">
        <field name="name">Generated Closing Tasks (Q4 2025)</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="domain">[('x_external_key', '!=', False), ('project_id', '=', 30)]</field>
        <field name="context">{'default_project_id': 30}</field>
    </record>

    <!-- Finance Kanban Board Menu Items -->
    <menuitem id="menu_finance_kanban_board" name="Finance Kanban" parent="menu_finance_ppm_root" action="action_finance_kanban_board" sequence="1"/>
    <menuitem id="menu_closing_tasks_kanban" name="Month-End Close" parent="menu_finance_ppm_root" action="action_closing_tasks_kanban" sequence="2"/>
    <menuitem id="menu_compliance_tasks_kanban" name="Tax Compliance" parent="menu_finance_ppm_root" action="action_compliance_tasks_kanban" sequence="3"/>

    <menuitem id="menu_finance_directory" name="Directory" parent="menu_finance_ppm_root" action="action_finance_person" sequence="10"/>
    <menuitem id="menu_finance_generated_tasks" name="Generated Tasks" parent="menu_finance_ppm_root" action="action_finance_generated_tasks" sequence="15"/>
    <menuitem id="menu_finance_tasks" name="Monthly Tasks" parent="menu_finance_ppm_root" action="action_finance_task_template" sequence="20"/>
    <menuitem id="menu_finance_bir_deadlines" name="BIR Deadlines" parent="menu_finance_ppm_root" action="action_finance_bir_deadline" sequence="25"/>
    <menuitem id="menu_finance_calendar" name="Compliance Calendar" parent="menu_finance_ppm_root" action="action_bir_form_schedule" sequence="30"/>
    <menuitem id="menu_finance_recurrence_rules" name="Recurrence Rules" parent="menu_finance_ppm_root" action="action_finance_recurrence_rules" sequence="35"/>

    <!-- Semantic Search Action (Client Action) -->
    <record id="action_monthly_revenue_search" model="ir.actions.client">
        <field name="name">Revenue Insights Search</field>
        <field name="tag">ipai_finance_ppm.monthly_revenue_search</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_revenue_search" name="Revenue Insights" parent="menu_finance_ppm_root" action="action_monthly_revenue_search" sequence="5"/>
</odoo>
