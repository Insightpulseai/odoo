<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Skill Tree View -->
    <record id="ipai_agent_skill_tree" model="ir.ui.view">
        <field name="name">ipai.agent.skill.tree</field>
        <field name="model">ipai.agent.skill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="key"/>
                <field name="version"/>
                <field name="run_count"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Skill Form View -->
    <record id="ipai_agent_skill_form" model="ir.ui.view">
        <field name="name">ipai.agent.skill.form</field>
        <field name="model">ipai.agent.skill</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(ipai_agent_run_action)d" type="action"
                                class="oe_stat_button" icon="fa-play"
                                context="{'search_default_skill_id': active_id}">
                            <field name="run_count" string="Runs" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger"
                            invisible="is_active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Skill Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="key"/>
                            <field name="version"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Workflow" name="workflow">
                            <group>
                                <field name="workflow_json" widget="ace"
                                       options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Intents" name="intents">
                            <field name="intents" placeholder="One intent per line..."/>
                        </page>
                        <page string="Guardrails" name="guardrails">
                            <field name="guardrails" placeholder="One guardrail per line..."/>
                        </page>
                        <page string="Tools" name="tools">
                            <field name="tool_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="key"/>
                                    <field name="target_model"/>
                                    <field name="target_method"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Knowledge" name="knowledge">
                            <field name="knowledge_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="key"/>
                                    <field name="kind"/>
                                    <field name="tags"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Skill Action -->
    <record id="ipai_agent_skill_action" model="ir.actions.act_window">
        <field name="name">Skills</field>
        <field name="res_model">ipai.agent.skill</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_is_active': 1}</field>
    </record>
</odoo>
