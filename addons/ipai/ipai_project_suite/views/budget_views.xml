<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Budget Tree View -->
    <record id="view_ipai_budget_tree" model="ir.ui.view">
        <field name="name">ipai.project.budget.tree</field>
        <field name="model">ipai.project.budget</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'closed'"
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'approved'">
                <field name="project_id"/>
                <field name="budget_amount"/>
                <field name="planned_total"/>
                <field name="actual_total"/>
                <field name="variance"/>
                <field name="variance_percent" widget="progressbar"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'approved'"
                       decoration-muted="state == 'closed'"/>
            </list>
        </field>
    </record>

    <!-- Budget Form View -->
    <record id="view_ipai_budget_form" model="ir.ui.view">
        <field name="name">ipai.project.budget.form</field>
        <field name="model">ipai.project.budget</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" type="object" string="Approve"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_close" type="object" string="Close"
                            invisible="state != 'approved'"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="budget_amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="planned_total"/>
                            <field name="actual_total"/>
                            <field name="variance"/>
                            <field name="variance_percent" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines" name="lines">
                            <field name="line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="planned_amount"/>
                                    <field name="actual_amount"/>
                                    <field name="variance"/>
                                    <field name="notes" optional="hide"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes about this budget..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Budget Action -->
    <record id="action_ipai_budget" model="ir.actions.act_window">
        <field name="name">Project Budgets</field>
        <field name="res_model">ipai.project.budget</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first project budget
            </p>
            <p>
                Track planned vs actual costs for your projects.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ipai_budget"
              name="Budgets"
              parent="project.menu_project_config"
              action="action_ipai_budget"
              sequence="52"/>
</odoo>
