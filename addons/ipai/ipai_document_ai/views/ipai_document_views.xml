<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="ipai_document_view_tree" model="ir.ui.view">
        <field name="name">ipai.document.tree</field>
        <field name="model">ipai.document</field>
        <field name="arch" type="xml">
            <tree string="Documents">
                <field name="name"/>
                <field name="doc_type"/>
                <field name="state" widget="badge" decoration-success="state == 'applied'" decoration-warning="state == 'ready'" decoration-info="state == 'processing'" decoration-danger="state == 'failed'"/>
                <field name="vendor_name"/>
                <field name="total_amount"/>
                <field name="confidence" widget="progressbar"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="ipai_document_view_form" model="ir.ui.view">
        <field name="name">ipai.document.form</field>
        <field name="model">ipai.document</field>
        <field name="arch" type="xml">
            <form string="Document">
                <header>
                    <button name="action_extract" type="object" string="Extract" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_apply_to_record" type="object" string="Apply to Record" class="btn-primary" invisible="state != 'ready' or not res_model"/>
                    <button name="action_retry" type="object" string="Retry" invisible="state != 'failed'"/>
                    <button name="action_reset" type="object" string="Reset" invisible="state not in ('failed', 'applied')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,processing,ready,applied"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="attachment_id"/>
                            <field name="doc_type"/>
                            <field name="confidence" widget="progressbar"/>
                            <field name="processing_duration" invisible="not processing_duration"/>
                        </group>
                        <group>
                            <field name="res_model" invisible="not res_model"/>
                            <field name="res_id" invisible="not res_id"/>
                            <field name="requires_manual_review"/>
                            <field name="ocr_job_id" invisible="not ocr_job_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Extracted Fields" name="extracted_fields">
                            <group>
                                <group>
                                    <field name="vendor_name"/>
                                    <field name="document_number"/>
                                    <field name="document_date"/>
                                </group>
                                <group>
                                    <field name="currency_code"/>
                                    <field name="subtotal"/>
                                    <field name="tax_amount"/>
                                    <field name="total_amount"/>
                                </group>
                            </group>
                        </page>
                        <page string="Extracted Text" name="extracted_text">
                            <field name="extracted_text" readonly="1"/>
                        </page>
                        <page string="Raw Data" name="raw_data" groups="base.group_no_one">
                            <field name="extraction_json" readonly="1"/>
                        </page>
                        <page string="Errors" name="errors" invisible="not error_message">
                            <field name="error_message" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="ipai_document_view_search" model="ir.ui.view">
        <field name="name">ipai.document.search</field>
        <field name="model">ipai.document</field>
        <field name="arch" type="xml">
            <search string="Documents">
                <field name="name"/>
                <field name="vendor_name"/>
                <field name="document_number"/>
                <separator/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_processing" string="Processing" domain="[('state', '=', 'processing')]"/>
                <filter name="filter_ready" string="Ready" domain="[('state', '=', 'ready')]"/>
                <filter name="filter_applied" string="Applied" domain="[('state', '=', 'applied')]"/>
                <filter name="filter_failed" string="Failed" domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter name="filter_review" string="Needs Review" domain="[('requires_manual_review', '=', True)]"/>
                <separator/>
                <filter name="filter_invoice" string="Invoices" domain="[('doc_type', '=', 'invoice')]"/>
                <filter name="filter_bill" string="Bills" domain="[('doc_type', '=', 'bill')]"/>
                <filter name="filter_receipt" string="Receipts" domain="[('doc_type', '=', 'receipt')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_doc_type" string="Document Type" context="{'group_by': 'doc_type'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="ipai_document_view_kanban" model="ir.ui.view">
        <field name="name">ipai.document.kanban</field>
        <field name="model">ipai.document</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="doc_type"/>
                <field name="state"/>
                <field name="confidence"/>
                <field name="total_amount"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-0">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge rounded-pill">
                                    <field name="doc_type"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="vendor_name"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="confidence" widget="progressbar"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <strong>
                                        <field name="total_amount" widget="monetary"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="ipai_document_action" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">ipai.document</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="ipai_document_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload a document for OCR extraction
            </p>
            <p>
                Upload PDFs, images, or scanned documents to extract
                text and structured data automatically.
            </p>
        </field>
    </record>
</odoo>
