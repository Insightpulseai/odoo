# =============================================================================
# ipai-platform Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# For production, use secrets/ directory for sensitive values
# =============================================================================

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
DOMAIN=erp.insightpulseai.net
ODOO_DOMAIN=erp.insightpulseai.net

# -----------------------------------------------------------------------------
# Odoo Configuration
# -----------------------------------------------------------------------------
ODOO_ADMIN_PASSWORD=admin
ODOO_DB_NAME=odoo
ODOO_DB_USER=odoo
# DB password stored in secrets/db_password.txt for production

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=odoo
POSTGRES_DB=odoo
# Password stored in secrets/db_password.txt for production

# -----------------------------------------------------------------------------
# Redis Configuration (Session Storage)
# -----------------------------------------------------------------------------
REDIS_HOST=ipai-odoo-redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Supabase Cloud Configuration (for sync/integration)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://spdtwktxdalcfigzeqrz.supabase.co
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
# JWT secret stored in secrets/supabase_jwt_secret.txt for local dev

# -----------------------------------------------------------------------------
# MCP Jobs Configuration
# -----------------------------------------------------------------------------
CRON_SECRET=
# Must match value in Supabase Edge Function secrets

# -----------------------------------------------------------------------------
# TLS Configuration
# -----------------------------------------------------------------------------
TLS_MODE=letsencrypt
# Options: letsencrypt, selfsigned
# Certificates stored in nginx/certs/

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
# Options: debug, info, warn, error
