<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OKR Milestone Form View -->
    <record id="okr_kr_milestone_view_form" model="ir.ui.view">
        <field name="name">okr.kr.milestone.form</field>
        <field name="model">okr.kr.milestone</field>
        <field name="arch" type="xml">
            <form string="Milestone">
                <header>
                    <button name="action_mark_reached" string="Mark Reached" type="object"
                            invisible="status != 'not_reached'" class="btn-primary"/>
                    <button name="action_reset" string="Reset" type="object"
                            invisible="status == 'not_reached'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Month-End Closed - Day-3"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Milestone Details">
                            <field name="key_result_id"/>
                            <field name="objective_id" readonly="1"/>
                            <field name="project_id"/>
                        </group>
                        <group string="Dates">
                            <field name="date_planned"/>
                            <field name="date_reached"/>
                            <field name="status" widget="badge"
                                   decoration-success="status == 'reached'"
                                   decoration-warning="status == 'late'"
                                   decoration-muted="status == 'not_reached'"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Milestone description..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- OKR Milestone List View -->
    <record id="okr_kr_milestone_view_list" model="ir.ui.view">
        <field name="name">okr.kr.milestone.list</field>
        <field name="model">okr.kr.milestone</field>
        <field name="arch" type="xml">
            <list string="Milestones"
                  decoration-success="status == 'reached'"
                  decoration-warning="status == 'late'"
                  decoration-muted="status == 'not_reached' and date_planned &lt; current_date">
                <field name="name"/>
                <field name="key_result_id"/>
                <field name="objective_id"/>
                <field name="date_planned"/>
                <field name="date_reached"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'reached'"
                       decoration-warning="status == 'late'"
                       decoration-muted="status == 'not_reached'"/>
                <field name="project_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- OKR Milestone Search View -->
    <record id="okr_kr_milestone_view_search" model="ir.ui.view">
        <field name="name">okr.kr.milestone.search</field>
        <field name="model">okr.kr.milestone</field>
        <field name="arch" type="xml">
            <search string="Search Milestones">
                <field name="name"/>
                <field name="key_result_id"/>
                <field name="objective_id"/>
                <filter string="Not Reached" name="filter_not_reached"
                        domain="[('status', '=', 'not_reached')]"/>
                <filter string="Reached" name="filter_reached"
                        domain="[('status', '=', 'reached')]"/>
                <filter string="Reached Late" name="filter_late"
                        domain="[('status', '=', 'late')]"/>
                <separator/>
                <filter string="Upcoming (This Week)" name="filter_upcoming"
                        domain="[('date_planned', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                 ('date_planned', '&lt;=', (context_today() + relativedelta(days=7)).strftime('%Y-%m-%d')),
                                 ('status', '=', 'not_reached')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Key Result" name="group_kr"
                            context="{'group_by': 'key_result_id'}"/>
                    <filter string="Objective" name="group_objective"
                            context="{'group_by': 'objective_id'}"/>
                    <filter string="Status" name="group_status"
                            context="{'group_by': 'status'}"/>
                    <filter string="Planned Date" name="group_date"
                            context="{'group_by': 'date_planned:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- OKR Milestone Action -->
    <record id="okr_kr_milestone_action" model="ir.actions.act_window">
        <field name="name">Milestones</field>
        <field name="res_model">okr.kr.milestone</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="okr_kr_milestone_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create milestones for your Key Results
            </p>
            <p>
                Track important checkpoints like "Month-End Closed - Day-3"
                or "All Taxes Filed This Period".
            </p>
        </field>
    </record>
</odoo>
