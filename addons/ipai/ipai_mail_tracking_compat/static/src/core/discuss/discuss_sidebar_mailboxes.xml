     Replaces mail_tracking/static/src/core/discuss/discuss_sidebar_mailboxes.xml
     for Odoo 19 compatibility.  The only change is the mobileTopbar template:
       OLD parent: mail.Discuss.mobileTopbar      (removed in Odoo 19)
       NEW parent: mail.DiscussContent.mobileTopbar (current name in Odoo 19)
-->
<templates xml:space="preserve">
    <t
        t-name="mail_tracking.Mailbox.main"
        t-inherit="mail.Mailbox.main"
        t-inherit-mode="extension"
    >
        <xpath expr="//span[@t-esc='mailbox.counter']" position="attributes">
            <!-- Override colour class: muted for starred, danger for failed -->
            <attribute
                name="t-att-class"
            >{'o-muted': mailbox.id === 'starred', 'o-danger': mailbox.id === 'failed'}</attribute>
        </xpath>
    </t>
    <t
        t-name="mail_tracking.DiscussSidebarMailboxes"
        t-inherit="mail.DiscussSidebarMailboxes"
        t-inherit-mode="extension"
    >
        <xpath expr="//div" position="inside">
            <Mailbox mailbox="store.failed" />
        </xpath>
    </t>
    <t
        t-name="mail_tracking.DiscussContent.mobileTopbar"
        t-inherit="mail.DiscussContent.mobileTopbar"
        t-inherit-mode="extension"
    >
        <xpath expr="//div" position="inside">
            <t t-call="mail.MobileMailbox">
                <t t-set="mailbox" t-value="store.failed" />
            </t>
        </xpath>
    </t>
</templates>
