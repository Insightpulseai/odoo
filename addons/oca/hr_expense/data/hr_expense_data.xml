<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <!-- Default Expense Categories (Products) -->
    <record id="product_product_expense_travel" model="product.product">
        <field name="name">Travel Expenses</field>
        <field name="default_code">EXP-TRAVEL</field>
        <field name="type">service</field>
        <field name="can_be_expensed" eval="True"/>
        <field name="list_price">0.0</field>
        <field name="standard_price">0.0</field>
    </record>

    <record id="product_product_expense_meals" model="product.product">
