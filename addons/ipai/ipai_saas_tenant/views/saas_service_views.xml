<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SaaS Service Form View -->
    <record id="view_saas_service_form" model="ir.ui.view">
        <field name="name">saas.service.form</field>
        <field name="model">saas.service</field>
        <field name="arch" type="xml">
            <form string="SaaS Service">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-users">
                            <field name="active_subscription_count" widget="statinfo"
                                   string="Subscribers"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Disabled" bg_color="bg-danger"
                            invisible="is_enabled"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Service Name"/>
                        </h1>
                        <field name="key" placeholder="service-key"/>
                    </div>
                    <group>
                        <group string="Service Info">
                            <field name="provider_account_id"/>
                            <field name="category"/>
                            <field name="default_environment_type"/>
                            <field name="is_public"/>
                            <field name="is_enabled"/>
                        </group>
                        <group string="Technical">
                            <field name="mcp_server_name"/>
                            <field name="n8n_workflow_id"/>
                            <field name="supabase_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Service description..."/>
                    </group>
                    <notebook>
                        <page string="Plans" name="plans">
                            <field name="plan_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="key"/>
                                    <field name="name"/>
                                    <field name="monthly_price"/>
                                    <field name="annual_price"/>
                                    <field name="currency_id"/>
                                    <field name="max_seats"/>
                                    <field name="max_requests_month"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Subscriptions" name="subscriptions">
                            <field name="subscription_ids">
                                <list>
                                    <field name="tenant_account_id"/>
                                    <field name="plan_id"/>
                                    <field name="status"/>
                                    <field name="started_at"/>
                                    <field name="next_billing_at"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- SaaS Service List View -->
    <record id="view_saas_service_list" model="ir.ui.view">
        <field name="name">saas.service.list</field>
        <field name="model">saas.service</field>
        <field name="arch" type="xml">
            <list string="SaaS Services" decoration-muted="not is_enabled">
                <field name="key"/>
                <field name="name"/>
                <field name="provider_account_id"/>
                <field name="category"/>
                <field name="is_public"/>
                <field name="is_enabled"/>
                <field name="active_subscription_count" string="Subscribers"/>
            </list>
        </field>
    </record>

    <!-- SaaS Service Search View -->
    <record id="view_saas_service_search" model="ir.ui.view">
        <field name="name">saas.service.search</field>
        <field name="model">saas.service</field>
        <field name="arch" type="xml">
            <search string="Search Services">
                <field name="name"/>
                <field name="key"/>
                <field name="provider_account_id"/>
                <separator/>
                <filter name="filter_public" string="Public"
                        domain="[('is_public', '=', True)]"/>
                <filter name="filter_enabled" string="Enabled"
                        domain="[('is_enabled', '=', True)]"/>
                <filter name="filter_disabled" string="Disabled"
                        domain="[('is_enabled', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_provider" string="Provider"
                            context="{'group_by': 'provider_account_id'}"/>
                    <filter name="group_category" string="Category"
                            context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- SaaS Service Action -->
    <record id="action_saas_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">saas.service</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_saas_service_search"/>
        <field name="context">{'search_default_filter_enabled': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Service
            </p>
            <p>
                Services are offerings that providers make available to tenants.
                Examples include AI agents, dashboards, and integrations.
            </p>
        </field>
    </record>

    <!-- SaaS Service Plan Form View -->
    <record id="view_saas_service_plan_form" model="ir.ui.view">
        <field name="name">saas.service.plan.form</field>
        <field name="model">saas.service.plan</field>
        <field name="arch" type="xml">
            <form string="Service Plan">
                <sheet>
                    <group>
                        <group string="Plan Info">
                            <field name="service_id"/>
                            <field name="key"/>
                            <field name="name"/>
                            <field name="is_active"/>
                        </group>
                        <group string="Pricing">
                            <field name="monthly_price"/>
                            <field name="annual_price"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Limits">
                            <field name="max_seats"/>
                            <field name="max_requests_month"/>
                        </group>
                        <group string="External">
                            <field name="supabase_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="feature_flags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
