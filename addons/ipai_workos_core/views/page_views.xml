<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Page Tree View -->
    <record id="page_tree_view" model="ir.ui.view">
        <field name="name">ipai.workos.page.tree</field>
        <field name="model">ipai.workos.page</field>
        <field name="arch" type="xml">
            <list decoration-muted="is_archived">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="space_id"/>
                <field name="parent_id"/>
                <field name="child_count"/>
                <field name="last_edited_by"/>
                <field name="write_date"/>
                <field name="is_archived" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Page Form View -->
    <record id="page_form_view" model="ir.ui.view">
        <field name="name">ipai.workos.page.form</field>
        <field name="model">ipai.workos.page</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_archive" type="object" string="Archive"
                            invisible="is_archived" class="btn-secondary"/>
                    <button name="action_restore" type="object" string="Restore"
                            invisible="not is_archived" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_subpages" type="object"
                                class="oe_stat_button" icon="fa-sitemap"
                                invisible="child_count == 0">
                            <field name="child_count" widget="statinfo" string="Sub-pages"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="not is_archived"/>
                    <field name="cover_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="icon" class="me-2"/>
                            <field name="name" placeholder="Untitled"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="space_id" readonly="parent_id"/>
                            <field name="parent_id"/>
                            <field name="template_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="workspace_id" readonly="1"/>
                            <field name="sequence"/>
                            <field name="last_edited_by" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content">
                            <div class="alert alert-info" role="alert">
                                <strong>Note:</strong> Block content is managed through the Block Editor.
                                Install the Work OS Blocks module for rich content editing.
                            </div>
                            <field name="content_preview" readonly="1" placeholder="No content yet..."/>
                        </page>
                        <page string="Sub-pages" invisible="child_count == 0">
                            <field name="child_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="icon"/>
                                    <field name="name"/>
                                    <field name="child_count"/>
                                    <field name="write_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Page Kanban View -->
    <record id="page_kanban_view" model="ir.ui.view">
        <field name="name">ipai.workos.page.kanban</field>
        <field name="model">ipai.workos.page</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="icon"/>
                <field name="child_count"/>
                <field name="write_date"/>
                <field name="is_archived"/>
                <templates>
                    <t t-name="kanban-card">
                        <div t-attf-class="d-flex flex-column p-2 #{record.is_archived.raw_value ? 'opacity-50' : ''}">
                            <div class="d-flex align-items-center mb-2">
                                <span class="me-2" t-esc="record.icon.value"/>
                                <strong t-esc="record.name.value"/>
                            </div>
                            <div class="d-flex justify-content-between text-muted small">
                                <span t-if="record.child_count.raw_value > 0">
                                    <t t-esc="record.child_count.value"/> sub-pages
                                </span>
                                <span t-else="">No sub-pages</span>
                                <field name="write_date" widget="date"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Page Search View -->
    <record id="page_search_view" model="ir.ui.view">
        <field name="name">ipai.workos.page.search</field>
        <field name="model">ipai.workos.page</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="space_id"/>
                <field name="workspace_id"/>
                <filter name="my_pages" string="My Pages"
                        domain="[('create_uid', '=', uid)]"/>
                <filter name="archived" string="Archived"
                        domain="[('is_archived', '=', True)]"/>
                <separator/>
                <filter name="group_by_space" string="Space"
                        context="{'group_by': 'space_id'}"/>
                <filter name="group_by_workspace" string="Workspace"
                        context="{'group_by': 'workspace_id'}"/>
            </search>
        </field>
    </record>

    <!-- Page Action -->
    <record id="action_workos_page" model="ir.actions.act_window">
        <field name="name">Pages</field>
        <field name="res_model">ipai.workos.page</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="page_search_view"/>
        <field name="context">{'search_default_group_by_space': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first page
            </p>
            <p>
                Pages are where you add content using blocks.
                You can nest pages to create a hierarchy.
            </p>
        </field>
    </record>
</odoo>
