<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_golive_checklist_tree" model="ir.ui.view">
        <field name="name">ipai.finance.ppm.golive.checklist.tree</field>
        <field name="model">ipai.finance.ppm.golive.checklist</field>
        <field name="arch" type="xml">
            <tree string="Go-Live Checklists">
                <field name="name"/>
                <field name="version"/>
                <field name="state" decoration-success="state=='approved'" decoration-danger="state=='rejected'" decoration-warning="state in ('supervisor_review','senior_supervisor_review','director_review')"/>
                <field name="completion_pct" widget="progressbar"/>
                <field name="completed_items"/>
                <field name="total_items"/>
                <field name="supervisor_id"/>
                <field name="senior_supervisor_id"/>
                <field name="director_id"/>
                <field name="director_signoff_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_golive_checklist_form" model="ir.ui.view">
        <field name="name">ipai.finance.ppm.golive.checklist.form</field>
        <field name="model">ipai.finance.ppm.golive.checklist</field>
        <field name="arch" type="xml">
            <form string="Go-Live Checklist">
                <header>
                    <button name="action_submit_to_supervisor" string="Submit to Supervisor" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_supervisor_approve" string="Supervisor Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'supervisor_review')]}"/>
                    <button name="action_senior_supervisor_approve" string="Senior Supervisor Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'senior_supervisor_review')]}"/>
                    <button name="action_director_approve" string="Director Sign-Off" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'director_review')]}"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" attrs="{'invisible': [('state', 'in', ('draft', 'approved', 'rejected'))]}"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,supervisor_review,senior_supervisor_review,director_review,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Finance PPM Go-Live Checklist"/>
                        </h1>
                        <h3>
                            <field name="version" placeholder="1.0.0"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Progress">
                            <field name="completion_pct" widget="progressbar"/>
                            <field name="completed_items"/>
                            <field name="total_items"/>
                        </group>
                        <group string="Approval Chain">
                            <field name="supervisor_id"/>
                            <field name="supervisor_review_date" attrs="{'invisible': [('supervisor_review_date', '=', False)]}"/>
                            <field name="senior_supervisor_id"/>
                            <field name="senior_supervisor_review_date" attrs="{'invisible': [('senior_supervisor_review_date', '=', False)]}"/>
                            <field name="director_id"/>
                            <field name="director_review_date" attrs="{'invisible': [('director_review_date', '=', False)]}"/>
                            <field name="director_signoff_date" attrs="{'invisible': [('director_signoff_date', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Checklist Sections">
                            <field name="section_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="section_type"/>
                                    <field name="completion_pct" widget="progressbar"/>
                                    <field name="completed_items"/>
                                    <field name="total_items"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Supervisor Notes" attrs="{'invisible': [('state', '=', 'draft')]}">
                            <field name="supervisor_notes" placeholder="Finance Supervisor review notes..."/>
                        </page>
                        <page string="Senior Supervisor Notes" attrs="{'invisible': [('state', 'in', ('draft', 'supervisor_review'))]}">
                            <field name="senior_supervisor_notes" placeholder="Senior Supervisor Finance review notes..."/>
                        </page>
                        <page string="Director Notes" attrs="{'invisible': [('state', 'in', ('draft', 'supervisor_review', 'senior_supervisor_review'))]}">
                            <field name="director_notes" placeholder="Finance Director review notes and sign-off comments..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_golive_checklist" model="ir.actions.act_window">
        <field name="name">Go-Live Checklists</field>
        <field name="res_model">ipai.finance.ppm.golive.checklist</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Finance PPM Go-Live Checklist
            </p>
            <p>
                Track production readiness across 9 sections with approval workflow.
            </p>
        </field>
    </record>
</odoo>
