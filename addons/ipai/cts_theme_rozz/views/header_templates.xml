<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_header_cts_theme_rozz"
              inherit_id="website.template_header_default"
              name="website_layout"
              priority="1000">
        <xpath expr="//header" position="replace">
            <header>
                <section class="navigation main-nav" style="display:block !important; position:relative;">
                    <div class="container ms">
                        <nav class="navbar navbar-expand-lg navbar-light">
                            <!-- Logo -->
                            <div class="logo">
                                <t t-call="website.placeholder_header_brand">
                                    <t t-set="_link_class" t-value="'mr-4'"/>
                                </t>
                            </div>

                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
                                    aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse mean-menu" id="main-nav">
                                <!-- Navigation Menu -->
                                <ul class="navbar-nav m-auto" id="myDIV">
                                    <!--  Static Theme Menus -->
                                    <li class="nav-item">
                                        <a href="/" class="nav-link">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/about_theme_rozz" class="nav-link">About</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/services_theme_rozz" class="nav-link">Services</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/project_theme_rozz" class="nav-link">Projects</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/team_theme_rozz" class="nav-link">Team</a>
                                    </li>

                                    <!-- âœ… Dynamic Menus (Excluding the ones above) -->
                                    <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                        <t t-if="submenu.url not in ['/', '/about', '/services', '/projects', '/team']">
                                            <li class="nav-item" style="padding:0px">
                                                <t t-call="website.submenu">
                                                    <t t-set="item_class" t-value="'nav-item'"/>
                                                    <t t-set="link_class" t-value="'nav-link'"/>
                                                </t>
                                            </li>
                                        </t>
                                    </t>
                                </ul>

                                <!-- Shopping Cart -->
                                <div>
                                    <t t-call="website_sale.header_cart_link">
                                        <t t-set="_icon" t-value="True"/>
                                        <t t-set="_item_class" t-value="'nav-item mx-lg-3'"/>
                                        <t t-set="_link_class" t-value="'nav-link'"/>
                                    </t>
                                </div>

                                <!-- Wishlist -->
                                <div>
                                    <t t-call="website_sale_wishlist.header_wishlist_link">
                                        <t t-set="_icon" t-value="True"/>
                                        <t t-set="_link_class" t-value="'nav-link'"/>
                                    </t>
                                </div>

                                <!-- Book Now Button -->
                                <div class="side-nav">
                                    <a href="/shop">Book Now</a>
                                </div>

                                <!-- User / Sign In -->
                                <div>
                                    <t t-call="portal.placeholder_user_sign_in">
                                        <t t-set="_item_class" t-value="'nav-item ml-lg-auto'"/>
                                        <t t-set="_link_class" t-value="'nav-link font-weight-bold'"/>
                                    </t>
                                    <t t-call="portal.user_dropdown">
                                        <t t-set="_user_name" t-value="true"/>
                                        <t t-set="_item_class" t-value="'nav-item dropdown ml-lg-auto'"/>
                                        <t t-set="_link_class" t-value="'nav-link font-weight-bold'"/>
                                    </t>
                                </div>
                            </div>
                        </nav>
                    </div>
                </section>
            </header>
        </xpath>
    </template>
</odoo>
