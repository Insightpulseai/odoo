<odoo>
    <record id="res_config_settings_view_form_zoho_mail" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.zoho_mail</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mail.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='email']" position="after">
                <div id="zoho_mail" class="o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Zoho Mail</span>
                        <div class="text-muted">
                            Configure Zoho Mail SMTP/IMAP for insightpulseai.com
                        </div>
                        <div class="content-group mt-2">
                            <div class="row">
                                <!-- SMTP column -->
                                <div class="col-md-6">
                                    <label class="fw-bold">Outgoing (SMTP)</label>
                                    <div class="row mt-1">
                                        <label for="zoho_smtp_host"
                                               class="col-sm-4 o_form_label">Host</label>
                                        <div class="col-sm-8">
                                            <field name="zoho_smtp_host" class="o_field_widget"/>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <label for="zoho_smtp_port"
                                               class="col-sm-4 o_form_label">Port</label>
                                        <div class="col-sm-8">
                                            <field name="zoho_smtp_port" class="o_field_widget"/>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <label for="zoho_smtp_user"
                                               class="col-sm-4 o_form_label">From Address</label>
                                        <div class="col-sm-8">
                                            <field name="zoho_smtp_user"
                                                   placeholder="notifications@insightpulseai.com"
                                                   class="o_field_widget"/>
                                        </div>
                                    </div>
                                </div>
                                <!-- IMAP column -->
                                <div class="col-md-6">
                                    <label class="fw-bold">Incoming (IMAP)</label>
                                    <div class="row mt-1">
                                        <label for="zoho_imap_host"
                                               class="col-sm-4 o_form_label">Host</label>
                                        <div class="col-sm-8">
                                            <field name="zoho_imap_host" class="o_field_widget"/>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <label for="zoho_imap_port"
                                               class="col-sm-4 o_form_label">Port</label>
                                        <div class="col-sm-8">
                                            <field name="zoho_imap_port" class="o_field_widget"/>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <label for="zoho_imap_user"
                                               class="col-sm-4 o_form_label">Catchall Address</label>
                                        <div class="col-sm-8">
                                            <field name="zoho_imap_user"
                                                   placeholder="catchall@insightpulseai.com"
                                                   class="o_field_widget"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- From Domain -->
                            <div class="row mt-2">
                                <label for="zoho_from_domain"
                                       class="col-sm-2 o_form_label">From Domain</label>
                                <div class="col-sm-4">
                                    <field name="zoho_from_domain" class="o_field_widget"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
