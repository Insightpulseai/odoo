<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_ipai_template_tree" model="ir.ui.view">
    <field name="name">ipai.ppm.template.tree</field>
    <field name="model">ipai.ppm.template</field>
    <field name="arch" type="xml">
      <list>
        <field name="workstream_id"/>
        <field name="code"/>
        <field name="name"/>
        <field name="period_type"/>
        <field name="version"/>
        <field name="is_active"/>
      </list>
    </field>
  </record>

  <record id="view_ipai_template_form" model="ir.ui.view">
    <field name="name">ipai.ppm.template.form</field>
    <field name="model">ipai.ppm.template</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <h1><field name="name" placeholder="Template Name"/></h1>
          </div>
          <group>
            <group>
              <field name="workstream_id"/>
              <field name="code"/>
              <field name="sequence"/>
            </group>
            <group>
              <field name="period_type"/>
              <field name="version"/>
              <field name="is_active"/>
            </group>
          </group>
          <notebook>
            <page string="Tasks" name="tasks">
              <field name="task_ids">
                <list editable="bottom">
                  <field name="sequence" widget="handle"/>
                  <field name="code"/>
                  <field name="name"/>
                  <field name="category"/>
                  <field name="phase"/>
                  <field name="due_offset_days"/>
                  <field name="owner_role"/>
                  <field name="requires_approval"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="action_ipai_template" model="ir.actions.act_window">
    <field name="name">Templates</field>
    <field name="res_model">ipai.ppm.template</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="ipai_ppm_a1_menu_templates" name="Templates"
            parent="ipai_ppm_a1_menu_master"
            action="action_ipai_template" sequence="20"/>
</odoo>
