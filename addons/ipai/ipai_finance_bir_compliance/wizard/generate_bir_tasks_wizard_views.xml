<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ipai_generate_bir_tasks_wizard_form" model="ir.ui.view">
        <field name="name">ipai.generate.bir.tasks.wizard.form</field>
        <field name="model">ipai.generate.bir.tasks.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate BIR Tasks">
                <sheet>
                    <group>
                        <group string="Program">
                            <field name="program_project_id"/>
                        </group>
                        <group string="Options">
                            <field name="dry_run"/>
                        </group>
                    </group>
                    <group string="Date Filter (Optional)">
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <p>
                            <strong>Note:</strong> Tasks will be generated in the IM2
                            project under the selected program based on BIR schedule
                            items. Existing tasks with the same name and deadline
                            will be skipped (idempotent).
                        </p>
                    </div>
                </sheet>
                <footer>
                    <button string="Generate" type="object" name="action_generate"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_ipai_generate_bir_tasks_wizard" model="ir.actions.act_window">
        <field name="name">Generate BIR Tasks</field>
        <field name="res_model">ipai.generate.bir.tasks.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
