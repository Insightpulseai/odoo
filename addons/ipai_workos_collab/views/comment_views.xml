<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Comment Tree View -->
    <record id="comment_tree_view" model="ir.ui.view">
        <field name="name">ipai.workos.comment.tree</field>
        <field name="model">ipai.workos.comment</field>
        <field name="arch" type="xml">
            <list>
                <field name="target_name"/>
                <field name="content_text"/>
                <field name="author_id"/>
                <field name="reply_count"/>
                <field name="is_resolved"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Comment Form View -->
    <record id="comment_form_view" model="ir.ui.view">
        <field name="name">ipai.workos.comment.form</field>
        <field name="model">ipai.workos.comment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_resolve" type="object" string="Resolve"
                            invisible="is_resolved" class="btn-primary"/>
                    <button name="action_unresolve" type="object" string="Reopen"
                            invisible="not is_resolved" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Comment on <field name="target_name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="author_id" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="is_resolved"/>
                            <field name="resolved_by" readonly="1"/>
                            <field name="resolved_at" readonly="1"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content" nolabel="1"/>
                    </group>
                    <group string="Mentions">
                        <field name="mentioned_user_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Replies" invisible="reply_count == 0">
                        <field name="child_ids" nolabel="1">
                            <list>
                                <field name="author_id"/>
                                <field name="content_text"/>
                                <field name="create_date"/>
                            </list>
                        </field>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Comment Action -->
    <record id="action_workos_comment" model="ir.actions.act_window">
        <field name="name">Comments</field>
        <field name="res_model">ipai.workos.comment</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Add to menu -->
    <menuitem id="menu_workos_comments"
              name="Comments"
              parent="ipai_workos_core.menu_workos_config"
              action="action_workos_comment"
              sequence="40"/>
</odoo>
