{
  "version": "0.2.0",
  "configurations": [
    // =========================================================================
    // 1. Launch — macOS host (pyenv odoo-19-dev)
    // =========================================================================
    // Pre-requisites:
    //   • pyenv shell odoo-19-dev  (or .python-version auto-selects it)
    //   • PostgreSQL running locally with odoo_dev database
    // Interpreter: python.defaultInterpreterPath in settings.json
    // No "python" key here — debugpy does not expand ${env:HOME} in that field.
    {
      "name": "Odoo (Launch — macOS host)",
      "type": "debugpy",
      "request": "launch",
      "program": "${env:HOME}/.pyenv/versions/odoo-19-dev/bin/odoo",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "--config=${workspaceFolder}/config/dev/odoo.conf",
        "--database=odoo_dev",
        "--workers=0",
        "--dev=xml,qweb,werkzeug"
      ],
      "justMyCode": false,
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },

    // =========================================================================
    // 2. Launch — repo interpreter (stable; uses whichever interpreter VS Code
    //    has selected — .venv or pyenv — without ${env:HOME} expansion risk)
    // =========================================================================
    // Pre-requisites:
    //   • Select the correct interpreter in VS Code (Ctrl+Shift+P → "Select Interpreter")
    //   • Same PostgreSQL/database requirements as config #1
    // Uses ${command:python.interpreterPath}: reads the currently selected interpreter
    // directly from the Python extension — works reliably on macOS, Linux, and CI.
    {
      "name": "Odoo (Launch — repo interpreter)",
      "type": "debugpy",
      "request": "launch",
      "python": "${command:python.interpreterPath}",
      "program": "${env:HOME}/.pyenv/versions/odoo-19-dev/bin/odoo",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "--config=${workspaceFolder}/config/dev/odoo.conf",
        "--database=odoo_dev",
        "--workers=0",
        "--dev=xml,qweb,werkzeug"
      ],
      "justMyCode": false,
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },

    // =========================================================================
    // 3. Launch — DevContainer (starts Odoo directly via debugpy)
    // =========================================================================
    // Pre-requisites: running inside the DevContainer (workspaceFolder = /workspaces/odoo)
    // Odoo executable installed at /usr/bin/odoo in the official Docker image.
    {
      "name": "Odoo (Launch — DevContainer)",
      "type": "debugpy",
      "request": "launch",
      "program": "/usr/bin/odoo",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "--config=${workspaceFolder}/config/dev/odoo.conf",
        "--database=odoo_dev",
        "--workers=0",
        "--dev=xml,qweb,werkzeug"
      ],
      "justMyCode": false,
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },

    // =========================================================================
    // 4. Attach — DevContainer (Odoo running inside the devcontainer via entrypoint)
    // =========================================================================
    // Pre-requisites:
    //   • Container started with IPAI_DEBUGPY=1 (set in .env or shell)
    //   • Port 5678 forwarded (devcontainer.json forwardPorts already includes it)
    // pathMappings: /workspaces/odoo ↔ ${workspaceFolder} (single canonical root)
    {
      "name": "Odoo (Attach — DevContainer / debugpy :5678)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/workspaces/odoo"
        }
      ],
      "justMyCode": false
    },

    // =========================================================================
    // 5. Attach — Docker CE19 image (plain docker compose, not devcontainer)
    // =========================================================================
    // Pre-requisites:
    //   • docker compose up with IPAI_DEBUGPY=1 in environment or .env
    //   • Port 5678 exposed in docker-compose.yml (add "5678:5678" to odoo ports)
    // pathMappings: Docker volume mounts (from docker-compose.yml)
    //   ./addons/ipai → /mnt/extra-addons/ipai  (read-only)
    //   ./addons/oca  → /mnt/oca                (read-write)
    {
      "name": "Odoo (Attach — Docker CE19 image / debugpy :5678)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/addons/ipai",
          "remoteRoot": "/mnt/extra-addons/ipai"
        },
        {
          "localRoot": "${workspaceFolder}/addons/oca",
          "remoteRoot": "/mnt/oca"
        }
      ],
      "justMyCode": false
    }
  ]
}
