<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Register snippet group and structure for Rozz Banner -->
    <template id="cts_theme_rozz_banner" inherit_id="website.snippets" name="Rozz Banner">
        <!-- Add to snippet groups list -->
        <xpath expr="//snippets[@id='snippet_groups']/*[last()]" position="after">
            <t t-snippet="website.s_snippet_group"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-banner-block.jpg"
               string="Banner"
               snippet-group="banner_section"/>
        </xpath>

        <!-- Add to snippet structure list -->
        <xpath expr="//snippets[@id='snippet_structure']/*[last()]" position="after">
            <t t-snippet="cts_theme_rozz.s_rozz_banner"
               string="Rozz Banner"
               group="banner_section"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-banner-block.jpg"/>
        </xpath>
    </template>

    <!-- Actual Banner Snippet -->
    <template id="s_rozz_banner" name="Rozz Banner">
        <section>
            <div class="container-fluid banner">
                <div class="container">
                    <img src="/cts_theme_rozz/static/src/images/banner.jpg" class="hero-banner"/>
                    <div class="row">
                        <div class="col-7 col-sm-9 col-md-9">
                            <h1>
                                Best <span>Car Service</span> Agency In the Town
                            </h1>
                            <div class="btn-hero">
                                <a href="/blog">Get a Quote</a>
                            </div>
                        </div>
                        <div class="col-5"></div>
                    </div>
                </div>
            </div>

            <!-- Counter Section -->
            <div class="counter-area"
                 data-exp-count="15"
                 data-happy-count="105"
                 data-project-count="5127"
                 data-active-count="523">
                <div class="counter-wrap">
                    <div class="container">
                        <div class="row">
                            <div class="col-6 col-sm-6 col-md-3 col-lg-3">
                                <div class="counter-item">
                                    <h3 class="odometer" data-count="25">00</h3>
                                    <p>Years Experienced</p>
                                </div>
                            </div>
                            <div class="col-6 col-sm-6 col-md-3 col-lg-3">
                                <div class="counter-item">
                                    <h3 class="odometer" data-count="356">00</h3>
                                    <p>Happy Clients</p>
                                </div>
                            </div>
                            <div class="col-6 col-sm-6 col-md-3 col-lg-3">
                                <div class="counter-item">
                                    <h3 class="odometer" data-count="7156">00</h3>
                                    <p>Project Completed</p>
                                </div>
                            </div>
                            <div class="col-6 col-sm-6 col-md-3 col-lg-3">
                                <div class="counter-item">
                                    <h3 class="odometer" data-count="22">00</h3>
                                    <p>Active Project</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
