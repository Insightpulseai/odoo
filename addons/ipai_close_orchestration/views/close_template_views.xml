<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Category Views -->
    <record id="close_category_view_tree" model="ir.ui.view">
        <field name="name">close.task.category.tree</field>
        <field name="model">close.task.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="close_category_view_form" model="ir.ui.view">
        <field name="name">close.task.category.form</field>
        <field name="model">close.task.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group string="A1 Bridge">
                        <field name="a1_workstream_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="close_category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">close.task.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Template Views -->
    <record id="close_template_view_tree" model="ir.ui.view">
        <field name="name">close.task.template.tree</field>
        <field name="model">close.task.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="preparer_role"/>
                <field name="reviewer_role"/>
                <field name="approver_role"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="close_template_view_form" model="ir.ui.view">
        <field name="name">close.task.template.form</field>
        <field name="model">close.task.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group string="Role Assignments">
                        <group>
                            <field name="preparer_role"/>
                            <field name="preparer_id"/>
                            <field name="prep_days"/>
                            <field name="prep_offset"/>
                        </group>
                        <group>
                            <field name="reviewer_role"/>
                            <field name="reviewer_id"/>
                            <field name="review_days"/>
                            <field name="review_offset"/>
                        </group>
                        <group>
                            <field name="approver_role"/>
                            <field name="approver_id"/>
                            <field name="approval_days"/>
                            <field name="approval_offset"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Checklist" name="checklist">
                            <field name="checklist_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="is_required"/>
                                </list>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="A1 Bridge" name="bridge">
                            <group>
                                <field name="a1_template_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="close_template_view_search" model="ir.ui.view">
        <field name="name">close.task.template.search</field>
        <field name="model">close.task.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="close_template_action" model="ir.actions.act_window">
        <field name="name">Task Templates</field>
        <field name="res_model">close.task.template</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="close_template_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>

</odoo>
