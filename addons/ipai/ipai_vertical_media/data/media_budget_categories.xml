<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- CES Budget Product Categories -->
    <record id="ces_categ_root" model="product.category">
        <field name="name">CES Services</field>
    </record>

    <record id="ces_categ_production" model="product.category">
        <field name="name">Production</field>
        <field name="parent_id" ref="ces_categ_root"/>
    </record>

    <record id="ces_categ_media" model="product.category">
        <field name="name">Media Placement</field>
        <field name="parent_id" ref="ces_categ_root"/>
    </record>

    <record id="ces_categ_fees" model="product.category">
        <field name="name">Agency Fees</field>
        <field name="parent_id" ref="ces_categ_root"/>
    </record>

    <record id="ces_categ_talent" model="product.category">
        <field name="name">Talent/Endorser</field>
        <field name="parent_id" ref="ces_categ_root"/>
    </record>

    <record id="ces_categ_research" model="product.category">
        <field name="name">Research</field>
        <field name="parent_id" ref="ces_categ_root"/>
    </record>

    <!-- CES Service Products -->
    <record id="ces_product_creative_fee" model="product.product">
        <field name="name">Creative Fee</field>
        <field name="type">service</field>
        <field name="categ_id" ref="ces_categ_fees"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">False</field>
    </record>

    <record id="ces_product_strategy_fee" model="product.product">
        <field name="name">Strategy Fee</field>
        <field name="type">service</field>
        <field name="categ_id" ref="ces_categ_fees"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">False</field>
    </record>

    <record id="ces_product_production_tvc" model="product.product">
        <field name="name">TVC Production</field>
        <field name="type">service</field>
        <field name="categ_id" ref="ces_categ_production"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">True</field>
    </record>

    <record id="ces_product_production_digital" model="product.product">
        <field name="name">Digital Asset Production</field>
        <field name="type">service</field>
        <field name="categ_id" ref="ces_categ_production"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">True</field>
    </record>

    <record id="ces_product_media_tv" model="product.product">
        <field name="name">TV Media Buy</field>
        <field name="type">service</field>
        <field name="categ_id" ref="ces_categ_media"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">True</field>
    </record>

    <record id="ces_product_media_digital" model="product.product">
        <field name="name">Digital Media Buy</field>
        <field name="type">service</field>
        <field name="categ_id" ref="ces_categ_media"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">True</field>
    </record>

    <record id="ces_product_media_ooh" model="product.product">
        <field name="name">OOH Media Buy</field>
        <field name="type">service</field>
        <field name="categ_id" ref="ces_categ_media"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">True</field>
    </record>
</odoo>
