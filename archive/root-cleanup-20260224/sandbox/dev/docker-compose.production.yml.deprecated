version: '3.8'

# Production configuration - connects to DigitalOcean Managed Database
# Uses stunnel for SSL/TLS connection to DO Managed Postgres

services:
  dbssl:
    image: alpine:3.20
    command: >
      sh -c "
      apk add --no-cache stunnel ca-certificates &&
      cat >/etc/stunnel/stunnel.conf <<'CONF'
      client = yes
      foreground = yes
      [postgres]
      accept = 0.0.0.0:5432
      connect = $$DB_HOST:$$DB_PORT
      CONF
      stunnel /etc/stunnel/stunnel.conf
      "
    environment:
      DB_HOST: ${DB_HOST}
      DB_PORT: ${DB_PORT:-25060}
    restart: unless-stopped
    networks:
      - odoo-network
    healthcheck:
      test: ["CMD", "nc", "-z", "localhost", "5432"]
      interval: 10s
      timeout: 5s
      retries: 5

  odoo:
    image: odoo:18.0
    depends_on:
      dbssl:
        condition: service_healthy
    ports:
      - "8069:8069"
    environment:
      DB_HOST: dbssl
      DB_PORT: 5432
      DB_USER: ${DB_USER}
      DB_PASSWORD: ${DB_PASSWORD}
      DB_NAME: ${DB_NAME}
      ADMIN_PASSWD: ${ADMIN_PASSWD}
    volumes:
      - odoo-web-data:/var/lib/odoo
      - ./odoo.conf.production:/etc/odoo/odoo.conf:ro
      - ../../addons/oca:/mnt/addons/oca:ro
      - ../../addons/ipai:/mnt/addons/ipai:ro
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8069/web/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    networks:
      - odoo-network
    command: ["odoo", "-c", "/etc/odoo/odoo.conf"]

volumes:
  odoo-web-data:
    driver: local

networks:
  odoo-network:
    driver: bridge
