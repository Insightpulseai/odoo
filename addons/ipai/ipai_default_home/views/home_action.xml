<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Client Action for Custom Home Page -->
    <record id="action_ipai_home_page" model="ir.actions.client">
        <field name="name">Home</field>
        <field name="tag">ipai_home_page</field>
        <field name="target">main</field>
    </record>

    <!-- Optional: Menu item to access home page -->
    <menuitem id="menu_ipai_home"
              name="Home"
              action="action_ipai_home_page"
              sequence="0"
              web_icon="ipai_default_home,static/description/icon.png"/>

</odoo>
