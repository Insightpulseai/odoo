<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_ipai_bi_user" model="res.groups">
        <field name="name">BI User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="comment">Access to view Superset dashboards</field>
    </record>

    <record id="group_ipai_bi_admin" model="res.groups">
        <field name="name">BI Admin</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('group_ipai_bi_user'))]"/>
        <field name="comment">Full access to Superset configuration</field>
    </record>

    <!-- Record Rules: Multi-company -->
    <record id="rule_superset_instance_company" model="ir.rule">
        <field name="name">Superset Instance: Multi-company</field>
        <field name="model_id" ref="model_ipai_bi_superset_instance"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="rule_superset_dataset_company" model="ir.rule">
        <field name="name">Superset Dataset: Multi-company</field>
        <field name="model_id" ref="model_ipai_bi_superset_dataset"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="rule_superset_dashboard_company" model="ir.rule">
        <field name="name">Superset Dashboard: Multi-company</field>
        <field name="model_id" ref="model_ipai_bi_superset_dashboard"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
