<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ipai_convert_phases_wizard_form" model="ir.ui.view">
        <field name="name">ipai.convert.phases.wizard.form</field>
        <field name="model">ipai.convert.phases.wizard</field>
        <field name="arch" type="xml">
            <form string="Convert Phases to IM Projects">
                <sheet>
                    <group>
                        <group string="Program Selection">
                            <field name="parent_project_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Implementation Module Names">
                            <field name="im1_name"/>
                            <field name="im2_name"/>
                        </group>
                    </group>
                    <group string="Task Migration (Optional)">
                        <field name="move_tasks_by_keyword"/>
                        <field name="im1_keywords"
                               invisible="not move_tasks_by_keyword"/>
                        <field name="im2_keywords"
                               invisible="not move_tasks_by_keyword"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Convert" type="object" name="action_convert"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_ipai_convert_phases_wizard" model="ir.actions.act_window">
        <field name="name">Convert Phases â†’ IM Projects</field>
        <field name="res_model">ipai.convert.phases.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
