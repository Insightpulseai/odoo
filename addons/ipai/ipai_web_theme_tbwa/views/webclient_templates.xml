<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hide header menu items, keep only logo and user menu -->
    <template id="navbar_hide_menu" inherit_id="web.webclient_bootstrap" name="TBWA Hide Header Menu">
        <xpath expr="//nav[hasclass('o_main_navbar')]//ul[hasclass('o_menu_sections')]" position="replace"/>
        <xpath expr="//nav[hasclass('o_main_navbar')]//div[hasclass('o_menu_brand')]" position="replace"/>
    </template>

    <!-- Replace default Odoo footer with TBWA SMP footer -->
    <template id="webclient" inherit_id="web.webclient_bootstrap" name="TBWA Footer">
        <xpath expr="//footer" position="replace">
            <footer class="o_tbwa_footer">
                <div class="row-container footer-last">
                    <div class="row row-parent no-top-padding no-h-padding no-bottom-padding">
                        <div class="col-lg-6 pos-middle text-left">
                            <p style="padding: 0px 8px;">
                                <img class="tbwa-footer-logo" 
                                     style="max-width: 300px; width: 100%; padding: 12px 2px;" 
                                     src="https://www.tbwa-smp.com/wp-content/uploads/2025/10/tbwa_smp.png" 
                                     alt="TBWA\The Disruption Company" />
                            </p>
                            <p class="footer-add">
                                16F Liberty Plaza Building, H.V. dela Costa corner Valero St., Salcedo Village, Makati City<br />
                                1227 Metro Manila
                            </p>
                            <p>
                                <a href="https://www.tbwa-smp.com/terms-of-service/" target="_blank">Terms of Service</a>  
                                <a href="https://www.tbwa-smp.com/privacy-policy/" target="_blank">Privacy Policy</a>  
                                <a href="https://www.tbwa-smp.com/cookie-policy/" target="_blank">Cookie Policy</a>
                            </p>
                        </div>
                        <div class="col-lg-6 pos-middle text-right">
                            <div class="social-icon icon-inline">
                                <a href="http://facebook.com/tbwasmp" target="_blank" title="Facebook">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            </div>
                            <div class="social-icon icon-inline">
                                <a href="https://www.youtube.com/tbwaphilippines" target="_blank" title="YouTube">
                                    <i class="fa fa-youtube"></i>
                                </a>
                            </div>
                            <div class="social-icon icon-inline">
                                <a href="http://instagram.com/tbwasmp" target="_blank" title="Instagram">
                                    <i class="fa fa-instagram"></i>
                                </a>
                            </div>
                            <div class="social-icon icon-inline">
                                <a href="https://twitter.com/tbwasmp" target="_blank" title="Twitter">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </div>
                            <div class="social-icon icon-inline">
                                <a href="https://linkedin.com/company/tbwa-santiago-mangada-puno" target="_blank" title="LinkedIn">
                                    <i class="fa fa-linkedin"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </xpath>
    </template>
</odoo>
