<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- ==========================================
             DEMO GRID VIEW CONFIGURATIONS
             ========================================== -->

        <!-- Demo: Partner Grid View -->
        <record id="demo_grid_view_partner" model="ipai.grid.view">
            <field name="name">Customers Grid</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="view_type">list</field>
            <field name="page_size">10</field>
            <field name="show_checkboxes">True</field>
            <field name="enable_row_selection">True</field>
            <field name="enable_column_resize">True</field>
            <field name="enable_quick_search">True</field>
            <field name="enable_export">True</field>
        </record>

        <!-- Demo: Partner Columns -->
        <record id="demo_grid_column_partner_selection" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="field_name">_selection</field>
            <field name="label"></field>
            <field name="column_type">checkbox</field>
            <field name="is_selection_column">True</field>
            <field name="width">40</field>
            <field name="sequence">0</field>
            <field name="sortable">False</field>
            <field name="filterable">False</field>
        </record>

        <record id="demo_grid_column_partner_avatar" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="field_name">image_128</field>
            <field name="label"></field>
            <field name="field_type">binary</field>
            <field name="column_type">avatar</field>
            <field name="is_avatar_column">True</field>
            <field name="width">50</field>
            <field name="sequence">10</field>
            <field name="sortable">False</field>
            <field name="filterable">False</field>
        </record>

        <record id="demo_grid_column_partner_name" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="field_name">name</field>
            <field name="label">Name</field>
            <field name="field_type">char</field>
            <field name="is_primary">True</field>
            <field name="width">200</field>
            <field name="sequence">20</field>
        </record>

        <record id="demo_grid_column_partner_email" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="field_name">email</field>
            <field name="label">Email</field>
            <field name="field_type">char</field>
            <field name="width">200</field>
            <field name="sequence">30</field>
        </record>

        <record id="demo_grid_column_partner_phone" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="field_name">phone</field>
            <field name="label">Phone</field>
            <field name="field_type">char</field>
            <field name="width">150</field>
            <field name="sequence">40</field>
        </record>

        <record id="demo_grid_column_partner_country" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="field_name">country_id</field>
            <field name="label">Country</field>
            <field name="field_type">many2one</field>
            <field name="width">150</field>
            <field name="sequence">50</field>
        </record>

        <record id="demo_grid_column_partner_actions" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="field_name">_actions</field>
            <field name="label"></field>
            <field name="column_type">menu</field>
            <field name="is_action_column">True</field>
            <field name="width">50</field>
            <field name="sequence">9999</field>
            <field name="sortable">False</field>
            <field name="filterable">False</field>
        </record>

        <!-- Demo: Partner Filters -->
        <record id="demo_grid_filter_customers" model="ipai.grid.filter">
            <field name="name">Customers</field>
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="is_default">True</field>
            <field name="is_global">True</field>
            <field name="color">blue</field>
            <field name="domain">[('customer_rank', '>', 0)]</field>
            <field name="filter_json">[{"field": "customer_rank", "operator": ">", "value": 0}]</field>
        </record>

        <record id="demo_grid_filter_vendors" model="ipai.grid.filter">
            <field name="name">Vendors</field>
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="is_global">True</field>
            <field name="color">green</field>
            <field name="domain">[('supplier_rank', '>', 0)]</field>
            <field name="filter_json">[{"field": "supplier_rank", "operator": ">", "value": 0}]</field>
        </record>

        <record id="demo_grid_filter_active" model="ipai.grid.filter">
            <field name="name">Active Only</field>
            <field name="grid_view_id" ref="demo_grid_view_partner"/>
            <field name="is_global">True</field>
            <field name="color">gray</field>
            <field name="domain">[('active', '=', True)]</field>
            <field name="filter_json">[{"field": "active", "operator": "=", "value": true}]</field>
        </record>

        <!-- ==========================================
             DEMO: USER GRID VIEW
             ========================================== -->

        <record id="demo_grid_view_users" model="ipai.grid.view">
            <field name="name">Users Grid</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="view_type">list</field>
            <field name="page_size">25</field>
            <field name="show_checkboxes">True</field>
            <field name="enable_row_selection">True</field>
        </record>

        <record id="demo_grid_column_user_name" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_users"/>
            <field name="field_name">name</field>
            <field name="label">Name</field>
            <field name="field_type">char</field>
            <field name="is_primary">True</field>
            <field name="width">200</field>
            <field name="sequence">10</field>
        </record>

        <record id="demo_grid_column_user_login" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_users"/>
            <field name="field_name">login</field>
            <field name="label">Login</field>
            <field name="field_type">char</field>
            <field name="width">150</field>
            <field name="sequence">20</field>
        </record>

        <record id="demo_grid_column_user_email" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_users"/>
            <field name="field_name">email</field>
            <field name="label">Email</field>
            <field name="field_type">char</field>
            <field name="width">200</field>
            <field name="sequence">30</field>
        </record>

        <record id="demo_grid_column_user_company" model="ipai.grid.column">
            <field name="grid_view_id" ref="demo_grid_view_users"/>
            <field name="field_name">company_id</field>
            <field name="label">Company</field>
            <field name="field_type">many2one</field>
            <field name="width">150</field>
            <field name="sequence">40</field>
        </record>

    </data>
</odoo>
