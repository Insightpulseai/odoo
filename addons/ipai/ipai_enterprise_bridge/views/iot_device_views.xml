<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- IoT Device Tree View -->
    <record id="ipai_iot_device_view_tree" model="ir.ui.view">
        <field name="name">ipai.iot.device.view.tree</field>
        <field name="model">ipai.iot.device</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="device_type"/>
                <field name="identifier"/>
                <field name="status"
                    decoration-success="status == 'online'"
                    decoration-danger="status == 'error'"
                    decoration-muted="status in ('offline', 'unknown')"/>
                <field name="last_seen"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- IoT Device Form View -->
    <record id="ipai_iot_device_view_form" model="ir.ui.view">
        <field name="name">ipai.iot.device.view.form</field>
        <field name="model">ipai.iot.device</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_ping" type="object" string="Ping" class="btn-primary"/>
                    <button name="action_refresh_status" type="object" string="Refresh Status"/>
                    <field name="status" widget="statusbar" statusbar_visible="offline,online"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="device_type"/>
                            <field name="identifier"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="connection_type"/>
                            <field name="mqtt_topic" invisible="connection_type != 'mqtt'"/>
                            <field name="connection_url" invisible="connection_type not in ('websocket', 'http')"/>
                            <field name="last_seen"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional device notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- IoT Device Search View -->
    <record id="ipai_iot_device_view_search" model="ir.ui.view">
        <field name="name">ipai.iot.device.view.search</field>
        <field name="model">ipai.iot.device</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="identifier"/>
                <field name="device_type"/>
                <filter name="online" string="Online" domain="[('status', '=', 'online')]"/>
                <filter name="offline" string="Offline" domain="[('status', '=', 'offline')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_type" string="Device Type" context="{'group_by': 'device_type'}"/>
                    <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                    <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- IoT Device Action -->
    <record id="ipai_iot_device_action" model="ir.actions.act_window">
        <field name="name">IoT Devices</field>
        <field name="res_model">ipai.iot.device</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first IoT device
            </p>
            <p>
                IoT devices can be printers, scales, cash drawers, customer displays, and more.
                Connect them via MQTT, WebSocket, or HTTP API.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="ipai_bridge_menu_root"
        name="Enterprise Bridge"
        web_icon="ipai_enterprise_bridge,static/description/icon.png"
        groups="base.group_system"
        sequence="100"/>

    <menuitem id="ipai_iot_menu"
        name="IoT Devices"
        parent="ipai_bridge_menu_root"
        action="ipai_iot_device_action"
        sequence="10"/>
</odoo>
