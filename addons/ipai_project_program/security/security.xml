<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security rules for Directory Person -->
    <record id="rule_directory_person_internal" model="ir.rule">
        <field name="name">Directory Persons - Internal Users</field>
        <field name="model_id" ref="model_ipai_directory_person"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Security rules for Convert Phases Wizard -->
    <record id="rule_convert_phases_wizard_internal" model="ir.rule">
        <field name="name">Convert Phases Wizard - Internal Users</field>
        <field name="model_id" ref="model_ipai_convert_phases_wizard"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
