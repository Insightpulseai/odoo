<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Space Tree View -->
    <record id="space_tree_view" model="ir.ui.view">
        <field name="name">ipai.workos.space.tree</field>
        <field name="model">ipai.workos.space</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="workspace_id"/>
                <field name="visibility"/>
                <field name="page_count"/>
            </list>
        </field>
    </record>

    <!-- Space Kanban View -->
    <record id="space_kanban_view" model="ir.ui.view">
        <field name="name">ipai.workos.space.kanban</field>
        <field name="model">ipai.workos.space</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="icon"/>
                <field name="visibility"/>
                <field name="page_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="d-flex flex-column p-2">
                            <div class="d-flex align-items-center mb-2">
                                <span class="me-2" t-esc="record.icon.value"/>
                                <strong t-esc="record.name.value"/>
                            </div>
                            <div class="d-flex justify-content-between text-muted small">
                                <span t-esc="record.page_count.value"/> pages
                                <span class="badge" t-att-class="record.visibility.raw_value === 'private' ? 'bg-secondary' : 'bg-success'">
                                    <t t-esc="record.visibility.value"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Space Form View -->
    <record id="space_form_view" model="ir.ui.view">
        <field name="name">ipai.workos.space.form</field>
        <field name="model">ipai.workos.space</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pages" type="object"
                                class="oe_stat_button" icon="fa-file-text-o">
                            <field name="page_count" widget="statinfo" string="Pages"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Space Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="workspace_id"/>
                            <field name="icon"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="visibility" widget="radio"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Space description..."/>
                        </page>
                        <page string="Pages">
                            <field name="page_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="child_count"/>
                                    <field name="last_edited_by"/>
                                    <field name="write_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Space Action -->
    <record id="action_workos_space" model="ir.actions.act_window">
        <field name="name">Spaces</field>
        <field name="res_model">ipai.workos.space</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a space to organize your pages
            </p>
            <p>
                Spaces help you organize pages within a workspace.
                You can set visibility to private or shared.
            </p>
        </field>
    </record>
</odoo>
