<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- System Parameters for AI Copilot configuration -->

    <!-- Models where Ask AI is enabled (comma-separated) -->
    <record id="config_allow_ai_on_models" model="ir.config_parameter">
        <field name="key">ipai.allow_ai_on_models</field>
        <field name="value">account.move,project.task,hr.expense</field>
    </record>

    <!-- Default AI backend code -->
    <record id="config_ai_backend_default" model="ir.config_parameter">
        <field name="key">ipai.ai_backend_default</field>
        <field name="value">anthropic_local</field>
    </record>

    <!-- Superset base URL -->
    <record id="config_superset_base_url" model="ir.config_parameter">
        <field name="key">ipai.superset_base_url</field>
        <field name="value">https://superset.insightpulseai.net</field>
    </record>

    <!-- MCP Hub URL (if centralized) -->
    <record id="config_mcp_hub_url" model="ir.config_parameter">
        <field name="key">ipai.mcp_hub_url</field>
        <field name="value"></field>
    </record>
</odoo>
