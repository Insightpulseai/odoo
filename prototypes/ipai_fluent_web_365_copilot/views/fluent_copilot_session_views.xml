<odoo>
    <!-- Session List View -->
    <record id="view_copilot_session_list" model="ir.ui.view">
        <field name="name">fluent.copilot.session.list</field>
        <field name="model">fluent.copilot.session</field>
        <field name="arch" type="xml">
            <list decoration-muted="status == 'archived'">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="context_record_name"/>
                <field name="message_count"/>
                <field name="started_at"/>
                <field name="status" widget="badge"
                    decoration-success="status == 'active'"
                    decoration-muted="status == 'archived'"
                    decoration-info="status == 'draft'"/>
                <field name="mock_ai_provider" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Session Kanban View -->
    <record id="view_copilot_session_kanban" model="ir.ui.view">
        <field name="name">fluent.copilot.session.kanban</field>
        <field name="model">fluent.copilot.session</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="status"/>
                <field name="user_id"/>
                <field name="message_count"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="context_record_name"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span>
                                        <i class="fa fa-comments"/> <field name="message_count"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Session Form View (Chat-style) -->
    <record id="view_copilot_session_form" model="ir.ui.view">
        <field name="name">fluent.copilot.session.form</field>
        <field name="model">fluent.copilot.session</field>
        <field name="arch" type="xml">
            <form string="Copilot Session">
                <header>
                    <button name="action_archive" type="object" string="Archive"
                        class="btn-secondary"
                        invisible="status != 'active'"/>
                    <button name="action_reopen" type="object" string="Reopen"
                        class="btn-primary"
                        invisible="status != 'archived'"/>
                    <field name="status" widget="statusbar"
                        statusbar_visible="draft,active,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_context_record" type="object"
                            class="oe_stat_button" icon="fa-external-link"
                            invisible="not context_model">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Open Record</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="context_model" readonly="1"/>
                            <field name="context_res_id" readonly="1"/>
                            <field name="context_record_name" readonly="1"/>
                        </group>
                        <group>
                            <field name="started_at" readonly="1"/>
                            <field name="ended_at" readonly="1"/>
                            <field name="mock_ai_provider"/>
                            <field name="mock_tokens_used" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Conversation" name="conversation">
                            <div class="alert alert-info" role="alert" style="margin-bottom: 16px;">
                                <strong>Copilot Chat</strong> -
                                Messages are displayed below. Click "Add Message" to send a new message.
                            </div>
                            <button name="action_send_mock_message" type="object"
                                string="Add Message" class="btn-primary mb-3"
                                invisible="status == 'archived'"/>
                            <field name="message_ids" mode="list" nolabel="1">
                                <list create="1" delete="0" editable="bottom"
                                    decoration-info="role == 'user'"
                                    decoration-success="role == 'assistant'"
                                    decoration-muted="role == 'system'">
                                    <field name="icon" string="" widget="char"/>
                                    <field name="role" readonly="1"/>
                                    <field name="message_type"/>
                                    <field name="body" widget="text"/>
                                    <field name="create_date" string="Time" readonly="1"/>
                                    <field name="mock_confidence" optional="hide"/>
                                </list>
                            </field>
                        </page>
                        <page string="Debug Info" name="debug" groups="base.group_no_one">
                            <group>
                                <field name="message_count"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Session Search View -->
    <record id="view_copilot_session_search" model="ir.ui.view">
        <field name="name">fluent.copilot.session.search</field>
        <field name="model">fluent.copilot.session</field>
        <field name="arch" type="xml">
            <search string="Search Copilot Sessions">
                <field name="name"/>
                <field name="user_id"/>
                <field name="context_model"/>
                <field name="context_record_name"/>
                <filter string="My Sessions" name="my_sessions"
                    domain="[('user_id', '=', uid)]"/>
                <filter string="Active" name="active"
                    domain="[('status', '=', 'active')]"/>
                <filter string="Archived" name="archived"
                    domain="[('status', '=', 'archived')]"/>
                <separator/>
                <filter string="Today" name="today"
                    domain="[('started_at', '>=', time.strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                <filter string="This Week" name="this_week"
                    domain="[('started_at', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Context Model" name="group_model" context="{'group_by': 'context_model'}"/>
                    <filter string="Started Date" name="group_date" context="{'group_by': 'started_at:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Session Action: All -->
    <record id="action_copilot_session" model="ir.actions.act_window">
        <field name="name">All Copilot Sessions</field>
        <field name="res_model">fluent.copilot.session</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Copilot sessions yet
            </p>
            <p>
                Copilot sessions are created when users interact with the AI assistant
                from records or the Copilot app.
            </p>
        </field>
    </record>

    <!-- Session Action: My Sessions -->
    <record id="action_copilot_session_my" model="ir.actions.act_window">
        <field name="name">My Copilot Sessions</field>
        <field name="res_model">fluent.copilot.session</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_my_sessions': 1, 'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start your first Copilot conversation!
            </p>
            <p>
                Open any record (like a Project Task) and click the "Ask Copilot" button
                to start a conversation with your AI assistant.
            </p>
        </field>
    </record>
</odoo>
