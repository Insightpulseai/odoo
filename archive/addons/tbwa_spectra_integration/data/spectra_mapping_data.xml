<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- Spectra GL Code Master Data -->
    <!-- ============================================ -->

    <!-- Assets -->
    <record id="gl_code_1010" model="tbwa.spectra.gl.code">
        <field name="code">1010</field>
        <field name="name">Cash on Hand</field>
        <field name="gl_type">asset</field>
        <field name="description">Petty cash and cash advance funds</field>
    </record>

    <record id="gl_code_1020" model="tbwa.spectra.gl.code">
        <field name="code">1020</field>
        <field name="name">Cash in Bank - Operating</field>
        <field name="gl_type">asset</field>
        <field name="description">Main operating bank account</field>
    </record>

    <record id="gl_code_1100" model="tbwa.spectra.gl.code">
        <field name="code">1100</field>
        <field name="name">Accounts Receivable</field>
        <field name="gl_type">asset</field>
        <field name="description">Trade receivables from clients</field>
    </record>

    <record id="gl_code_1210" model="tbwa.spectra.gl.code">
        <field name="code">1210</field>
        <field name="name">Prepaid Expenses</field>
        <field name="gl_type">asset</field>
        <field name="description">Prepayments and advances</field>
    </record>

    <!-- Liabilities -->
    <record id="gl_code_2010" model="tbwa.spectra.gl.code">
        <field name="code">2010</field>
        <field name="name">Accounts Payable</field>
        <field name="gl_type">liability</field>
        <field name="description">Trade payables to suppliers</field>
    </record>

    <record id="gl_code_2110" model="tbwa.spectra.gl.code">
        <field name="code">2110</field>
        <field name="name">Withholding Tax Payable</field>
        <field name="gl_type">liability</field>
        <field name="description">Philippine withholding taxes payable to BIR</field>
    </record>

    <record id="gl_code_2120" model="tbwa.spectra.gl.code">
        <field name="code">2120</field>
        <field name="name">VAT Payable</field>
        <field name="gl_type">liability</field>
        <field name="description">Value-added tax payable to BIR</field>
    </record>

    <!-- Equity -->
    <record id="gl_code_3010" model="tbwa.spectra.gl.code">
        <field name="code">3010</field>
        <field name="name">Capital Stock</field>
        <field name="gl_type">equity</field>
        <field name="description">Share capital</field>
    </record>

    <record id="gl_code_3110" model="tbwa.spectra.gl.code">
        <field name="code">3110</field>
        <field name="name">Retained Earnings</field>
        <field name="gl_type">equity</field>
        <field name="description">Accumulated profits and losses</field>
    </record>

    <!-- Revenue -->
    <record id="gl_code_4010" model="tbwa.spectra.gl.code">
        <field name="code">4010</field>
        <field name="name">Service Revenue</field>
        <field name="gl_type">revenue</field>
        <field name="description">Revenue from services provided</field>
    </record>

    <record id="gl_code_4020" model="tbwa.spectra.gl.code">
        <field name="code">4020</field>
        <field name="name">Commission Revenue</field>
        <field name="gl_type">revenue</field>
        <field name="description">Commission income</field>
    </record>

    <!-- Expenses -->
    <record id="gl_code_5010" model="tbwa.spectra.gl.code">
        <field name="code">5010</field>
        <field name="name">Salaries and Wages</field>
        <field name="gl_type">expense</field>
        <field name="description">Employee compensation</field>
    </record>

    <record id="gl_code_5020" model="tbwa.spectra.gl.code">
        <field name="code">5020</field>
        <field name="name">Travel and Transportation</field>
        <field name="gl_type">expense</field>
        <field name="description">Business travel expenses</field>
    </record>

    <record id="gl_code_5030" model="tbwa.spectra.gl.code">
        <field name="code">5030</field>
        <field name="name">Meals and Entertainment</field>
        <field name="gl_type">expense</field>
        <field name="description">Business meals and client entertainment</field>
    </record>

    <record id="gl_code_5040" model="tbwa.spectra.gl.code">
        <field name="code">5040</field>
        <field name="name">Office Supplies</field>
        <field name="gl_type">expense</field>
        <field name="description">Office supplies and materials</field>
    </record>

    <record id="gl_code_5050" model="tbwa.spectra.gl.code">
        <field name="code">5050</field>
        <field name="name">Professional Fees</field>
        <field name="gl_type">expense</field>
        <field name="description">Fees for professional services</field>
    </record>

    <record id="gl_code_5060" model="tbwa.spectra.gl.code">
        <field name="code">5060</field>
        <field name="name">Rent Expense</field>
        <field name="gl_type">expense</field>
        <field name="description">Office rent and lease payments</field>
    </record>

    <record id="gl_code_5070" model="tbwa.spectra.gl.code">
        <field name="code">5070</field>
        <field name="name">Utilities Expense</field>
        <field name="gl_type">expense</field>
        <field name="description">Electricity, water, and other utilities</field>
    </record>

    <record id="gl_code_5080" model="tbwa.spectra.gl.code">
        <field name="code">5080</field>
        <field name="name">Telecommunications</field>
        <field name="gl_type">expense</field>
        <field name="description">Phone and internet expenses</field>
    </record>

    <record id="gl_code_5090" model="tbwa.spectra.gl.code">
        <field name="code">5090</field>
        <field name="name">Repairs and Maintenance</field>
        <field name="gl_type">expense</field>
        <field name="description">Equipment and facility maintenance</field>
    </record>

    <!-- ============================================ -->
    <!-- GL Mappings for Common Expense Categories -->
    <!-- ============================================ -->

    <!-- Travel Expense Mapping -->
    <record id="mapping_travel" model="tbwa.spectra.mapping">
        <field name="name">Travel Expenses → Spectra 5020</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_travel"/>
        <field name="gl_code_id" ref="gl_code_5020"/>
        <field name="gl_account_code">5020</field>
        <field name="gl_account_name">Travel and Transportation</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="notes">Standard travel expenses subject to 12% VAT</field>
    </record>

    <!-- Meals Expense Mapping -->
    <record id="mapping_meals" model="tbwa.spectra.mapping">
        <field name="name">Meals &amp; Entertainment → Spectra 5030</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_meals"/>
        <field name="gl_code_id" ref="gl_code_5030"/>
        <field name="gl_account_code">5030</field>
        <field name="gl_account_name">Meals and Entertainment</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="notes">Business meals subject to 12% VAT</field>
    </record>

    <!-- Accommodation Mapping -->
    <record id="mapping_accommodation" model="tbwa.spectra.mapping">
        <field name="name">Accommodation → Spectra 5020</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_accommodation"/>
        <field name="gl_code_id" ref="gl_code_5020"/>
        <field name="gl_account_code">5020</field>
        <field name="gl_account_name">Travel and Transportation</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="notes">Hotel accommodations subject to 12% VAT</field>
    </record>

    <!-- Office Supplies Mapping -->
    <record id="mapping_office_supplies" model="tbwa.spectra.mapping">
        <field name="name">Office Supplies → Spectra 5040</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_office"/>
        <field name="gl_code_id" ref="gl_code_5040"/>
        <field name="gl_account_code">5040</field>
        <field name="gl_account_name">Office Supplies</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="notes">Office supplies subject to 12% VAT</field>
    </record>

    <!-- Professional Fees Mapping (with withholding tax) -->
    <record id="mapping_professional" model="tbwa.spectra.mapping">
        <field name="name">Professional Fees → Spectra 5050</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_professional"/>
        <field name="gl_code_id" ref="gl_code_5050"/>
        <field name="gl_account_code">5050</field>
        <field name="gl_account_name">Professional Fees</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="withholding_code">WC140</field>
        <field name="withholding_rate">10.0</field>
        <field name="notes">Professional fees subject to 12% VAT and 10% withholding tax (1601-C)</field>
    </record>

    <!-- Rent Expense Mapping (with withholding tax) -->
    <record id="mapping_rent" model="tbwa.spectra.mapping">
        <field name="name">Rent Expense → Spectra 5060</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_rent"/>
        <field name="gl_code_id" ref="gl_code_5060"/>
        <field name="gl_account_code">5060</field>
        <field name="gl_account_name">Rent Expense</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="withholding_code">WC150</field>
        <field name="withholding_rate">5.0</field>
        <field name="notes">Rent payments subject to 12% VAT and 5% withholding tax (1601-C)</field>
    </record>

    <!-- Utilities Mapping -->
    <record id="mapping_utilities" model="tbwa.spectra.mapping">
        <field name="name">Utilities → Spectra 5070</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_utilities"/>
        <field name="gl_code_id" ref="gl_code_5070"/>
        <field name="gl_account_code">5070</field>
        <field name="gl_account_name">Utilities Expense</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="notes">Utilities subject to 12% VAT</field>
    </record>

    <!-- Telecommunications Mapping -->
    <record id="mapping_telecoms" model="tbwa.spectra.mapping">
        <field name="name">Telecommunications → Spectra 5080</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_communication"/>
        <field name="gl_code_id" ref="gl_code_5080"/>
        <field name="gl_account_code">5080</field>
        <field name="gl_account_name">Telecommunications</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="notes">Phone and internet expenses subject to 12% VAT</field>
    </record>

    <!-- Repairs and Maintenance Mapping -->
    <record id="mapping_repairs" model="tbwa.spectra.mapping">
        <field name="name">Repairs &amp; Maintenance → Spectra 5090</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_equipment"/>
        <field name="gl_code_id" ref="gl_code_5090"/>
        <field name="gl_account_code">5090</field>
        <field name="gl_account_name">Repairs and Maintenance</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="notes">Equipment repairs subject to 12% VAT</field>
    </record>

    <!-- Miscellaneous Mapping -->
    <record id="mapping_misc" model="tbwa.spectra.mapping">
        <field name="name">Miscellaneous → Spectra 5040</field>
        <field name="mapping_type">tag</field>
        <field name="source_tag_id" ref="tag_miscellaneous"/>
        <field name="gl_code_id" ref="gl_code_5040"/>
        <field name="gl_account_code">5040</field>
        <field name="gl_account_name">Office Supplies</field>
        <field name="vat_code">PV</field>
        <field name="vat_rate">12.0</field>
        <field name="notes">Miscellaneous expenses default to office supplies</field>
    </record>

</odoo>
