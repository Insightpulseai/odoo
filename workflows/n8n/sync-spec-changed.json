{
  "name": "Sync: Spec Changed Webhook",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "spec-changed",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-trigger",
      "name": "Webhook: Spec Changed",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1.1,
      "position": [240, 300],
      "webhookId": "spec-changed-hook"
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.files }}",
              "operation": "contains",
              "value2": "prd.md"
            }
          ]
        }
      },
      "id": "check-prd",
      "name": "Is PRD Change?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [460, 300]
    },
    {
      "parameters": {
        "command": "cd /workspace/odoo-ce && node scripts/sync/spec-to-prisma.js"
      },
      "id": "run-prisma-sync",
      "name": "Run spec-to-prisma",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [680, 200]
    },
    {
      "parameters": {
        "command": "cd /workspace/odoo-ce && npx prisma validate"
      },
      "id": "validate-prisma",
      "name": "Validate Prisma Schema",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [900, 200]
    },
    {
      "parameters": {
        "url": "={{ $env.SUPABASE_URL }}/rest/v1/sync_events",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "event_type",
              "value": "spec_sync"
            },
            {
              "name": "source",
              "value": "={{ $json.repository }}"
            },
            {
              "name": "files_changed",
              "value": "={{ $json.files }}"
            },
            {
              "name": "status",
              "value": "completed"
            },
            {
              "name": "timestamp",
              "value": "={{ $now.toISO() }}"
            }
          ]
        },
        "options": {}
      },
      "id": "log-to-supabase",
      "name": "Log Sync Event",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1120, 200],
      "credentials": {
        "httpHeaderAuth": {
          "id": "supabase-auth",
          "name": "Supabase Auth"
        }
      }
    },
    {
      "parameters": {
        "channel": "#dev-notifications",
        "text": ":arrows_counterclockwise: Spec sync completed for {{ $json.repository }}\n\nFiles: {{ $json.files.join(', ') }}",
        "otherOptions": {}
      },
      "id": "notify-slack",
      "name": "Notify Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2.1,
      "position": [1340, 200],
      "credentials": {
        "slackApi": {
          "id": "slack-bot",
          "name": "Slack Bot"
        }
      }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ JSON.stringify({ success: true, synced: 'spec-to-prisma' }) }}"
      },
      "id": "respond-success",
      "name": "Respond Success",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1560, 200]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ JSON.stringify({ success: true, skipped: 'no-prd-changes' }) }}"
      },
      "id": "respond-skipped",
      "name": "Respond Skipped",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [680, 400]
    }
  ],
  "connections": {
    "Webhook: Spec Changed": {
      "main": [
        [
          {
            "node": "Is PRD Change?",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Is PRD Change?": {
      "main": [
        [
          {
            "node": "Run spec-to-prisma",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Respond Skipped",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Run spec-to-prisma": {
      "main": [
        [
          {
            "node": "Validate Prisma Schema",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Validate Prisma Schema": {
      "main": [
        [
          {
            "node": "Log Sync Event",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Log Sync Event": {
      "main": [
        [
          {
            "node": "Notify Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Notify Slack": {
      "main": [
        [
          {
            "node": "Respond Success",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "saveManualExecutions": true,
    "executionOrder": "v1"
  },
  "tags": ["sync", "automation", "spec"]
}
