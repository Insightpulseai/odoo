<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_ipai_tasklist_tree" model="ir.ui.view">
    <field name="name">ipai.ppm.tasklist.tree</field>
    <field name="model">ipai.ppm.tasklist</field>
    <field name="arch" type="xml">
      <list decoration-success="status == 'done'" decoration-muted="status == 'cancelled'">
        <field name="name"/>
        <field name="workstream_id"/>
        <field name="template_id"/>
        <field name="period_start"/>
        <field name="period_end"/>
        <field name="status" widget="badge"
               decoration-info="status == 'draft'"
               decoration-warning="status in ('released', 'in_progress')"
               decoration-success="status == 'done'"
               decoration-danger="status == 'cancelled'"/>
      </list>
    </field>
  </record>

  <record id="view_ipai_tasklist_form" model="ir.ui.view">
    <field name="name">ipai.ppm.tasklist.form</field>
    <field name="model">ipai.ppm.tasklist</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <field name="status" widget="statusbar"
                 statusbar_visible="draft,released,in_progress,done"/>
        </header>
        <sheet>
          <div class="oe_title">
            <h1><field name="name" placeholder="Task List Name"/></h1>
          </div>
          <group>
            <group>
              <field name="workstream_id"/>
              <field name="template_id"/>
            </group>
            <group>
              <field name="period_start"/>
              <field name="period_end"/>
            </group>
          </group>
          <notebook>
            <page string="Task Runs" name="taskruns">
              <field name="taskrun_ids">
                <list editable="bottom">
                  <field name="task_id"/>
                  <field name="name"/>
                  <field name="status" widget="badge"/>
                  <field name="assignee_id"/>
                  <field name="approver_id"/>
                  <field name="started_at"/>
                  <field name="done_at"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="action_ipai_tasklist" model="ir.actions.act_window">
    <field name="name">Task Lists</field>
    <field name="res_model">ipai.ppm.tasklist</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="ipai_ppm_a1_menu_tasklists" name="Task Lists"
            parent="ipai_ppm_a1_menu_ops"
            action="action_ipai_tasklist" sequence="10"/>
</odoo>
