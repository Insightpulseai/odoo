<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">
    <!-- Azure Advisor Categories -->
    <record id="category_cost" model="advisor.category">
      <field name="name">Cost</field>
      <field name="code">cost</field>
      <field name="sequence">10</field>
      <field name="icon">fa-dollar</field>
      <field name="color">3</field>
      <field name="description">Budget optimization, unused resources, cost efficiency recommendations</field>
    </record>

    <record id="category_security" model="advisor.category">
      <field name="name">Security</field>
      <field name="code">security</field>
      <field name="sequence">20</field>
      <field name="icon">fa-shield</field>
      <field name="color">1</field>
      <field name="description">Access controls, RLS gaps, credential hygiene, vulnerability findings</field>
    </record>

    <record id="category_reliability" model="advisor.category">
      <field name="name">Reliability</field>
      <field name="code">reliability</field>
      <field name="sequence">30</field>
      <field name="icon">fa-heartbeat</field>
      <field name="color">4</field>
      <field name="description">Availability, backups, redundancy, failure recovery recommendations</field>
    </record>

    <record id="category_ops" model="advisor.category">
      <field name="name">Operational Excellence</field>
      <field name="code">ops</field>
      <field name="sequence">40</field>
      <field name="icon">fa-cogs</field>
      <field name="color">5</field>
      <field name="description">Runbooks, alerts, automation coverage, deployment practices</field>
    </record>

    <record id="category_performance" model="advisor.category">
      <field name="name">Performance</field>
      <field name="code">performance</field>
      <field name="sequence">50</field>
      <field name="icon">fa-tachometer</field>
      <field name="color">2</field>
      <field name="description">Response times, query optimization, capacity, latency findings</field>
    </record>
  </data>
</odoo>
