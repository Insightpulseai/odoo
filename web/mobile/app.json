{
  "expo": {
    "name": "InsightPulse",
    "slug": "insightpulse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "insightpulse",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.insightpulse.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "InsightPulse needs camera access to scan receipts and barcodes",
        "NSFaceIDUsageDescription": "InsightPulse uses Face ID for secure authentication",
        "NSPhotoLibraryUsageDescription": "InsightPulse needs photo library access to upload receipts"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.insightpulse.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow InsightPulse to access your camera for receipt scanning"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow InsightPulse to use Face ID for authentication"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#3b82f6"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "owner": "insightpulse"
  }
}
