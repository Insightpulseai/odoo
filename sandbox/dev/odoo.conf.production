[options]
# DigitalOcean Managed Database (Production)
# Connect via stunnel SSL tunnel (see docker-compose.production.yml)
db_host = dbssl
db_port = 5432
db_user = odoo_app
db_password = ${DB_PASSWORD}
db_name = odoo

# Addons path (OCA-style: core + oca + ipai)
addons_path = /usr/lib/python3/dist-packages/odoo/addons,/mnt/addons/oca,/mnt/addons/ipai

# Server settings
http_port = 8069
proxy_mode = True

# Logging
log_level = info
log_handler = :INFO

# Workers (production: multi-threaded)
workers = 4

# Security
list_db = False
admin_passwd = ${ADMIN_PASSWD}
