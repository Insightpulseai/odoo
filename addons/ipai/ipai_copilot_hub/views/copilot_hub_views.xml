<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Client Action for Copilot Hub Main View -->
    <record id="action_copilot_hub_main" model="ir.actions.client">
        <field name="name">Ops Control Room</field>
        <field name="tag">ipai_copilot_hub.main</field>
        <field name="target">current</field>
    </record>

    <!-- Client Action for AI Runbooks (alias) -->
    <record id="action_copilot_hub_runbooks" model="ir.actions.client">
        <field name="name">AI Runbooks</field>
        <field name="tag">ipai_copilot_hub.main</field>
        <field name="target">current</field>
        <field name="context">{'view': 'runbooks'}</field>
    </record>

    <!-- Settings Form View -->
    <record id="view_copilot_hub_settings_form" model="ir.ui.view">
        <field name="name">copilot.hub.settings.form</field>
        <field name="model">copilot.hub.settings</field>
        <field name="arch" type="xml">
            <form string="Copilot Hub Settings">
                <sheet>
                    <div class="oe_title">
                        <h1>Copilot Hub Configuration</h1>
                    </div>
                    <group>
                        <group string="External Application">
                            <field name="hub_url" widget="url"/>
                            <field name="hub_embed_mode"/>
                        </group>
                        <group string="Display Options">
                            <field name="hub_show_toolbar"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <p class="text-muted">
                            Configure the external Fluent UI Ops Control Room URL.
                            Changes take effect on page refresh.
                        </p>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Settings Action -->
    <record id="action_copilot_hub_settings" model="ir.actions.act_window">
        <field name="name">Copilot Hub Settings</field>
        <field name="res_model">copilot.hub.settings</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
