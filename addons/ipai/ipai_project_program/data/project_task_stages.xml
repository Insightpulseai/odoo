<?xml version="1.0" encoding="utf-8"?>
<!--
    OCA-Compatible Project Task Stages
    ===================================
    Standard 6-stage workflow for Finance PPM projects.

    Compatible with:
    - project_stage_state (OCA) - adds state field to stages
    - project_stage_closed (OCA) - fold flag marks closing stages
    - project_task_stage_mgmt (OCA) - per-project stage assignment

    States (for project_stage_state):
    - draft: Not started
    - open: In progress
    - pending: Waiting/blocked
    - done: Completed
    - cancelled: Cancelled
-->
<odoo>
    <data noupdate="0">

        <!-- Stage 1: To Do (Not Started) -->
        <record id="stage_todo" model="project.task.type">
            <field name="name">To Do</field>
            <field name="sequence">10</field>
            <field name="fold">False</field>
            <field name="description">Tasks not yet started</field>
        </record>

        <!-- Stage 2: In Preparation (In Progress - Data Gathering) -->
        <record id="stage_in_preparation" model="project.task.type">
            <field name="name">In Preparation</field>
            <field name="sequence">20</field>
            <field name="fold">False</field>
            <field name="description">Data gathering and initial work in progress</field>
        </record>

        <!-- Stage 3: Under Review (In Progress - Supervisor Review) -->
        <record id="stage_under_review" model="project.task.type">
            <field name="name">Under Review</field>
            <field name="sequence">30</field>
            <field name="fold">False</field>
            <field name="description">Supervisor review</field>
        </record>

        <!-- Stage 4: Pending Approval (Waiting - FD Sign-off) -->
        <record id="stage_pending_approval" model="project.task.type">
            <field name="name">Pending Approval</field>
            <field name="sequence">40</field>
            <field name="fold">False</field>
            <field name="description">Awaiting Finance Director sign-off</field>
        </record>

        <!-- Stage 5: Done (Completed - Closing Stage) -->
        <record id="stage_done" model="project.task.type">
            <field name="name">Done</field>
            <field name="sequence">50</field>
            <field name="fold">True</field>
            <field name="description">Completed tasks (closing stage)</field>
        </record>

        <!-- Stage 6: Cancelled (Closing Stage) -->
        <record id="stage_cancelled" model="project.task.type">
            <field name="name">Cancelled</field>
            <field name="sequence">60</field>
            <field name="fold">True</field>
            <field name="description">Cancelled tasks</field>
        </record>

    </data>
</odoo>
