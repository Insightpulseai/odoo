<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- BIR Tax Filing Project -->
        <record id="project_bir_tax_filing" model="project.project">
            <field name="name">BIR Tax Filing</field>
            <field name="active">True</field>
            <field name="description">Tax filing tasks for BIR compliance (1601-C, 0619-E, 2550M, 2550Q, 1702Q, etc.)</field>
        </record>

        <!-- Month-End Close Template Project -->
        <record id="project_month_end_template" model="project.project">
            <field name="name">Month-End Close Template</field>
            <field name="active">True</field>
            <field name="description">Template project for month-end closing tasks. Clone this to create monthly instances.</field>
        </record>

        <!-- Month-end closing Project (active instance) -->
        <record id="project_month_end_closing" model="project.project">
            <field name="name">Month-end closing</field>
            <field name="active">True</field>
            <field name="description">Active month-end closing project for current period.</field>
        </record>
    </data>
</odoo>
