<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Task Tree View -->
    <record id="a1_task_view_tree" model="ir.ui.view">
        <field name="name">a1.task.tree</field>
        <field name="model">a1.task</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'done'" decoration-muted="state == 'cancelled'" decoration-warning="state == 'approval'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="tasklist_id"/>
                <field name="owner_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" decoration-info="state in ('draft', 'prep')" decoration-warning="state in ('review', 'approval')" decoration-success="state == 'done'" decoration-danger="state == 'cancelled'"/>
                <field name="approval_deadline"/>
                <field name="checklist_progress" widget="progressbar"/>
            </list>
        </field>
    </record>

    <!-- Task Form View -->
    <record id="a1_task_view_form" model="ir.ui.view">
        <field name="name">a1.task.form</field>
        <field name="model">a1.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start_prep" string="Start Preparation" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_submit_prep" string="Submit for Review" type="object" class="btn-primary" invisible="state != 'prep'"/>
                    <button name="action_submit_review" string="Submit for Approval" type="object" class="btn-primary" invisible="state != 'review'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-success" invisible="state != 'approval'"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-warning" invisible="state not in ('review', 'approval')"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,prep,review,approval,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tasklist_id"/>
                            <field name="template_id"/>
                            <field name="workstream_id"/>
                            <field name="external_key"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="checklist_progress" widget="progressbar"/>
                        </group>
                    </group>
                    <group string="Assignments">
                        <group>
                            <field name="owner_role"/>
                            <field name="owner_id" widget="many2one_avatar_user"/>
                            <field name="prep_deadline"/>
                        </group>
                        <group>
                            <field name="reviewer_role"/>
                            <field name="reviewer_id" widget="many2one_avatar_user"/>
                            <field name="review_deadline"/>
                        </group>
                        <group>
                            <field name="approver_role"/>
                            <field name="approver_id" widget="many2one_avatar_user"/>
                            <field name="approval_deadline"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Checklist" name="checklist">
                            <field name="checklist_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="item_type"/>
                                    <field name="is_required"/>
                                    <field name="is_done" widget="boolean_toggle"/>
                                    <field name="done_by"/>
                                    <field name="done_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Completion Tracking" name="tracking">
                            <group>
                                <group string="Preparation">
                                    <field name="prep_done_date"/>
                                    <field name="prep_done_by"/>
                                </group>
                                <group string="Review">
                                    <field name="review_done_date"/>
                                    <field name="review_done_by"/>
                                </group>
                                <group string="Approval">
                                    <field name="approval_done_date"/>
                                    <field name="approval_done_by"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                        <page string="Close Orchestration" name="close_bridge">
                            <group>
                                <field name="close_task_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Task Kanban View -->
    <record id="a1_task_view_kanban" model="ir.ui.view">
        <field name="name">a1.task.kanban</field>
        <field name="model">a1.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="owner_id"/>
                <field name="checklist_progress"/>
                <field name="approval_deadline"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_title">
                                <field name="name"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="owner_id" widget="many2one_avatar_user"/>
                                <field name="checklist_progress" widget="progressbar"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="approval_deadline"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Task Search View -->
    <record id="a1_task_view_search" model="ir.ui.view">
        <field name="name">a1.task.search</field>
        <field name="model">a1.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="tasklist_id"/>
                <field name="owner_id"/>
                <filter name="my_tasks" string="My Tasks" domain="[('owner_id', '=', uid)]"/>
                <filter name="to_review" string="To Review" domain="[('state', '=', 'review'), ('reviewer_id', '=', uid)]"/>
                <filter name="to_approve" string="To Approve" domain="[('state', '=', 'approval'), ('approver_id', '=', uid)]"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', 'in', ('prep', 'review', 'approval'))]"/>
                <filter name="done" string="Completed" domain="[('state', '=', 'done')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_tasklist" string="Tasklist" context="{'group_by': 'tasklist_id'}"/>
                    <filter name="group_workstream" string="Workstream" context="{'group_by': 'workstream_id'}"/>
                    <filter name="group_owner" string="Owner" context="{'group_by': 'owner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="a1_task_action" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">a1.task</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="a1_task_view_search"/>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks yet
            </p>
            <p>
                Tasks are generated from a Tasklist. Create a Tasklist first and generate tasks.
            </p>
        </field>
    </record>

</odoo>
