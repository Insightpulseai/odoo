<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Run Tree View -->
    <record id="view_command_center_run_tree" model="ir.ui.view">
        <field name="name">ipai.command.center.run.tree</field>
        <field name="model">ipai.command.center.run</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'failed'"
                  decoration-success="state == 'done'"
                  decoration-warning="state == 'running'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="run_type" widget="badge"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'failed'"
                       decoration-warning="state == 'running'"
                       decoration-info="state == 'pending'"/>
                <field name="date_start"/>
                <field name="duration" widget="float_time" string="Duration"/>
                <field name="progress" widget="progressbar" optional="show"/>
                <field name="records_processed" optional="show"/>
                <field name="user_id" widget="many2one_avatar_user"/>
            </tree>
        </field>
    </record>

    <!-- Run Form View -->
    <record id="view_command_center_run_form" model="ir.ui.view">
        <field name="name">ipai.command.center.run.form</field>
        <field name="model">ipai.command.center.run</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start" type="object"
                            string="Start" class="btn-primary"
                            invisible="state != 'pending'"/>
                    <button name="action_complete" type="object"
                            string="Complete" class="btn-success"
                            invisible="state != 'running'"/>
                    <button name="action_fail" type="object"
                            string="Mark Failed" class="btn-danger"
                            invisible="state != 'running'"/>
                    <button name="action_cancel" type="object"
                            string="Cancel"
                            invisible="state not in ('pending', 'running')"/>
                    <button name="action_retry" type="object"
                            string="Retry" class="btn-warning"
                            invisible="state != 'failed'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,running,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_command_center_alerts)d" type="action"
                                class="oe_stat_button" icon="fa-bell"
                                context="{'search_default_run_id': active_id}">
                            <field name="id" invisible="1"/>
                            <span>Alerts</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Run name..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="run_type"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration" widget="float_time"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="records_processed"/>
                            <field name="records_failed"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Result" name="result" invisible="not result">
                            <field name="result" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Error" name="error" invisible="not error_message">
                            <field name="error_message" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Run Search View -->
    <record id="view_command_center_run_search" model="ir.ui.view">
        <field name="name">ipai.command.center.run.search</field>
        <field name="model">ipai.command.center.run</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="user_id"/>
                <filter name="today" string="Today"
                        domain="[('date_start', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter name="pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                <filter name="running" string="Running" domain="[('state', '=', 'running')]"/>
                <filter name="done" string="Completed" domain="[('state', '=', 'done')]"/>
                <filter name="failed" string="Failed" domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter name="ai_query" string="AI Queries" domain="[('run_type', '=', 'ai_query')]"/>
                <filter name="batch_job" string="Batch Jobs" domain="[('run_type', '=', 'batch_job')]"/>
                <filter name="report" string="Reports" domain="[('run_type', '=', 'report')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_type" string="Type" context="{'group_by': 'run_type'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'date_start:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Run Kanban View -->
    <record id="view_command_center_run_kanban" model="ir.ui.view">
        <field name="name">ipai.command.center.run.kanban</field>
        <field name="model">ipai.command.center.run</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="run_type"/>
                <field name="state"/>
                <field name="date_start"/>
                <field name="duration"/>
                <field name="progress"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="name"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="run_type"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="date_start" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                                <field name="progress" widget="progressbar" invisible="state != 'running'"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Run Action -->
    <record id="action_command_center_runs" model="ir.actions.act_window">
        <field name="name">Runs</field>
        <field name="res_model">ipai.command.center.run</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

</odoo>
