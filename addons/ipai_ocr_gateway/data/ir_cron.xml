<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- OCR Job Sequence -->
        <record id="seq_ipai_ocr_job" model="ir.sequence">
            <field name="name">OCR Job Sequence</field>
            <field name="code">ipai.ocr.job</field>
            <field name="prefix">OCR-</field>
            <field name="padding">6</field>
        </record>

        <!-- Cron job to process pending OCR jobs -->
        <record id="ir_cron_process_ocr_jobs" model="ir.cron">
            <field name="name">Process Pending OCR Jobs</field>
            <field name="model_id" ref="model_ipai_ocr_job"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_pending_jobs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">10</field>
        </record>
    </data>
</odoo>
