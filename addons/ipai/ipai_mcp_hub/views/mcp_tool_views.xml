<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- MCP Tool: Form View -->
    <record id="view_mcp_tool_form" model="ir.ui.view">
        <field name="name">ipai.mcp.tool.form</field>
        <field name="model">ipai.mcp.tool</field>
        <field name="arch" type="xml">
            <form string="MCP Tool">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_mcp_binding)d" type="action"
                                class="oe_stat_button" icon="fa-link"
                                context="{'default_tool_id': active_id, 'search_default_tool_id': active_id}">
                            <field name="binding_count" widget="statinfo" string="Bindings"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Destructive" bg_color="text-bg-danger" invisible="not is_destructive"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-secondary" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., List Tables"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Tool Configuration">
                            <field name="tool_name"/>
                            <field name="server_id"/>
                            <field name="category"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Safety">
                            <field name="is_destructive"/>
                            <field name="requires_confirmation"/>
                            <field name="tags"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Input Schema" name="input">
                            <field name="input_schema" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Output Schema" name="output">
                            <field name="output_schema" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Bindings" name="bindings">
                            <field name="binding_ids" nolabel="1">
                                <list>
                                    <field name="model_id"/>
                                    <field name="usage"/>
                                    <field name="auto_invoke"/>
                                    <field name="priority"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- MCP Tool: List View -->
    <record id="view_mcp_tool_list" model="ir.ui.view">
        <field name="name">ipai.mcp.tool.list</field>
        <field name="model">ipai.mcp.tool</field>
        <field name="arch" type="xml">
            <list string="MCP Tools">
                <field name="name"/>
                <field name="tool_name"/>
                <field name="server_id"/>
                <field name="category"/>
                <field name="is_destructive"/>
                <field name="binding_count"/>
            </list>
        </field>
    </record>

    <!-- MCP Tool: Search View -->
    <record id="view_mcp_tool_search" model="ir.ui.view">
        <field name="name">ipai.mcp.tool.search</field>
        <field name="model">ipai.mcp.tool</field>
        <field name="arch" type="xml">
            <search string="Search Tools">
                <field name="name"/>
                <field name="tool_name"/>
                <field name="server_id"/>
                <filter string="Read/Query" name="read" domain="[('category', '=', 'read')]"/>
                <filter string="Write/Mutate" name="write" domain="[('category', '=', 'write')]"/>
                <filter string="Destructive" name="destructive" domain="[('is_destructive', '=', True)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Server" name="groupby_server" context="{'group_by': 'server_id'}"/>
                    <filter string="Category" name="groupby_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- MCP Tool: Action -->
    <record id="action_mcp_tool" model="ir.actions.act_window">
        <field name="name">MCP Tools</field>
        <field name="res_model">ipai.mcp.tool</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first MCP tool
            </p>
            <p>
                Catalog tools available from your MCP servers for agent orchestration.
            </p>
        </field>
    </record>
</odoo>
