<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Approval Request Tree View -->
    <record id="view_ipai_approval_request_tree" model="ir.ui.view">
        <field name="name">ipai.approval.request.tree</field>
        <field name="model">ipai.approval.request</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="type_id"/>
                <field name="user_id"/>
                <field name="res_name" optional="show"/>
                <field name="amount" optional="show"/>
                <field name="approval_count"/>
                <field name="required_approvals"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
                <field name="date_submitted" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Approval Request Form View -->
    <record id="view_ipai_approval_request_form" model="ir.ui.view">
        <field name="name">ipai.approval.request.form</field>
        <field name="model">ipai.approval.request</field>
        <field name="arch" type="xml">
            <form string="Approval Request">
                <header>
                    <button name="action_submit" type="object" string="Submit" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" string="Approve" class="oe_highlight btn-success" invisible="state != 'pending'"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger" invisible="state != 'pending'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ('approved', 'rejected', 'cancelled')"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" invisible="state not in ('cancelled', 'rejected')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_record" type="object" class="oe_stat_button" icon="fa-external-link" invisible="not res_model or not res_id">
                            <span class="o_stat_text">View Record</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Approved" bg_color="bg-success" invisible="state != 'approved'"/>
                    <widget name="web_ribbon" title="Rejected" bg_color="bg-danger" invisible="state != 'rejected'"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-secondary" invisible="state != 'cancelled'"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="state != 'draft'"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_id" readonly="state != 'draft'" options="{'no_create': True}"/>
                            <field name="user_id" readonly="state != 'draft'"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="amount" readonly="state != 'draft'"/>
                            <field name="currency_id" readonly="state != 'draft'" invisible="not amount"/>
                        </group>
                    </group>
                    <group string="Linked Record" invisible="not res_model">
                        <group>
                            <field name="res_model" readonly="1"/>
                            <field name="res_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="res_name" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" readonly="state != 'draft'"/>
                        </page>
                        <page string="Approvers" name="approvers" invisible="state == 'draft'">
                            <field name="approver_ids" mode="tree" readonly="1">
                                <tree create="0" delete="0">
                                    <field name="sequence" widget="handle"/>
                                    <field name="user_id"/>
                                    <field name="state" widget="badge" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-info="state == 'delegated'"/>
                                    <field name="decision_date"/>
                                    <field name="delegated_to_id"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="approval_count" string="Approvals Received"/>
                                    <field name="required_approvals" string="Approvals Required"/>
                                </group>
                            </group>
                        </page>
                        <page string="History" name="history" invisible="state == 'draft'">
                            <group>
                                <group>
                                    <field name="date_submitted" readonly="1"/>
                                    <field name="date_approved" readonly="1" invisible="not date_approved"/>
                                    <field name="date_rejected" readonly="1" invisible="not date_rejected"/>
                                </group>
                                <group>
                                    <field name="final_approver_id" readonly="1" invisible="not final_approver_id"/>
                                    <field name="rejection_reason" readonly="1" invisible="not rejection_reason"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Approval Request Kanban View -->
    <record id="view_ipai_approval_request_kanban" model="ir.ui.view">
        <field name="name">ipai.approval.request.kanban</field>
        <field name="model">ipai.approval.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="type_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="approval_count"/>
                <field name="required_approvals"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'pending': 'warning', 'approved': 'success', 'rejected': 'danger', 'cancelled': 'secondary'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="type_id"/>
                                <div class="o_kanban_record_subtitle">
                                    <span>By: </span><field name="user_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span>Approvals: <field name="approval_count"/>/<field name="required_approvals"/></span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Approval Request Search View -->
    <record id="view_ipai_approval_request_search" model="ir.ui.view">
        <field name="name">ipai.approval.request.search</field>
        <field name="model">ipai.approval.request</field>
        <field name="arch" type="xml">
            <search string="Search Approval Requests">
                <field name="name"/>
                <field name="type_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="My Requests" name="my_requests" domain="[('user_id', '=', uid)]"/>
                <filter string="To Approve" name="to_approve" domain="[('approver_ids.user_id', '=', uid), ('approver_ids.state', '=', 'pending')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="Late Activities" name="activities_overdue" domain="[('my_activity_date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Today Activities" name="activities_today" domain="[('my_activity_date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'type_id'}"/>
                    <filter string="Requester" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Submitted Date" name="group_date" context="{'group_by': 'date_submitted:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Approval Request Action -->
    <record id="action_ipai_approval_request" model="ir.actions.act_window">
        <field name="name">Approval Requests</field>
        <field name="res_model">ipai.approval.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_ipai_approval_request_search"/>
        <field name="context">{'search_default_my_requests': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Approval Request
            </p>
        </field>
    </record>

    <!-- My Approvals Action (To Approve) -->
    <record id="action_ipai_approval_request_to_approve" model="ir.actions.act_window">
        <field name="name">To Approve</field>
        <field name="res_model">ipai.approval.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_ipai_approval_request_search"/>
        <field name="context">{'search_default_to_approve': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No requests pending your approval
            </p>
        </field>
    </record>
</odoo>
