<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Worklist Types -->
  <record id="view_ipai_stc_worklist_tree" model="ir.ui.view">
    <field name="name">ipai.stc.worklist_type.tree</field>
    <field name="model">ipai.stc.worklist_type</field>
    <field name="arch" type="xml">
      <list>
        <field name="code"/>
        <field name="name"/>
      </list>
    </field>
  </record>

  <record id="view_ipai_stc_worklist_form" model="ir.ui.view">
    <field name="name">ipai.stc.worklist_type.form</field>
    <field name="model">ipai.stc.worklist_type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="code"/>
            <field name="name"/>
          </group>
          <field name="description" placeholder="Description..."/>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_ipai_stc_worklist" model="ir.actions.act_window">
    <field name="name">STC Worklist Types</field>
    <field name="res_model">ipai.stc.worklist_type</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="ipai_ppm_a1_menu_stc_worklists" name="STC Worklist Types"
            parent="ipai_ppm_a1_menu_master"
            action="action_ipai_stc_worklist" sequence="40"/>

  <!-- Compliance Checks -->
  <record id="view_ipai_stc_check_tree" model="ir.ui.view">
    <field name="name">ipai.stc.check.tree</field>
    <field name="model">ipai.stc.check</field>
    <field name="arch" type="xml">
      <list>
        <field name="worklist_type_id"/>
        <field name="sequence"/>
        <field name="code"/>
        <field name="name"/>
        <field name="category"/>
        <field name="severity" widget="badge"
               decoration-danger="severity == 'critical'"
               decoration-warning="severity == 'high'"
               decoration-info="severity == 'med'"
               decoration-success="severity == 'low'"/>
        <field name="is_active"/>
      </list>
    </field>
  </record>

  <record id="view_ipai_stc_check_form" model="ir.ui.view">
    <field name="name">ipai.stc.check.form</field>
    <field name="model">ipai.stc.check</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <h1><field name="name" placeholder="Check Name"/></h1>
          </div>
          <group>
            <group>
              <field name="workstream_id"/>
              <field name="worklist_type_id"/>
              <field name="code"/>
              <field name="category"/>
            </group>
            <group>
              <field name="sequence"/>
              <field name="severity"/>
              <field name="is_active"/>
              <field name="auto_run"/>
            </group>
          </group>
          <group>
            <field name="sap_reference"/>
          </group>
          <field name="description" placeholder="Description..."/>
          <field name="rule_json" placeholder="Rule JSON definition..."/>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="action_ipai_stc_checks" model="ir.actions.act_window">
    <field name="name">STC Compliance Checks</field>
    <field name="res_model">ipai.stc.check</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="ipai_ppm_a1_menu_stc_checks" name="STC Compliance Checks"
            parent="ipai_ppm_a1_menu_master"
            action="action_ipai_stc_checks" sequence="50"/>

  <!-- Scenarios -->
  <record id="view_ipai_stc_scenario_tree" model="ir.ui.view">
    <field name="name">ipai.stc.scenario.tree</field>
    <field name="model">ipai.stc.scenario</field>
    <field name="arch" type="xml">
      <list>
        <field name="sequence"/>
        <field name="code"/>
        <field name="name"/>
        <field name="frequency"/>
        <field name="workstream_id"/>
        <field name="bir_forms"/>
      </list>
    </field>
  </record>

  <record id="view_ipai_stc_scenario_form" model="ir.ui.view">
    <field name="name">ipai.stc.scenario.form</field>
    <field name="model">ipai.stc.scenario</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <h1><field name="name" placeholder="Scenario Name"/></h1>
          </div>
          <group>
            <group>
              <field name="workstream_id"/>
              <field name="code"/>
              <field name="sequence"/>
            </group>
            <group>
              <field name="frequency"/>
              <field name="run_day_offset"/>
              <field name="bir_forms"/>
            </group>
          </group>
          <field name="sap_reference"/>
          <field name="check_ids" widget="many2many_tags"/>
          <field name="notes" placeholder="Notes..."/>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="action_ipai_stc_scenarios" model="ir.actions.act_window">
    <field name="name">STC Scenarios</field>
    <field name="res_model">ipai.stc.scenario</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="ipai_ppm_a1_menu_stc_scenarios" name="STC Scenarios"
            parent="ipai_ppm_a1_menu_master"
            action="action_ipai_stc_scenarios" sequence="60"/>
</odoo>
