<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security rules for Month-End Template -->
    <record id="rule_month_end_template_internal" model="ir.rule">
        <field name="name">Month-End Templates - Internal Users</field>
        <field name="model_id" ref="model_ipai_month_end_template"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Security rules for Month-End Template Step -->
    <record id="rule_month_end_template_step_internal" model="ir.rule">
        <field name="name">Month-End Template Steps - Internal Users</field>
        <field name="model_id" ref="model_ipai_month_end_template_step"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Security rules for Generate Wizard -->
    <record id="rule_generate_month_end_wizard_internal" model="ir.rule">
        <field name="name">Generate Month-End Wizard - Internal Users</field>
        <field name="model_id" ref="model_ipai_generate_month_end_wizard"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
