<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Task Stages (OKR Scoring) -->
        <record id="stage_backlog" model="project.task.type">
            <field name="name">Backlog</field>
            <field name="sequence">1</field>
            <field name="fold">False</field>
            <field name="description">Score: 0.0 - Not started</field>
        </record>
        <record id="stage_preparation" model="project.task.type">
            <field name="name">Preparation</field>
            <field name="sequence">2</field>
            <field name="fold">False</field>
            <field name="description">Score: 0.3 - Work in progress</field>
        </record>
        <record id="stage_review" model="project.task.type">
            <field name="name">Review</field>
            <field name="sequence">3</field>
            <field name="fold">False</field>
            <field name="description">Score: 0.5 - Under review</field>
        </record>
        <record id="stage_approval" model="project.task.type">
            <field name="name">Approval</field>
            <field name="sequence">4</field>
            <field name="fold">False</field>
            <field name="description">Score: 0.7 - Pending approval (target)</field>
        </record>
        <record id="stage_done" model="project.task.type">
            <field name="name">Done</field>
            <field name="sequence">5</field>
            <field name="fold">True</field>
            <field name="description">Score: 1.0 - Complete</field>
        </record>
        <record id="stage_blocked" model="project.task.type">
            <field name="name">Blocked</field>
            <field name="sequence">6</field>
            <field name="fold">False</field>
            <field name="description">Risk escalation required</field>
        </record>
    </data>
</odoo>
