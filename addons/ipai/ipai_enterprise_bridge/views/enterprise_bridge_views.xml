<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Enterprise Bridge Config Tree View -->
    <record id="view_enterprise_bridge_config_tree" model="ir.ui.view">
        <field name="name">ipai.enterprise.bridge.config.tree</field>
        <field name="model">ipai.enterprise.bridge.config</field>
        <field name="arch" type="xml">
            <tree string="Enterprise Bridges">
                <field name="name"/>
                <field name="feature_code"/>
                <field name="bridge_mode" decoration-success="bridge_mode == 'oca'" decoration-warning="bridge_mode == 'stub'" decoration-danger="bridge_mode == 'disabled'"/>
                <field name="oca_alternative"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Enterprise Bridge Config Form View -->
    <record id="view_enterprise_bridge_config_form" model="ir.ui.view">
        <field name="name">ipai.enterprise.bridge.config.form</field>
        <field name="model">ipai.enterprise.bridge.config</field>
        <field name="arch" type="xml">
            <form string="Enterprise Bridge Configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <widget name="web_ribbon" title="Inactive" bg_color="text-bg-danger" invisible="is_active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Feature Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="feature_code"/>
                            <field name="bridge_mode"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="oca_alternative"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Implementation notes, limitations, or alternatives..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Enterprise Bridge Config Action -->
    <record id="action_enterprise_bridge_config" model="ir.actions.act_window">
        <field name="name">Enterprise Bridges</field>
        <field name="res_model">ipai.enterprise.bridge.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure Enterprise feature bridges
            </p>
            <p>
                Define how Enterprise features are handled in CE+OCA mode:
                stub (no-op), OCA alternative, or custom implementation.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem
        id="menu_enterprise_bridge_root"
        name="Enterprise Bridge"
        parent="base.menu_administration"
        sequence="100"/>

    <menuitem
        id="menu_enterprise_bridge_config"
        name="Bridge Configuration"
        parent="menu_enterprise_bridge_root"
        action="action_enterprise_bridge_config"
        sequence="10"/>

</odoo>
