<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Ask AI Widget Template -->
    <t t-name="ipai_ask_ai_chatter.AskAIWidget">
        <div class="o_ask_ai_chatter_widget">
            <div class="o_ask_ai_chatter_header d-flex justify-content-between align-items-center p-2 border-bottom">
                <div>
                    <i class="fa fa-magic text-primary me-2"/>
                    <strong>Ask AI</strong>
                </div>
                <button class="btn btn-link btn-sm p-0" t-on-click="props.onClose">
                    <i class="fa fa-times"/>
                </button>
            </div>

            <div class="o_ask_ai_chatter_messages p-2" style="max-height: 200px; overflow-y: auto;">
                <t t-if="!hasMessages">
                    <div class="text-muted text-center py-3">
                        <i class="fa fa-comments fa-2x mb-2"/>
                        <p class="mb-0 small">Ask about this document</p>
                    </div>
                </t>

                <t t-foreach="state.messages" t-as="message" t-key="message_index">
                    <div t-attf-class="o_ask_ai_message mb-2 #{message.role === 'user' ? 'text-end' : ''}">
                        <div t-attf-class="d-inline-block p-2 rounded small #{message.role === 'user' ? 'bg-primary text-white' : 'bg-light'}">
                            <t t-if="message.role === 'assistant'">
                                <t t-out="formatContent(message.content)"/>
                            </t>
                            <t t-else="">
                                <t t-esc="message.content"/>
                            </t>
                        </div>
                    </div>
                </t>

                <t t-if="state.loading">
                    <div class="o_ask_ai_message mb-2">
                        <div class="d-inline-block p-2 rounded small bg-light">
                            <i class="fa fa-spinner fa-spin me-1"/>
                            Thinking...
                        </div>
                    </div>
                </t>
            </div>

            <div class="o_ask_ai_chatter_input p-2 border-top">
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control"
                           placeholder="Ask a question..."
                           t-ref="input"
                           t-model="state.currentInput"
                           t-on-keydown="onInputKeydown"
                           t-att-disabled="state.loading"/>
                    <button class="btn btn-primary" type="button"
                            t-on-click="onSend"
                            t-att-disabled="state.loading || !state.currentInput.trim()">
                        <i class="fa fa-paper-plane"/>
                    </button>
                </div>
            </div>
        </div>
    </t>

</templates>
