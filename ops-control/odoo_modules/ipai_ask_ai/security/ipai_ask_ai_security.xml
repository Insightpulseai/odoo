<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_ask_ai_user" model="res.groups">
        <field name="name">AI Copilot User</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_ask_ai_admin" model="res.groups">
        <field name="name">AI Copilot Administrator</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="implied_ids" eval="[(4, ref('group_ask_ai_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- Record Rules -->
    <!-- Users can only see their own conversations -->
    <record id="rule_conversation_user" model="ir.rule">
        <field name="name">AI Conversation: User sees own</field>
        <field name="model_id" ref="model_ask_ai_conversation"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_ask_ai_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Admins can see all conversations -->
    <record id="rule_conversation_admin" model="ir.rule">
        <field name="name">AI Conversation: Admin sees all</field>
        <field name="model_id" ref="model_ask_ai_conversation"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ask_ai_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Messages follow conversation rules -->
    <record id="rule_message_user" model="ir.rule">
        <field name="name">AI Message: User sees own conversations</field>
        <field name="model_id" ref="model_ask_ai_message"/>
        <field name="domain_force">[('conversation_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_ask_ai_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="rule_message_admin" model="ir.rule">
        <field name="name">AI Message: Admin sees all</field>
        <field name="model_id" ref="model_ask_ai_message"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ask_ai_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
