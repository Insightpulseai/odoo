<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ph_holiday_tree" model="ir.ui.view">
        <field name="name">ipai.ph.holiday.tree</field>
        <field name="model">ipai.ph.holiday</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="name"/>
                <field name="holiday_type"/>
                <field name="year"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ph_holiday_form" model="ir.ui.view">
        <field name="name">ipai.ph.holiday.form</field>
        <field name="model">ipai.ph.holiday</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="holiday_type"/>
                            <field name="year"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ph_holiday_search" model="ir.ui.view">
        <field name="name">ipai.ph.holiday.search</field>
        <field name="model">ipai.ph.holiday</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <filter name="regular" string="Regular Holidays" domain="[('holiday_type', '=', 'regular')]"/>
                <filter name="special" string="Special Holidays" domain="[('holiday_type', '=', 'special')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_year" string="Year" context="{'group_by': 'year'}"/>
                    <filter name="group_type" string="Type" context="{'group_by': 'holiday_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ph_holiday" model="ir.actions.act_window">
        <field name="name">Philippine Holidays</field>
        <field name="res_model">ipai.ph.holiday</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Philippine Holidays
            </p>
            <p>
                Holidays are used to calculate working days for month-end closing schedules.
            </p>
        </field>
    </record>
</odoo>
