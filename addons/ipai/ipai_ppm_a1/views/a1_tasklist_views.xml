<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tasklist Tree View -->
    <record id="a1_tasklist_view_tree" model="ir.ui.view">
        <field name="name">a1.tasklist.tree</field>
        <field name="model">a1.tasklist</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'done'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="period_label"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-primary="state in ('open', 'in_progress')" decoration-success="state == 'done'" decoration-danger="state == 'cancelled'"/>
                <field name="task_count"/>
                <field name="task_done_count"/>
                <field name="progress" widget="progressbar"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Tasklist Form View -->
    <record id="a1_tasklist_view_form" model="ir.ui.view">
        <field name="name">a1.tasklist.form</field>
        <field name="model">a1.tasklist</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_tasks" string="Generate Tasks" type="object" class="btn-primary" invisible="state not in ('draft', 'open')"/>
                    <button name="action_instantiate_close_cycle" string="Create Close Cycle" type="object" class="btn-secondary" invisible="state != 'open' or close_cycle_id"/>
                    <button name="action_open" string="Open" type="object" invisible="state != 'draft'"/>
                    <button name="action_start" string="Start" type="object" invisible="state != 'open'"/>
                    <button name="action_complete" string="Complete" type="object" class="btn-success" invisible="state != 'in_progress'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="task_done_count"/>/<field name="task_count"/>
                                </span>
                                <span class="o_stat_text">Tasks</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., December 2025 Month-End Close"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="period_label"/>
                        </group>
                        <group>
                            <field name="progress" widget="progressbar"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks" name="tasks">
                            <field name="task_ids">
                                <list decoration-success="state == 'done'" decoration-muted="state == 'cancelled'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="owner_id" widget="many2one_avatar_user"/>
                                    <field name="state" widget="badge"/>
                                    <field name="checklist_progress" widget="progressbar"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                        <page string="Close Orchestration" name="close_bridge">
                            <group>
                                <field name="close_cycle_id"/>
                            </group>
                        </page>
                        <page string="Webhooks" name="webhooks">
                            <group>
                                <field name="webhook_url"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tasklist Search View -->
    <record id="a1_tasklist_view_search" model="ir.ui.view">
        <field name="name">a1.tasklist.search</field>
        <field name="model">a1.tasklist</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="period_label"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="open" string="Open" domain="[('state', '=', 'open')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="done" string="Completed" domain="[('state', '=', 'done')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_period" string="Period" context="{'group_by': 'period_end:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="a1_tasklist_action" model="ir.actions.act_window">
        <field name="name">Tasklists</field>
        <field name="res_model">a1.tasklist</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="a1_tasklist_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tasklist
            </p>
            <p>
                Tasklists represent period-specific runs (e.g., December 2025 Month-End Close).
                Generate tasks from templates to start tracking.
            </p>
        </field>
    </record>

</odoo>
