<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Permission Tree View -->
    <record id="ipai_permission_tree_view" model="ir.ui.view">
        <field name="name">ipai.permission.tree</field>
        <field name="model">ipai.permission</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="scope_type"/>
                <field name="role"/>
                <field name="permission_level"/>
                <field name="user_id"/>
                <field name="group_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Permission Form View -->
    <record id="ipai_permission_form_view" model="ir.ui.view">
        <field name="name">ipai.permission.form</field>
        <field name="model">ipai.permission</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="scope_type"/>
                            <field name="scope_ref"/>
                        </group>
                        <group>
                            <field name="role"/>
                            <field name="permission_level"/>
                            <field name="user_id"/>
                            <field name="group_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Share Token Tree View -->
    <record id="ipai_share_token_tree_view" model="ir.ui.view">
        <field name="name">ipai.share.token.tree</field>
        <field name="model">ipai.share.token</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="scope_type"/>
                <field name="permission_level"/>
                <field name="is_public"/>
                <field name="expires_at"/>
                <field name="created_by"/>
            </list>
        </field>
    </record>

    <!-- Permission Action -->
    <record id="action_ipai_permission" model="ir.actions.act_window">
        <field name="name">Permissions</field>
        <field name="res_model">ipai.permission</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Share Token Action -->
    <record id="action_ipai_share_token" model="ir.actions.act_window">
        <field name="name">Share Tokens</field>
        <field name="res_model">ipai.share.token</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
