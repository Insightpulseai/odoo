<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Close Exception Form View -->
    <record id="view_close_exception_form" model="ir.ui.view">
        <field name="name">close.exception.form</field>
        <field name="model">close.exception</field>
        <field name="arch" type="xml">
            <form string="Close Exception">
                <header>
                    <button name="action_investigate" string="Investigate"
                            type="object" class="oe_highlight"
                            invisible="state != 'open'"/>
                    <button name="action_resolve" string="Mark Resolved"
                            type="object" class="btn-success"
                            invisible="state not in ('open', 'investigating')"/>
                    <button name="action_escalate" string="Escalate"
                            type="object" class="btn-warning"
                            invisible="state not in ('open', 'investigating')"/>
                    <button name="action_cancel" string="Cancel (False Positive)"
                            type="object"
                            invisible="state in ('resolved', 'cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="open,investigating,resolved"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Critical" bg_color="text-bg-danger"
                            invisible="severity != 'critical'"/>
                    <widget name="web_ribbon" title="High Priority" bg_color="text-bg-warning"
                            invisible="severity != 'high'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Exception title..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="exception_type"/>
                            <field name="severity" widget="badge"
                                   decoration-danger="severity == 'critical'"
                                   decoration-warning="severity in ('high', 'warning')"/>
                            <field name="cycle_id"/>
                            <field name="task_id"/>
                        </group>
                        <group string="Assignment">
                            <field name="detected_by" widget="many2one_avatar_user"/>
                            <field name="detected_date"/>
                            <field name="assigned_to" widget="many2one_avatar_user"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Details" name="details">
                            <group>
                                <field name="description" placeholder="Detailed description of the exception..."/>
                            </group>
                            <group string="Related Records">
                                <field name="related_account_id"/>
                                <field name="related_partner_id"/>
                                <field name="related_move_id"/>
                            </group>
                            <group string="Financial Impact">
                                <field name="amount"/>
                                <field name="currency_id"/>
                                <field name="variance_pct"/>
                            </group>
                        </page>

                        <page string="Resolution" name="resolution">
                            <group>
                                <field name="root_cause" placeholder="Root cause analysis..."/>
                                <field name="resolution_action" placeholder="Resolution steps taken..."/>
                            </group>
                            <group string="Resolution Details">
                                <field name="resolved_by" widget="many2one_avatar_user"/>
                                <field name="resolved_date"/>
                            </group>
                        </page>

                        <page string="Escalation" name="escalation">
                            <group>
                                <field name="escalation_level"/>
                                <field name="escalated_to" widget="many2one_avatar_user"/>
                                <field name="escalated_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Close Exception Tree View -->
    <record id="view_close_exception_tree" model="ir.ui.view">
        <field name="name">close.exception.tree</field>
        <field name="model">close.exception</field>
        <field name="arch" type="xml">
            <tree decoration-danger="severity == 'critical'"
                  decoration-warning="severity in ('high', 'warning')"
                  decoration-muted="state in ('resolved', 'cancelled')">
                <field name="name"/>
                <field name="cycle_id"/>
                <field name="task_id" optional="show"/>
                <field name="exception_type"/>
                <field name="severity" widget="badge"
                       decoration-danger="severity == 'critical'"
                       decoration-warning="severity in ('high', 'warning')"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'open'"
                       decoration-warning="state == 'investigating'"
                       decoration-success="state == 'resolved'"/>
                <field name="amount" optional="show"/>
                <field name="assigned_to" widget="many2one_avatar_user"/>
                <field name="detected_date"/>
                <field name="escalation_level" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Close Exception Kanban View -->
    <record id="view_close_exception_kanban" model="ir.ui.view">
        <field name="name">close.exception.kanban</field>
        <field name="model">close.exception</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="exception_type"/>
                <field name="severity"/>
                <field name="state"/>
                <field name="assigned_to"/>
                <field name="amount"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click #{record.severity.raw_value == 'critical' ? 'border-danger' : (record.severity.raw_value == 'high' ? 'border-warning' : '')}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="name"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="exception_type"/>
                                </div>
                                <div class="mt-2">
                                    <field name="severity" widget="badge"
                                           decoration-danger="severity == 'critical'"
                                           decoration-warning="severity in ('high', 'warning')"/>
                                </div>
                                <div t-if="record.amount.raw_value" class="mt-1">
                                    <strong>Amount:</strong> <field name="amount"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="cycle_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="assigned_to" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Close Exception Search View -->
    <record id="view_close_exception_search" model="ir.ui.view">
        <field name="name">close.exception.search</field>
        <field name="model">close.exception</field>
        <field name="arch" type="xml">
            <search string="Close Exceptions">
                <field name="name"/>
                <field name="cycle_id"/>
                <field name="task_id"/>
                <field name="exception_type"/>
                <field name="assigned_to"/>
                <filter name="filter_my_exceptions" string="Assigned to Me"
                        domain="[('assigned_to', '=', uid)]"/>
                <separator/>
                <filter name="filter_open" string="Open"
                        domain="[('state', '=', 'open')]"/>
                <filter name="filter_investigating" string="Investigating"
                        domain="[('state', '=', 'investigating')]"/>
                <filter name="filter_resolved" string="Resolved"
                        domain="[('state', '=', 'resolved')]"/>
                <separator/>
                <filter name="filter_critical" string="Critical"
                        domain="[('severity', '=', 'critical')]"/>
                <filter name="filter_high" string="High Priority"
                        domain="[('severity', '=', 'high')]"/>
                <separator/>
                <filter name="filter_escalated" string="Escalated"
                        domain="[('escalation_level', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="State"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_severity" string="Severity"
                            context="{'group_by': 'severity'}"/>
                    <filter name="group_type" string="Exception Type"
                            context="{'group_by': 'exception_type'}"/>
                    <filter name="group_cycle" string="Cycle"
                            context="{'group_by': 'cycle_id'}"/>
                    <filter name="group_assigned" string="Assigned To"
                            context="{'group_by': 'assigned_to'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_close_exception" model="ir.actions.act_window">
        <field name="name">Exceptions</field>
        <field name="res_model">close.exception</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_close_exception_search"/>
        <field name="context">{'search_default_filter_open': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No exceptions found
            </p>
            <p>
                Exceptions are issues or anomalies that need to be resolved before closing.
            </p>
        </field>
    </record>

    <!-- Approval Gate Views -->
    <record id="view_close_approval_gate_tree" model="ir.ui.view">
        <field name="name">close.approval.gate.tree</field>
        <field name="model">close.approval.gate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cycle_id"/>
                <field name="gate_level"/>
                <field name="gate_type"/>
                <field name="approver_role"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'blocked'"
                       decoration-warning="state in ('pending', 'ready')"/>
                <field name="approved_by" widget="many2one_avatar_user"/>
                <field name="approved_date"/>
            </tree>
        </field>
    </record>

    <record id="view_close_approval_gate_form" model="ir.ui.view">
        <field name="name">close.approval.gate.form</field>
        <field name="model">close.approval.gate</field>
        <field name="arch" type="xml">
            <form string="Approval Gate">
                <header>
                    <button name="action_check_readiness" string="Check Readiness"
                            type="object" class="oe_highlight"
                            invisible="state in ('approved',)"/>
                    <button name="action_approve" string="Approve Gate"
                            type="object" class="btn-success"
                            invisible="state != 'ready'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,ready,approved"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Blocked" bg_color="text-bg-danger"
                            invisible="state != 'blocked'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Gate Configuration">
                            <field name="cycle_id"/>
                            <field name="gate_level"/>
                            <field name="gate_type"/>
                        </group>
                        <group string="Approval Requirements">
                            <field name="approver_role"/>
                            <field name="approver_user_id" widget="many2one_avatar_user"/>
                            <field name="required_approvals"/>
                        </group>
                    </group>
                    <group string="Prerequisites">
                        <field name="required_task_states"/>
                        <field name="min_completion_pct"/>
                        <field name="block_on_exceptions"/>
                    </group>
                    <group string="Approval Status" invisible="state != 'approved'">
                        <field name="approved_by" widget="many2one_avatar_user"/>
                        <field name="approved_date"/>
                        <field name="approval_notes"/>
                    </group>
                    <group string="Blocking Issues" invisible="state != 'blocked'">
                        <field name="blocking_reason"/>
                        <field name="blocking_tasks" widget="many2many_tags"/>
                        <field name="blocking_exceptions" widget="many2many_tags"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_close_approval_gate" model="ir.actions.act_window">
        <field name="name">Approval Gates</field>
        <field name="res_model">close.approval.gate</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
