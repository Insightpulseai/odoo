  "allow_root_dirs": [
    ".devcontainer",
    ".github",
    ".insightpulse",
    ".specify",
    ".supabase",
    ".vscode",
    ".git",
    ".mypy_cache",
    ".venv",
    "node_modules",
    "addons",
    "config",
    "docker",
    "scripts",
    "tests",
    "docs",
    "spec",
    "archive",
    "third_party",
    "supabase",
    "ci",
    "infra",
    "deploy",
    "mcp",
    "n8n",
    "db",
    "sandbox",
    "templates",
    "harness",
    "catalog",
    "oca-parity",
    "parity",
    "_work",
    "artifacts",
    "logs",
    "packages",
    "agents",
    "bin"
  ],
  "notes": {
    "hidden_files": "Hidden files starting with . are allowed if listed above",
    "env_files": "Environment template files (.env.*.example) are allowed; runtime .env* should be gitignored",
    "compose": "Only docker-compose.yml (SSOT) and docker-compose.dev.yml (overlay) allowed at root",
    "docs": "Documentation files should go in docs/; only README/CONTRIBUTING/SECURITY/CHANGELOG at root",
    "scripts": "Executable scripts should go in scripts/; shims allowed if needed for compatibility"
  }
}
