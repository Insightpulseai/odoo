      <field name="employee_id" ref="user_bom"/>
      <field name="role">responsible</field>
      <field name="scope">Finance Supervisor — BIR monthly compensation (1601-C), filing coordination, team oversight</field>
      <field name="supervisor_id" ref="user_rim"/>
      <field name="reviewer_id" ref="user_rim"/>
      <field name="approver_id" ref="user_ckvc"/>
