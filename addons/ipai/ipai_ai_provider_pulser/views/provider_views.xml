<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Provider Configuration Form View -->
    <record id="view_ipai_ai_provider_config_form" model="ir.ui.view">
        <field name="name">ipai.ai.provider.config.form</field>
        <field name="model">ipai.ai.provider.config</field>
        <field name="arch" type="xml">
            <form string="AI Provider Configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-bar-chart" type="object" name="action_view_usage" string="Usage">
                            <field name="total_requests" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Provider Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="provider_type"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="default_model"/>
                            <field name="default_temperature"/>
                            <field name="default_max_tokens"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Connection" name="connection">
                            <group>
                                <group>
                                    <field name="endpoint" placeholder="https://api.openai.com/v1/chat/completions"/>
                                    <field name="api_key" password="True"/>
                                    <field name="organization_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Models" name="models">
                            <group>
                                <field name="available_models" placeholder="gpt-4&#10;gpt-4-turbo&#10;gpt-3.5-turbo"/>
                            </group>
                        </page>
                        <page string="Rate Limits" name="rate_limits">
                            <group>
                                <group>
                                    <field name="rate_limit_rpm"/>
                                    <field name="rate_limit_tpm"/>
                                </group>
                            </group>
                        </page>
                        <page string="Fallback" name="fallback">
                            <group>
                                <field name="fallback_provider_id"
                                       domain="[('id', '!=', id), ('active', '=', True)]"/>
                            </group>
                        </page>
                        <page string="Statistics" name="statistics">
                            <group>
                                <group>
                                    <field name="total_requests" readonly="1"/>
                                    <field name="total_tokens" readonly="1"/>
                                    <field name="last_used" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Provider Configuration Tree View -->
    <record id="view_ipai_ai_provider_config_tree" model="ir.ui.view">
        <field name="name">ipai.ai.provider.config.tree</field>
        <field name="model">ipai.ai.provider.config</field>
        <field name="arch" type="xml">
            <tree string="AI Providers" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="provider_type" widget="badge"/>
                <field name="default_model"/>
                <field name="total_requests"/>
                <field name="last_used"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Provider Configuration Action -->
    <record id="action_ipai_ai_provider_config" model="ir.actions.act_window">
        <field name="name">AI Providers</field>
        <field name="res_model">ipai.ai.provider.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your AI providers
            </p>
            <p>
                Add API keys and endpoints for OpenAI, Anthropic, Azure, or your custom Pulser gateway.
            </p>
        </field>
    </record>

    <!-- Menu Items (added to Settings) -->
    <menuitem id="menu_ipai_ai_provider_config"
              name="AI Providers"
              parent="base.menu_custom"
              action="action_ipai_ai_provider_config"
              groups="base.group_system"
              sequence="100"/>
</odoo>
