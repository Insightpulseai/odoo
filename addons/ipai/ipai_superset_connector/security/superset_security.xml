<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Module Category -->
        <record id="module_category_superset" model="ir.module.category">
            <field name="name">Superset Analytics</field>
            <field name="description">Superset dashboard embedding and analytics</field>
            <field name="sequence">100</field>
        </record>

        <!-- User Group: Can view dashboards -->
        <record id="group_superset_user" model="res.groups">
            <field name="name">Superset User</field>
            <field name="category_id" ref="module_category_superset"/>
            <field name="comment">Can view Superset dashboards embedded in Odoo</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Manager Group: Can configure dashboards -->
        <record id="group_superset_manager" model="res.groups">
            <field name="name">Superset Manager</field>
            <field name="category_id" ref="module_category_superset"/>
            <field name="comment">Can configure Superset dashboard mappings and view audit logs</field>
            <field name="implied_ids" eval="[(4, ref('group_superset_user'))]"/>
        </record>

        <!-- Record Rules -->

        <!-- Dashboard: Users can read active dashboards they have group access to -->
        <record id="rule_dashboard_user_read" model="ir.rule">
            <field name="name">Superset Dashboard: User Read</field>
            <field name="model_id" ref="model_ipai_superset_dashboard"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_superset_user'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <!-- Dashboard: Managers have full access -->
        <record id="rule_dashboard_manager_full" model="ir.rule">
            <field name="name">Superset Dashboard: Manager Full</field>
            <field name="model_id" ref="model_ipai_superset_dashboard"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_superset_manager'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <!-- Audit: Managers can read all audit logs -->
        <record id="rule_audit_manager_read" model="ir.rule">
            <field name="name">Superset Audit: Manager Read</field>
            <field name="model_id" ref="model_ipai_superset_audit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_superset_manager'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

    </data>
</odoo>
