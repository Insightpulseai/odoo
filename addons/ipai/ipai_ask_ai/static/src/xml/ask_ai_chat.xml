<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="ipai_ask_ai.AskAIChat">
        <div class="o_ask_ai_chat h-100 d-flex flex-column">
            <!-- Header -->
            <div class="o_ask_ai_header p-3 border-bottom bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">
                            <i class="fa fa-magic me-2"/>Ask AI
                        </h4>
                        <small class="text-muted">Finance Assistant</small>
                    </div>
                    <button t-if="hasMessages" class="btn btn-outline-secondary btn-sm"
                            t-on-click="onClear">
                        <i class="fa fa-trash"/> Clear
                    </button>
                </div>
            </div>

            <!-- Messages Area -->
            <div class="o_ask_ai_messages flex-grow-1 overflow-auto p-3" t-ref="messages">
                <!-- Welcome message -->
                <t t-if="!hasMessages">
                    <div class="text-center text-muted py-5">
                        <i class="fa fa-comments fa-3x mb-3"/>
                        <h5>Welcome to Ask AI</h5>
                        <p>I'm your Finance Assistant. Try asking:</p>
                        <div class="d-flex flex-wrap justify-content-center gap-2">
                            <button class="btn btn-outline-primary btn-sm"
                                    t-on-click="() => this.state.currentInput = 'What\\'s blocking the close?'">
                                What's blocking the close?
                            </button>
                            <button class="btn btn-outline-primary btn-sm"
                                    t-on-click="() => this.state.currentInput = 'What are today\\'s priorities?'">
                                What are today's priorities?
                            </button>
                            <button class="btn btn-outline-primary btn-sm"
                                    t-on-click="() => this.state.currentInput = 'What are the upcoming deadlines?'">
                                Upcoming deadlines
                            </button>
                        </div>
                    </div>
                </t>

                <!-- Chat messages -->
                <t t-foreach="state.messages" t-as="message" t-key="message_index">
                    <div t-attf-class="o_ask_ai_message mb-3 #{message.role === 'user' ? 'text-end' : ''}">
                        <div t-attf-class="d-inline-block p-3 rounded-3 #{message.role === 'user' ? 'bg-primary text-white' : 'bg-light border'}">
                            <t t-if="message.role === 'assistant'">
                                <div t-out="formatContent(message.content)"/>
                            </t>
                            <t t-else="">
                                <t t-esc="message.content"/>
                            </t>
                        </div>
                    </div>
                </t>

                <!-- Loading indicator -->
                <t t-if="state.loading">
                    <div class="o_ask_ai_message mb-3">
                        <div class="d-inline-block p-3 rounded-3 bg-light border">
                            <i class="fa fa-spinner fa-spin me-2"/>
                            Thinking...
                        </div>
                    </div>
                </t>
            </div>

            <!-- Input Area -->
            <div class="o_ask_ai_input p-3 border-top bg-white">
                <div class="input-group">
                    <input type="text" class="form-control"
                           placeholder="Ask a question about finance tasks..."
                           t-ref="input"
                           t-model="state.currentInput"
                           t-on-keydown="onInputKeydown"
                           t-att-disabled="state.loading"/>
                    <button class="btn btn-primary" type="button"
                            t-on-click="onSend"
                            t-att-disabled="state.loading || !state.currentInput.trim()">
                        <i class="fa fa-paper-plane"/>
                    </button>
                </div>
            </div>
        </div>
    </t>

</templates>
