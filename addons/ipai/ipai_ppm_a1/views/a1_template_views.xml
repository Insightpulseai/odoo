<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Template Tree View -->
    <record id="a1_template_view_tree" model="ir.ui.view">
        <field name="name">a1.template.tree</field>
        <field name="model">a1.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="workstream_id"/>
                <field name="owner_role"/>
                <field name="reviewer_role"/>
                <field name="approver_role"/>
                <field name="total_days"/>
            </list>
        </field>
    </record>

    <!-- Template Form View -->
    <record id="a1_template_view_form" model="ir.ui.view">
        <field name="name">a1.template.form</field>
        <field name="model">a1.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Task Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="workstream_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group string="Role Assignments">
                        <group>
                            <field name="owner_role"/>
                            <field name="reviewer_role"/>
                            <field name="approver_role"/>
                        </group>
                        <group>
                            <field name="prep_days"/>
                            <field name="review_days"/>
                            <field name="approval_days"/>
                            <field name="total_days"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Steps" name="steps">
                            <field name="step_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="assignee_role"/>
                                    <field name="effort_days"/>
                                    <field name="deadline_offset_days"/>
                                </list>
                            </field>
                        </page>
                        <page string="Checklist" name="checklist">
                            <field name="checklist_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="item_type"/>
                                    <field name="is_required"/>
                                </list>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Detailed task instructions..."/>
                        </page>
                        <page string="Close Orchestration" name="close_bridge">
                            <group>
                                <field name="close_template_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Template Search View -->
    <record id="a1_template_view_search" model="ir.ui.view">
        <field name="name">a1.template.search</field>
        <field name="model">a1.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="workstream_id"/>
                <field name="owner_role"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_workstream" string="Workstream" context="{'group_by': 'workstream_id'}"/>
                    <filter name="group_phase" string="Phase" context="{'group_by': 'phase_code'}"/>
                    <filter name="group_owner" string="Owner Role" context="{'group_by': 'owner_role'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="a1_template_action" model="ir.actions.act_window">
        <field name="name">Task Templates</field>
        <field name="res_model">a1.template</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="a1_template_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first task template
            </p>
            <p>
                Templates define reusable task structures with steps and checklists.
            </p>
        </field>
    </record>

</odoo>
