<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Superset Dashboard Embed -->
    <t t-name="ipai_superset_connector.SupersetEmbed">
        <div class="o_superset_embed h-100 d-flex flex-column">
            <!-- Header -->
            <div class="o_superset_embed_header d-flex align-items-center justify-content-between p-2 border-bottom bg-view" t-if="props.dashboard_name">
                <h4 class="m-0">
                    <i class="fa fa-bar-chart me-2"/>
                    <t t-esc="props.dashboard_name"/>
                </h4>
                <div class="o_superset_embed_actions">
                    <button class="btn btn-sm btn-outline-secondary"
                            t-on-click="refreshToken"
                            title="Refresh">
                        <i class="fa fa-refresh"/>
                    </button>
                </div>
            </div>

            <!-- Content -->
            <div class="o_superset_embed_content flex-grow-1 position-relative">
                <!-- Loading state -->
                <div t-if="state.loading" class="o_superset_loading d-flex align-items-center justify-content-center h-100">
                    <div class="text-center">
                        <i class="fa fa-spinner fa-spin fa-3x mb-3"/>
                        <p class="text-muted">Loading dashboard...</p>
                    </div>
                </div>

                <!-- Error state -->
                <div t-if="state.error and !state.loading" class="o_superset_error d-flex align-items-center justify-content-center h-100">
                    <div class="text-center text-danger">
                        <i class="fa fa-exclamation-triangle fa-3x mb-3"/>
                        <p><t t-esc="state.error"/></p>
                        <button class="btn btn-primary" t-on-click="refreshToken">
                            <i class="fa fa-refresh me-1"/> Retry
                        </button>
                    </div>
                </div>

                <!-- Dashboard iframe -->
                <iframe t-if="state.iframeSrc and !state.error"
                        t-att-src="state.iframeSrc"
                        class="o_superset_iframe w-100 h-100 border-0"
                        allowfullscreen="true"
                        t-on-load="onIframeLoad"
                        t-on-error="onIframeError"
                        sandbox="allow-scripts allow-same-origin allow-popups allow-forms"/>
            </div>
        </div>
    </t>

    <!-- Dashboard List -->
    <t t-name="ipai_superset_connector.SupersetDashboardList">
        <div class="o_superset_dashboard_list p-4">
            <div class="d-flex align-items-center mb-4">
                <h2 class="m-0">
                    <i class="fa fa-bar-chart me-2"/>
                    Analytics Dashboards
                </h2>
            </div>

            <!-- Loading -->
            <div t-if="state.loading" class="text-center py-5">
                <i class="fa fa-spinner fa-spin fa-2x"/>
                <p class="text-muted mt-2">Loading dashboards...</p>
            </div>

            <!-- Error -->
            <div t-if="state.error" class="alert alert-danger">
                <i class="fa fa-exclamation-triangle me-2"/>
                <t t-esc="state.error"/>
            </div>

            <!-- Empty state -->
            <div t-if="!state.loading and !state.error and state.dashboards.length === 0"
                 class="text-center py-5 text-muted">
                <i class="fa fa-bar-chart fa-3x mb-3"/>
                <p>No dashboards available</p>
                <small>Contact your administrator to configure Superset dashboards</small>
            </div>

            <!-- Dashboard cards -->
            <div t-if="!state.loading and state.dashboards.length > 0"
                 class="row g-3">
                <div t-foreach="state.dashboards" t-as="dashboard" t-key="dashboard.id"
                     class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 cursor-pointer o_superset_dashboard_card"
                         t-on-click="() => this.openDashboard(dashboard)">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fa fa-line-chart me-2 text-primary"/>
                                <t t-esc="dashboard.name"/>
                            </h5>
                            <p t-if="dashboard.description"
                               class="card-text text-muted small">
                                <t t-esc="dashboard.description"/>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <button class="btn btn-sm btn-primary">
                                <i class="fa fa-external-link me-1"/>
                                Open Dashboard
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
