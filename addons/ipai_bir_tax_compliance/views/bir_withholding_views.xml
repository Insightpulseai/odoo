<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Withholding Return Tree View -->
    <record id="view_bir_withholding_return_tree" model="ir.ui.view">
        <field name="name">bir.withholding.return.tree</field>
        <field name="model">bir.withholding.return</field>
        <field name="arch" type="xml">
            <list decoration-danger="is_overdue" decoration-success="state == 'confirmed'">
                <field name="name"/>
                <field name="form_type"/>
                <field name="withholding_type"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="tax_due" sum="Total WHT"/>
                <field name="due_date"/>
                <field name="state" widget="badge"/>
                <field name="is_overdue" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Withholding Return Form View -->
    <record id="view_bir_withholding_return_form" model="ir.ui.view">
        <field name="name">bir.withholding.return.form</field>
        <field name="model">bir.withholding.return</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_compute" string="Compute"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_validate" string="Validate"
                            type="object"
                            invisible="state not in ['draft', 'computed']"/>
                    <button name="action_mark_filed" string="Mark as Filed"
                            type="object"
                            invisible="state != 'validated'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Form Details">
                            <field name="withholding_type"/>
                            <field name="form_type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Period">
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="due_date"/>
                        </group>
                    </group>

                    <!-- Compensation WHT -->
                    <group string="Compensation Withholding (1601-C)" invisible="withholding_type != 'compensation'">
                        <group>
                            <field name="total_compensation"/>
                            <field name="taxable_compensation"/>
                        </group>
                        <group>
                            <field name="compensation_tax_withheld"/>
                            <field name="employee_count"/>
                        </group>
                    </group>

                    <!-- Expanded WHT -->
                    <group string="Expanded Withholding (1601-E)" invisible="withholding_type != 'expanded'">
                        <group>
                            <field name="total_payments"/>
                        </group>
                        <group>
                            <field name="expanded_wht_amount"/>
                        </group>
                    </group>

                    <!-- Final WHT -->
                    <group string="Final Withholding (1601-F)" invisible="withholding_type != 'final'">
                        <field name="final_wht_amount"/>
                    </group>

                    <notebook>
                        <page string="Payee Details" name="lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="tin"/>
                                    <field name="income_type"/>
                                    <field name="gross_income"/>
                                    <field name="wht_rate"/>
                                    <field name="wht_amount"/>
                                    <field name="move_id" optional="hide"/>
                                </list>
                            </field>
                        </page>
                        <page string="Summary" name="summary">
                            <group>
                                <group>
                                    <field name="tax_base"/>
                                    <field name="tax_due"/>
                                </group>
                                <group>
                                    <field name="penalty"/>
                                    <field name="interest"/>
                                    <field name="total_amount_due"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Alphalist Tree View -->
    <record id="view_bir_alphalist_tree" model="ir.ui.view">
        <field name="name">bir.alphalist.tree</field>
        <field name="model">bir.alphalist</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="form_type"/>
                <field name="fiscal_year"/>
                <field name="total_gross" sum="Total"/>
                <field name="total_wht" sum="Total WHT"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Alphalist Form View -->
    <record id="view_bir_alphalist_form" model="ir.ui.view">
        <field name="name">bir.alphalist.form</field>
        <field name="model">bir.alphalist</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate" string="Generate from Returns"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="form_type"/>
                        </group>
                        <group>
                            <field name="fiscal_year"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="total_gross"/>
                        <field name="total_wht"/>
                    </group>
                    <notebook>
                        <page string="Payee List" name="lines">
                            <field name="line_ids">
                                <list>
                                    <field name="partner_id"/>
                                    <field name="tin"/>
                                    <field name="income_type"/>
                                    <field name="gross_income"/>
                                    <field name="wht_amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_bir_withholding_return" model="ir.actions.act_window">
        <field name="name">Withholding Tax Returns</field>
        <field name="res_model">bir.withholding.return</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Withholding Tax Return
            </p>
        </field>
    </record>

    <record id="action_bir_alphalist" model="ir.actions.act_window">
        <field name="name">Annual Alphalist</field>
        <field name="res_model">bir.alphalist</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Annual Alphalist
            </p>
            <p>
                Generate Forms 1604-CF or 1604-E from monthly returns.
            </p>
        </field>
    </record>
</odoo>
