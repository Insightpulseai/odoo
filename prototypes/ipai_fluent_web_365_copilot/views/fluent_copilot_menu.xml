        id="menu_copilot_config"
        name="Configuration"
        parent="menu_copilot_root"
        groups="base.group_system"
        sequence="90"
    />

    <menuitem
        id="menu_copilot_intents"
        name="Intents"
        parent="menu_copilot_config"
        action="action_copilot_intent"
