<odoo>
    <data noupdate="1">
        <record id="ir_cron_plane_webhook_cleanup" model="ir.cron">
            <field name="name">Plane: Clean old webhook deliveries</field>
            <field name="model_id" ref="model_plane_webhook_delivery"/>
            <field name="state">code</field>
            <field name="code">
cutoff = datetime.datetime.now() - datetime.timedelta(days=7)
env['plane.webhook.delivery'].sudo().search([('received_at', '&lt;', cutoff)]).unlink()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>
