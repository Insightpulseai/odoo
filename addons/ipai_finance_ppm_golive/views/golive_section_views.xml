<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_golive_section_tree" model="ir.ui.view">
        <field name="name">ipai.finance.ppm.golive.section.tree</field>
        <field name="model">ipai.finance.ppm.golive.section</field>
        <field name="arch" type="xml">
            <tree string="Checklist Sections">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="section_type"/>
                <field name="completion_pct" widget="progressbar"/>
                <field name="completed_items"/>
                <field name="total_items"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_golive_section_form" model="ir.ui.view">
        <field name="name">ipai.finance.ppm.golive.section.form</field>
        <field name="model">ipai.finance.ppm.golive.section</field>
        <field name="arch" type="xml">
            <form string="Checklist Section">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="section_type"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="completion_pct" widget="progressbar"/>
                            <field name="completed_items"/>
                            <field name="total_items"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Section description..."/>
                    </group>
                    <notebook>
                        <page string="Checklist Items">
                            <field name="item_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="is_critical" widget="boolean_toggle"/>
                                    <field name="name"/>
                                    <field name="is_checked" widget="boolean_toggle"/>
                                    <field name="checked_by"/>
                                    <field name="checked_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_golive_section" model="ir.actions.act_window">
        <field name="name">Checklist Sections</field>
        <field name="res_model">ipai.finance.ppm.golive.section</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
