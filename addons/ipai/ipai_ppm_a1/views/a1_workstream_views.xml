<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="a1_workstream_view_tree" model="ir.ui.view">
        <field name="name">a1.workstream.tree</field>
        <field name="model">a1.workstream</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="phase_code"/>
                <field name="owner_role_id"/>
                <field name="template_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="a1_workstream_view_form" model="ir.ui.view">
        <field name="name">a1.workstream.form</field>
        <field name="model">a1.workstream</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_templates" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="template_count" widget="statinfo" string="Templates"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Workstream Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="phase_code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="owner_role_id"/>
                            <field name="owner_user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe the workstream scope and responsibilities..."/>
                        </page>
                        <page string="Templates" name="templates">
                            <field name="template_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="owner_role"/>
                                    <field name="total_days"/>
                                </list>
                            </field>
                        </page>
                        <page string="Close Orchestration" name="close_bridge">
                            <group>
                                <field name="close_category_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="a1_workstream_view_search" model="ir.ui.view">
        <field name="name">a1.workstream.search</field>
        <field name="model">a1.workstream</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="phase_code"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_phase" string="Phase" context="{'group_by': 'phase_code'}"/>
                    <filter name="group_owner" string="Owner Role" context="{'group_by': 'owner_role_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="a1_workstream_action" model="ir.actions.act_window">
        <field name="name">Workstreams</field>
        <field name="res_model">a1.workstream</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="a1_workstream_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first workstream
            </p>
            <p>
                Workstreams represent organizational units that own task templates.
            </p>
        </field>
    </record>

</odoo>
