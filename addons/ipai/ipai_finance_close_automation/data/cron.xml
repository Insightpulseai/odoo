<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Monthly cron to auto-generate month-end close project -->
        <record id="ir_cron_ipai_generate_month_close" model="ir.cron">
            <field name="name">IPAI: Generate Month-End Close (Monthly)</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="state">code</field>
            <field name="code">
from datetime import date
today = date.today()
env['ipai.finance.close.service'].sudo().generate_month_close(today.year, today.month)
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
