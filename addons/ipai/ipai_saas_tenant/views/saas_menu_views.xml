<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SaaS Root Menu -->
    <menuitem id="menu_saas_root"
              name="SaaS Platform"
              web_icon="ipai_saas_tenant,static/description/icon.png"
              sequence="100"/>

    <!-- Accounts Menu -->
    <menuitem id="menu_saas_accounts"
              name="Accounts"
              parent="menu_saas_root"
              sequence="10"/>

    <menuitem id="menu_saas_account_list"
              name="All Accounts"
              parent="menu_saas_accounts"
              action="action_saas_account"
              sequence="10"/>

    <menuitem id="menu_saas_account_link_list"
              name="Account Links"
              parent="menu_saas_accounts"
              action="action_saas_account_link"
              sequence="20"/>

    <!-- Services Menu -->
    <menuitem id="menu_saas_services"
              name="Services"
              parent="menu_saas_root"
              sequence="20"/>

    <menuitem id="menu_saas_service_list"
              name="All Services"
              parent="menu_saas_services"
              action="action_saas_service"
              sequence="10"/>

    <!-- Subscriptions Menu -->
    <menuitem id="menu_saas_subscriptions"
              name="Subscriptions"
              parent="menu_saas_root"
              sequence="30"/>

    <menuitem id="menu_saas_subscription_list"
              name="All Subscriptions"
              parent="menu_saas_subscriptions"
              action="action_saas_subscription"
              sequence="10"/>

    <menuitem id="menu_saas_usage_record_list"
              name="Usage Records"
              parent="menu_saas_subscriptions"
              action="action_saas_usage_record"
              sequence="20"/>

    <!-- Infrastructure Menu -->
    <menuitem id="menu_saas_infrastructure"
              name="Infrastructure"
              parent="menu_saas_root"
              sequence="40"/>

    <menuitem id="menu_saas_environment_list"
              name="Environments"
              parent="menu_saas_infrastructure"
              action="action_saas_environment"
              sequence="10"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_saas_config"
              name="Configuration"
              parent="menu_saas_root"
              groups="group_saas_admin"
              sequence="100"/>

</odoo>
