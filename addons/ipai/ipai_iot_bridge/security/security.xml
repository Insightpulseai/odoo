<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_ipai_iot_admin" model="res.groups">
        <field name="name">IPAI IoT Administrator</field>
        <field name="category_id" ref="base.module_category_administration"/>
        <field name="comment">
            Can configure IoT gateways and devices.
            Replaces EE iot admin capabilities.
        </field>
    </record>

    <record id="group_ipai_iot_user" model="res.groups">
        <field name="name">IPAI IoT User</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="comment">
            Can use IoT devices (print, scan, etc.)
        </field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
