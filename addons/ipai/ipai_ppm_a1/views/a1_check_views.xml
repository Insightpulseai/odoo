<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Check Tree View -->
    <record id="a1_check_view_tree" model="ir.ui.view">
        <field name="name">a1.check.tree</field>
        <field name="model">a1.check</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="check_type" widget="badge"/>
                <field name="severity" widget="badge" decoration-info="severity == 'info'" decoration-warning="severity == 'warning'" decoration-danger="severity == 'blocker'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Check Form View -->
    <record id="a1_check_view_form" model="ir.ui.view">
        <field name="name">a1.check.form</field>
        <field name="model">a1.check</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Check Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="check_type"/>
                            <field name="severity"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details" name="details">
                            <group string="Description">
                                <field name="description" nolabel="1"/>
                            </group>
                            <group>
                                <group string="Pass Criteria">
                                    <field name="pass_criteria" nolabel="1"/>
                                </group>
                                <group string="Failure Action">
                                    <field name="fail_action" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Applicable Templates" name="templates">
                            <field name="template_ids">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="workstream_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Close Orchestration" name="close_bridge">
                            <group>
                                <field name="close_gate_template_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Check Search View -->
    <record id="a1_check_view_search" model="ir.ui.view">
        <field name="name">a1.check.search</field>
        <field name="model">a1.check</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="blockers" string="Blockers" domain="[('severity', '=', 'blocker')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_type" string="Type" context="{'group_by': 'check_type'}"/>
                    <filter name="group_severity" string="Severity" context="{'group_by': 'severity'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="a1_check_action" model="ir.actions.act_window">
        <field name="name">Checks / STCs</field>
        <field name="res_model">a1.check</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="a1_check_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first check
            </p>
            <p>
                Checks (STCs) define validation rules that must pass before task completion.
            </p>
        </field>
    </record>

    <!-- Role Views -->
    <record id="a1_role_view_tree" model="ir.ui.view">
        <field name="name">a1.role.tree</field>
        <field name="model">a1.role</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="default_user_id" widget="many2one_avatar_user"/>
                <field name="group_ids" widget="many2many_tags"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="a1_role_view_form" model="ir.ui.view">
        <field name="name">a1.role.form</field>
        <field name="model">a1.role</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="default_user_id"/>
                            <field name="fallback_user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="group_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="a1_role_action" model="ir.actions.act_window">
        <field name="name">Roles</field>
        <field name="res_model">a1.role</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure role mappings
            </p>
            <p>
                Roles map codes (RIM, JPAL, etc.) to Odoo groups and default users.
            </p>
        </field>
    </record>

</odoo>
