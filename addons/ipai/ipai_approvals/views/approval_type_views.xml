<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Approval Type Tree View -->
    <record id="view_ipai_approval_type_tree" model="ir.ui.view">
        <field name="name">ipai.approval.type.tree</field>
        <field name="model">ipai.approval.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="approval_type"/>
                <field name="minimum_approvers"/>
                <field name="request_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Approval Type Form View -->
    <record id="view_ipai_approval_type_form" model="ir.ui.view">
        <field name="name">ipai.approval.type.form</field>
        <field name="model">ipai.approval.type</field>
        <field name="arch" type="xml">
            <form string="Approval Type">
                <header>
                    <button name="action_view_requests" type="object" string="View Requests" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_requests" type="object" class="oe_stat_button" icon="fa-file-text">
                            <field name="request_count" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Approval Type Name..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="res_model_id"/>
                            <field name="res_model" invisible="1"/>
                        </group>
                        <group>
                            <field name="approval_type"/>
                            <field name="minimum_approvers"/>
                            <field name="require_all"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Approvers" name="approvers">
                            <group invisible="approval_type != 'user'">
                                <field name="approver_ids" widget="many2many_tags"/>
                            </group>
                            <group invisible="approval_type != 'group'">
                                <field name="approver_group_id"/>
                            </group>
                            <group invisible="approval_type != 'manager'">
                                <field name="manager_levels"/>
                            </group>
                        </page>

                        <page string="Notifications" name="notifications">
                            <group>
                                <field name="notify_on_request"/>
                                <field name="notify_on_approve"/>
                                <field name="notify_on_reject"/>
                            </group>
                            <group>
                                <field name="create_activity"/>
                                <field name="activity_type_id" invisible="not create_activity"/>
                            </group>
                        </page>

                        <page string="Automation" name="automation">
                            <group>
                                <field name="auto_approve_amount"/>
                                <field name="amount_field" invisible="auto_approve_amount == 0"/>
                            </group>
                        </page>

                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Approval Type Action -->
    <record id="action_ipai_approval_type" model="ir.actions.act_window">
        <field name="name">Approval Types</field>
        <field name="res_model">ipai.approval.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Approval Type
            </p>
            <p>
                Approval Types define workflows for different approval scenarios.
                Configure who can approve and how many approvals are needed.
            </p>
        </field>
    </record>
</odoo>
