<?xml version="1.0" encoding="utf-8"?>
<odoo>
    {% for model in models %}
    <!-- {{ model.name }} Views -->
    <record id="view_{{ model.name | replace('.', '_') }}_form" model="ir.ui.view">
        <field name="name">{{ model.name }}.form</field>
        <field name="model">{{ model.name }}</field>
        <field name="arch" type="xml">
            <form string="{{ model.description | default(model.name) }}">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_{{ model.name | replace('.', '_') }}_tree" model="ir.ui.view">
        <field name="name">{{ model.name }}.tree</field>
        <field name="model">{{ model.name }}</field>
        <field name="arch" type="xml">
            <tree string="{{ model.description | default(model.name) }}">
                <field name="name"/>
                <field name="state" decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-muted="state == 'done'" widget="badge"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_{{ model.name | replace('.', '_') }}_search" model="ir.ui.view">
        <field name="name">{{ model.name }}.search</field>
        <field name="model">{{ model.name }}</field>
        <field name="arch" type="xml">
            <search string="{{ model.description | default(model.name) }}">
                <field name="name"/>
                <filter name="filter_active" string="Active" domain="[('state', '=', 'active')]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_{{ model.name | replace('.', '_') }}" model="ir.actions.act_window">
        <field name="name">{{ model.description | default(model.name) }}</field>
        <field name="res_model">{{ model.name }}</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first {{ model.description | default(model.name) | lower }}
            </p>
        </field>
    </record>
    {% endfor %}

    <!-- Menus -->
    {% for menu in menus %}
    <menuitem
        id="menu_{{ menu.name | lower | replace(' ', '_') }}"
        name="{{ menu.name }}"
        {% if menu.parent %}parent="{{ menu.parent }}"{% endif %}
        {% if menu.action %}action="{{ menu.action }}"{% endif %}
        sequence="{{ loop.index * 10 }}"
    />
    {% endfor %}
</odoo>
