<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Expense Views -->
    <record id="view_hr_expense_tree" model="ir.ui.view">
        <field name="name">hr.expense.tree</field>
        <field name="model">hr.expense</field>
        <field name="arch" type="xml">
            <list string="Expenses" decoration-muted="state == 'refused'">
                <field name="date"/>
                <field name="name"/>
                <field name="employee_id" widget="many2one_avatar_employee"/>
                <field name="product_id"/>
                <field name="total_amount" sum="Total"/>
                <field name="payment_mode"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'reported'"
                       decoration-success="state in ('approved', 'done')"
                       decoration-danger="state == 'refused'"/>
            </list>
        </field>
    </record>

    <record id="view_hr_expense_form" model="ir.ui.view">
        <field name="name">hr.expense.form</field>
        <field name="model">hr.expense</field>
        <field name="arch" type="xml">
            <form string="Expense">
                <header>
                    <button name="action_submit_expenses" string="Submit to Manager"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_trigger_ocr" string="Extract with OCR"
                            type="object" class="btn-secondary"
                            invisible="state != 'draft'"
                            icon="fa-magic"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,reported,approved,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments" type="object"
                                class="oe_stat_button" icon="fa-paperclip">
                            <field name="attachment_number" widget="statinfo"
                                   string="Attachments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Lunch with customer"/></h1>
                    </div>
                    <group>
                        <group string="Expense Details">
                            <field name="product_id"/>
                            <field name="date"/>
                            <field name="employee_id"/>
                            <field name="payment_mode" widget="radio"/>
                        </group>
                        <group string="Amounts">
                            <label for="unit_amount"/>
                            <div class="o_row">
                                <field name="unit_amount"/>
                                <span>x</span>
                                <field name="quantity"/>
                            </div>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="total_amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Accounting">
                            <field name="account_id"/>
                            <field name="analytic_distribution" widget="analytic_distribution"
                                   groups="analytic.group_analytic_accounting"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Reference">
                            <field name="reference" placeholder="OR/SI Number"/>
                            <field name="vendor_name"/>
                            <field name="vendor_tin" placeholder="TIN for BIR"/>
                        </group>
                    </group>
                    <group string="OCR Information" invisible="ocr_status == 'none'">
                        <field name="ocr_status" widget="badge"/>
                        <field name="ocr_confidence" widget="progressbar"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="description" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_hr_expense_kanban" model="ir.ui.view">
        <field name="name">hr.expense.kanban</field>
        <field name="model">hr.expense</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="name"/>
                <field name="total_amount"/>
                <field name="state"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="d-flex flex-column">
                            <div class="d-flex justify-content-between">
                                <field name="name" class="fw-bold text-truncate"/>
                                <field name="total_amount" widget="monetary"/>
                            </div>
                            <div class="d-flex justify-content-between mt-2 text-muted">
                                <field name="employee_id" widget="many2one_avatar_employee"/>
                                <field name="date"/>
                            </div>
                            <div class="mt-2">
                                <field name="state" widget="label_selection"
                                       options="{'classes': {'draft': 'info', 'reported': 'warning', 'approved': 'success', 'done': 'success', 'refused': 'danger'}}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_hr_expense_search" model="ir.ui.view">
        <field name="name">hr.expense.search</field>
        <field name="model">hr.expense</field>
        <field name="arch" type="xml">
            <search string="Expenses">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="product_id"/>
                <field name="date"/>
                <filter name="my_expenses" string="My Expenses"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter name="to_submit" string="To Submit"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="submitted" string="Submitted"
                        domain="[('state', '=', 'reported')]"/>
                <filter name="approved" string="Approved"
                        domain="[('state', '=', 'approved')]"/>
                <separator/>
                <filter name="this_month" string="This Month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_employee" string="Employee"
                            context="{'group_by': 'employee_id'}"/>
                    <filter name="group_product" string="Expense Type"
                            context="{'group_by': 'product_id'}"/>
                    <filter name="group_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Date"
                            context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Expense Sheet Views -->
    <record id="view_hr_expense_sheet_tree" model="ir.ui.view">
        <field name="name">hr.expense.sheet.tree</field>
        <field name="model">hr.expense.sheet</field>
        <field name="arch" type="xml">
            <list string="Expense Reports" decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="employee_id" widget="many2one_avatar_employee"/>
                <field name="expense_count"/>
                <field name="total_amount" sum="Total"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'submit'"
                       decoration-success="state in ('approve', 'post', 'done')"
                       decoration-danger="state == 'cancel'"/>
            </list>
        </field>
    </record>

    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field name="arch" type="xml">
            <form string="Expense Report">
                <header>
                    <button name="action_submit_sheet" string="Submit to Manager"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_approve_expense_sheets" string="Approve"
                            type="object" class="btn-primary"
                            invisible="state != 'submit'"
                            groups="hr_expense.group_hr_expense_manager"/>
                    <button name="action_refuse_expense_sheets" string="Refuse"
                            type="object"
                            invisible="state not in ('submit', 'approve')"
                            groups="hr_expense.group_hr_expense_manager"/>
                    <button name="action_sheet_move_create" string="Post Journal Entries"
                            type="object" class="btn-primary"
                            invisible="state != 'approve'"
                            groups="account.group_account_invoice"/>
                    <button name="action_reset_expense_sheets" string="Reset to Draft"
                            type="object"
                            invisible="state not in ('submit', 'cancel')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submit,approve,post,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_account_move" type="object"
                                class="oe_stat_button" icon="fa-pencil-square-o"
                                invisible="not account_move_id">
                            <span class="o_stat_text">Journal Entry</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Expense Report Summary"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="user_id" string="Manager"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="total_amount"/>
                            <field name="payment_mode"/>
                            <field name="accounting_date"/>
                            <field name="journal_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Expense Lines">
                            <field name="expense_line_ids">
                                <list string="Expenses" editable="bottom">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="unit_amount"/>
                                    <field name="quantity"/>
                                    <field name="total_amount" sum="Total"/>
                                    <field name="state" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_hr_expense_sheet_search" model="ir.ui.view">
        <field name="name">hr.expense.sheet.search</field>
        <field name="model">hr.expense.sheet</field>
        <field name="arch" type="xml">
            <search string="Expense Reports">
                <field name="name"/>
                <field name="employee_id"/>
                <filter name="my_reports" string="My Reports"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter name="to_approve" string="To Approve"
                        domain="[('state', '=', 'submit')]"/>
                <filter name="approved" string="Approved"
                        domain="[('state', '=', 'approve')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_employee" string="Employee"
                            context="{'group_by': 'employee_id'}"/>
                    <filter name="group_state" string="Status"
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_hr_expense_my" model="ir.actions.act_window">
        <field name="name">My Expenses</field>
        <field name="res_model">hr.expense</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_my_expenses': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record a new expense
            </p>
            <p>
                Attach a photo of your receipt and submit expenses for reimbursement.
            </p>
        </field>
    </record>

    <record id="action_hr_expense_all" model="ir.actions.act_window">
        <field name="name">All Expenses</field>
        <field name="res_model">hr.expense</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="action_hr_expense_sheet_my" model="ir.actions.act_window">
        <field name="name">My Reports</field>
        <field name="res_model">hr.expense.sheet</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_reports': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new expense report
            </p>
        </field>
    </record>

    <record id="action_hr_expense_sheet_to_approve" model="ir.actions.act_window">
        <field name="name">Reports to Approve</field>
        <field name="res_model">hr.expense.sheet</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_to_approve': 1}</field>
    </record>

    <record id="action_hr_expense_sheet_all" model="ir.actions.act_window">
        <field name="name">All Reports</field>
        <field name="res_model">hr.expense.sheet</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
