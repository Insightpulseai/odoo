<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Mailgun API Configuration -->
        <record id="mailgun_api_key" model="ir.config_parameter">
            <field name="key">mailgun.api_key</field>
            <field name="value"></field>
        </record>

        <record id="mailgun_domain" model="ir.config_parameter">
            <field name="key">mailgun.domain</field>
            <field name="value">mg.insightpulseai.net</field>
        </record>

        <record id="mailgun_use_api" model="ir.config_parameter">
            <field name="key">mailgun.use_api</field>
            <field name="value">True</field>
        </record>
    </data>
</odoo>
