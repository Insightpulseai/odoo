<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default System Parameters for AI Providers -->
        <record id="config_param_default_provider" model="ir.config_parameter">
            <field name="key">ipai_ai.default_provider</field>
            <field name="value">openai</field>
        </record>

        <record id="config_param_default_model" model="ir.config_parameter">
            <field name="key">ipai_ai.default_model</field>
            <field name="value">gpt-4</field>
        </record>

        <!-- Placeholder for Pulser Gateway (user must configure) -->
        <record id="config_param_pulser_endpoint" model="ir.config_parameter">
            <field name="key">ipai_ai.pulser_endpoint</field>
            <field name="value"></field>
        </record>

        <!-- Default Provider Configurations -->
        <record id="provider_config_openai" model="ipai.ai.provider.config">
            <field name="name">OpenAI</field>
            <field name="code">openai</field>
            <field name="provider_type">openai</field>
            <field name="sequence">10</field>
            <field name="default_model">gpt-4</field>
            <field name="available_models">gpt-4
gpt-4-turbo
gpt-4o
gpt-3.5-turbo</field>
            <field name="rate_limit_rpm">60</field>
            <field name="rate_limit_tpm">90000</field>
        </record>

        <record id="provider_config_anthropic" model="ipai.ai.provider.config">
            <field name="name">Anthropic</field>
            <field name="code">anthropic</field>
            <field name="provider_type">anthropic</field>
            <field name="sequence">20</field>
            <field name="default_model">claude-3-sonnet-20240229</field>
            <field name="available_models">claude-3-opus-20240229
claude-3-sonnet-20240229
claude-3-haiku-20240307</field>
            <field name="rate_limit_rpm">60</field>
            <field name="rate_limit_tpm">100000</field>
            <field name="active">False</field>
        </record>

        <record id="provider_config_pulser" model="ipai.ai.provider.config">
            <field name="name">Pulser Gateway</field>
            <field name="code">pulser</field>
            <field name="provider_type">pulser</field>
            <field name="sequence">5</field>
            <field name="default_model">auto</field>
            <field name="available_models">auto
gpt-4
claude-3-sonnet</field>
            <field name="active">False</field>
        </record>
    </data>
</odoo>
