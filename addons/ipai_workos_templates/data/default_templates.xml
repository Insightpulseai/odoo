<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Default Page Templates -->
    <record id="template_blank_page" model="ipai.workos.template">
        <field name="name">Blank Page</field>
        <field name="description">Start with an empty page</field>
        <field name="icon">file-o</field>
        <field name="category">page</field>
        <field name="sequence">1</field>
        <field name="is_system">True</field>
        <field name="blocks_json">[]</field>
    </record>

    <record id="template_meeting_notes" model="ipai.workos.template">
        <field name="name">Meeting Notes</field>
        <field name="description">Template for capturing meeting notes</field>
        <field name="icon">users</field>
        <field name="category">page</field>
        <field name="sequence">10</field>
        <field name="is_system">True</field>
        <field name="blocks_json">[
    {"type": "heading_2", "content": {"text": "Meeting Notes"}},
    {"type": "paragraph", "content": {"text": "Date: "}},
    {"type": "paragraph", "content": {"text": "Attendees: "}},
    {"type": "divider", "content": {}},
    {"type": "heading_3", "content": {"text": "Agenda"}},
    {"type": "bulleted_list", "content": {"items": ["Item 1", "Item 2"]}},
    {"type": "heading_3", "content": {"text": "Discussion"}},
    {"type": "paragraph", "content": {"text": ""}},
    {"type": "heading_3", "content": {"text": "Action Items"}},
    {"type": "todo", "content": {"text": "Action item 1"}},
    {"type": "todo", "content": {"text": "Action item 2"}}
]</field>
    </record>

    <!-- Default Database Templates -->
    <record id="template_task_tracker" model="ipai.workos.template">
        <field name="name">Task Tracker</field>
        <field name="description">Simple task/project tracker</field>
        <field name="icon">check-square</field>
        <field name="category">database</field>
        <field name="sequence">10</field>
        <field name="is_system">True</field>
        <field name="properties_json">[
    {"name": "Task", "type": "text", "is_title": true},
    {"name": "Status", "type": "select", "options": [
        {"id": 1, "label": "To Do", "color": "gray"},
        {"id": 2, "label": "In Progress", "color": "blue"},
        {"id": 3, "label": "Done", "color": "green"}
    ]},
    {"name": "Priority", "type": "select", "options": [
        {"id": 1, "label": "Low", "color": "gray"},
        {"id": 2, "label": "Medium", "color": "yellow"},
        {"id": 3, "label": "High", "color": "red"}
    ]},
    {"name": "Due Date", "type": "date"},
    {"name": "Assignee", "type": "person"}
]</field>
        <field name="views_json">[
    {"name": "Table", "type": "table", "is_default": true},
    {"name": "Board", "type": "kanban"}
]</field>
    </record>
</odoo>
