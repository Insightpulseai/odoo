<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!--
        Scheduled action: IPAI Copilot proactive insights.
        Runs daily at 06:00 UTC. Calls _run_proactive_insights() which
        upserts insight records for: overdue invoices, deals closing this week,
        low-stock products, pending leave approvals.
        noupdate="1": admin can adjust schedule without losing XMLID.
    -->
    <record id="ir_cron_ipai_copilot_insights" model="ir.cron">
        <field name="name">IPAI Copilot: Generate Proactive Insights</field>
        <field name="model_id" ref="model_ipai_copilot_insight"/>
        <field name="state">code</field>
        <field name="code">model._run_proactive_insights()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="nextcall" eval="(DateTime.now() + timedelta(hours=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>
</odoo>
