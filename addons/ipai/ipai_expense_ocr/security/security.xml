<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Expense OCR User Group -->
        <record id="group_expense_ocr_user" model="res.groups">
            <field name="name">Expense OCR User</field>
            <field name="category_id" ref="hr_expense.module_category_human_resources_expenses"/>
            <field name="implied_ids" eval="[(4, ref('hr_expense.group_hr_expense_team_approver'))]"/>
            <field name="comment">Can scan receipts and review OCR results</field>
        </record>

        <!-- Record Rules -->
        <record id="expense_ocr_result_user_rule" model="ir.rule">
            <field name="name">Expense OCR Result: User sees own</field>
            <field name="model_id" ref="model_ipai_expense_ocr_result"/>
            <field name="domain_force">[('expense_id.employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_expense_ocr_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
