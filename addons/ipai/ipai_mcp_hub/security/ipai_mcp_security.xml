<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_ipai_mcp_user" model="res.groups">
        <field name="name">MCP User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="comment">Access to query MCP tool registry</field>
    </record>

    <record id="group_ipai_mcp_admin" model="res.groups">
        <field name="name">MCP Admin</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('group_ipai_mcp_user'))]"/>
        <field name="comment">Full access to MCP server/tool configuration</field>
    </record>

    <!-- Record Rules: Multi-company -->
    <record id="rule_mcp_server_company" model="ir.rule">
        <field name="name">MCP Server: Multi-company</field>
        <field name="model_id" ref="model_ipai_mcp_server"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="rule_mcp_tool_company" model="ir.rule">
        <field name="name">MCP Tool: Multi-company</field>
        <field name="model_id" ref="model_ipai_mcp_tool"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="rule_mcp_binding_company" model="ir.rule">
        <field name="name">MCP Binding: Multi-company</field>
        <field name="model_id" ref="model_ipai_mcp_binding"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
