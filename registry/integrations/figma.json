{
  "id": "figma",
  "name": "Figma Dev Mode",
  "summary": "Design tokens, component mappings, and Code Connect for design-to-code workflow.",
  "category": "dev-tools",
  "type": "connectable",
  "capabilities": ["design-tokens", "component-inspect", "code-connect", "variables-api"],
  "install": {
    "provisioner": "scripts/provisioners/install_figma.sh",
    "scopes": ["files", "projects"],
    "env_vars": ["FIGMA_ACCESS_TOKEN", "FIGMA_FILE_KEY"],
    "auto_configure": false
  },
  "links": {
    "docs": "https://www.figma.com/developers/api",
    "vendor": "https://figma.com"
  },
  "mcp_server": "@anthropic/figma-mcp-server",
  "status": "active"
}
