<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- IDP Document List View -->
    <record id="view_idp_document_list" model="ir.ui.view">
        <field name="name">idp.document.list</field>
        <field name="model">idp.document</field>
        <field name="arch" type="xml">
            <list string="IDP Documents" decoration-danger="status == 'error'" decoration-warning="status == 'review_needed'" decoration-success="status == 'approved'">
                <field name="name"/>
                <field name="doc_type"/>
                <field name="source"/>
                <field name="status" widget="badge" decoration-info="status == 'queued'" decoration-warning="status in ('processing', 'review_needed')" decoration-success="status in ('approved', 'exported')" decoration-danger="status == 'error'"/>
                <field name="create_date"/>
                <field name="processed_at"/>
            </list>
        </field>
    </record>

    <!-- IDP Document Form View -->
    <record id="view_idp_document_form" model="ir.ui.view">
        <field name="name">idp.document.form</field>
        <field name="model">idp.document</field>
        <field name="arch" type="xml">
            <form string="IDP Document">
                <header>
                    <button name="action_process" type="object" string="Process" class="btn-primary" invisible="status not in ('queued', 'error')"/>
                    <button name="action_reprocess" type="object" string="Reprocess" invisible="status in ('queued', 'processing')"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success" invisible="status not in ('extracted', 'validated', 'review_needed')"/>
                    <button name="action_request_review" type="object" string="Request Review" invisible="status != 'extracted'"/>
                    <button name="action_export" type="object" string="Export" invisible="status not in ('approved', 'reviewed')"/>
                    <field name="status" widget="statusbar" statusbar_visible="queued,processing,extracted,validated,approved,exported"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="doc_type"/>
                            <field name="doc_type_confidence" widget="progressbar"/>
                            <field name="source"/>
                            <field name="source_reference"/>
                        </group>
                        <group>
                            <field name="file_hash"/>
                            <field name="attachment_id"/>
                            <field name="queued_at"/>
                            <field name="processed_at"/>
                            <field name="exported_at"/>
                        </group>
                    </group>
                    <group string="Error Details" invisible="not error_message">
                        <field name="error_message" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Extracted Data" name="extraction">
                            <field name="final_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="OCR Results" name="ocr">
                            <field name="ocr_ids">
                                <list>
                                    <field name="ocr_engine"/>
                                    <field name="confidence" widget="progressbar"/>
                                    <field name="word_count"/>
                                    <field name="processing_time_ms"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                        <page string="Extractions" name="extractions">
                            <field name="extraction_ids">
                                <list>
                                    <field name="model_version_id"/>
                                    <field name="confidence" widget="progressbar"/>
                                    <field name="validation_status"/>
                                    <field name="vendor_name"/>
                                    <field name="total_amount"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Reviews" name="reviews">
                            <field name="review_ids">
                                <list>
                                    <field name="reviewer_id"/>
                                    <field name="status"/>
                                    <field name="correction_count"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- IDP Document Search View -->
    <record id="view_idp_document_search" model="ir.ui.view">
        <field name="name">idp.document.search</field>
        <field name="model">idp.document</field>
        <field name="arch" type="xml">
            <search string="Search Documents">
                <field name="name"/>
                <field name="source_reference"/>
                <filter string="Queued" name="filter_queued" domain="[('status', '=', 'queued')]"/>
                <filter string="Processing" name="filter_processing" domain="[('status', '=', 'processing')]"/>
                <filter string="Review Needed" name="filter_review" domain="[('status', '=', 'review_needed')]"/>
                <filter string="Approved" name="filter_approved" domain="[('status', '=', 'approved')]"/>
                <filter string="Error" name="filter_error" domain="[('status', '=', 'error')]"/>
                <separator/>
                <filter string="Invoices" name="filter_invoice" domain="[('doc_type', '=', 'invoice')]"/>
                <filter string="Receipts" name="filter_receipt" domain="[('doc_type', '=', 'receipt')]"/>
                <filter string="Purchase Orders" name="filter_po" domain="[('doc_type', '=', 'purchase_order')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Document Type" name="group_doc_type" context="{'group_by': 'doc_type'}"/>
                    <filter string="Source" name="group_source" context="{'group_by': 'source'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- IDP Document Action -->
    <record id="action_idp_document" model="ir.actions.act_window">
        <field name="name">IDP Documents</field>
        <field name="res_model">idp.document</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_idp_document_search"/>
        <field name="context">{'search_default_filter_queued': 0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload your first document
            </p>
            <p>
                Upload invoices, receipts, or purchase orders for automatic extraction.
            </p>
        </field>
    </record>
</odoo>
