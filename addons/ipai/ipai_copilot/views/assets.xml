<odoo>
  <template id="assets_backend" inherit_id="web.assets_backend" name="IPAI Copilot assets">
    <xpath expr="." position="inside">
      <link rel="stylesheet" type="text/scss" href="/ipai_copilot/static/src/scss/copilot.scss"/>
      <script type="module" src="/ipai_copilot/static/src/js/copilot_store.js"/>
      <script type="module" src="/ipai_copilot/static/src/js/systray_copilot.js"/>
      <template id="copilot_panel_templates" xml:space="preserve">
        <t t-call="ipai_copilot.CopilotPanel"/>
      </template>
      <template id="copilot_panel_xml" xml:space="preserve">
        <t t-call="ipai_copilot.copilot_panel_xml"/>
      </template>
    </xpath>
  </template>
</odoo>
