{
  "framework": "nextjs",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "devCommand": "pnpm dev",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/api/webhooks/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, paddle-signature"
        }
      ]
    }
  ],
  "functions": {
    "src/app/api/webhooks/paddle/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/provision/odoo/route.ts": {
      "maxDuration": 30
    }
  }
}
