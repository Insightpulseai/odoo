# AI Control Plane Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# Supabase Configuration (Required)
# =============================================================================
# Supabase project URL
SUPABASE_URL=https://spdtwktxdalcfigzeqrz.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://spdtwktxdalcfigzeqrz.supabase.co

# Service role key for server-side operations (bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Vercel AI Gateway (Optional)
# =============================================================================
# If using Vercel AI Gateway for centralized AI routing
# Leave empty to use direct provider APIs
AI_GATEWAY_URL=
AI_GATEWAY_TOKEN=

# =============================================================================
# AI Providers (Fallback if not using Vault)
# =============================================================================
# OpenAI API key for BugBot and Vercel Bot analysis
OPENAI_API_KEY=sk-...

# Anthropic API key (optional, for Claude-based analysis)
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Infrastructure APIs (Fallback if not using Vault)
# =============================================================================
# DigitalOcean Personal Access Token
DIGITALOCEAN_API_TOKEN=dop_v1_...
DIGITALOCEAN_API_BASE=https://api.digitalocean.com/v2

# Vercel API Token
VERCEL_TOKEN=...

# GitHub Personal Access Token
GITHUB_TOKEN=ghp_...

# =============================================================================
# Control Plane Security
# =============================================================================
# Auth token for accessing the control plane API
CONTROL_PLANE_AUTH_TOKEN=your-secure-token-here

# =============================================================================
# Development Settings
# =============================================================================
# Port for local development (default: 3100)
PORT=3100

# Enable debug logging
DEBUG=false
