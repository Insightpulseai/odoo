    <menuitem
        id="menu_hr_expense_all"
        name="All Expenses"
        parent="menu_hr_expense_reports"
        action="action_hr_expense_all"
        sequence="30"/>

    <!-- Configuration -->
    <menuitem
        id="menu_hr_expense_configuration"
        name="Configuration"
        parent="menu_hr_expense_root"
        groups="hr_expense.group_hr_expense_manager"
        sequence="99"/>

    <menuitem
        id="menu_hr_expense_product"
        name="Expense Categories"
        parent="menu_hr_expense_configuration"
        action="action_product_expense_category"
        sequence="10"/>
