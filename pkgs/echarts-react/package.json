{
  "name": "@ipai/echarts-react",
  "version": "1.0.0",
  "description": "React components for ECharts with unified theme system for InsightPulse AI",
  "license": "Apache-2.0",
  "author": "InsightPulse AI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup && npm run postbuild",
    "postbuild": "printf '\"use client\";\\n%s' \"$(cat dist/index.mjs)\" > dist/index.mjs && printf '\"use client\";\\n%s' \"$(cat dist/index.js)\" > dist/index.js",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "echarts": "^5.5.0"
  },
  "dependencies": {
    "@ipai/echarts-themes": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "echarts": "^5.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "echarts",
    "react",
    "charts",
    "visualization",
    "themes",
    "apache-echarts"
  ]
}
