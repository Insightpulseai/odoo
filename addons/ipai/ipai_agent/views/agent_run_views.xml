<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ── Tree ──────────────────────────────────────────────────────────── -->
    <record id="view_ipai_agent_run_tree" model="ir.ui.view">
        <field name="name">ipai.agent.run.tree</field>
        <field name="model">ipai.agent.run</field>
        <field name="arch" type="xml">
            <list string="Agent Runs" decoration-danger="state == 'failed'"
                  decoration-warning="state == 'waiting_approval'"
                  decoration-success="state == 'succeeded'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="requested_at"/>
                <field name="requested_by"/>
                <field name="tool_id"/>
                <field name="target_display"/>
                <field name="state" widget="badge"
                       decoration-danger="state == 'failed'"
                       decoration-warning="state == 'waiting_approval'"
                       decoration-success="state == 'succeeded'"
                       decoration-info="state in ('queued', 'running')"/>
                <field name="external_run_id" optional="show"/>
                <field name="completed_at" optional="show"/>
            </list>
        </field>
    </record>

    <!-- ── Form ──────────────────────────────────────────────────────────── -->
    <record id="view_ipai_agent_run_form" model="ir.ui.view">
        <field name="name">ipai.agent.run.form</field>
        <field name="model">ipai.agent.run</field>
        <field name="arch" type="xml">
            <form string="Agent Run">
                <header>
                    <button name="action_approve" string="Approve"
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'waiting_approval')]}"
                            groups="ipai_agent.group_ipai_agent_approver"/>
                    <button name="action_reject" string="Reject"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'waiting_approval')]}"
                            groups="ipai_agent.group_ipai_agent_approver"/>
                    <button name="action_cancel" string="Cancel"
                            type="object"
                            attrs="{'invisible': [('state', 'not in', ('queued', 'waiting_approval'))]}"
                            groups="ipai_agent.group_ipai_agent_approver"/>
                    <button name="action_retry" string="Retry"
                            type="object"
                            attrs="{'invisible': [('state', 'not in', ('failed', 'cancelled'))]}"
                            groups="ipai_agent.group_ipai_agent_approver"/>
                    <button name="action_dispatch" string="Dispatch Now"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'queued')]}"
                            groups="ipai_agent.group_ipai_agent_admin"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="queued,running,succeeded"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Request">
                            <field name="requested_by"/>
                            <field name="requested_at"/>
                            <field name="tool_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Target">
                            <field name="target_model"/>
                            <field name="target_res_id"/>
                            <field name="target_display"/>
                        </group>
                    </group>
                    <group string="External">
                        <field name="external_provider"/>
                        <field name="external_run_id"/>
                        <field name="idempotency_key"/>
                    </group>
                    <group string="Timeline">
                        <field name="dispatched_at"/>
                        <field name="approved_by"
                               attrs="{'invisible': [('approved_by', '=', False)]}"/>
                        <field name="approved_at"
                               attrs="{'invisible': [('approved_at', '=', False)]}"/>
                        <field name="completed_at"/>
                    </group>
                    <notebook>
                        <page string="Input">
                            <field name="input_json" widget="code_editor"
                                   options="{'mode': 'json'}" nolabel="1"/>
                        </page>
                        <page string="Output">
                            <field name="output_json" widget="code_editor"
                                   options="{'mode': 'json'}" nolabel="1"/>
                        </page>
                        <page string="Tool Calls">
                            <field name="tool_calls_json" widget="code_editor"
                                   options="{'mode': 'json'}" nolabel="1"/>
                        </page>
                        <page string="Evidence Log">
                            <field name="evidence_log" nolabel="1"/>
                        </page>
                        <page string="Error" attrs="{'invisible': [('error_message', '=', False)]}">
                            <field name="error_message" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ── Search ─────────────────────────────────────────────────────────── -->
    <record id="view_ipai_agent_run_search" model="ir.ui.view">
        <field name="name">ipai.agent.run.search</field>
        <field name="model">ipai.agent.run</field>
        <field name="arch" type="xml">
            <search string="Agent Runs">
                <field name="name"/>
                <field name="external_run_id"/>
                <field name="requested_by"/>
                <field name="tool_id"/>
                <filter string="Queued" name="queued" domain="[('state','=','queued')]"/>
                <filter string="Waiting Approval" name="waiting" domain="[('state','=','waiting_approval')]"/>
                <filter string="Running" name="running" domain="[('state','=','running')]"/>
                <filter string="Succeeded" name="succeeded" domain="[('state','=','succeeded')]"/>
                <filter string="Failed" name="failed" domain="[('state','=','failed')]"/>
                <separator/>
                <filter string="Mine" name="mine" domain="[('requested_by','=',uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tool" name="group_tool" context="{'group_by': 'tool_id'}"/>
                    <filter string="Requested By" name="group_user" context="{'group_by': 'requested_by'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ── Action ─────────────────────────────────────────────────────────── -->
    <record id="action_ipai_agent_run" model="ir.actions.act_window">
        <field name="name">Agent Runs</field>
        <field name="res_model">ipai.agent.run</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ipai_agent_run_search"/>
        <field name="context">{'search_default_mine': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No agent runs yet.
            </p>
            <p>Trigger a run from an expense liquidation or another supported record.</p>
        </field>
    </record>

    <!-- All runs action (admin) -->
    <record id="action_ipai_agent_run_all" model="ir.actions.act_window">
        <field name="name">All Agent Runs</field>
        <field name="res_model">ipai.agent.run</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ipai_agent_run_search"/>
    </record>

</odoo>
