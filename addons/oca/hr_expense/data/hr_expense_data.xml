    <!-- Expense Product Action -->
    <record id="action_product_expense_category" model="ir.actions.act_window">
        <field name="name">Expense Categories</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('can_be_expensed', '=', True)]</field>
        <field name="context">{'default_can_be_expensed': True, 'default_type': 'service'}</field>
    </record>
</odoo>
