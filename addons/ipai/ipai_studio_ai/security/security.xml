<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Security Groups -->
    <record id="group_studio_ai_user" model="res.groups">
        <field name="name">Studio AI User</field>
        <field name="category_id" ref="base.module_category_customization_studio"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Can use Studio AI to create fields and automations</field>
    </record>

    <record id="group_studio_ai_admin" model="res.groups">
        <field name="name">Studio AI Administrator</field>
        <field name="category_id" ref="base.module_category_customization_studio"/>
        <field name="implied_ids" eval="[(4, ref('group_studio_ai_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        <field name="comment">Full access to Studio AI including history and settings</field>
    </record>

    <!-- Record Rules -->
    <record id="rule_studio_ai_history_user" model="ir.rule">
        <field name="name">Studio AI History: Users see own records</field>
        <field name="model_id" ref="model_ipai_studio_ai_history"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_studio_ai_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="rule_studio_ai_history_admin" model="ir.rule">
        <field name="name">Studio AI History: Admins see all</field>
        <field name="model_id" ref="model_ipai_studio_ai_history"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_studio_ai_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
