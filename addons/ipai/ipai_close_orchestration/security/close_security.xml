<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Module Category -->
    <record id="module_category_close" model="ir.module.category">
        <field name="name">Close Orchestration</field>
        <field name="sequence">51</field>
    </record>

    <!-- User Groups -->
    <record id="group_close_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_close"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_close_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_close"/>
        <field name="implied_ids" eval="[(4, ref('group_close_user'))]"/>
    </record>

    <record id="group_close_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_close"/>
        <field name="implied_ids" eval="[(4, ref('group_close_manager'))]"/>
    </record>

    <!-- Record Rules -->

    <!-- Company-based access for cycles -->
    <record id="close_cycle_company_rule" model="ir.rule">
        <field name="name">Close Cycle: Company</field>
        <field name="model_id" ref="model_close_cycle"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_close_user'))]"/>
    </record>

    <!-- Company-based access for tasks -->
    <record id="close_task_company_rule" model="ir.rule">
        <field name="name">Close Task: Company</field>
        <field name="model_id" ref="model_close_task"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_close_user'))]"/>
    </record>

    <!-- Company-based access for templates -->
    <record id="close_template_company_rule" model="ir.rule">
        <field name="name">Close Template: Company</field>
        <field name="model_id" ref="model_close_task_template"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_close_user'))]"/>
    </record>

    <!-- Company-based access for categories -->
    <record id="close_category_company_rule" model="ir.rule">
        <field name="name">Close Category: Company</field>
        <field name="model_id" ref="model_close_task_category"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_close_user'))]"/>
    </record>

    <!-- Company-based access for exceptions -->
    <record id="close_exception_company_rule" model="ir.rule">
        <field name="name">Close Exception: Company</field>
        <field name="model_id" ref="model_close_exception"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_close_user'))]"/>
    </record>

    <!-- Company-based access for gates -->
    <record id="close_gate_company_rule" model="ir.rule">
        <field name="name">Close Gate: Company</field>
        <field name="model_id" ref="model_close_approval_gate"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_close_user'))]"/>
    </record>

</odoo>
