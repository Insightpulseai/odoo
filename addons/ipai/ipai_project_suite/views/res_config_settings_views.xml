<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ipai_project" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ipai.project</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='project']" position="inside">
                <block title="IPAI Project Suite Features" name="ipai_project_features">
                    <setting string="Task Dependencies" help="Enable task dependencies with types and lag days">
                        <field name="ipai_enable_dependencies"/>
                    </setting>
                    <setting string="Milestones" help="Enable project milestones with target dates">
                        <field name="ipai_enable_milestones"/>
                    </setting>
                    <setting string="Budgeting" help="Enable project budget management">
                        <field name="ipai_enable_budgeting"/>
                    </setting>
                    <setting string="RACI Roles" help="Enable RACI role assignments">
                        <field name="ipai_enable_raci"/>
                    </setting>
                    <setting string="Stage Gates" help="Enable approval gates for stage transitions">
                        <field name="ipai_enable_stage_gates"/>
                    </setting>
                    <setting string="Project Templates" help="Enable project templates with predefined stages and tasks">
                        <field name="ipai_enable_templates"/>
                    </setting>
                    <setting string="Reporting Views" help="Enable advanced KPI and reporting views">
                        <field name="ipai_enable_reporting_views"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
