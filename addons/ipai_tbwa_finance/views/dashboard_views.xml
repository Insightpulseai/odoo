<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Finance Task Template Views -->
    <record id="view_finance_task_template_tree" model="ir.ui.view">
        <field name="name">finance.task.template.tree</field>
        <field name="model">finance.task.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="task_type" widget="badge"/>
                <field name="phase" optional="show"/>
                <field name="bir_form_type" optional="show"/>
                <field name="name"/>
                <field name="prep_user_id"/>
                <field name="review_user_id"/>
                <field name="approve_user_id"/>
                <field name="prep_day_offset"/>
                <field name="task_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_finance_task_template_form" model="ir.ui.view">
        <field name="name">finance.task.template.form</field>
        <field name="model">finance.task.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="task_type"/>
                            <field name="phase" invisible="task_type != 'month_end'"/>
                            <field name="bir_form_type" invisible="task_type != 'bir_filing'"/>
                            <field name="frequency"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group string="Integration">
                            <field name="odoo_model"/>
                            <field name="oca_module"/>
                        </group>
                    </group>
                    <group string="RACI Assignments">
                        <group>
                            <field name="prep_user_id"/>
                            <field name="prep_day_offset"/>
                        </group>
                        <group>
                            <field name="review_user_id"/>
                            <field name="review_day_offset"/>
                        </group>
                        <group>
                            <field name="approve_user_id"/>
                            <field name="approve_day_offset"/>
                        </group>
                    </group>
                    <group string="BIR Filing" invisible="task_type != 'bir_filing'">
                        <field name="filing_day_offset"/>
                    </group>
                    <group string="Dependencies">
                        <field name="depends_on_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_finance_task_template_search" model="ir.ui.view">
        <field name="name">finance.task.template.search</field>
        <field name="model">finance.task.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter name="month_end" string="Month-End" domain="[('task_type', '=', 'month_end')]"/>
                <filter name="bir" string="BIR Filing" domain="[('task_type', '=', 'bir_filing')]"/>
                <separator/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_type" string="Type" context="{'group_by': 'task_type'}"/>
                    <filter name="group_phase" string="Phase" context="{'group_by': 'phase'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_finance_task_template" model="ir.actions.act_window">
        <field name="name">Task Templates</field>
        <field name="res_model">finance.task.template</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Compliance Check Views -->
    <record id="view_compliance_check_tree" model="ir.ui.view">
        <field name="name">compliance.check.tree</field>
        <field name="model">compliance.check</field>
        <field name="arch" type="xml">
            <list decoration-success="status == 'passed'" decoration-warning="status == 'warning'" decoration-danger="status == 'failed'">
                <field name="sequence" widget="handle"/>
                <field name="closing_id"/>
                <field name="name"/>
                <field name="check_type"/>
                <field name="expected_value"/>
                <field name="actual_value"/>
                <field name="variance" widget="percentage"/>
                <field name="status" widget="badge"/>
                <field name="checked_date"/>
            </list>
        </field>
    </record>

    <record id="action_compliance_check" model="ir.actions.act_window">
        <field name="name">Compliance Checks</field>
        <field name="res_model">compliance.check</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
