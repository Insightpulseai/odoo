<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_ipai_ai" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ipai.ai</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.action_general_configuration"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="before">
                <block title="AI Widget (IPAI Bridge)" name="ipai_ai_widget_settings">
                    <setting string="AI Bridge URL"
                             help="URL of the IPAI AI provider bridge. Set GEMINI_API_KEY on the bridge side (Vercel env vars). See docs/contracts/AI_WIDGET_CONTRACT.md.">
                        <field name="ipai_ai_bridge_url" placeholder="https://ops.insightpulseai.com/api/ai/gemini"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
