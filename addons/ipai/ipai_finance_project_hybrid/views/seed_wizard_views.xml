<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_ipai_finance_seed_wizard_form" model="ir.ui.view">
      <field name="name">ipai.finance.seed.wizard.form</field>
      <field name="model">ipai.finance.seed.wizard</field>
      <field name="arch" type="xml">
        <form string="Seed Finance Framework">
          <sheet>
            <p>
              This loads the Finance Directory, BIR Schedule, and Task Templates bundled in the module.
              It is idempotent (safe to re-run).
            </p>
            <group>
              <field name="strict"/>
            </group>
            <footer>
              <button name="action_seed" type="object" string="Seed Now" class="btn-primary"/>
              <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_ipai_finance_seed_wizard" model="ir.actions.act_window">
      <field name="name">Seed Finance Framework</field>
      <field name="res_model">ipai.finance.seed.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="view_id" ref="view_ipai_finance_seed_wizard_form"/>
    </record>
  </data>
</odoo>
