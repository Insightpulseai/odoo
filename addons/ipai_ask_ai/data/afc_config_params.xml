             Settings → Technical → Parameters → System Parameters -->

        <record id="param_afc_supabase_db_host" model="ir.config_parameter">
            <field name="key">afc.supabase.db_host</field>
            <field name="value">db.spdtwktxdalcfigzeqrz.supabase.co</field>
        </record>

        <record id="param_afc_supabase_db_name" model="ir.config_parameter">
            <field name="key">afc.supabase.db_name</field>
            <field name="value">postgres</field>
        </record>

        <record id="param_afc_supabase_db_user" model="ir.config_parameter">
            <field name="key">afc.supabase.db_user</field>
            <field name="value">postgres</field>
