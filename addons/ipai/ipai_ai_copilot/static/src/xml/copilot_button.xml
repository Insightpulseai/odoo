<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!--
        Ask AI Button Template

        This template can be used to add a consistent Ask AI button
        across different form views. Usage:

        In OWL component:
        <t t-call="ipai_ai_copilot.AskAIButton"/>

        Or inherit in form views to add the button to button_box.
    -->

    <t t-name="ipai_ai_copilot.AskAIButton">
        <button class="btn btn-secondary o_ipai_ask_ai_btn"
                title="Ask AI"
                t-on-click="onAskAIClick">
            <i class="fa fa-robot me-1"/>
            <span>Ask AI</span>
        </button>
    </t>

    <!--
        AI Session Badge Template
        Shows count of AI sessions for a record.
    -->
    <t t-name="ipai_ai_copilot.AISessionBadge">
        <span class="badge bg-info o_ipai_session_badge"
              t-if="sessionCount > 0"
              title="AI Sessions">
            <i class="fa fa-comments me-1"/>
            <t t-esc="sessionCount"/>
        </span>
    </t>
</templates>
