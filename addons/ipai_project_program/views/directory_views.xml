<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Directory Person List View -->
    <record id="view_ipai_directory_person_list" model="ir.ui.view">
        <field name="name">ipai.directory.person.list</field>
        <field name="model">ipai.directory.person</field>
        <field name="arch" type="xml">
            <list string="Finance Directory">
                <field name="code"/>
                <field name="name"/>
                <field name="email"/>
                <field name="role"/>
                <field name="user_id"/>
                <field name="active" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Directory Person Form View -->
    <record id="view_ipai_directory_person_form" model="ir.ui.view">
        <field name="name">ipai.directory.person.form</field>
        <field name="model">ipai.directory.person</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="code"/>
                        <h1>
                            <field name="code" placeholder="e.g., RIM"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="role"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Directory Person Search View -->
    <record id="view_ipai_directory_person_search" model="ir.ui.view">
        <field name="name">ipai.directory.person.search</field>
        <field name="model">ipai.directory.person</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <field name="email"/>
                <field name="role"/>
                <filter string="Archived" name="inactive"
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Role" name="group_role"
                            context="{'group_by': 'role'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Directory Person Action -->
    <record id="action_ipai_directory_person" model="ir.actions.act_window">
        <field name="name">Finance Directory</field>
        <field name="res_model">ipai.directory.person</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Directory entry
            </p>
            <p>
                The Finance Directory maps role codes to people for task assignment.
            </p>
        </field>
    </record>
</odoo>
