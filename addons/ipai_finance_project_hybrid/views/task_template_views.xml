<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_ipai_finance_task_template_list" model="ir.ui.view">
      <field name="name">ipai.finance.task.template.list</field>
      <field name="model">ipai.finance.task.template</field>
      <field name="arch" type="xml">
        <list string="Task Templates">
          <field name="sequence"/>
          <field name="name"/>
          <field name="category"/>
          <field name="task_category"/>
          <field name="anchor"/>
          <field name="offset_days"/>
          <field name="prep_by_code"/>
          <field name="review_by_code"/>
          <field name="approve_by_code"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="view_ipai_finance_task_template_form" model="ir.ui.view">
      <field name="name">ipai.finance.task.template.form</field>
      <field name="model">ipai.finance.task.template</field>
      <field name="arch" type="xml">
        <form string="Task Template">
          <sheet>
            <group>
              <field name="sequence"/>
              <field name="name"/>
              <field name="category"/>
              <field name="task_category"/>
              <field name="active"/>
            </group>
            <group string="Scheduling">
              <field name="anchor"/>
              <field name="offset_days"/>
              <field name="default_duration_days"/>
            </group>
            <group string="Responsibility Codes">
              <field name="prep_by_code"/>
              <field name="review_by_code"/>
              <field name="approve_by_code"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_ipai_finance_task_template" model="ir.actions.act_window">
      <field name="name">Task Templates</field>
      <field name="res_model">ipai.finance.task.template</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>
