<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">
    <!-- PPM Module Category -->
    <record id="module_category_ppm" model="ir.module.category">
      <field name="name">Portfolio and Program Management</field>
      <field name="sequence">50</field>
    </record>

    <!-- Groups -->
    <record id="group_ppm_user" model="res.groups">
      <field name="name">PPM User</field>
      <field name="category_id" ref="module_category_ppm"/>
      <field name="comment">Can view portfolios, programs, risks, and KPIs</field>
    </record>

    <record id="group_ppm_manager" model="res.groups">
      <field name="name">PPM Manager</field>
      <field name="category_id" ref="module_category_ppm"/>
      <field name="implied_ids" eval="[(4, ref('group_ppm_user'))]"/>
      <field name="comment">Can create and manage portfolios, programs, and risks</field>
    </record>

    <record id="group_ppm_admin" model="res.groups">
      <field name="name">PPM Administrator</field>
      <field name="category_id" ref="module_category_ppm"/>
      <field name="implied_ids" eval="[(4, ref('group_ppm_manager'))]"/>
      <field name="comment">Full access to PPM configuration and data</field>
    </record>

    <!-- Sequence for Risk IDs -->
    <record id="seq_ppm_risk" model="ir.sequence">
      <field name="name">PPM Risk Sequence</field>
      <field name="code">ppm.risk</field>
      <field name="prefix">RISK-</field>
      <field name="padding">4</field>
    </record>
  </data>
</odoo>
