<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Finance Role Form View -->
    <record id="view_finance_role_form" model="ir.ui.view">
        <field name="name">ipai.finance.role.form</field>
        <field name="model">ipai.finance.role</field>
        <field name="arch" type="xml">
            <form string="Finance Role">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Finance Director"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Role Details">
                            <field name="code"/>
                            <field name="role_type"/>
                            <field name="sequence"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Permissions">
                            <field name="can_approve"/>
                            <field name="can_review"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" colspan="2"/>
                    </group>
                    <notebook>
                        <page string="Assigned Users" name="users">
                            <field name="user_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="finance_code"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Assigned Employees" name="employees">
                            <field name="employee_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="job_id"/>
                                    <field name="department_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Finance Role Tree View -->
    <record id="view_finance_role_tree" model="ir.ui.view">
        <field name="name">ipai.finance.role.tree</field>
        <field name="model">ipai.finance.role</field>
        <field name="arch" type="xml">
            <tree string="Finance Roles">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="role_type"/>
                <field name="can_review"/>
                <field name="can_approve"/>
            </tree>
        </field>
    </record>

    <!-- Finance Role Search View -->
    <record id="view_finance_role_search" model="ir.ui.view">
        <field name="name">ipai.finance.role.search</field>
        <field name="model">ipai.finance.role</field>
        <field name="arch" type="xml">
            <search string="Search Finance Roles">
                <field name="name"/>
                <field name="code"/>
                <filter string="Directors" name="directors" domain="[('role_type', '=', 'director')]"/>
                <filter string="Managers" name="managers" domain="[('role_type', '=', 'senior_manager')]"/>
                <filter string="Supervisors" name="supervisors" domain="[('role_type', '=', 'supervisor')]"/>
                <filter string="Accountants" name="accountants" domain="[('role_type', '=', 'accountant')]"/>
                <separator/>
                <filter string="Can Approve" name="can_approve" domain="[('can_approve', '=', True)]"/>
                <filter string="Can Review" name="can_review" domain="[('can_review', '=', True)]"/>
                <separator/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Role Type" name="group_role_type" context="{'group_by': 'role_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Finance Role Action -->
    <record id="action_finance_roles" model="ir.actions.act_window">
        <field name="name">Finance Roles</field>
        <field name="res_model">ipai.finance.role</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define your first finance role
            </p>
            <p>
                Finance roles define the responsibilities and permissions for workflow participants.
            </p>
        </field>
    </record>

    <!-- Project Task Form Extension -->
    <record id="view_project_task_form_finance" model="ir.ui.view">
        <field name="name">project.task.form.finance</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description_page']" position="after">
                <page string="Finance Workflow" name="finance_workflow"
                      invisible="not finance_workflow_type">
                    <group>
                        <group string="Workflow">
                            <field name="finance_workflow_type"/>
                            <field name="finance_stage"/>
                            <field name="closing_period" invisible="finance_workflow_type != 'month_end'"/>
                        </group>
                        <group string="BIR Details" invisible="finance_workflow_type != 'bir'">
                            <field name="bir_form_code"/>
                            <field name="bir_due_date"/>
                        </group>
                    </group>
                    <group>
                        <group string="Assignments">
                            <field name="preparer_id"/>
                            <field name="preparer_role_id"/>
                            <field name="reviewer_id"/>
                            <field name="reviewer_role_id"/>
                            <field name="approver_id"/>
                            <field name="approver_role_id"/>
                        </group>
                        <group string="Time Estimates">
                            <field name="prep_hours"/>
                            <field name="review_hours"/>
                            <field name="approval_hours"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
