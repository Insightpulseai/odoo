<odoo>
  <!-- Minimal footer: replace the entire footer content -->
  <template id="ipai_footer_min" inherit_id="website.layout" name="IPAI minimal footer">
    <!-- Replace the footer div inside <footer id="bottom"> -->
    <xpath expr="//footer[@id='bottom']/div[@id='footer']" position="replace">
      <div id="footer" class="ipai-footer-min oe_structure">
        <div class="container py-4">
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div class="small text-muted">© <t t-esc="request.website.name"/> — InsightPulseAI</div>
            <div class="small">
              <a href="/contactus" class="text-muted">Contact</a>
              <span class="mx-2 text-muted">|</span>
              <a href="/privacy" class="text-muted">Privacy</a>
            </div>
          </div>
        </div>
      </div>
    </xpath>
  </template>
</odoo>
