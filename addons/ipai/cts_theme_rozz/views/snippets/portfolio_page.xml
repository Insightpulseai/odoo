<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Register snippet in the editor (thumbnail + group) and add structure entry -->
    <template id="cts_theme_rozz_portfolio" inherit_id="website.snippets" name="Portfolio">
        <!-- add snippet to the snippet groups list (sidebar) -->
        <xpath expr="//snippets[@id='snippet_groups']/*[last()]" position="after">
            <t t-snippet="website.s_snippet_group"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-portfolio-block.jpg"
               string="Portfolio"
               snippet-group="index_portfolio"/>
        </xpath>

        <!-- add snippet structure so it's available in the editor content list -->
        <xpath expr="//snippets[@id='snippet_structure']/*[last()]" position="after">
            <t t-snippet="cts_theme_rozz.s_rozz_portfolio_page"
               string="Portfolio"
               group="index_portfolio"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-portfolio-block.jpg"/>
        </xpath>
    </template>

    <!-- The actual snippet/template content -->
    <template id="s_rozz_portfolio_page" name="Rozz Portfolio Page">
        <!-- Page title / hero -->
        <section>
            <div class="page-title-area Portfolio">
                <img src="/cts_theme_rozz/static/src/images/portfolio-bg.jpg" class="portfolio-hero"/>
                <div class="d-table">
                    <div class="d-table-cell">
                        <div class="container">
                            <div class="title-item">
                                <h2>Portfolio</h2>
                                <ul>
                                    <li>
                                        <a href="/">Home</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Portfolio / Projects -->
        <section class="project-area ptb-100">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-lg-6">
                        <div class="project-item">
                            <div class="project-top">
                                <a href="#">
                                    <img src="/cts_theme_rozz/static/src/images/home-one/interm.jpg" alt="Project"/>
                                </a>
                            </div>
                            <h3>
                                <a href="#">Interim Car Service</a>
                            </h3>
                            <a href="#">Service Details</a>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-6">
                        <div class="project-item">
                            <div class="project-top two">
                                <a href="#">
                                    <img src="/cts_theme_rozz/static/src/images/home-one/full-service.jpg" alt="Project"/>
                                </a>
                            </div>
                            <h3>
                                <a href="#">Full Car Service</a>
                            </h3>
                            <a href="#">Service Details</a>
                        </div>

                        <div class="project-item">
                            <div class="project-top two">
                                <a href="portfolio-details.html">
                                    <img src="/cts_theme_rozz/static/src/images/home-one/oil.jpg" alt="Project"/>
                                </a>
                            </div>
                            <h3>
                                <a href="#">Major Car Service</a>
                            </h3>
                            <a href="#">Service Details</a>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-6">
                        <div class="project-item">
                            <div class="project-top">
                                <a href="portfolio-details.html">
                                    <img src="/cts_theme_rozz/static/src/images/home-one/headlamp.jpg" alt="Project"/>
                                </a>
                            </div>
                            <h3>
                                <a href="#">Head Lamp Restoration</a>
                            </h3>
                            <a href="#">Service Details</a>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-6">
                        <div class="project-item">
                            <div class="project-top">
                                <a href="portfolio-details.html">
                                    <img src="/cts_theme_rozz/static/src/images/home-one/wheel-service.jpg" alt="Project"/>
                                </a>
                            </div>
                            <h3>
                                <a href="#">Wheel Care Service</a>
                            </h3>
                            <a href="#">Service Details</a>
                        </div>
                    </div>
                </div>

                <!-- Pagination (static example) -->
                <div class="pagination-area">
                    <ul>
                        <li><a href="#">Prev</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </section>
    </template>

    <!-- Optional standalone page template (same pattern as your About page) -->
    <template id="rozz_project_page" name="Project Page">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <t t-call="cts_theme_rozz.s_rozz_portfolio_page"/>
            </div>
        </t>
    </template>
</odoo>
