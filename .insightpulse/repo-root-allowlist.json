    "requirements-docs.txt",
    "requirements-oca.txt",
    "package.json",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    "turbo.json",
    "mkdocs.yml",
    "vercel.json",
    "Dockerfile",
    "odoo.code-workspace",
    "odoo-bin",
    ".env",
    ".env.dev",
    ".env.example",
    ".env.figma.example",
    ".env.platform.local",
    ".env.prod",
    ".env.production",
    ".env.smtp.example",
    ".env.stage",
    ".env.figma",
    ".gitignore",
    ".gitmodules",
    ".pre-commit-config.yaml",
    ".python-version",
    ".flake8",
    ".yamllint.yml",
    ".markdownlint-cli2.jsonc",
    ".mypy-baseline.txt",
    ".agentignore",
    ".cursorignore",
    "llms.txt",
    "llms-full.txt",
    "oca-aggregate.yml",
