<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ipai_ai_event_tree" model="ir.ui.view">
        <field name="name">ipai.ai.event.tree</field>
        <field name="model">ipai.ai.event</field>
        <field name="arch" type="xml">
            <list string="Integration Events" decoration-danger="state == 'failed'" decoration-muted="state == 'ignored'" decoration-success="state == 'processed'">
                <field name="create_date" string="Received"/>
                <field name="source"/>
                <field name="event_type"/>
                <field name="ref"/>
                <field name="state" widget="badge" decoration-success="state == 'processed'" decoration-danger="state == 'failed'" decoration-warning="state == 'processing'" decoration-info="state == 'received'" decoration-muted="state == 'ignored'"/>
                <field name="processed_date"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ipai_ai_event_form" model="ir.ui.view">
        <field name="name">ipai.ai.event.form</field>
        <field name="model">ipai.ai.event</field>
        <field name="arch" type="xml">
            <form string="Integration Event">
                <header>
                    <button name="action_mark_processed" type="object" string="Mark Processed" class="btn-primary" states="received,processing"/>
                    <button name="action_mark_ignored" type="object" string="Ignore" states="received,processing"/>
                    <button name="action_retry" type="object" string="Retry" states="failed"/>
                    <field name="state" widget="statusbar" statusbar_visible="received,processing,processed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group string="Event Details">
                            <field name="source"/>
                            <field name="event_type"/>
                            <field name="ref"/>
                            <field name="create_date" string="Received At"/>
                            <field name="processed_date"/>
                        </group>
                        <group string="Organization">
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payload" name="payload">
                            <field name="payload_text" widget="ace" options="{'mode': 'json'}" readonly="1"/>
                        </page>
                        <page string="Error" name="error" attrs="{'invisible': [('error_message', '=', False)]}">
                            <field name="error_message" readonly="1"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes about this event..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ipai_ai_event_search" model="ir.ui.view">
        <field name="name">ipai.ai.event.search</field>
        <field name="model">ipai.ai.event</field>
        <field name="arch" type="xml">
            <search string="Search Events">
                <field name="event_type"/>
                <field name="ref"/>
                <filter name="filter_received" string="Pending" domain="[('state', '=', 'received')]"/>
                <filter name="filter_processed" string="Processed" domain="[('state', '=', 'processed')]"/>
                <filter name="filter_failed" string="Failed" domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter name="filter_n8n" string="n8n" domain="[('source', '=', 'n8n')]"/>
                <filter name="filter_github" string="GitHub" domain="[('source', '=', 'github')]"/>
                <filter name="filter_slack" string="Slack" domain="[('source', '=', 'slack')]"/>
                <separator/>
                <filter name="filter_today" string="Today" domain="[('create_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <filter name="filter_week" string="This Week" domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_source" string="Source" context="{'group_by': 'source'}"/>
                    <filter name="group_event_type" string="Event Type" context="{'group_by': 'event_type'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ipai_ai_event" model="ir.actions.act_window">
        <field name="name">Integration Events</field>
        <field name="res_model">ipai.ai.event</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ipai_ai_event_search"/>
        <field name="context">{'search_default_filter_received': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No integration events yet
            </p>
            <p>
                Integration events are created automatically when external systems
                (n8n, GitHub, Slack) send data to the connector endpoint.
            </p>
        </field>
    </record>
</odoo>
