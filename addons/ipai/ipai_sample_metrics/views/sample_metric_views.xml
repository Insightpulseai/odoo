<odoo>
    <!-- List View (Odoo 18: use <list> not <tree>) -->
    <record id="view_ipai_sample_metric_list" model="ir.ui.view">
        <field name="name">ipai.sample.metric.list</field>
        <field name="model">ipai.sample.metric</field>
        <field name="arch" type="xml">
            <list string="Sample Metrics">
                <field name="date"/>
                <field name="name"/>
                <field name="code"/>
                <field name="brand_id"/>
                <field name="store_id"/>
                <field name="value"/>
                <field name="unit"/>
                <field name="is_alert" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ipai_sample_metric_form" model="ir.ui.view">
        <field name="name">ipai.sample.metric.form</field>
        <field name="model">ipai.sample.metric</field>
        <field name="arch" type="xml">
            <form string="Sample Metric">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="date"/>
                            <field name="unit"/>
                            <field name="value"/>
                        </group>
                        <group>
                            <field name="brand_id"/>
                            <field name="store_id"/>
                            <field name="is_alert" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ipai_sample_metric_search" model="ir.ui.view">
        <field name="name">ipai.sample.metric.search</field>
        <field name="model">ipai.sample.metric</field>
        <field name="arch" type="xml">
            <search string="Search Metrics">
                <field name="name"/>
                <field name="code"/>
                <field name="brand_id"/>
                <field name="store_id"/>
                <field name="date"/>
                <filter string="Alerts" name="alerts" domain="[('is_alert', '=', True)]"/>
                <separator/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Brand" name="group_brand" context="{'group_by': 'brand_id'}"/>
                    <filter string="Store" name="group_store" context="{'group_by': 'store_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Unit" name="group_unit" context="{'group_by': 'unit'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action (smart view entrypoint) -->
    <record id="action_ipai_sample_metrics" model="ir.actions.act_window">
        <field name="name">Sample Metrics</field>
        <field name="res_model">ipai.sample.metric</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ipai_sample_metric_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first metric
            </p>
            <p>
                Track analytics metrics per day, brand, and store.
                Example: "Conversion Rate, 2026-01-05, Coca-Cola, Store 001, 42%"
            </p>
        </field>
    </record>

    <!-- Menu: top-level IPAI menu (if not already defined elsewhere) -->
    <menuitem id="menu_ipai_sample_root"
              name="Sample Metrics"
              sequence="100"/>

    <menuitem id="menu_ipai_sample_metrics"
              name="Metrics"
              parent="menu_ipai_sample_root"
              sequence="10"
              action="action_ipai_sample_metrics"/>

</odoo>
