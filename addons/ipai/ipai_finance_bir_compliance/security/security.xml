<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security rules for BIR Schedule Item -->
    <record id="rule_bir_schedule_item_internal" model="ir.rule">
        <field name="name">BIR Schedule Items - Internal Users</field>
        <field name="model_id" ref="model_ipai_bir_schedule_item"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Security rules for BIR Schedule Step -->
    <record id="rule_bir_schedule_step_internal" model="ir.rule">
        <field name="name">BIR Schedule Steps - Internal Users</field>
        <field name="model_id" ref="model_ipai_bir_schedule_step"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Security rules for Generate Wizard -->
    <record id="rule_generate_bir_tasks_wizard_internal" model="ir.rule">
        <field name="name">Generate BIR Tasks Wizard - Internal Users</field>
        <field name="model_id" ref="model_ipai_generate_bir_tasks_wizard"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
