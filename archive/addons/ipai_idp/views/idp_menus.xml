<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem
        id="menu_idp_root"
        name="IDP"
        sequence="50"
        web_icon="ipai_idp,static/description/icon.png"/>

    <!-- Documents Menu -->
    <menuitem
        id="menu_idp_documents"
        name="Documents"
        parent="menu_idp_root"
        sequence="10"/>

    <menuitem
        id="menu_idp_document_list"
        name="All Documents"
        parent="menu_idp_documents"
        action="action_idp_document"
        sequence="10"/>

    <menuitem
        id="menu_idp_extraction_list"
        name="Extractions"
        parent="menu_idp_documents"
        action="action_idp_extraction"
        sequence="20"/>

    <menuitem
        id="menu_idp_review_list"
        name="Reviews"
        parent="menu_idp_documents"
        action="action_idp_review"
        sequence="30"/>

    <!-- Configuration Menu -->
    <menuitem
        id="menu_idp_config"
        name="Configuration"
        parent="menu_idp_root"
        sequence="90"
        groups="base.group_system"/>

    <menuitem
        id="menu_idp_model_version"
        name="Model Versions"
        parent="menu_idp_config"
        action="action_idp_model_version"
        sequence="10"/>

    <menuitem
        id="menu_idp_validation_rule"
        name="Validation Rules"
        parent="menu_idp_config"
        action="action_idp_validation_rule"
        sequence="20"/>
</odoo>
