<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Thread Tree View -->
    <record id="view_ipai_ai_thread_tree" model="ir.ui.view">
        <field name="name">ipai.ai.thread.tree</field>
        <field name="model">ipai.ai.thread</field>
        <field name="arch" type="xml">
            <list>
                <field name="display_name"/>
                <field name="agent_id"/>
                <field name="user_id"/>
                <field name="message_count"/>
                <field name="create_date"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Thread Form View -->
    <record id="view_ipai_ai_thread_form" model="ir.ui.view">
        <field name="name">ipai.ai.thread.form</field>
        <field name="model">ipai.ai.thread</field>
        <field name="arch" type="xml">
            <form string="AI Conversation">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="display_name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="agent_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <group string="Context" invisible="not res_model">
                        <field name="res_model"/>
                        <field name="res_id"/>
                    </group>
                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids" mode="tree">
                                <list create="0" edit="0">
                                    <field name="create_date"/>
                                    <field name="role"/>
                                    <field name="content"/>
                                    <field name="confidence"/>
                                    <field name="is_uncertain"/>
                                    <field name="feedback"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Message Tree View -->
    <record id="view_ipai_ai_message_tree" model="ir.ui.view">
        <field name="name">ipai.ai.message.tree</field>
        <field name="model">ipai.ai.message</field>
        <field name="arch" type="xml">
            <list create="0">
                <field name="create_date"/>
                <field name="thread_id"/>
                <field name="role"/>
                <field name="content" widget="text"/>
                <field name="confidence" widget="progressbar"/>
                <field name="is_uncertain"/>
                <field name="feedback" widget="badge" decoration-success="feedback == 'positive'" decoration-danger="feedback == 'negative'"/>
            </list>
        </field>
    </record>

    <!-- Message Form View -->
    <record id="view_ipai_ai_message_form" model="ir.ui.view">
        <field name="name">ipai.ai.message.form</field>
        <field name="model">ipai.ai.message</field>
        <field name="arch" type="xml">
            <form string="AI Message" create="0">
                <sheet>
                    <group>
                        <group>
                            <field name="thread_id"/>
                            <field name="role"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="confidence" widget="progressbar"/>
                            <field name="is_uncertain"/>
                            <field name="feedback"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content" nolabel="1"/>
                    </group>
                    <group string="Citations" invisible="not citations_json">
                        <field name="citations_json" widget="json" nolabel="1"/>
                    </group>
                    <group string="Metadata">
                        <field name="model_used"/>
                        <field name="tokens_used"/>
                        <field name="latency_ms"/>
                    </group>
                    <group string="Feedback" invisible="not feedback_reason">
                        <field name="feedback_reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Thread Action -->
    <record id="action_ipai_ai_thread" model="ir.actions.act_window">
        <field name="name">AI Conversations</field>
        <field name="res_model">ipai.ai.thread</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
    </record>

    <!-- Message Action -->
    <record id="action_ipai_ai_message" model="ir.actions.act_window">
        <field name="name">AI Messages</field>
        <field name="res_model">ipai.ai.message</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
