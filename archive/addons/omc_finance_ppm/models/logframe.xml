<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Custom Model: Logical Framework for Finance PPM -->
        <record id="model_omc_logframe" model="ir.model">
            <field name="name">omc.logframe</field>
            <field name="model">omc.logframe</field>
            <field name="state">manual</field>
        </record>

        <!-- Fields: Logical Framework Hierarchy -->
        <record id="field_omc_logframe_name" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_name</field>
            <field name="field_description">Element Name</field>
            <field name="ttype">char</field>
            <field name="required">True</field>
        </record>

        <record id="field_omc_logframe_level" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_level</field>
            <field name="field_description">Level</field>
            <field name="ttype">selection</field>
            <field name="selection">[('goal', 'Goal'), ('outcome', 'Outcome'), ('im1', 'IM1: Month-End Closing'), ('im2', 'IM2: Tax Filing'), ('output', 'Output'), ('activity', 'Activity')]</field>
            <field name="required">True</field>
        </record>

        <record id="field_omc_logframe_indicator" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_indicator</field>
            <field name="field_description">Indicator</field>
            <field name="ttype">text</field>
        </record>

        <record id="field_omc_logframe_target" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_target</field>
            <field name="field_description">Target Value</field>
            <field name="ttype">char</field>
        </record>

        <record id="field_omc_logframe_verification" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_verification</field>
            <field name="field_description">Means of Verification</field>
            <field name="ttype">text</field>
        </record>

        <record id="field_omc_logframe_assumptions" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_assumptions</field>
            <field name="field_description">Assumptions/Risks</field>
            <field name="ttype">text</field>
        </record>

        <record id="field_omc_logframe_project_id" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_project_id</field>
            <field name="field_description">Project</field>
            <field name="ttype">many2one</field>
            <field name="relation">project.project</field>
        </record>

        <record id="field_omc_logframe_task_ids" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_task_ids</field>
            <field name="field_description">Related Tasks</field>
            <field name="ttype">many2many</field>
            <field name="relation">project.task</field>
        </record>

        <record id="field_omc_logframe_sequence" model="ir.model.fields">
            <field name="model_id" ref="model_omc_logframe"/>
            <field name="name">x_sequence</field>
            <field name="field_description">Sequence</field>
            <field name="ttype">integer</field>
        </record>

    </data>
</odoo>
