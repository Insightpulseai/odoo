<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit project form to show profitability KPIs -->
    <record id="view_project_form_inherit_ipai_profitability" model="ir.ui.view">
        <field name="name">project.project.form.ipai.profitability</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Profitability (IPAI)" name="ipai_profitability">
                    <group>
                        <field name="ipai_revenue"/>
                        <field name="ipai_cost"/>
                    </group>
                    <group>
                        <field name="ipai_margin"/>
                        <field name="ipai_margin_pct" widget="percentage"/>
                    </group>
                    <button name="action_recompute_profitability" type="object"
                            string="Recompute Profitability" class="btn-secondary"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Inherit project tree to show margin -->
    <record id="view_project_tree_inherit_ipai_profitability" model="ir.ui.view">
        <field name="name">project.project.tree.ipai.profitability</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="ipai_margin" optional="hide"/>
                <field name="ipai_margin_pct" optional="hide" widget="progressbar"/>
            </xpath>
        </field>
    </record>
</odoo>
