<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups for Copilot Hub -->

    <record id="module_category_copilot_hub" model="ir.module.category">
        <field name="name">Copilot Hub</field>
        <field name="description">IPAI Copilot Hub / Ops Control Room</field>
        <field name="sequence">100</field>
    </record>

    <record id="group_copilot_hub_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_copilot_hub"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Access to view and use the Copilot Hub</field>
    </record>

    <record id="group_copilot_hub_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_copilot_hub"/>
        <field name="implied_ids" eval="[(4, ref('group_copilot_hub_user'))]"/>
        <field name="comment">Full access to Copilot Hub settings and configuration</field>
    </record>

</odoo>
