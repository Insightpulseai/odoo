<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Category -->
        <record id="module_category_ipai_document_ai" model="ir.module.category">
            <field name="name">IPAI Document AI</field>
            <field name="description">Document intelligence and OCR</field>
            <field name="sequence">100</field>
        </record>

        <!-- User Group -->
        <record id="group_document_ai_user" model="res.groups">
            <field name="name">Document AI User</field>
            <field name="category_id" ref="module_category_ipai_document_ai"/>
            <field name="comment">Can upload documents and review extracted fields</field>
        </record>

        <!-- Admin Group -->
        <record id="group_document_ai_admin" model="res.groups">
            <field name="name">Document AI Admin</field>
            <field name="category_id" ref="module_category_ipai_document_ai"/>
            <field name="implied_ids" eval="[(4, ref('group_document_ai_user'))]"/>
            <field name="comment">Can configure OCR settings and manage all documents</field>
        </record>

        <!-- Record Rules -->
        <record id="ipai_document_user_rule" model="ir.rule">
            <field name="name">IPAI Document: User sees own documents</field>
            <field name="model_id" ref="model_ipai_document"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_document_ai_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ipai_document_admin_rule" model="ir.rule">
            <field name="name">IPAI Document: Admin sees all</field>
            <field name="model_id" ref="model_ipai_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_document_ai_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
