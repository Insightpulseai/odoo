<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <!-- Expense Category -->
    <record id="module_category_hr_expense" model="ir.module.category">
        <field name="name">Expenses</field>
        <field name="description">Manage employee expense submissions and approvals.</field>
        <field name="sequence">35</field>
    </record>

    <!-- Groups -->
    <record id="group_hr_expense_user" model="res.groups">
        <field name="name">User: Own Expenses</field>
        <field name="category_id" ref="module_category_hr_expense"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">The user can record their own expenses.</field>
    </record>

    <record id="group_hr_expense_team_approver" model="res.groups">
        <field name="name">User: Team Approver</field>
        <field name="category_id" ref="module_category_hr_expense"/>
        <field name="implied_ids" eval="[(4, ref('group_hr_expense_user'))]"/>
        <field name="comment">The user can approve expenses for their team members.</field>
    </record>

    <record id="group_hr_expense_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_hr_expense"/>
        <field name="implied_ids" eval="[(4, ref('group_hr_expense_team_approver'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="comment">Full access to expense management.</field>
    </record>

    <!-- Record Rules -->
    <record id="hr_expense_rule_user" model="ir.rule">
        <field name="name">Expenses: Own Only</field>
        <field name="model_id" ref="model_hr_expense"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hr_expense_user'))]"/>
    </record>

    <record id="hr_expense_rule_team_approver" model="ir.rule">
        <field name="name">Expenses: Team Members</field>
        <field name="model_id" ref="model_hr_expense"/>
        <field name="domain_force">[
            '|',
            ('employee_id.user_id', '=', user.id),
            ('employee_id.parent_id.user_id', '=', user.id)
        ]</field>
        <field name="groups" eval="[(4, ref('group_hr_expense_team_approver'))]"/>
    </record>

    <record id="hr_expense_rule_manager" model="ir.rule">
        <field name="name">Expenses: All</field>
        <field name="model_id" ref="model_hr_expense"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hr_expense_manager'))]"/>
    </record>

    <!-- Sheet Rules -->
    <record id="hr_expense_sheet_rule_user" model="ir.rule">
        <field name="name">Expense Reports: Own Only</field>
        <field name="model_id" ref="model_hr_expense_sheet"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hr_expense_user'))]"/>
    </record>

    <record id="hr_expense_sheet_rule_team_approver" model="ir.rule">
        <field name="name">Expense Reports: Team Members</field>
        <field name="model_id" ref="model_hr_expense_sheet"/>
        <field name="domain_force">[
            '|',
            ('employee_id.user_id', '=', user.id),
            ('employee_id.parent_id.user_id', '=', user.id)
        ]</field>
        <field name="groups" eval="[(4, ref('group_hr_expense_team_approver'))]"/>
    </record>

    <record id="hr_expense_sheet_rule_manager" model="ir.rule">
        <field name="name">Expense Reports: All</field>
        <field name="model_id" ref="model_hr_expense_sheet"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hr_expense_manager'))]"/>
    </record>
</odoo>
