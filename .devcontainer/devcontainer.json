{
  "name": "ipai-devcontainer",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.devcontainer.yml"
  ],
  "service": "odoo",
  "runServices": [
    "db",
    "redis",
    "odoo"
  ],
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "overrideCommand": false,
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true,
      "username": "devcontainer",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": true,
      "dockerDashComposeVersion": "v2"
    }
  },
  "forwardPorts": [
    8069,
    5432,
    8072,
    6379
  ],
  "portsAttributes": {
    "8069": {
      "label": "Odoo HTTP",
      "onAutoForward": "notify"
    },
    "8072": {
      "label": "Odoo Longpoll",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },
  "containerEnv": {
    "ODOO_DB": "${localEnv:ODOO_DB:odoo_dev}",
    "ODOO_LOG_LEVEL": "${localEnv:ODOO_LOG_LEVEL:debug}",
    "POSTGRES_USER": "${localEnv:POSTGRES_USER:odoo}",
    "POSTGRES_PASSWORD": "${localEnv:POSTGRES_PASSWORD:odoo}"
  },
  "containerUser": "devcontainer",
  "updateRemoteUserUID": true,
  "postCreateCommand": "chmod +x ./.devcontainer/scripts/post-create.sh && ./.devcontainer/scripts/post-create.sh",
  "postStartCommand": "chmod +x ./.devcontainer/scripts/post-start.sh && ./.devcontainer/scripts/post-start.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "mhutchie.git-graph",
        "eamodio.gitlens",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig",
        "github.vscode-github-actions",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "openai.chatgpt",
        "anthropic.claude-code"
      ],
      "settings": {
        "containers.composeCommand": "docker compose",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.languageServer": "Pylance",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "ruff.enable": true,
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.eol": "\n",
        "terminal.integrated.defaultProfile.linux": "bash",
        "debug.javascript.autoAttachFilter": "disabled",
        "git.autofetch": true,
        "chat.promptFilesRecommendations": {
          "speckit.constitution": true,
          "speckit.specify": true,
          "speckit.plan": true,
          "speckit.tasks": true,
          "speckit.implement": true
        },
        "chat.tools.terminal.autoApprove": {
          ".specify/scripts/bash/": true,
          ".specify/scripts/powershell/": true
        }
      }
    }
  }
}
