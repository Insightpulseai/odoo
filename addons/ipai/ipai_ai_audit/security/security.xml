<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- AI Audit Category -->
        <record id="module_category_ai_audit" model="ir.module.category">
            <field name="name">AI Audit</field>
            <field name="description">AI governance and audit controls</field>
            <field name="sequence">60</field>
        </record>

        <!-- Auditor Group -->
        <record id="group_ai_auditor" model="res.groups">
            <field name="name">AI Auditor</field>
            <field name="category_id" ref="module_category_ai_audit"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view AI audit logs and usage statistics</field>
        </record>

        <!-- Administrator Group -->
        <record id="group_ai_admin" model="res.groups">
            <field name="name">AI Administrator</field>
            <field name="category_id" ref="module_category_ai_audit"/>
            <field name="implied_ids" eval="[(4, ref('group_ai_auditor'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Can manage governance rules and retention policies</field>
        </record>
    </data>
</odoo>
