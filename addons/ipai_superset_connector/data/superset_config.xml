<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Configuration Parameters -->
        
        <record id="config_auto_sync" model="ir.config_parameter">
            <field name="key">ipai_superset_connector.auto_sync</field>
            <field name="value">False</field>
        </record>
        
        <record id="config_sync_interval" model="ir.config_parameter">
            <field name="key">ipai_superset_connector.sync_interval</field>
            <field name="value">daily</field>
        </record>
        
        <record id="config_enable_rls" model="ir.config_parameter">
            <field name="key">ipai_superset_connector.enable_rls</field>
            <field name="value">True</field>
        </record>

        <!-- Scheduled Action for Dataset Sync -->
        <record id="ir_cron_superset_sync" model="ir.cron">
            <field name="name">Superset: Sync Datasets</field>
            <field name="model_id" ref="model_superset_connection"/>
            <field name="state">code</field>
            <field name="code">
connections = model.search([('state', '=', 'connected'), ('active', '=', True)])
for conn in connections:
    conn.action_sync_all_datasets()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
        </record>

    </data>
</odoo>
