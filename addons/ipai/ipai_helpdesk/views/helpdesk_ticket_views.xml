<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ticket Form View -->
    <record id="ipai_helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">ipai.helpdesk.ticket.form</field>
        <field name="model">ipai.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open" type="object" class="oe_stat_button" icon="fa-external-link">
                            <span>Open</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Closed" bg_color="bg-success" invisible="not is_closed"/>
                    <widget name="web_ribbon" title="SLA Breached" bg_color="bg-danger" invisible="sla_status != 'failed'"/>
                    <div class="oe_title">
                        <label for="ticket_ref"/>
                        <h1>
                            <field name="ticket_ref" readonly="1"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" placeholder="Subject..."/>
                        </h2>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="team_id"/>
                            <field name="priority" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group string="Assignment">
                            <field name="user_id"/>
                            <field name="partner_id"/>
                            <field name="partner_email"/>
                            <field name="partner_phone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe the issue..."/>
                        </page>
                        <page string="SLA &amp; Metrics" name="sla">
                            <group>
                                <group string="SLA Status">
                                    <field name="sla_deadline"/>
                                    <field name="sla_status" widget="badge"
                                           decoration-success="sla_status == 'ok'"
                                           decoration-warning="sla_status == 'warning'"
                                           decoration-danger="sla_status == 'failed'"/>
                                    <field name="sla_reached"/>
                                    <field name="sla_fail"/>
                                </group>
                                <group string="Time Metrics">
                                    <field name="create_date"/>
                                    <field name="assign_date"/>
                                    <field name="first_response_date"/>
                                    <field name="close_date"/>
                                </group>
                            </group>
                            <group>
                                <group string="Time Statistics (hours)">
                                    <field name="time_to_assign"/>
                                    <field name="time_to_first_response"/>
                                    <field name="time_to_close"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <field name="is_closed" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Ticket Tree View -->
    <record id="ipai_helpdesk_ticket_view_tree" model="ir.ui.view">
        <field name="name">ipai.helpdesk.ticket.tree</field>
        <field name="model">ipai.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets" decoration-danger="sla_status == 'failed'"
                  decoration-warning="sla_status == 'warning'"
                  decoration-muted="is_closed">
                <field name="ticket_ref"/>
                <field name="name"/>
                <field name="team_id"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="priority" widget="priority"/>
                <field name="stage_id"/>
                <field name="sla_deadline"/>
                <field name="sla_status" widget="badge"
                       decoration-success="sla_status == 'ok'"
                       decoration-warning="sla_status == 'warning'"
                       decoration-danger="sla_status == 'failed'"/>
                <field name="is_closed" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Ticket Kanban View -->
    <record id="ipai_helpdesk_ticket_view_kanban" model="ir.ui.view">
        <field name="name">ipai.helpdesk.ticket.kanban</field>
        <field name="model">ipai.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column">
                <field name="name"/>
                <field name="ticket_ref"/>
                <field name="priority"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="stage_id"/>
                <field name="sla_status"/>
                <field name="kanban_state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="ticket_ref"/> - <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a t-if="widget.editable" role="menuitem" class="dropdown-item" type="edit">Edit</a>
                                        <a t-if="widget.deletable" role="menuitem" class="dropdown-item" type="delete">Delete</a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="partner_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                    <t t-if="record.sla_status.raw_value == 'failed'">
                                        <span class="badge text-bg-danger">SLA Breached</span>
                                    </t>
                                    <t t-if="record.sla_status.raw_value == 'warning'">
                                        <span class="badge text-bg-warning">At Risk</span>
                                    </t>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Ticket Search View -->
    <record id="ipai_helpdesk_ticket_view_search" model="ir.ui.view">
        <field name="name">ipai.helpdesk.ticket.search</field>
        <field name="model">ipai.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Search Tickets">
                <field name="name"/>
                <field name="ticket_ref"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <separator/>
                <filter name="my_tickets" string="My Tickets" domain="[('user_id', '=', uid)]"/>
                <filter name="unassigned" string="Unassigned" domain="[('user_id', '=', False)]"/>
                <separator/>
                <filter name="open" string="Open" domain="[('is_closed', '=', False)]"/>
                <filter name="closed" string="Closed" domain="[('is_closed', '=', True)]"/>
                <separator/>
                <filter name="sla_ok" string="SLA On Track" domain="[('sla_status', '=', 'ok')]"/>
                <filter name="sla_warning" string="SLA At Risk" domain="[('sla_status', '=', 'warning')]"/>
                <filter name="sla_failed" string="SLA Breached" domain="[('sla_status', '=', 'failed')]"/>
                <separator/>
                <filter name="urgent" string="Urgent" domain="[('priority', '=', '3')]"/>
                <filter name="high" string="High Priority" domain="[('priority', '=', '2')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_team" string="Team" context="{'group_by': 'team_id'}"/>
                    <filter name="group_stage" string="Stage" context="{'group_by': 'stage_id'}"/>
                    <filter name="group_user" string="Assignee" context="{'group_by': 'user_id'}"/>
                    <filter name="group_priority" string="Priority" context="{'group_by': 'priority'}"/>
                    <filter name="group_sla" string="SLA Status" context="{'group_by': 'sla_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ticket Action -->
    <record id="action_ipai_helpdesk_ticket" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">ipai.helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="ipai_helpdesk_ticket_view_search"/>
        <field name="context">{'search_default_open': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first helpdesk ticket
            </p>
            <p>
                Track support requests with SLA monitoring, auto-assignment, and team collaboration.
            </p>
        </field>
    </record>
</odoo>
