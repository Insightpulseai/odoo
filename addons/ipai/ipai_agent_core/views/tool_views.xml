<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tool Tree View -->
    <record id="ipai_agent_tool_tree" model="ir.ui.view">
        <field name="name">ipai.agent.tool.tree</field>
        <field name="model">ipai.agent.tool</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="key"/>
                <field name="target_model"/>
                <field name="target_method"/>
                <field name="requires_admin"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Tool Form View -->
    <record id="ipai_agent_tool_form" model="ir.ui.view">
        <field name="name">ipai.agent.tool.form</field>
        <field name="model">ipai.agent.tool</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger"
                            invisible="is_active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Tool Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="key"/>
                            <field name="is_active"/>
                            <field name="requires_admin"/>
                        </group>
                        <group>
                            <field name="target_model"/>
                            <field name="target_method"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Input Schema" name="input">
                            <field name="input_schema_json" widget="ace"
                                   options="{'mode': 'json'}"/>
                        </page>
                        <page string="Output Schema" name="output">
                            <field name="output_schema_json" widget="ace"
                                   options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tool Action -->
    <record id="ipai_agent_tool_action" model="ir.actions.act_window">
        <field name="name">Tools</field>
        <field name="res_model">ipai.agent.tool</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_is_active': 1}</field>
    </record>
</odoo>
