<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ipai_generate_month_end_wizard_form" model="ir.ui.view">
        <field name="name">ipai.generate.month.end.wizard.form</field>
        <field name="model">ipai.generate.month.end.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Month-End Tasks">
                <sheet>
                    <group>
                        <group string="Parameters">
                            <field name="program_project_id"/>
                            <field name="anchor_date"/>
                        </group>
                        <group string="Options">
                            <field name="dry_run"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <p>
                            <strong>Note:</strong> Tasks will be generated in the IM1
                            project under the selected program. Existing tasks with
                            the same name and deadline will be skipped (idempotent).
                        </p>
                    </div>
                </sheet>
                <footer>
                    <button string="Generate" type="object" name="action_generate"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_ipai_generate_month_end_wizard" model="ir.actions.act_window">
        <field name="name">Generate Month-End Tasks</field>
        <field name="res_model">ipai.generate.month.end.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
