<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Finance Workflow Security Groups -->

    <record id="module_category_finance_workflow" model="ir.module.category">
        <field name="name">Finance Workflow</field>
        <field name="sequence">25</field>
    </record>

    <!-- Finance User - can view and prepare tasks -->
    <record id="group_finance_user" model="res.groups">
        <field name="name">Finance User</field>
        <field name="category_id" ref="module_category_finance_workflow"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Finance Reviewer - can review tasks -->
    <record id="group_finance_reviewer" model="res.groups">
        <field name="name">Finance Reviewer</field>
        <field name="category_id" ref="module_category_finance_workflow"/>
        <field name="implied_ids" eval="[(4, ref('group_finance_user'))]"/>
    </record>

    <!-- Finance Approver - can approve tasks -->
    <record id="group_finance_approver" model="res.groups">
        <field name="name">Finance Approver</field>
        <field name="category_id" ref="module_category_finance_workflow"/>
        <field name="implied_ids" eval="[(4, ref('group_finance_reviewer'))]"/>
    </record>

    <!-- Finance Manager - full access -->
    <record id="group_finance_manager" model="res.groups">
        <field name="name">Finance Manager</field>
        <field name="category_id" ref="module_category_finance_workflow"/>
        <field name="implied_ids" eval="[(4, ref('group_finance_approver'))]"/>
    </record>
</odoo>
