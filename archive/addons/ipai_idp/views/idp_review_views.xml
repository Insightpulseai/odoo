<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- IDP Review List View -->
    <record id="view_idp_review_list" model="ir.ui.view">
        <field name="name">idp.review.list</field>
        <field name="model">idp.review</field>
        <field name="arch" type="xml">
            <list string="Reviews" decoration-success="status == 'approved'" decoration-danger="status == 'rejected'" decoration-warning="status == 'in_progress'">
                <field name="document_id"/>
                <field name="reviewer_id"/>
                <field name="status" widget="badge"/>
                <field name="correction_count"/>
                <field name="review_time_seconds"/>
                <field name="use_for_training" widget="boolean"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- IDP Review Form View -->
    <record id="view_idp_review_form" model="ir.ui.view">
        <field name="name">idp.review.form</field>
        <field name="model">idp.review</field>
        <field name="arch" type="xml">
            <form string="Document Review">
                <header>
                    <button name="action_start_review" type="object" string="Start Review" class="btn-primary" invisible="status != 'pending'"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success" invisible="status not in ('pending', 'in_progress')"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger" invisible="status not in ('pending', 'in_progress')"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Document Info">
                            <field name="document_id"/>
                            <field name="extraction_id"/>
                            <field name="reviewer_id"/>
                        </group>
                        <group string="Review Metrics">
                            <field name="correction_count"/>
                            <field name="review_time_seconds"/>
                            <field name="use_for_training"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Original Data" name="original">
                            <field name="original_json" widget="ace" options="{'mode': 'json'}" readonly="1"/>
                        </page>
                        <page string="Corrected Data" name="corrected">
                            <field name="corrected_json" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Changes" name="diff">
                            <field name="diff_json" widget="ace" options="{'mode': 'json'}" readonly="1"/>
                        </page>
                    </notebook>
                    <group string="Review Notes">
                        <field name="review_notes" nolabel="1" placeholder="Notes about corrections made..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- IDP Review Search View -->
    <record id="view_idp_review_search" model="ir.ui.view">
        <field name="name">idp.review.search</field>
        <field name="model">idp.review</field>
        <field name="arch" type="xml">
            <search string="Search Reviews">
                <field name="document_id"/>
                <field name="reviewer_id"/>
                <filter string="Pending" name="filter_pending" domain="[('status', '=', 'pending')]"/>
                <filter string="In Progress" name="filter_in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Approved" name="filter_approved" domain="[('status', '=', 'approved')]"/>
                <filter string="For Training" name="filter_training" domain="[('use_for_training', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Reviewer" name="group_reviewer" context="{'group_by': 'reviewer_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- IDP Review Action -->
    <record id="action_idp_review" model="ir.actions.act_window">
        <field name="name">Document Reviews</field>
        <field name="res_model">idp.review</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_idp_review_search"/>
        <field name="context">{'search_default_filter_pending': 1}</field>
    </record>
</odoo>
