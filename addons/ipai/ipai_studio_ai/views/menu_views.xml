<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Main Menu -->
    <menuitem id="menu_studio_ai_root"
        name="Studio AI"
        web_icon="ipai_studio_ai,static/description/icon.png"
        sequence="100"/>

    <!-- Create Menu -->
    <menuitem id="menu_studio_ai_create"
        name="Create"
        parent="menu_studio_ai_root"
        sequence="10"/>

    <menuitem id="menu_studio_ai_wizard"
        name="New Customization"
        parent="menu_studio_ai_create"
        action="action_studio_ai_wizard"
        sequence="10"/>

    <!-- History Menu -->
    <menuitem id="menu_studio_ai_history"
        name="History"
        parent="menu_studio_ai_root"
        action="action_studio_ai_history"
        sequence="20"/>

    <!-- Analytics Menu -->
    <menuitem id="menu_studio_ai_analytics"
        name="Analytics"
        parent="menu_studio_ai_root"
        action="action_studio_ai_stats"
        sequence="30"
        groups="group_studio_ai_admin"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_studio_ai_config"
        name="Configuration"
        parent="menu_studio_ai_root"
        sequence="90"
        groups="base.group_system"/>

</odoo>
