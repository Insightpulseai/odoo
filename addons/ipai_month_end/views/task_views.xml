<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">ipai.month.end.task.tree</field>
        <field name="model">ipai.month.end.task</field>
        <field name="arch" type="xml">
            <list decoration-danger="is_overdue" decoration-success="state == 'done'" decoration-muted="state == 'cancelled'">
                <field name="sequence" widget="handle"/>
                <field name="closing_id"/>
                <field name="phase"/>
                <field name="name"/>
                <field name="prep_user_id" widget="many2one_avatar_user"/>
                <field name="prep_due_date"/>
                <field name="prep_done" widget="boolean_toggle"/>
                <field name="review_user_id" widget="many2one_avatar_user"/>
                <field name="review_done" widget="boolean_toggle"/>
                <field name="approve_user_id" widget="many2one_avatar_user"/>
                <field name="approve_done" widget="boolean_toggle"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'pending'"
                       decoration-warning="state == 'in_progress'"
                       decoration-primary="state == 'review'"
                       decoration-success="state == 'done'"
                       decoration-muted="state == 'cancelled'"/>
                <field name="days_overdue" optional="hide"/>
                <field name="is_overdue" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_task_form" model="ir.ui.view">
        <field name="name">ipai.month.end.task.form</field>
        <field name="model">ipai.month.end.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_prep_done" string="Mark Prep Done"
                            type="object" class="oe_highlight"
                            invisible="prep_done or state in ['done', 'cancelled']"/>
                    <button name="action_mark_review_done" string="Mark Review Done"
                            type="object" class="oe_highlight"
                            invisible="not prep_done or review_done or state in ['done', 'cancelled']"/>
                    <button name="action_mark_approve_done" string="Approve"
                            type="object" class="oe_highlight"
                            invisible="not review_done or approve_done or state in ['done', 'cancelled']"/>
                    <button name="action_cancel" string="Cancel"
                            type="object"
                            invisible="state in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,in_progress,review,done"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Overdue" bg_color="text-bg-danger" invisible="not is_overdue"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="closing_id"/>
                            <field name="template_id"/>
                            <field name="phase"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Status">
                            <field name="days_overdue" invisible="not is_overdue"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Preparation" name="prep">
                            <group>
                                <group>
                                    <field name="prep_user_id" widget="many2one_avatar_user"/>
                                    <field name="prep_due_date"/>
                                </group>
                                <group>
                                    <field name="prep_done"/>
                                    <field name="prep_done_date" invisible="not prep_done"/>
                                    <field name="prep_done_by" invisible="not prep_done"/>
                                </group>
                            </group>
                        </page>
                        <page string="Review" name="review">
                            <group>
                                <group>
                                    <field name="review_user_id" widget="many2one_avatar_user"/>
                                    <field name="review_due_date"/>
                                </group>
                                <group>
                                    <field name="review_done"/>
                                    <field name="review_done_date" invisible="not review_done"/>
                                    <field name="review_done_by" invisible="not review_done"/>
                                </group>
                            </group>
                        </page>
                        <page string="Approval" name="approve">
                            <group>
                                <group>
                                    <field name="approve_user_id" widget="many2one_avatar_user"/>
                                    <field name="approve_due_date"/>
                                </group>
                                <group>
                                    <field name="approve_done"/>
                                    <field name="approve_done_date" invisible="not approve_done"/>
                                    <field name="approve_done_by" invisible="not approve_done"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">ipai.month.end.task.kanban</field>
        <field name="model">ipai.month.end.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="state"/>
                <field name="prep_user_id"/>
                <field name="is_overdue"/>
                <field name="days_overdue"/>
                <templates>
                    <t t-name="card" class="flex-row">
                        <aside>
                            <field name="prep_user_id" widget="many2one_avatar_user"/>
                        </aside>
                        <main>
                            <field name="phase" class="text-muted small"/>
                            <field name="name" class="fw-bold"/>
                            <field name="prep_due_date"/>
                            <div t-if="record.is_overdue.raw_value" class="text-danger">
                                <i class="fa fa-exclamation-triangle"/> <field name="days_overdue"/> days overdue
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_task_search" model="ir.ui.view">
        <field name="name">ipai.month.end.task.search</field>
        <field name="model">ipai.month.end.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="closing_id"/>
                <field name="prep_user_id"/>
                <field name="review_user_id"/>
                <field name="approve_user_id"/>
                <filter name="my_tasks" string="My Tasks"
                        domain="['|', '|', ('prep_user_id', '=', uid), ('review_user_id', '=', uid), ('approve_user_id', '=', uid)]"/>
                <separator/>
                <filter name="pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="review" string="Under Review" domain="[('state', '=', 'review')]"/>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="overdue" string="Overdue" domain="[('is_overdue', '=', True)]"/>
                <separator/>
                <filter name="phase_1" string="Phase I" domain="[('phase', '=', 'I')]"/>
                <filter name="phase_2" string="Phase II" domain="[('phase', '=', 'II')]"/>
                <filter name="phase_3" string="Phase III" domain="[('phase', '=', 'III')]"/>
                <filter name="phase_4" string="Phase IV" domain="[('phase', '=', 'IV')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_closing" string="Closing Period" context="{'group_by': 'closing_id'}"/>
                    <filter name="group_phase" string="Phase" context="{'group_by': 'phase'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_prep" string="Preparer" context="{'group_by': 'prep_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_month_end_task" model="ir.actions.act_window">
        <field name="name">Month-End Tasks</field>
        <field name="res_model">ipai.month.end.task</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_my_tasks': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks found
            </p>
            <p>
                Tasks are generated from a Month-End Closing period.
            </p>
        </field>
    </record>
</odoo>
