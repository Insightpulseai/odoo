<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_golive_item_tree" model="ir.ui.view">
        <field name="name">ipai.finance.ppm.golive.item.tree</field>
        <field name="model">ipai.finance.ppm.golive.item</field>
        <field name="arch" type="xml">
            <tree string="Checklist Items" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="is_critical" widget="boolean_toggle"/>
                <field name="section_id"/>
                <field name="name"/>
                <field name="is_checked" widget="boolean_toggle"/>
                <field name="checked_by"/>
                <field name="checked_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_golive_item_form" model="ir.ui.view">
        <field name="name">ipai.finance.ppm.golive.item.form</field>
        <field name="model">ipai.finance.ppm.golive.item</field>
        <field name="arch" type="xml">
            <form string="Checklist Item">
                <header>
                    <button name="action_mark_complete" string="Mark Complete" type="object" class="oe_highlight" attrs="{'invisible': [('is_checked', '=', True)]}"/>
                    <button name="action_mark_incomplete" string="Mark Incomplete" type="object" attrs="{'invisible': [('is_checked', '=', False)]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="section_id"/>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="is_critical"/>
                        </group>
                        <group>
                            <field name="is_checked" widget="boolean_toggle"/>
                            <field name="checked_by" attrs="{'invisible': [('is_checked', '=', False)]}"/>
                            <field name="checked_date" attrs="{'invisible': [('is_checked', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Acceptance criteria for this item..."/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Implementation notes or evidence..."/>
                        <field name="evidence_url" placeholder="URL to supporting documentation or screenshot"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_golive_item" model="ir.actions.act_window">
        <field name="name">Checklist Items</field>
        <field name="res_model">ipai.finance.ppm.golive.item</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
