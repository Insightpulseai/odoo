<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Category List View -->
    <record id="view_advisor_category_list" model="ir.ui.view">
      <field name="name">advisor.category.list</field>
      <field name="model">advisor.category</field>
      <field name="arch" type="xml">
        <list string="Advisor Categories">
          <field name="sequence" widget="handle"/>
          <field name="code"/>
          <field name="name"/>
          <field name="icon"/>
          <field name="recommendation_count"/>
          <field name="open_count"/>
          <field name="high_count"/>
          <field name="latest_score" widget="progressbar"/>
        </list>
      </field>
    </record>

    <!-- Category Form View -->
    <record id="view_advisor_category_form" model="ir.ui.view">
      <field name="name">advisor.category.form</field>
      <field name="model">advisor.category</field>
      <field name="arch" type="xml">
        <form string="Advisor Category">
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="action_view_recommendations" type="object"
                      class="oe_stat_button" icon="fa-list">
                <field name="recommendation_count" widget="statinfo" string="Recommendations"/>
              </button>
            </div>
            <div class="oe_title">
              <h1><field name="name"/></h1>
              <field name="code"/>
            </div>
            <group>
              <group>
                <field name="sequence"/>
                <field name="icon"/>
                <field name="color" widget="color_picker"/>
              </group>
              <group>
                <field name="open_count" readonly="1"/>
                <field name="high_count" readonly="1"/>
                <field name="latest_score" widget="progressbar"/>
              </group>
            </group>
            <group>
              <field name="description"/>
            </group>
            <field name="active" invisible="1"/>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Category Action -->
    <record id="action_advisor_category" model="ir.actions.act_window">
      <field name="name">Categories</field>
      <field name="res_model">advisor.category</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>
