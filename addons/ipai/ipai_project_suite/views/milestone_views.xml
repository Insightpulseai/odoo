<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Milestone Tree View -->
    <record id="view_ipai_milestone_tree" model="ir.ui.view">
        <field name="name">ipai.project.milestone.tree</field>
        <field name="model">ipai.project.milestone</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'open' and date_target and date_target &lt; current_date"
                  decoration-muted="state == 'cancel'"
                  decoration-success="state == 'done'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="owner_id" widget="many2one_avatar_user"/>
                <field name="date_target"/>
                <field name="date_actual"/>
                <field name="progress" widget="progressbar"/>
                <field name="task_count"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'open'"
                       decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- Milestone Form View -->
    <record id="view_ipai_milestone_form" model="ir.ui.view">
        <field name="name">ipai.project.milestone.form</field>
        <field name="model">ipai.project.milestone</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_done" type="object" string="Mark Done"
                            class="btn-primary" invisible="state != 'open'"/>
                    <button name="action_reopen" type="object" string="Reopen"
                            invisible="state not in ('done', 'cancel')"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state != 'open'"/>
                    <field name="state" widget="statusbar" statusbar_visible="open,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" type="object"
                                class="oe_stat_button" icon="fa-tasks">
                            <field name="task_count" widget="statinfo" string="Tasks"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Milestone Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="owner_id" widget="many2one_avatar_user"/>
                        </group>
                        <group>
                            <field name="date_target"/>
                            <field name="date_actual" invisible="state != 'done'"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe the milestone..."/>
                        </page>
                        <page string="Tasks" name="tasks">
                            <field name="task_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                    <field name="stage_id"/>
                                    <field name="date_deadline"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Milestone Kanban View -->
    <record id="view_ipai_milestone_kanban" model="ir.ui.view">
        <field name="name">ipai.project.milestone.kanban</field>
        <field name="model">ipai.project.milestone</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="project_id"/>
                <field name="owner_id"/>
                <field name="date_target"/>
                <field name="progress"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <strong><field name="name"/></strong>
                            <div class="text-muted">
                                <field name="project_id"/>
                            </div>
                            <div>
                                <field name="owner_id" widget="many2one_avatar_user"/>
                                <span class="float-end" t-if="record.date_target.raw_value">
                                    <i class="fa fa-calendar"/> <field name="date_target"/>
                                </span>
                            </div>
                            <field name="progress" widget="progressbar"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Milestone Action -->
    <record id="action_ipai_milestone" model="ir.actions.act_window">
        <field name="name">Milestones</field>
        <field name="res_model">ipai.project.milestone</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first milestone
            </p>
            <p>
                Milestones help you track major project achievements and deadlines.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ipai_milestone"
              name="Milestones"
              parent="project.menu_project_config"
              action="action_ipai_milestone"
              sequence="50"/>
</odoo>
