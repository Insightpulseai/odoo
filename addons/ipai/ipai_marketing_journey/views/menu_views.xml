<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_marketing_journey_root"
              name="Marketing Journey"
              web_icon="ipai_marketing_journey,static/description/icon.png"
              sequence="60"/>

    <!-- Journeys Menu -->
    <menuitem id="menu_marketing_journey_journeys"
              name="Journeys"
              parent="menu_marketing_journey_root"
              action="action_marketing_journey"
              sequence="10"/>

    <!-- Participants Menu -->
    <menuitem id="menu_marketing_journey_participants"
              name="Participants"
              parent="menu_marketing_journey_root"
              action="action_marketing_journey_participant"
              sequence="20"/>

    <!-- Reporting Menu -->
    <menuitem id="menu_marketing_journey_reporting"
              name="Reporting"
              parent="menu_marketing_journey_root"
              sequence="50"/>

    <menuitem id="menu_marketing_journey_logs"
              name="Execution Logs"
              parent="menu_marketing_journey_reporting"
              action="action_marketing_journey_execution_log"
              sequence="10"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_marketing_journey_config"
              name="Configuration"
              parent="menu_marketing_journey_root"
              groups="group_marketing_journey_manager"
              sequence="100"/>

    <menuitem id="menu_marketing_journey_nodes"
              name="All Nodes"
              parent="menu_marketing_journey_config"
              action="action_marketing_journey_node"
              sequence="10"/>
</odoo>
