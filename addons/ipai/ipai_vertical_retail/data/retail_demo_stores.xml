    <!-- Demo Sari-sari Stores -->
    <record id="scout_store_sample_001" model="res.partner">
        <field name="name">Aling Nena's Sari-sari Store</field>
        <field name="company_type">company</field>
        <field name="category_id" eval="[(4, ref('ipai_vertical_retail.scout_tag_sari_sari')), (4, ref('ipai_vertical_retail.scout_tag_ncr'))]"/>
        <field name="is_retail_outlet">True</field>
        <field name="scout_store_code">SSS-NCR-0001</field>
        <field name="scout_store_type">sari_sari</field>
        <field name="scout_region_code">NCR</field>
        <field name="scout_province">Metro Manila</field>
        <field name="scout_channel">traditional</field>
        <field name="scout_visit_frequency">weekly</field>
        <field name="scout_active">True</field>
    </record>

