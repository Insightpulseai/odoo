              name="Close Orchestration"
              web_icon="ipai_close_orchestration,static/description/icon.png"
              sequence="25"/>

    <!-- Close Cycles Menu -->
    <menuitem id="menu_close_cycles"
              name="Close Cycles"
              parent="menu_close_orchestration_root"
              action="action_close_cycle"
              sequence="10"/>

    <!-- Close Tasks Menu -->
    <menuitem id="menu_close_tasks"
              name="Close Tasks"
              parent="menu_close_orchestration_root"
              action="action_close_task"
              sequence="20"/>

    <!-- Exceptions Menu -->
    <menuitem id="menu_close_exceptions"
              name="Exceptions"
              parent="menu_close_orchestration_root"
              action="action_close_exception"
              sequence="30"/>

    <!-- Approval Gates Menu -->
