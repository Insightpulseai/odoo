<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ============================================================
             Kanban Stages (project.task.type) â€” shared across both projects
             ============================================================ -->

        <record id="stage_todo" model="project.task.type">
            <field name="name">To Do</field>
            <field name="sequence">10</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="stage_in_preparation" model="project.task.type">
            <field name="name">In Preparation</field>
            <field name="sequence">20</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="stage_under_review" model="project.task.type">
            <field name="name">Under Review</field>
            <field name="sequence">30</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="stage_pending_approval" model="project.task.type">
            <field name="name">Pending Approval</field>
            <field name="sequence">40</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="stage_done" model="project.task.type">
            <field name="name">Done</field>
            <field name="sequence">50</field>
            <field name="fold" eval="True"/>
        </record>

        <record id="stage_cancelled" model="project.task.type">
            <field name="name">Cancelled</field>
            <field name="sequence">60</field>
            <field name="fold" eval="True"/>
        </record>

    </data>
</odoo>
