<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ==========================================
         GRID FILTER CONFIGURATION VIEWS
         ========================================== -->

    <!-- Grid Filter: List -->
    <record id="view_ipai_grid_filter_tree" model="ir.ui.view">
        <field name="name">ipai.grid.filter.tree</field>
        <field name="model">ipai.grid.filter</field>
        <field name="arch" type="xml">
            <list string="Saved Filters">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="grid_view_id"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="is_global"/>
                <field name="user_id" invisible="is_global"/>
                <field name="color" widget="badge"/>
                <field name="condition_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Grid Filter: Form -->
    <record id="view_ipai_grid_filter_form" model="ir.ui.view">
        <field name="name">ipai.grid.filter.form</field>
        <field name="model">ipai.grid.filter</field>
        <field name="arch" type="xml">
            <form string="Saved Filter">
                <header>
                    <button name="action_set_as_default" type="object"
                            string="Set as Default" class="btn-primary"
                            invisible="is_default"/>
                    <button name="action_clear_default" type="object"
                            string="Clear Default" class="btn-secondary"
                            invisible="not is_default"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Default" bg_color="text-bg-success"
                            invisible="not is_default"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Filter Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="grid_view_id"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group string="Visibility">
                            <field name="is_default"/>
                            <field name="is_global"/>
                            <field name="user_id" invisible="is_global"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Appearance">
                            <field name="color" widget="radio"/>
                            <field name="icon"/>
                        </group>
                    </group>
                    <group string="Filter Definition">
                        <field name="domain" placeholder="[('field', '=', 'value')]"/>
                    </group>
                    <group string="Filter Conditions (JSON)">
                        <field name="filter_json" widget="ace" options="{'mode': 'json'}"
                               placeholder='[{"field": "name", "operator": "ilike", "value": "test"}]'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Grid Filter: Search -->
    <record id="view_ipai_grid_filter_search" model="ir.ui.view">
        <field name="name">ipai.grid.filter.search</field>
        <field name="model">ipai.grid.filter</field>
        <field name="arch" type="xml">
            <search string="Search Filters">
                <field name="name"/>
                <field name="grid_view_id"/>
                <field name="user_id"/>
                <filter string="Default Filters" name="filter_default" domain="[('is_default', '=', True)]"/>
                <filter string="Global Filters" name="filter_global" domain="[('is_global', '=', True)]"/>
                <filter string="My Filters" name="filter_mine" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Grid View" name="groupby_view" context="{'group_by': 'grid_view_id'}"/>
                    <filter string="Color" name="groupby_color" context="{'group_by': 'color'}"/>
                    <filter string="User" name="groupby_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action: Grid Filters -->
    <record id="action_ipai_grid_filter" model="ir.actions.act_window">
        <field name="name">Saved Filters</field>
        <field name="res_model">ipai.grid.filter</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ipai_grid_filter_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first saved filter
            </p>
            <p>
                Saved filters allow users to quickly apply common filter configurations.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ipai_grid_filter"
              name="Saved Filters"
              parent="menu_ipai_grid_view_root"
              action="action_ipai_grid_filter"
              sequence="30"/>

</odoo>
