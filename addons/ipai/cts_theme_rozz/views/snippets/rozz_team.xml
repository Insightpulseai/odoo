<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Register Team snippet in editor and structure (unique group: team_section) -->
    <template id="cts_theme_rozz_team" inherit_id="website.snippets" name="Rozz Team">
        <!-- Add thumbnail entry to the snippet groups (sidebar) -->
        <xpath expr="//snippets[@id='snippet_groups']/*[last()]" position="after">
            <t t-snippet="website.s_snippet_group"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-team-block.jpg"
               string="Team"
               snippet-group="team_section"/>
        </xpath>

        <!-- Add snippet structure so it's available to drag into pages -->
        <xpath expr="//snippets[@id='snippet_structure']/*[last()]" position="after">
            <t t-snippet="cts_theme_rozz.s_rozz_team"
               string="Team"
               group="team_section"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-team-block.jpg"/>
        </xpath>
    </template>

    <!-- Snippet content (kept same as your original; images preserved) -->
    <template id="s_rozz_team" name="Rozz Team">
        <section>
            <div class="container-fluid team ptb-100">
                <div class="container">
                    <div class="text-center mb-16">
                        <div class="section-title">
                            <span class="sub-title">The team</span>
                            <h2>Our Team</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-12 text-center bg-white">
                            <img class="w-100" src="/cts_theme_rozz/static/src/images/team/team (1).jpg"/>
                            <div class="p-4">
                                <div class="text-md">
                                    <h6 style="font-weight: 500;">Mehdi Mohammadi</h6>
                                    <p>Manager</p>
                                </div>
                                <div class="my-4 flex justify-center items-center"></div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-sm-12 text-center bg-white">
                            <img class="w-100" src="/cts_theme_rozz/static/src/images/team/team (2).jpg"/>
                            <div class="p-4">
                                <div class="text-md">
                                    <h6 style="font-weight: 500;">Yahya R. Makarim</h6>
                                    <p>President &amp; CEO</p>
                                </div>
                                <div class="my-4 flex justify-center items-center"></div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-sm-12 text-center bg-white">
                            <img class="w-100" src="/cts_theme_rozz/static/src/images/team/team (3).jpg"/>
                            <div class="p-4">
                                <div class="text-md">
                                    <h6 style="font-weight: 500;">Ahmad Sultani</h6>
                                    <p>Staff</p>
                                </div>
                                <div class="my-4 flex justify-center items-center"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Optional page wrapper template -->
    <template id="rozz_team_page" name="Team Page">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <t t-call="cts_theme_rozz.s_rozz_team"/>
            </div>
        </t>
    </template>
</odoo>
