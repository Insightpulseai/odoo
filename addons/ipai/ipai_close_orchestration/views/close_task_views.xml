<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Task Tree View -->
    <record id="close_task_view_tree" model="ir.ui.view">
        <field name="name">close.task.tree</field>
        <field name="model">close.task</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'done'" decoration-muted="state == 'cancelled'" decoration-warning="has_open_exceptions">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="cycle_id"/>
                <field name="category_id"/>
                <field name="preparer_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" decoration-info="state in ('draft', 'prep')" decoration-warning="state in ('review', 'approval')" decoration-success="state == 'done'" decoration-danger="state == 'cancelled'"/>
                <field name="approval_deadline"/>
                <field name="checklist_progress" widget="progressbar"/>
                <field name="has_open_exceptions" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Task Form View -->
    <record id="close_task_view_form" model="ir.ui.view">
        <field name="name">close.task.form</field>
        <field name="model">close.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start_prep" string="Start Preparation" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_submit_prep" string="Submit for Review" type="object" class="btn-primary" invisible="state != 'prep'"/>
                    <button name="action_submit_review" string="Submit for Approval" type="object" class="btn-primary" invisible="state != 'review'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-success" invisible="state != 'approval'"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-warning" invisible="state not in ('review', 'approval')"/>
                    <button name="action_create_exception" string="Report Exception" type="object" invisible="state in ('done', 'cancelled')"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,prep,review,approval,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="cycle_id"/>
                            <field name="template_id"/>
                            <field name="category_id"/>
                            <field name="external_key"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="checklist_progress" widget="progressbar"/>
                            <field name="has_open_exceptions" widget="boolean"/>
                        </group>
                    </group>
                    <group string="Assignments">
                        <group>
                            <field name="preparer_id" widget="many2one_avatar_user"/>
                            <field name="prep_deadline"/>
                        </group>
                        <group>
                            <field name="reviewer_id" widget="many2one_avatar_user"/>
                            <field name="review_deadline"/>
                        </group>
                        <group>
                            <field name="approver_id" widget="many2one_avatar_user"/>
                            <field name="approval_deadline"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Checklist" name="checklist">
                            <field name="checklist_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="is_required"/>
                                    <field name="is_done" widget="boolean_toggle"/>
                                    <field name="done_by"/>
                                    <field name="done_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Exceptions" name="exceptions">
                            <field name="exception_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="severity" widget="badge"/>
                                    <field name="state" widget="badge"/>
                                    <field name="assigned_to"/>
                                </list>
                            </field>
                        </page>
                        <page string="Completion Tracking" name="tracking">
                            <group>
                                <group string="Preparation">
                                    <field name="prep_done_date"/>
                                    <field name="prep_done_by"/>
                                </group>
                                <group string="Review">
                                    <field name="review_done_date"/>
                                    <field name="review_done_by"/>
                                </group>
                                <group string="Approval">
                                    <field name="approval_done_date"/>
                                    <field name="approval_done_by"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                        <page string="A1 Bridge" name="bridge">
                            <group>
                                <field name="a1_task_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Task Kanban View -->
    <record id="close_task_view_kanban" model="ir.ui.view">
        <field name="name">close.task.kanban</field>
        <field name="model">close.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="preparer_id"/>
                <field name="checklist_progress"/>
                <field name="approval_deadline"/>
                <field name="has_open_exceptions"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content" t-att-class="record.has_open_exceptions.raw_value ? 'bg-warning-light' : ''">
                            <div class="o_kanban_record_title">
                                <field name="name"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="preparer_id" widget="many2one_avatar_user"/>
                                <field name="checklist_progress" widget="progressbar"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="approval_deadline"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Task Search View -->
    <record id="close_task_view_search" model="ir.ui.view">
        <field name="name">close.task.search</field>
        <field name="model">close.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="cycle_id"/>
                <field name="category_id"/>
                <field name="preparer_id"/>
                <filter name="my_prep" string="My Prep" domain="[('preparer_id', '=', uid)]"/>
                <filter name="my_review" string="My Review" domain="[('reviewer_id', '=', uid), ('state', '=', 'review')]"/>
                <filter name="my_approval" string="My Approval" domain="[('approver_id', '=', uid), ('state', '=', 'approval')]"/>
                <separator/>
                <filter name="in_progress" string="In Progress" domain="[('state', 'in', ('prep', 'review', 'approval'))]"/>
                <filter name="done" string="Completed" domain="[('state', '=', 'done')]"/>
                <filter name="has_exceptions" string="Has Exceptions" domain="[('has_open_exceptions', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_cycle" string="Cycle" context="{'group_by': 'cycle_id'}"/>
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                    <filter name="group_preparer" string="Preparer" context="{'group_by': 'preparer_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="close_task_action" model="ir.actions.act_window">
        <field name="name">Close Tasks</field>
        <field name="res_model">close.task</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="close_task_view_search"/>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks yet
            </p>
            <p>
                Tasks are generated from a Close Cycle.
            </p>
        </field>
    </record>

</odoo>
