<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Demo Reconciliation Models -->
    <record id="reconcile_model_invoice_match" model="account.reconcile.model">
        <field name="name">Invoice Matching (Exact Amount)</field>
        <field name="rule_type">invoice_matching</field>
        <field name="match_partner">True</field>
        <field name="match_amount">equal</field>
        <field name="sequence">10</field>
    </record>

    <record id="reconcile_model_bank_fees" model="account.reconcile.model">
        <field name="name">Bank Fees</field>
        <field name="rule_type">writeoff_suggestion</field>
        <field name="match_label">contains</field>
        <field name="match_label_param">fee</field>
        <field name="label">Bank Service Fees</field>
        <field name="sequence">20</field>
    </record>
</odoo>
