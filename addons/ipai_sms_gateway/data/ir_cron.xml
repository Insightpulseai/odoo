<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- SMS Message Sequence -->
        <record id="seq_ipai_sms_message" model="ir.sequence">
            <field name="name">SMS Message Sequence</field>
            <field name="code">ipai.sms.message</field>
            <field name="prefix">SMS-</field>
            <field name="padding">6</field>
        </record>

        <!-- Cron job to send queued SMS messages -->
        <record id="ir_cron_send_queued_sms" model="ir.cron">
            <field name="name">Send Queued SMS Messages</field>
            <field name="model_id" ref="model_ipai_sms_message"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_queued_messages()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">5</field>
        </record>

        <!-- Cron job to retry failed SMS messages -->
        <record id="ir_cron_retry_failed_sms" model="ir.cron">
            <field name="name">Retry Failed SMS Messages</field>
            <field name="model_id" ref="model_ipai_sms_message"/>
            <field name="state">code</field>
            <field name="code">model._cron_retry_failed_messages()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">15</field>
        </record>
    </data>
</odoo>
