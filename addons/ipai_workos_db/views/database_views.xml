<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Database Tree View -->
    <record id="database_tree_view" model="ir.ui.view">
        <field name="name">ipai.workos.database.tree</field>
        <field name="model">ipai.workos.database</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="space_id"/>
                <field name="row_count"/>
            </tree>
        </field>
    </record>

    <!-- Database Form View -->
    <record id="database_form_view" model="ir.ui.view">
        <field name="name">ipai.workos.database.form</field>
        <field name="model">ipai.workos.database</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rows" type="object"
                                class="oe_stat_button" icon="fa-table">
                            <field name="row_count" widget="statinfo" string="Rows"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="icon" class="me-2"/>
                            <field name="name" placeholder="Database Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="space_id"/>
                            <field name="page_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Properties (Schema)">
                            <field name="property_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="property_type"/>
                                    <field name="is_title"/>
                                    <field name="is_visible"/>
                                    <field name="width"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Row Tree View -->
    <record id="row_tree_view" model="ir.ui.view">
        <field name="name">ipai.workos.row.tree</field>
        <field name="model">ipai.workos.row</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="database_id"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <!-- Row Form View -->
    <record id="row_form_view" model="ir.ui.view">
        <field name="name">ipai.workos.row.form</field>
        <field name="model">ipai.workos.row</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="database_id" readonly="1"/>
                        <field name="name" readonly="1"/>
                        <field name="sequence"/>
                    </group>
                    <notebook>
                        <page string="Values">
                            <field name="values_json" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Database Action -->
    <record id="action_workos_database" model="ir.actions.act_window">
        <field name="name">Databases</field>
        <field name="res_model">ipai.workos.database</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Add to Work OS menu -->
    <menuitem id="menu_workos_databases"
              name="Databases"
              parent="ipai_workos_core.menu_workos_root"
              action="action_workos_database"
              sequence="40"/>
</odoo>
