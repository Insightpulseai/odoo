    <record id="section_golive_criteria" model="ipai.finance.ppm.golive.section">
        <field name="name">Official Go-Live Criteria</field>
        <field name="section_type">golive_criteria</field>
        <field name="sequence">90</field>
        <field name="description">Final validation gates before production authorization</field>
    </record>
