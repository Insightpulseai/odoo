<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Finance Workflow Roles -->

    <!-- Finance Director -->
    <record id="role_finance_director" model="ipai.finance.role">
        <field name="name">Finance Director</field>
        <field name="code">CKVC</field>
        <field name="sequence">10</field>
        <field name="role_type">director</field>
        <field name="can_approve">True</field>
        <field name="can_review">True</field>
        <field name="description">Final approval authority for finance workflows. Payment approvals for BIR. Overall supervision of month-end close and compliance.</field>
    </record>

    <!-- Senior Finance Manager -->
    <record id="role_senior_finance_manager" model="ipai.finance.role">
        <field name="name">Senior Finance Manager</field>
        <field name="code">RIM</field>
        <field name="sequence">20</field>
        <field name="role_type">senior_manager</field>
        <field name="can_approve">True</field>
        <field name="can_review">True</field>
        <field name="description">Report approval for BIR returns. Review authority for month-end close tasks. Second-level review and approval.</field>
    </record>

    <!-- Finance Supervisor -->
    <record id="role_finance_supervisor" model="ipai.finance.role">
        <field name="name">Finance Supervisor</field>
        <field name="code">BOM</field>
        <field name="sequence">30</field>
        <field name="role_type">supervisor</field>
        <field name="can_approve">False</field>
        <field name="can_review">True</field>
        <field name="description">Preparation of BIR returns. Filing and payment execution. First-level review for accountant work. Coordination of month-end tasks.</field>
    </record>

    <!-- Accountant - Client Billings -->
    <record id="role_accountant_billings" model="ipai.finance.role">
        <field name="name">Accountant (Client Billings)</field>
        <field name="code">JPAL</field>
        <field name="sequence">40</field>
        <field name="role_type">accountant</field>
        <field name="can_approve">False</field>
        <field name="can_review">False</field>
        <field name="description">Client billing preparation. Revenue recognition support. AR reconciliation.</field>
    </record>

    <!-- General Accountant Role -->
    <record id="role_accountant" model="ipai.finance.role">
        <field name="name">Accountant</field>
        <field name="code">ACCT</field>
        <field name="sequence">50</field>
        <field name="role_type">accountant</field>
        <field name="can_approve">False</field>
        <field name="can_review">False</field>
        <field name="description">General accounting tasks. JV preparation. Schedule maintenance. Support for month-end and BIR workflows.</field>
    </record>
</odoo>
