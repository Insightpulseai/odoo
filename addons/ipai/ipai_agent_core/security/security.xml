<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Agent Admin Group -->
        <record id="group_ipai_agent_admin" model="res.groups">
            <field name="name">IPAI Agent Admin</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Full access to manage agent skills, tools, and runs.</field>
        </record>

        <!-- Agent User Group -->
        <record id="group_ipai_agent_user" model="res.groups">
            <field name="name">IPAI Agent User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Can execute agent skills and view runs.</field>
        </record>

        <!-- Record Rules -->
        <record id="rule_agent_run_user" model="ir.rule">
            <field name="name">Agent Run: User sees own runs</field>
            <field name="model_id" ref="model_ipai_agent_run"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_ipai_agent_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_agent_run_admin" model="ir.rule">
            <field name="name">Agent Run: Admin sees all</field>
            <field name="model_id" ref="model_ipai_agent_run"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ipai_agent_admin'))]"/>
        </record>
    </data>
</odoo>
