<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Team Form View -->
    <record id="ipai_helpdesk_team_view_form" model="ir.ui.view">
        <field name="name">ipai.helpdesk.team.form</field>
        <field name="model">ipai.helpdesk.team</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Team">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" icon="fa-ticket"
                                name="%(action_ipai_helpdesk_ticket)d"
                                context="{'search_default_team_id': active_id}">
                            <field name="ticket_count" widget="statinfo" string="Tickets"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Team Members">
                            <field name="leader_id"/>
                            <field name="member_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Assignment">
                            <field name="auto_assign"/>
                            <field name="assign_method" invisible="not auto_assign"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Stages" name="stages">
                            <field name="stage_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="is_close"/>
                                    <field name="fold"/>
                                </tree>
                            </field>
                        </page>
                        <page string="SLA Policies" name="sla">
                            <field name="sla_policy_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="priority"/>
                                    <field name="time_hours"/>
                                    <field name="escalation_user_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Email" name="email">
                            <group>
                                <group string="Email Alias">
                                    <field name="alias_name"/>
                                    <field name="alias_domain"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <field name="active" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Team Tree View -->
    <record id="ipai_helpdesk_team_view_tree" model="ir.ui.view">
        <field name="name">ipai.helpdesk.team.tree</field>
        <field name="model">ipai.helpdesk.team</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Teams">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="leader_id"/>
                <field name="ticket_count"/>
                <field name="ticket_open_count"/>
                <field name="auto_assign"/>
                <field name="assign_method"/>
            </tree>
        </field>
    </record>

    <!-- Team Action -->
    <record id="action_ipai_helpdesk_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">ipai.helpdesk.team</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first helpdesk team
            </p>
        </field>
    </record>
</odoo>
