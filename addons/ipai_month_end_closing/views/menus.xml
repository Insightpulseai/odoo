<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="menu_ipai_root" name="IPAI" sequence="5"/>
        <menuitem id="menu_month_end_close" name="Month-End Close" parent="menu_ipai_root" sequence="10"/>

        <record id="action_command_center" model="ir.actions.act_window">
            <field name="name">Command Center</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">pivot,graph,list,kanban,calendar</field>
            <field name="domain">[('project_id.name', 'in', ['Month-End Close', 'BIR Tax Filing'])]</field>
        </record>
        <menuitem id="menu_command_center" name="Command Center" parent="menu_month_end_close" action="action_command_center" sequence="1"/>

        <record id="action_projects" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('name', 'in', ['Month-End Close', 'BIR Tax Filing'])]</field>
        </record>
        <menuitem id="menu_projects" name="Projects" parent="menu_month_end_close" action="action_projects" sequence="2"/>

        <record id="action_tasks" model="ir.actions.act_window">
            <field name="name">Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
            <field name="domain">[('project_id.name', 'in', ['Month-End Close', 'BIR Tax Filing'])]</field>
        </record>
        <menuitem id="menu_tasks" name="Tasks" parent="menu_month_end_close" action="action_tasks" sequence="3"/>

        <record id="action_calendar" model="ir.actions.act_window">
            <field name="name">Calendar</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">calendar,list,form</field>
            <field name="domain">[('project_id.name', 'in', ['Month-End Close', 'BIR Tax Filing'])]</field>
        </record>
        <menuitem id="menu_calendar" name="Calendar" parent="menu_month_end_close" action="action_calendar" sequence="4"/>

        <record id="action_milestones" model="ir.actions.act_window">
            <field name="name">Milestones</field>
            <field name="res_model">project.milestone</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('project_id.name', 'in', ['Month-End Close', 'BIR Tax Filing'])]</field>
        </record>
        <menuitem id="menu_milestones" name="Milestones" parent="menu_month_end_close" action="action_milestones" sequence="5"/>

        <menuitem id="menu_config" name="Configuration" parent="menu_month_end_close" sequence="99"/>
        <menuitem id="menu_tags" name="Tags" parent="menu_config" action="project.project_tags_action" sequence="1"/>
    </data>
</odoo>
