<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ask_ai" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ask.ai</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='discussion']" position="after">
                <h2>IPAI Copilot / Ask AI</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="ipai_copilot_api_url"/>
                            <div class="text-muted">
                                Endpoint for the RAG/Copilot backend service
                            </div>
                            <field name="ipai_copilot_api_url"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="ipai_copilot_api_key"/>
                            <div class="text-muted">
                                Authentication token (if required)
                            </div>
                            <field name="ipai_copilot_api_key" password="True"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
