<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Enable automatic install blocking by default -->
    <record id="config_auto_block" model="ir.config_parameter">
        <field name="key">ipai_module_gating.auto_block</field>
        <field name="value">1</field>
    </record>

    <!-- Block experimental modules by default -->
    <record id="config_block_experimental" model="ir.config_parameter">
        <field name="key">ipai_module_gating.block_experimental</field>
        <field name="value">1</field>
    </record>

    <!-- Allow admin override by default -->
    <record id="config_allow_override" model="ir.config_parameter">
        <field name="key">ipai_module_gating.allow_override</field>
        <field name="value">1</field>
    </record>

</odoo>
