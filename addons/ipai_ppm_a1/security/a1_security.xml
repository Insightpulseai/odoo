<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Module Category -->
    <record id="module_category_a1" model="ir.module.category">
        <field name="name">A1 Control Center</field>
        <field name="sequence">50</field>
    </record>

    <!-- User Groups -->
    <record id="group_a1_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_a1"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_a1_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_a1"/>
        <field name="implied_ids" eval="[(4, ref('group_a1_user'))]"/>
    </record>

    <record id="group_a1_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_a1"/>
        <field name="implied_ids" eval="[(4, ref('group_a1_manager'))]"/>
    </record>

    <!-- Record Rules -->

    <!-- Company-based access for workstreams -->
    <record id="a1_workstream_company_rule" model="ir.rule">
        <field name="name">A1 Workstream: Company</field>
        <field name="model_id" ref="model_a1_workstream"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_a1_user'))]"/>
    </record>

    <!-- Company-based access for templates -->
    <record id="a1_template_company_rule" model="ir.rule">
        <field name="name">A1 Template: Company</field>
        <field name="model_id" ref="model_a1_template"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_a1_user'))]"/>
    </record>

    <!-- Company-based access for tasklists -->
    <record id="a1_tasklist_company_rule" model="ir.rule">
        <field name="name">A1 Tasklist: Company</field>
        <field name="model_id" ref="model_a1_tasklist"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_a1_user'))]"/>
    </record>

    <!-- Company-based access for tasks -->
    <record id="a1_task_company_rule" model="ir.rule">
        <field name="name">A1 Task: Company</field>
        <field name="model_id" ref="model_a1_task"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_a1_user'))]"/>
    </record>

    <!-- Company-based access for roles -->
    <record id="a1_role_company_rule" model="ir.rule">
        <field name="name">A1 Role: Company</field>
        <field name="model_id" ref="model_a1_role"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_a1_user'))]"/>
    </record>

    <!-- Company-based access for checks -->
    <record id="a1_check_company_rule" model="ir.rule">
        <field name="name">A1 Check: Company</field>
        <field name="model_id" ref="model_a1_check"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_a1_user'))]"/>
    </record>

</odoo>
