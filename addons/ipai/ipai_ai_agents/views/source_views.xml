<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Source Tree View -->
    <record id="view_ipai_ai_source_tree" model="ir.ui.view">
        <field name="name">ipai.ai.source.tree</field>
        <field name="model">ipai.ai.source</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="enabled"/>
                <field name="source_type"/>
                <field name="url" widget="url"/>
                <field name="index_status" widget="badge" decoration-success="index_status == 'success'" decoration-warning="index_status == 'indexing'" decoration-danger="index_status == 'error'" decoration-info="index_status == 'pending'"/>
                <field name="chunk_count"/>
                <field name="last_indexed"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Source Form View -->
    <record id="view_ipai_ai_source_form" model="ir.ui.view">
        <field name="name">ipai.ai.source.form</field>
        <field name="model">ipai.ai.source</field>
        <field name="arch" type="xml">
            <form string="AI Source">
                <header>
                    <button name="action_trigger_reindex" type="object" string="Trigger Reindex" class="oe_highlight" invisible="index_status == 'indexing'"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Disabled" bg_color="bg-danger" invisible="enabled"/>
                    <widget name="web_ribbon" title="Error" bg_color="bg-danger" invisible="index_status != 'error'"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Source Name..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="enabled"/>
                            <field name="source_type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="url" widget="url" placeholder="https://docs.example.com"/>
                        </group>
                    </group>
                    <group string="GitHub Settings" invisible="source_type != 'github'">
                        <field name="github_repo" placeholder="owner/repo"/>
                        <field name="github_branch" placeholder="main"/>
                        <field name="github_paths" placeholder="docs/**/*.md, README.md"/>
                    </group>
                    <group string="Indexing Status">
                        <group>
                            <field name="index_status"/>
                            <field name="chunk_count"/>
                        </group>
                        <group>
                            <field name="last_indexed"/>
                            <field name="last_indexed_version"/>
                        </group>
                    </group>
                    <group string="Error" invisible="not index_error">
                        <field name="index_error" readonly="1"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" placeholder="Additional notes about this source..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Source Action -->
    <record id="action_ipai_ai_source" model="ir.actions.act_window">
        <field name="name">AI Sources</field>
        <field name="res_model">ipai.ai.source</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Knowledge Source
            </p>
            <p>
                Knowledge Sources are indexed and used to provide evidence for AI responses.
                Connect your documentation sites, GitHub repositories, and other content.
            </p>
        </field>
    </record>
</odoo>
