<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Catalog Asset Views -->

    <record id="view_ipai_catalog_asset_tree" model="ir.ui.view">
        <field name="name">ipai.catalog.asset.tree</field>
        <field name="model">ipai.catalog.asset</field>
        <field name="arch" type="xml">
            <list string="Catalog Assets">
                <field name="fqdn"/>
                <field name="title"/>
                <field name="asset_type"/>
                <field name="system"/>
                <field name="owner"/>
                <field name="status"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_ipai_catalog_asset_form" model="ir.ui.view">
        <field name="name">ipai.catalog.asset.form</field>
        <field name="model">ipai.catalog.asset</field>
        <field name="arch" type="xml">
            <form string="Catalog Asset">
                <header>
                    <button name="action_open_uri" string="Open URI" type="object"
                            class="btn-primary" invisible="not uri"/>
                    <button name="action_sync_from_catalog" string="Sync from Catalog"
                            type="object" class="btn-secondary"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,active,deprecated,archived"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="title" placeholder="Asset Title"/>
                        </h1>
                        <h4>
                            <field name="fqdn" readonly="1"/>
                        </h4>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="asset_type"/>
                            <field name="system"/>
                            <field name="tags"/>
                        </group>
                        <group string="Ownership">
                            <field name="owner"/>
                            <field name="uri" widget="url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Asset description..."/>
                        </page>
                        <page string="Metadata">
                            <field name="metadata_json" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Odoo Link" invisible="not res_model">
                            <group>
                                <field name="res_model"/>
                                <field name="res_id"/>
                            </group>
                        </page>
                        <page string="Sync Info">
                            <group>
                                <field name="supabase_id"/>
                                <field name="last_sync"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ipai_catalog_asset_search" model="ir.ui.view">
        <field name="name">ipai.catalog.asset.search</field>
        <field name="model">ipai.catalog.asset</field>
        <field name="arch" type="xml">
            <search string="Search Catalog">
                <field name="fqdn"/>
                <field name="title"/>
                <field name="description"/>
                <field name="tags"/>
                <filter string="Odoo" name="filter_odoo"
                        domain="[('system', '=', 'odoo')]"/>
                <filter string="Supabase" name="filter_supabase"
                        domain="[('system', '=', 'supabase')]"/>
                <filter string="Scout" name="filter_scout"
                        domain="[('system', '=', 'scout')]"/>
                <separator/>
                <filter string="Models" name="filter_models"
                        domain="[('asset_type', '=', 'odoo_model')]"/>
                <filter string="Tables" name="filter_tables"
                        domain="[('asset_type', '=', 'table')]"/>
                <filter string="Views" name="filter_views"
                        domain="[('asset_type', '=', 'view')]"/>
                <separator/>
                <filter string="Active" name="filter_active"
                        domain="[('status', '=', 'active')]"/>
                <group expand="0" string="Group By">
                    <filter string="System" name="group_system"
                            context="{'group_by': 'system'}"/>
                    <filter string="Type" name="group_type"
                            context="{'group_by': 'asset_type'}"/>
                    <filter string="Status" name="group_status"
                            context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ipai_catalog_asset" model="ir.actions.act_window">
        <field name="name">Catalog Assets</field>
        <field name="res_model">ipai.catalog.asset</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No catalog assets found
            </p>
            <p>
                Use the sync actions to populate the catalog from Odoo models
                or pull from Supabase.
            </p>
        </field>
    </record>

    <!-- Catalog Tool Views -->

    <record id="view_ipai_catalog_tool_tree" model="ir.ui.view">
        <field name="name">ipai.catalog.tool.tree</field>
        <field name="model">ipai.catalog.tool</field>
        <field name="arch" type="xml">
            <list string="Catalog Tools">
                <field name="tool_key"/>
                <field name="name"/>
                <field name="tool_type"/>
                <field name="requires_confirmation"/>
                <field name="tags"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ipai_catalog_tool_form" model="ir.ui.view">
        <field name="name">ipai.catalog.tool.form</field>
        <field name="model">ipai.catalog.tool</field>
        <field name="arch" type="xml">
            <form string="Catalog Tool">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tool Name"/>
                        </h1>
                        <h4>
                            <field name="tool_key" readonly="1"/>
                        </h4>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="tool_type"/>
                            <field name="requires_confirmation"/>
                            <field name="tags"/>
                        </group>
                        <group string="Access Control">
                            <field name="allowed_roles"
                                   placeholder="Comma-separated role XML IDs"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Tool description for LLM..."/>
                        </page>
                        <page string="Parameters Schema">
                            <field name="parameters_json" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Returns Schema">
                            <field name="returns_json" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Sync Info">
                            <group>
                                <field name="supabase_id"/>
                                <field name="last_sync"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ipai_catalog_tool_search" model="ir.ui.view">
        <field name="name">ipai.catalog.tool.search</field>
        <field name="model">ipai.catalog.tool</field>
        <field name="arch" type="xml">
            <search string="Search Tools">
                <field name="tool_key"/>
                <field name="name"/>
                <field name="description"/>
                <field name="tags"/>
                <filter string="Query Tools" name="filter_query"
                        domain="[('tool_type', '=', 'query')]"/>
                <filter string="Action Tools" name="filter_action"
                        domain="[('tool_type', '=', 'action')]"/>
                <filter string="Requires Confirmation" name="filter_confirm"
                        domain="[('requires_confirmation', '=', True)]"/>
                <separator/>
                <filter string="Active" name="filter_active"
                        domain="[('active', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type"
                            context="{'group_by': 'tool_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ipai_catalog_tool" model="ir.actions.act_window">
        <field name="name">Catalog Tools</field>
        <field name="res_model">ipai.catalog.tool</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No catalog tools defined
            </p>
            <p>
                Pull tool definitions from Supabase catalog to enable
                AI copilot actions.
            </p>
        </field>
    </record>

</odoo>
