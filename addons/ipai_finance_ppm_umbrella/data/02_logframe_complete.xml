<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <data noupdate="1">
    <!-- 12 Logframe Entries: Goal → Outcome → IM1/IM2 → Outputs → Activities -->
    <record id="logframe_001_goal_001" model="ipai.finance.logframe">
      <field name="level">goal</field>
      <field name="code">GOAL-001</field>
      <field name="name">100% Compliant and Timely Month-End Closing and Tax Filing</field>
      <field name="indicators">% of deadlines met; # of penalties; total penalty amount</field>
      <field name="means_of_verification">BIR receipts; audit reports; bank statements</field>
      <field name="assumptions">Government systems operational; reviewers responsive</field>
      <field name="sequence">10</field>
    </record>
    <record id="logframe_002_outcome_001" model="ipai.finance.logframe">
      <field name="level">outcome</field>
      <field name="code">OUTCOME-001</field>
      <field name="name">Zero-Penalty Compliance with Timely Financial Reporting</field>
      <field name="indicators">Zero BIR penalties; 100% on-time month-end close</field>
      <field name="means_of_verification">BIR confirmation receipts; monthly close reports</field>
      <field name="assumptions">Adequate resources; stable systems</field>
      <field name="sequence">20</field>
    </record>
    <record id="logframe_003_im1" model="ipai.finance.logframe">
      <field name="level">im1</field>
      <field name="code">IM1</field>
      <field name="name">Month-End Closing Processes</field>
      <field name="indicators">Books closed within 5 business days; Zero material misstatements</field>
      <field name="means_of_verification">Trial balance; account reconciliations</field>
      <field name="assumptions">All departments submit data on time</field>
      <field name="sequence">30</field>
    </record>
    <record id="logframe_004_im2" model="ipai.finance.logframe">
      <field name="level">im2</field>
      <field name="code">IM2</field>
      <field name="name">Tax Filing Compliance</field>
      <field name="indicators">% of filings before deadline; # of late filings; penalty amount</field>
      <field name="means_of_verification">BIR filing tracker; bank debit advices</field>
      <field name="assumptions">BIR portals operational; approvers available</field>
      <field name="sequence">40</field>
    </record>
    <record id="logframe_005_out_01" model="ipai.finance.logframe">
      <field name="level">output</field>
      <field name="code">OUT-01</field>
      <field name="name">Payroll &amp; Personnel Completed</field>
      <field name="indicators"># of payroll &amp; personnel tasks completed; Accuracy rate</field>
      <field name="means_of_verification">Payroll &amp; Personnel task checklist; approval signatures</field>
      <field name="assumptions">Data available; systems accessible</field>
      <field name="sequence">50</field>
    </record>
    <record id="logframe_006_out_02" model="ipai.finance.logframe">
      <field name="level">output</field>
      <field name="code">OUT-02</field>
      <field name="name">Tax &amp; Provisions Completed</field>
      <field name="indicators"># of tax &amp; provisions tasks completed; Accuracy rate</field>
      <field name="means_of_verification">Tax &amp; Provisions task checklist; approval signatures</field>
      <field name="assumptions">Data available; systems accessible</field>
      <field name="sequence">60</field>
    </record>
    <record id="logframe_007_out_03" model="ipai.finance.logframe">
      <field name="level">output</field>
      <field name="code">OUT-03</field>
      <field name="name">Rent &amp; Leases Completed</field>
      <field name="indicators"># of rent &amp; leases tasks completed; Accuracy rate</field>
      <field name="means_of_verification">Rent &amp; Leases task checklist; approval signatures</field>
      <field name="assumptions">Data available; systems accessible</field>
      <field name="sequence">70</field>
    </record>
    <record id="logframe_008_out_04" model="ipai.finance.logframe">
      <field name="level">output</field>
      <field name="code">OUT-04</field>
      <field name="name">Accruals &amp; Expenses Completed</field>
      <field name="indicators"># of accruals &amp; expenses tasks completed; Accuracy rate</field>
      <field name="means_of_verification">Accruals &amp; Expenses task checklist; approval signatures</field>
      <field name="assumptions">Data available; systems accessible</field>
      <field name="sequence">80</field>
    </record>
    <record id="logframe_009_act_im2_01" model="ipai.finance.logframe">
      <field name="level">activity_im2</field>
      <field name="code">ACT-IM2-01</field>
      <field name="name">Execute Payroll &amp; Personnel Tasks</field>
      <field name="indicators">Task completion rate; Time to complete</field>
      <field name="means_of_verification">Task logs; timesheet records</field>
      <field name="assumptions">Required documents available</field>
      <field name="sequence">90</field>
    </record>
    <record id="logframe_010_act_im1_02" model="ipai.finance.logframe">
      <field name="level">activity_im1</field>
      <field name="code">ACT-IM1-02</field>
      <field name="name">Execute Tax &amp; Provisions Tasks</field>
      <field name="indicators">Task completion rate; Time to complete</field>
      <field name="means_of_verification">Task logs; timesheet records</field>
      <field name="assumptions">Required documents available</field>
      <field name="sequence">100</field>
    </record>
    <record id="logframe_011_act_im2_03" model="ipai.finance.logframe">
      <field name="level">activity_im2</field>
      <field name="code">ACT-IM2-03</field>
      <field name="name">Execute Rent &amp; Leases Tasks</field>
      <field name="indicators">Task completion rate; Time to complete</field>
      <field name="means_of_verification">Task logs; timesheet records</field>
      <field name="assumptions">Required documents available</field>
      <field name="sequence">110</field>
    </record>
    <record id="logframe_012_act_im1_04" model="ipai.finance.logframe">
      <field name="level">activity_im1</field>
      <field name="code">ACT-IM1-04</field>
      <field name="name">Execute Accruals &amp; Expenses Tasks</field>
      <field name="indicators">Task completion rate; Time to complete</field>
      <field name="means_of_verification">Task logs; timesheet records</field>
      <field name="assumptions">Required documents available</field>
      <field name="sequence">120</field>
    </record>
  </data>
</odoo>
