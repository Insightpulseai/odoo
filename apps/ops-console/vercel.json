{
  "version": 2,
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["syd1"],
  "ignoreCommand": "bash -lc 'BASE=${VERCEL_GIT_PREVIOUS_SHA:-origin/main}; git diff --name-only \"$BASE\" \"$VERCEL_GIT_COMMIT_SHA\" | grep -qE \"^apps/ops-console/\" || exit 1'",
  "crons": [
    {
      "path": "/api/cron/tick",
      "schedule": "*/5 * * * *"
    }
  ],
  "functions": {
    "app/api/ai/sql/route.ts": {
      "maxDuration": 60
    },
    "app/api/secrets/sync/route.ts": {
      "maxDuration": 300
    },
    "app/api/supabase-proxy/[...path]/route.ts": {
      "maxDuration": 30
    },
    "app/api/cron/tick/route.ts": {
      "maxDuration": 30
    },
    "app/api/queues/consume/route.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
