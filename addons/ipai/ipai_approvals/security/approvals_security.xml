<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Approvals Category -->
        <record id="module_category_approvals" model="ir.module.category">
            <field name="name">Approvals</field>
            <field name="sequence">50</field>
        </record>

        <!-- Approvals User Group -->
        <record id="group_approval_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_approvals"/>
        </record>

        <!-- Approvals Manager Group -->
        <record id="group_approval_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_approvals"/>
            <field name="implied_ids" eval="[(4, ref('group_approval_user'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <!-- Request Rule: Users see their own requests -->
        <record id="rule_approval_request_user" model="ir.rule">
            <field name="name">Approval Request: User sees own</field>
            <field name="model_id" ref="model_ipai_approval_request"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Request Rule: Users see requests they can approve -->
        <record id="rule_approval_request_approver" model="ir.rule">
            <field name="name">Approval Request: User is approver</field>
            <field name="model_id" ref="model_ipai_approval_request"/>
            <field name="domain_force">[('approver_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Approver Rule: Users see their own approver records -->
        <record id="rule_approval_approver_user" model="ir.rule">
            <field name="name">Approval Approver: User sees own</field>
            <field name="model_id" ref="model_ipai_approval_approver"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
        </record>

        <!-- Type Rule: Users can read types in their company -->
        <record id="rule_approval_type_company" model="ir.rule">
            <field name="name">Approval Type: Company scope</field>
            <field name="model_id" ref="model_ipai_approval_type"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Manager sees all in company -->
        <record id="rule_approval_request_manager" model="ir.rule">
            <field name="name">Approval Request: Manager sees all</field>
            <field name="model_id" ref="model_ipai_approval_request"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_approval_manager'))]"/>
        </record>

        <record id="rule_approval_approver_manager" model="ir.rule">
            <field name="name">Approval Approver: Manager sees all</field>
            <field name="model_id" ref="model_ipai_approval_approver"/>
            <field name="domain_force">[('request_id.company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_approval_manager'))]"/>
        </record>

        <record id="rule_approval_type_manager" model="ir.rule">
            <field name="name">Approval Type: Manager full access</field>
            <field name="model_id" ref="model_ipai_approval_type"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_approval_manager'))]"/>
        </record>
    </data>
</odoo>
