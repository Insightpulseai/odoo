<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Register Snippet Group and Structure -->
    <template id="rozzz_subscribe_snippet" inherit_id="website.snippets" name="Rozz Subscribe">
        <!-- Add to snippet group list -->
        <xpath expr="//snippets[@id='snippet_groups']/*[last()]" position="after">
            <t t-snippet="website.s_snippet_group"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-subscribe-block.jpg"
               string="Subscribe"
               snippet-group="subscribe_section"/>
        </xpath>

        <!-- Add to snippet structure list -->
        <xpath expr="//snippets[@id='snippet_structure']/*[last()]" position="after">
            <t t-snippet="cts_theme_rozz.s_rozz_subscribe_snippet"
               string="Rozz Subscribe"
               group="subscribe_section"
               t-thumbnail="/cts_theme_rozz/static/src/images/snippets/Rozz-subscribe-block.jpg"/>
        </xpath>
    </template>

    <!-- Actual Snippet Content -->
    <template id="s_rozz_subscribe_snippet" name="Rozz Subscribe">
        <section>
            <div class="subscribe-area">
                <div class="subscribe-wrap">
                    <div class="container">
                        <div class="row align-items-center">
                            <!-- Left content -->
                            <div class="col-lg-6">
                                <div class="section-title">
                                    <h2>Stay Up To Date With Our Latest News!</h2>
                                </div>
                            </div>

                            <!-- Right form -->
                            <div class="col-lg-6">
                                <form class="newsletter-form" data-toggle="validator">
                                    <input type="email"
                                           class="form-control"
                                           placeholder="Enter your email"
                                           name="EMAIL"
                                           required=""
                                           autocomplete="off"/>

                                    <button class="btn cmn-btn" type="submit">
                                        Subscribe
                                    </button>

                                    <div id="validator-newsletter" class="form-result"/>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
